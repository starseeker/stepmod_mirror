<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ballot_index SYSTEM "../../dtd/ballot_index.dtd">
<!-- 
$Id: ballot_index.xml,v 1.17 2002/12/10 15:36:17 robbod Exp $
  Author:  Rob Bodington, Eurostep Limited
  Owner:   Developed by Eurostep Limited http://www.eurostep.com
  Purpose: A grouping of modules into ballot packages
           Note - to generate an ant build for this package, run:
              ant -buildfile buildbuild.xml
           This will create the build.xml file.
           Then run: 
              ant all
           to create the HTML version of the ballot package
-->
<ballot_index
  name="plcs_bp1"
  wg.number.ballot_package=""
  wg.number.ballot_comment=""
  convener.submission.date="20-Dec-2002"
  proposed.submission.date="10-Jan-2003"
  ballot.start.date=""
  ballot.close.date=""
  comments.resolved.date=""
  ballot.complete="">
  <description>
    The first AP239 (PLCS) ballot cycle.
  </description>

  <contacts>
    <projlead ref="plcs.projlead"/>
    <editor ref="robbodington"/>
  </contacts>

  <ballot_package name="Classification">
    <description>
      The PLCS modules required for classification and reference data
      libraries. 
    </description>

    <module name="attribute_classification"/>
    <module name="class"/>
    <module name="external_class"/>
    <module name="name_assignment"/>
    <module name="plib_class_reference"/>
    <module name="set_theory"/>

    <!-- hand back to AP221
    <module name="classification"/>
    -->
  </ballot_package>

  <ballot_package name="Product extensions">
    <description>
      The PLCS modules that extend the product capability.
    </description>
    <module name="attachment_slot"/>
    <module name="interface"/>
    <module name="interface_lifecycle"/>
    <module name="product_as_individual"/>

    <module name="product_breakdown"/>
    <module name="functional_breakdown"/>
    <module name="hybrid_breakdown"/>
    <module name="physical_breakdown"/>
    <module name="system_breakdown"/>
    <module name="zonal_breakdown"/>
  </ballot_package>

  <ballot_package name="Property extensions">
    <description>
      The PLCS modules that extend the property capability.
    </description>
    <module name="extended_measure_representation"/>
  </ballot_package>

  <ballot_package name="Management resource information">
    <description>
      The PLCS modules for management data that may apply to product data.
    </description>
    <module name="management_resource_information"/>
  </ballot_package>

  <!-- record of the CVS tags that have been created for managing this
       ballot package -->
  <cvs_tags>
    <cvs_tag tag="PLCS">
      <description>
        Modules tagged for release to convener
      </description>
    </cvs_tag>
  </cvs_tags>
</ballot_index>
