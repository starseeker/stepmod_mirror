<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="plcs_arm_ge13v82v5.exp"/>


  <schema name="Activity_arm">
    <interface
      kind="use"
      schema="Activity_method_arm">
    </interface>

    <interface
      kind="use"
      schema="Configuration_effectivity_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Document_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_identification_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_version_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_structure_arm">
    </interface>

    <type name="activity_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Activity">
      </select>

    </type>
    <type name="activity_documented_element_select">
      <select
        basedon="documented_element_select"
        selectitems="Activity">
      </select>

    </type>
    <type name="activity_item">
      <select
        extensible="YES"
        selectitems="Configuration_effectivity Product_version Product_view_definition View_definition_relationship">
      </select>

    </type>
    <entity
      name="Activity">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="chosen_method">
        <typename
          name="Activity_method"/>
      </explicit>
    </entity>

    <entity
      name="Activity_relationship">
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="related_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="relating_activity">
        <typename
          name="Activity"/>
      </explicit>
    </entity>

    <entity
      name="Activity_status">
      <explicit
        name="assigned_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="status">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Applied_activity_assignment">
      <explicit
        name="assigned_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="activity_item"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>

