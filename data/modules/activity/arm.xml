<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.19"
    source="../data/modules/activity/arm.exp"/>

  <schema name="Activity_arm">
    <interface
      kind="use"
      schema="Activity_method_arm">
    </interface>

    <type name="activity_item">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <entity
      name="Activity">
      <explicit
        name="chosen_method">
        <typename
          name="Activity_method"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Activity_relationship">
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="related_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="relating_activity">
        <typename
          name="Activity"/>
      </explicit>
    </entity>

    <entity
      name="Activity_status">
      <explicit
        name="assigned_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="status">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Applied_activity_assignment">
      <explicit
        name="assigned_activity">
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="activity_item"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
