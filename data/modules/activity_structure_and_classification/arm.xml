<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<?xml-stylesheet type="text/xsl"
href="../../../xsl/express.xsl" ?>
<express
   language_version="2"
   rcs.date="$Date: 2002/12/23 23:51:25 $"
   rcs.revision="$Revision: 1.2 $">
  <schema name="Activity_structure_and_classification_arm">
<interface kind="use" schema="Class_of_activity_library_arm"></interface>
<interface kind="use" schema="Individual_activity_structure_arm"></interface>
<interface kind="use" schema="Classification_arm"></interface>
<interface kind="use" schema="External_item_identification_assignment_arm"></interface>
<type name="individual_activity_or_activity_relationship">
<description>
An <b>Individual_activity</b> or relationship between individual activities that is classified.
</description>
<select basedon="classification_select" selectitems="Individual_activity Composition_of_individual_activity Connection_of_individual_activity Individual_involvement_in_activity" />
</type>
<type name="complete_membership_individual_activity_or_activity_relationship">
<description>
An <b>Individual_activity</b> or relationship between individual activities that is specified as part of the complete membership of a class.
</description>
<select basedon="complete_membership_select" selectitems="Individual_activity Composition_of_individual_activity Connection_of_individual_activity Individual_involvement_in_activity" />
</type>
<type name="externally_identified_class_of_activity_or_relationship">
<description>
A <b>Class_of_activity</b> or relationship between classes of activity that has an external identification.
</description>
<select basedon="external_identification_item" selectitems="Class_of_activity Class_of_composition_of_activity Class_of_connection_of_activity Class_of_involvement_in_activity" />
</type>
  </schema>
</express>

