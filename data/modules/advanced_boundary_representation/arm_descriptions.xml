<!-- +++++++++++ Closed_shell +++++++++++ -->
<ext_description linkend="Advanced_boundary_representation_arm.Closed_shell">
	A <b>Closed_shell</b> is a type of
	<express_ref linkend="Elemental_topology:arm:Elemental_topology_arm.Connected_face_set"/>.
</ext_description>

<!-- connected_faces -->
<ext_description linkend="Advanced_boundary_representation_arm.Closed_shell.connected_faces">
	specifies a set of
	<express_ref linkend="Topologically_bounded_surface:arm:Topologically_bounded_surface_arm.Advanced_face">Advanced_face</express_ref>
	for the <b>Closed_shell</b>
</ext_description>

<!-- +++++++++++ Manifold_solid_brep +++++++++++ -->
<ext_description linkend="Advanced_boundary_representation_arm.Manifold_solid_brep">
	A <b>Manifold_solid_brep</b> is a type of
	<express_ref linkend="Solid_model:arm:Solid_model_arm.Solid_model"/>.
</ext_description>

<!-- outer -->
<ext_description linkend="Advanced_boundary_representation_arm.Manifold_solid_brep.outer">
	specifies the role of the
	<express_ref linkend="Advanced_boundary_representation:arm:Advanced_boundary_representation_arm.Closed_shell"/>
	for the <b>Manifold_solid_brep</b>.
</ext_description>

<!-- voids -->
<ext_description linkend="Advanced_boundary_representation_arm.Manifold_solid_brep.voids">
	specifies the role of the
	<express_ref linkend="Advanced_boundary_representation:arm:Advanced_boundary_representation_arm.Oriented_closed_shell"/>
	for the <b>Manifold_solid_brep</b>.
	There shall exist one or more
	<express_ref linkend="Advanced_boundary_representation:arm:Advanced_boundary_representation_arm.Oriented_closed_shell">Oriented_closed_shells</express_ref>
	for the <b>Manifold_solid_brep</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- +++++++++++ Oriented_closed_shell +++++++++++ -->
<ext_description linkend="Advanced_boundary_representation_arm.Oriented_closed_shell">
	An <b>Oriented_closed_shell</b> is a type of
	<express_ref linkend="Advanced_boundary_representation:arm:Advanced_boundary_representation_arm.Closed_shell"/>.
</ext_description>

<!-- shell -->
<ext_description linkend="Advanced_boundary_representation_arm.Oriented_closed_shell.shell">
	specifies the role of the
	<express_ref linkend="Advanced_boundary_representation:arm:Advanced_boundary_representation_arm.Closed_shell"/>
	for the <b>Oriented_closed_shell</b>.
</ext_description>

<!-- orientation -->
<ext_description linkend="Advanced_boundary_representation_arm.Oriented_closed_shell.orientation">
	specifies the boolean value.
</ext_description>

