<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2005/11/14 16:49:00 $"
  rcs.revision="$Revision: 1.9 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.25"
    source="../data/modules/alternative_solution/arm.exp"/>

  <schema name="Alternative_solution_arm">
    <interface
      kind="use"
      schema="Functional_breakdown_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_occurrence_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_arm">
    </interface>

    <interface
      kind="use"
      schema="Physical_breakdown_arm">
    </interface>

    <type name="complex_product_select">
      <select
        selectitems="Alternative_solution Functional_element_definition Physical_element_definition">
      </select>

    </type>
    <entity
      name="Alternative_solution">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="base_element">
        <typename
          name="complex_product_select"/>
      </explicit>
    </entity>

    <entity
      name="Solution_element">
      <explicit
        name="resolved_requirement">
        <typename
          name="complex_product_select"/>
      </explicit>
      <explicit
        name="element">
        <typename
          name="part_occurrence_select"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Supplier_solution"
      supertypes="Alternative_solution">
      <explicit
        name="supplier">
        <typename
          name="Organization"/>
      </explicit>
      <explicit
        name="probability_rate"
        optional="YES">
        <builtintype
          type="REAL"/>
      </explicit>
      <derived
        name="actual_rate"
        expression="NVL(probability_rate, 1.0)">
        <builtintype
          type="REAL"/>
      </derived>
      <where
        label="WR1"
        expression="{ 0.0 &lt;= actual_rate &lt;= 1.0 }">
      </where>
    </entity>

    <entity
      name="Technical_solution"
      supertypes="Alternative_solution">
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
