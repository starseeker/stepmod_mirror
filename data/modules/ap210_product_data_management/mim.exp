END_RULE;

RULE subtype_mandatory_date FOR (date);
WHERE
  WR1: SIZEOF (QUERY (d <* date |
       NOT (
       'AP210_PRODUCT_DATA_MANAGEMENT_MIM.' +
       'CALENDAR_DATE'
