<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/07/07 23:42:17 $"
  rcs.revision="$Revision: 1.4 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.24"
    source="../data/modules/appearance_assignment/arm.exp"/>

  <schema name="Appearance_assignment_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <type name="appearance_context">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <type name="appearance_select">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <type name="styled_model_element_select">
      <select
        selectitems="Mapping_based_styled_model Transformation_based_styled_model Styled_element">
      </select>

    </type>
    <entity
      name="Appearance_assignment">
      <explicit
        name="appearance_components">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="appearance_select"/>
      </explicit>
    </entity>

    <entity
      name="Context_dependent_appearance_assignment"
      supertypes="Appearance_assignment">
      <explicit
        name="context_definition">
        <typename
          name="appearance_context"/>
      </explicit>
    </entity>

    <entity
      name="Over_riding_styled_element"
      supertypes="Styled_element">
      <explicit
        name="over_ridden_element">
        <typename
          name="Styled_element"/>
      </explicit>
    </entity>

    <entity
      name="Styled_element"
      abstract.supertype="YES"
      supertypes="Representation_item">
      <explicit
        name="appearance">
        <typename
          name="Appearance_assignment"/>
      </explicit>
      <explicit
        name="invisible">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Styled_geometric_model"
      supertypes="Styled_model">
      <explicit
        name="styled_geometry">
        <typename
          name="Geometric_model"/>
      </explicit>
      <derived name="context_of_items" expression="styled_geometry\Representation.context_of_items">
        <typename
          name="Numerical_representation_context"/>
      </derived>
    </entity>

    <entity
      name="Styled_model"
      supertypes="Representation">
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <redeclaration
          entity-ref="Representation"/>
          <aggregate
            type="SET"
            lower="1"
            upper="?"/>
          <typename
            name="styled_model_element_select"/>
        </explicit>
      </entity>

      <entity
        name="Styled_model_element"
        supertypes="Styled_element">
        <explicit
          name="element">
          <typename
            name="Detailed_geometric_model_element"/>
        </explicit>
      </entity>

      <entity
        name="Mapping_based_styled_model"
        supertypes="Representation_item">
        <explicit
          name="replicated_model">
          <typename
            name="Styled_model"/>
        </explicit>
        <explicit
          name="source">
          <typename
            name="Axis_placement"/>
        </explicit>
        <explicit
          name="target">
          <typename
            name="geometric_mapping_target"/>
        </explicit>
      </entity>

      <entity
        name="Transformation_based_styled_model"
        supertypes="Representation_item">
        <explicit
          name="replicated_model">
          <typename
            name="Styled_model"/>
        </explicit>
        <explicit
          name="replication_transformation">
          <typename
            name="cartesian_transformation"/>
        </explicit>
      </entity>

    </schema>

  </express>
