<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.24"
    source="../data/modules/appearance_assignment/arm.exp"/>

  <schema name="Appearance_assignment_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <type name="appearance_select">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <entity
      name="Appearance_assignment">
      <explicit
        name="component">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="appearance_select"/>
      </explicit>
    </entity>

    <entity
      name="Appearance_context"
      abstract.supertype="YES">
    </entity>

    <entity
      name="Context_dependent_appearance_assignment"
      supertypes="Appearance_assignment">
      <explicit
        name="context_definition">
        <typename
          name="Appearance_context"/>
      </explicit>
    </entity>

    <entity
      name="Overriding_styled_element"
      supertypes="Styled_element">
      <explicit
        name="is_defined_for">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="Appearance_context"/>
      </explicit>
    </entity>

    <entity
      name="Styled_element"
      supertypes="Representation_item">
      <explicit
        name="appearance">
        <typename
          name="Appearance_assignment"/>
      </explicit>
      <explicit
        name="invisible">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Styled_geometric_model"
      supertypes="Styled_model">
      <explicit
        name="styled_geometry">
        <typename
          name="Geometric_model"/>
      </explicit>
    </entity>

    <entity
      name="Styled_model"
      supertypes="Representation">
      <explicit
        name="additional_elements">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="template_instance"/>
      </explicit>
      <explicit
        name="items">
        <redeclaration
          entity-ref="Representation"/>
          <aggregate
            type="SET"
            lower="1"
            upper="?"/>
          <typename
            name="Styled_element"/>
        </explicit>
      </entity>

      <entity
        name="Styled_model_element"
        supertypes="Styled_element">
        <explicit
          name="element">
          <typename
            name="Representation_item"/>
        </explicit>
      </entity>

    </schema>

  </express>
