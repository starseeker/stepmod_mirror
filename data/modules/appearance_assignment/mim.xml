<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="mim_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.24"
    source="../data/modules/appearance_assignment/mim.exp"/>

  <schema name="Appearance_assignment_mim">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_mim">
    </interface>

    <interface
      kind="use"
      schema="Foundation_representation_mim">
    </interface>

    <interface
      kind="use"
      schema="Identification_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="presentation_appearance_schema">
      <interfaced.item
        name="over_riding_styled_item"/>
      <interfaced.item
        name="invisibility"/>
      <interfaced.item
        name="presentation_style_assignment"/>
      <interfaced.item
        name="presentation_style_by_context"/>
      <interfaced.item
        name="styled_item"/>
    </interface>

    <interface
      kind="use"
      schema="representation_schema">
      <interfaced.item
        name="mapped_item"/>
    </interface>

    <interface
      kind="use"
      schema="aic_associative_draughting_elements">
      <interfaced.item
        name="draughting_model"/>
    </interface>

    <interface
      kind="use"
      schema="aic_mechanical_design_geometric_presentation">
      <interfaced.item
        name="mechanical_design_geometric_presentation_representation"/>
    </interface>

    <type name="representation_identification_item">
      <select
        basedon="identification_item"
        selectitems="draughting_model mechanical_design_geometric_presentation_representation">
      </select>

    </type>
    <type name="representation_version_item">
      <select
        basedon="versionable_item"
        selectitems="draughting_model mechanical_design_geometric_presentation_representation">
      </select>

    </type>
    <rule
      name="styled_curve"
      appliesto="styled_item">
      <algorithm>
      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF( QUERY( si &lt;* styled_item |   ('APPEARANCE_ASSIGNMENT_MIM.CURVE' IN TYPEOF (si.item)) AND   (SIZEOF (QUERY (psa &lt;* si.styles | (SIZEOF (QUERY (cs &lt;* psa.styles |   ('APPEARANCE_ASSIGNMENT_MIM.CURVE_STYLE' IN TYPEOF (cs)) )) &gt; 0) )) &lt;&gt; 1) )) = 0">
      </where>

    </rule>

  </schema>

</express>
