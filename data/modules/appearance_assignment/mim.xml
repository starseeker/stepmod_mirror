<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="mim_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="appearance_assignment_mim schema_instance"/>
   <schema name="Appearance_assignment_mim">
      <interface kind="use" schema="Elemental_geometric_shape_mim"/>
      <interface kind="use" schema="presentation_appearance_schema">
         <interfaced.item name="context_dependent_over_riding_styled_item"/>
         <interfaced.item name="fill_area_style_colour"/>
         <interfaced.item name="invisibility"/>
         <interfaced.item name="over_riding_styled_item"/>
         <interfaced.item name="presentation_style_assignment"/>
         <interfaced.item name="presentation_style_by_context"/>
         <interfaced.item name="style_context_select"/>
         <interfaced.item name="styled_item"/>
      </interface>
      <interface kind="use" schema="presentation_resource_schema">
         <interfaced.item name="planar_box"/>
      </interface>
      <interface kind="use" schema="representation_schema">
         <interfaced.item name="mapped_item"/>
      </interface>
      <type name="appearance_representation_identification_item">
         <select basedon="identification_item" selectitems="representation"/>
      </type>
      <subtype.constraint name="aa_representation_item_subtypes" entity="representation_item" super.expression="ONEOF (mapped_item, styled_item)"/>
      <rule name="styled_curve" appliesto="styled_item">
         <where label="WR1" expression="SIZEOF( QUERY( si &lt;* styled_item | ('APPEARANCE_ASSIGNMENT_MIM.CURVE' IN TYPEOF (si.item)) AND (SIZEOF (QUERY (psa &lt;* si.styles | (SIZEOF (QUERY (cs &lt;* psa.styles | ('APPEARANCE_ASSIGNMENT_MIM.CURVE_STYLE' IN TYPEOF (cs)) )) &gt; 0) )) &lt;&gt; 1) )) = 0"/>
      </rule>
   </schema>
</express>
