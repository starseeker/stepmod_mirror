<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/05/31 13:54:19 $"
  rcs.revision="$Revision: 1.12 $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/approval/arm.exp"/>

  <schema name="Approval_arm">
    <interface
      kind="use"
      schema="Date_time_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_arm">
    </interface>

    <type name="approval_item">
      <select
        extensible="YES"
        selectitems="null">
      </select>

    </type>
    <entity
      name="Approval">
      <explicit
        name="planned_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
      <explicit
        name="actual_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
      <explicit
        name="purpose"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="status">
        <builtintype
          type="STRING"/>
      </explicit>
      <where
        label="WR1"
        expression="Query (temp &lt; * 'contract_date |'Date_or_date_time_assignment.role = 'signature date'''); &gt;" >
      </where>
    </entity>

    <entity
      name="Approver">
      <explicit
        name="approver_list">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="organization_or_person_in_organization_select"/>
      </explicit>
      <explicit
        name="discipline"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="actual_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
    </entity>

    <entity
      name="Approval_assignment">
      <explicit
        name="assigned_approval">
        <typename
          name="Approval"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="approval_item"/>
      </explicit>
    </entity>

    <entity
      name="Approval_relationship">
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="approval1">
        <typename
          name="Approval"/>
      </explicit>
      <explicit
        name="approval2">
        <typename
          name="Approval"/>
      </explicit>
    </entity>

  </schema>

</express>
