<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express rcs.date="$Date:$" rcs.revision="$Revision:$">
	<application name="pdm_module2mim.xml" owner="PDTec GmbH" url="http://www.pdtec.de" version="0.8" source="../data/modules/approval/mim.exp"/>
	<schema name="approval_mim">
		<interface kind="use" schema="date_time_mim"/>
		<interface kind="use" schema="person_organization_mim"/>
		<interface kind="use" schema="approval_schema">
			<interfaced.item name="approval_status"/>
			<interfaced.item name="approval_role"/>
			<interfaced.item name="approval_relationship"/>
			<interfaced.item name="approval_person_organization"/>
			<interfaced.item name="approval_date_time"/>
			<interfaced.item name="approval"/>
		</interface>
		<interface kind="use" schema="management_resources_schema">
			<interfaced.item name="approval_assignment"/>
		</interface>
		<interface kind="use" schema="person_organization_schema">
			<interfaced.item name="person"/>
		</interface>
		<type name="approval_item">
			<select extensible="YES"/>
		</type>
		<entity name="applied_approval_assignment" supertypes="approval_assignment">
			<explicit name="items">
				<aggregate type="SET" lower="1" upper="?"/>
				<typename name="approval_item"/>
			</explicit>
		</entity>
		<rule name="person_requires_person_and_organization" appliesto="person">
			<algorithm>;</algorithm>
			<where label="wr1" expression="SIZEOF( QUERY( p &lt;* person | SIZEOF( USEDIN(p, 'APPROVAL_MIM.' + 'PERSON_AND_ORGANIZATION.THE_PERSON') ) &lt; 1 ))=0;"/>
		</rule>
	</schema>
</express>
