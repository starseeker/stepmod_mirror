<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="assembly_technology_arm schema_instance"/>
   <schema name="Assembly_technology_arm">
      <interface kind="use" schema="Assembly_module_design_arm"/>
      <interface kind="use" schema="Component_grouping_arm"/>
      <interface kind="use" schema="Product_identification_extension_arm"/>
      <type name="at_external_identification_item">
         <select extensible="YES" genericentity="YES" basedon="external_identification_item" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_material_item_select">
         <select extensible="YES" genericentity="YES" basedon="material_item_select" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_property_assignment_select">
         <select basedon="property_assignment_select" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_requirement_assignment_item">
         <select extensible="YES" genericentity="YES" basedon="requirement_assignment_item" selectitems="Assembly_joint"/>
      </type>
      <type name="degree_of_freedom">
         <enumeration items="x y z u v w"/>
      </type>
      <entity name="Assembled_with_bonding" supertypes="Assembly_joint">
         <explicit name="default_bond_definition">
            <typename name="Assembly_bond_definition"/>
         </explicit>
         <where label="WR1" expression="SELF\Assembly_joint.assembly_feature_1.definition :=: default_bond_definition.bonded_feature_1"/>
         <where label="WR2" expression="SELF\Assembly_joint.assembly_feature_2.definition :=: default_bond_definition.bonded_feature_2"/>
      </entity>
      <entity name="Assembled_with_fasteners" supertypes="Assembly_joint">
         <explicit name="associated_assembly">
            <typename name="Assembly_group_component"/>
            <redeclaration entity-ref="Assembly_joint"/>
         </explicit>
      </entity>
      <entity name="Assembly_bond_definition">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="analytical_assembly_bond_representation" optional="YES">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="Analytical_model_application"/>
         </explicit>
         <explicit name="associated_definition">
            <typename name="Externally_defined_view_definition"/>
         </explicit>
         <explicit name="bonded_feature_1">
            <typename name="Part_feature"/>
         </explicit>
         <explicit name="bonded_feature_2">
            <typename name="Part_feature"/>
         </explicit>
         <inverse name="default_shape" entity="Default_assembly_bond_shape_model" attribute="shape_characterized_definition">
            <inverse.aggregate type="SET" lower="0" upper="1"/>
         </inverse>
         <inverse name="bond_category" entity="External_source_identification" attribute="item"/>
         <inverse name="bond_material" entity="Material_identification" attribute="items"/>
         <unique label="UR1">
            <unique.attribute attribute="name"/>
         </unique>
         <unique label="UR2">
            <unique.attribute attribute="associated_definition"/>
         </unique>
         <where label="WR1" expression="bonded_feature_1 &lt;&gt; bonded_feature_2"/>
         <where label="WR2" expression="'CONDUCTIVITY_MATERIAL_ASPECTS_ARM.'+ 'MATERIAL_IDENTIFICATION_WITH_CONDUCTIVITY_CLASSIFICATION' IN TYPEOF (bond_material)"/>
      </entity>
      <entity name="Assembly_joint" supertypes="Component_feature_joint" super.expression="Assembled_with_fasteners ANDOR Assembled_with_bonding">
         <explicit name="assembly_feature_1">
            <typename name="assembled_feature_select"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_1"/>
         </explicit>
         <explicit name="assembly_feature_2">
            <typename name="assembled_feature_select"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_2"/>
         </explicit>
         <explicit name="associated_assembly">
            <typename name="assembly_module_or_assembly_group_component"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="associated_definition"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute entity-ref="Component_feature_joint" attribute="element_name"/>
            <unique.attribute attribute="associated_assembly"/>
         </unique>
         <where label="WR1" expression="assembly_feature_1 :&lt;&gt;: assembly_feature_2"/>
         <where label="WR2" expression="('ASSEMBLY_TECHNOLOGY_ARM.ASSEMBLED_WITH_FASTENERS' IN TYPEOF(SELF)) OR &#10;             (('ASSEMBLY_TECHNOLOGY_ARM.COMPONENT_FEATURE' IN TYPEOF(assembly_feature_1)) AND &#10;             (SIZEOF(QUERY(ay &lt;* assembly_feature_1\Component_feature.associated_component\Product_occurrence.occurrence_contexts | ay.related_view &lt;&gt; associated_assembly)) = 0))"/>
         <where label="WR3" expression="('ASSEMBLY_TECHNOLOGY_ARM.ASSEMBLED_WITH_FASTENERS' IN TYPEOF(SELF)) OR &#10;             (('ASSEMBLY_TECHNOLOGY_ARM.COMPONENT_FEATURE' IN TYPEOF(assembly_feature_2)) AND &#10;             (SIZEOF(QUERY(ay &lt;* assembly_feature_2\Component_feature.associated_component\Product_occurrence.occurrence_contexts | ay.related_view &lt;&gt; associated_assembly)) = 0))"/>
      </entity>
      <entity name="Assembly_technology_specification" supertypes="Process_specification"/>
      <entity name="Component_mating_constraint_condition">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="constraining_joint">
            <aggregate type="SET" lower="1" upper="3"/>
            <typename name="Assembly_joint"/>
         </explicit>
         <explicit name="constrained_degree_of_freedom">
            <aggregate type="SET" lower="1" upper="5"/>
            <typename name="degree_of_freedom"/>
         </explicit>
         <explicit name="of_context">
            <typename name="Part_design_view"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="name"/>
            <unique.attribute attribute="of_context"/>
         </unique>
      </entity>
      <entity name="Connection_zone_based_assembly_joint" supertypes="Assembly_joint">
         <explicit name="zone_1">
            <typename name="Connection_zone_in_design_view"/>
         </explicit>
         <explicit name="zone_2">
            <typename name="Connection_zone_in_design_view"/>
         </explicit>
         <where label="WR1" expression="zone_1 :&lt;&gt;: zone_2"/>
      </entity>
      <entity name="Default_assembly_bond_shape_model" supertypes="Geometric_model">
         <explicit name="shape_characterized_definition">
            <typename name="Assembly_bond_definition"/>
         </explicit>
         <where label="WR1" expression="NOT EXISTS(SELF\Representation.description)"/>
         <where label="WR2" expression="SIZEOF(USEDIN(SELF, 'SHAPE_PROPERTY_ASSIGNMENT_ARM.SHAPE_DESCRIPTION_ASSOCIATION.REPRESENTATION'))=0"/>
      </entity>
      <subtype.constraint name="process_specification_subtypes" entity="Process_specification" super.expression="ONEOF (Assembly_technology_specification, Fabrication_technology_specification)"/>
   </schema>
</express>
