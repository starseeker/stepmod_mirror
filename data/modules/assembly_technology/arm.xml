<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1649">
   <application name="JSDAI" owner="LKSoft" source="assembly_technology_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Assembly_technology_arm">
      <interface kind="use" schema="Requirement_assignment_arm"/>
      <interface kind="use" schema="Physical_component_feature_arm"/>
      <interface kind="use" schema="Generic_material_aspects_arm"/>
      <interface kind="use" schema="Product_view_definition_reference_arm"/>
      <type name="assembly_joint_type">
         <enumeration extensible="YES"/>
      </type>
      <type name="at_external_identification_item">
         <select basedon="external_identification_item" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_material_item_select">
         <select basedon="material_item_select" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_property_assignment_select">
         <select basedon="property_assignment_select" selectitems="Assembly_bond_definition"/>
      </type>
      <type name="at_requirement_assignment_item">
         <select basedon="requirement_assignment_item" selectitems="Assembly_joint"/>
      </type>
      <type name="bond_feature">
         <select extensible="YES" genericentity="YES" selectitems="General_part_feature"/>
      </type>
      <type name="degree_of_freedom">
         <enumeration items="x y z u v w"/>
      </type>
      <entity name="Assembled_with_bonding" supertypes="Assembly_joint">
         <explicit name="default_bond_definition">
            <typename name="Assembly_bond_definition"/>
         </explicit>
         <where expression="SELF\Assembly_joint.assembly_feature_1.definition :=: default_bond_definition.bonded_feature_1" label="WR1"/>
         <where expression="SELF\Assembly_joint.assembly_feature_2.definition :=: default_bond_definition.bonded_feature_2" label="WR2"/>
      </entity>
      <entity name="Assembled_with_fasteners" supertypes="Assembly_joint"/>
      <entity name="Assembly_bond_definition">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="associated_definition">
            <typename name="Product_view_definition_reference_with_local_representation"/>
         </explicit>
         <explicit name="bonded_feature_1" optional="YES">
            <typename name="bond_feature"/>
         </explicit>
         <explicit name="bonded_feature_2" optional="YES">
            <typename name="bond_feature"/>
         </explicit>
         <inverse attribute="shape_characterized_definition" entity="Default_assembly_bond_shape_model" name="default_shape">
            <inverse.aggregate lower="0" type="SET" upper="1"/>
         </inverse>
         <inverse attribute="item" entity="External_source_identification" name="bond_category"/>
         <inverse attribute="items" entity="Material_identification" name="bond_material"/>
         <unique label="UR1">
            <unique.attribute attribute="name"/>
         </unique>
         <unique label="UR2">
            <unique.attribute attribute="associated_definition"/>
         </unique>
         <where expression="bonded_feature_1 &lt;&gt; bonded_feature_2" label="WR1"/>
      </entity>
      <entity name="Assembly_joint" super.expression="Assembled_with_fasteners ANDOR Assembled_with_bonding" supertypes="Component_feature_joint">
         <explicit name="assembly_feature_1">
            <typename name="Physical_component_feature"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_1"/>
         </explicit>
         <explicit name="assembly_feature_2">
            <typename name="Physical_component_feature"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_2"/>
         </explicit>
         <explicit name="associated_assembly">
            <typename name="Assembly_definition"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="associated_definition"/>
         </explicit>
         <explicit name="joint_type" optional="YES">
            <typename name="assembly_joint_type"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="SELF\Shape_element.element_name"/>
            <unique.attribute attribute="associated_assembly"/>
         </unique>
         <where expression="assembly_feature_1 :&lt;&gt;: assembly_feature_2" label="WR1"/>
      </entity>
      <entity name="Component_mating_constraint_condition">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="constraining_joint">
            <aggregate lower="1" type="SET" upper="3"/>
            <typename name="Assembly_joint"/>
         </explicit>
         <explicit name="constrained_degree_of_freedom">
            <aggregate lower="1" type="SET" upper="6"/>
            <typename name="degree_of_freedom"/>
         </explicit>
         <explicit name="of_context">
            <typename name="Part_view_definition"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="name"/>
            <unique.attribute attribute="of_context"/>
         </unique>
      </entity>
      <entity name="Connection_zone_based_assembly_joint" supertypes="Assembly_joint">
         <explicit name="zone_1">
            <typename name="Connection_zone"/>
         </explicit>
         <explicit name="zone_2">
            <typename name="Connection_zone"/>
         </explicit>
         <where expression="zone_1 :&lt;&gt;: zone_2" label="WR1"/>
      </entity>
      <entity name="Default_assembly_bond_shape_model" supertypes="Geometric_model">
         <explicit name="shape_characterized_definition">
            <typename name="Assembly_bond_definition"/>
         </explicit>
         <where expression="NOT EXISTS(SELF\Representation.description)" label="WR1"/>
         <where expression="SIZEOF(USEDIN(SELF, 'SHAPE_PROPERTY_ASSIGNMENT_ARM.SHAPE_DESCRIPTION_ASSOCIATION.USED_REPRESENTATION'))=0" label="WR2"/>
      </entity>
   </schema>
</express>
