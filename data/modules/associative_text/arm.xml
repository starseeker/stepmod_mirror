<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/11/05 00:01:46 $"
  rcs.revision="$Revision: 1.7 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.26"
    source="../data/modules/associative_text/arm.exp"/>

  <schema name="Associative_text_arm">
    <interface
      kind="use"
      schema="Appearance_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Construction_geometry_arm">
    </interface>

    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Text_appearance_arm">
    </interface>

    <type name="text_or_composite_text">
      <select
        selectitems="Composite_presentable_text Presentable_text_item">
      </select>

    </type>
    <entity
      name="Leader_curve"
      supertypes="Styled_model_element">
      <explicit
        name="element">
          <typename
            name="Curve"/>
        <redeclaration
          entity-ref="Styled_model_element"/>
        </explicit>
      </entity>

      <entity
        name="Text_occurrence"
        supertypes="Styled_element">
        <explicit
          name="text">
          <typename
            name="text_or_composite_text"/>
        </explicit>
      </entity>

      <entity
        name="Text_with_leader"
        supertypes="Text_occurrence">
        <explicit
          name="leader">
          <typename
            name="Leader_curve"/>
        </explicit>
<!--  cant find this requirement in AP214 so prefer not to put into module
      <where
        label="IP1" />
-->
      </entity>

      <entity
        name="Item_text_association">
        <explicit
          name="target_item">
          <typename
            name="Shape_element"/>
        </explicit>
        <explicit
          name="target_geometry">
          <typename
            name="Detailed_geometric_model_element"/>
        </explicit>
        <explicit
          name="text">
          <typename
            name="Text_occurrence"/>
        </explicit>
      </entity>

    </schema>

  </express>
