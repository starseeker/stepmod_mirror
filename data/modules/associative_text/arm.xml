<?xml version="1.0" encoding="utf-8"?><?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express
  SYSTEM "../../../dtd/express.dtd">
<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="">
   <application name="JSDAI" owner="LKSoft" source="associative_text_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Associative_text_arm">
      <interface kind="use" schema="Appearance_assignment_arm"/>
      <interface kind="use" schema="Colour_arm"/>
      <interface kind="use" schema="Text_appearance_arm"/>
      <type name="at_appearance_select">
         <select basedon="appearance_select" selectitems="Text_style"/>
      </type>
      <type name="text_or_composite_text">
         <select extensible="YES" genericentity="YES" selectitems="Annotation_text Composite_presentable_text Defined_character_glyph Text_literal"/>
      </type>
      <type name="text_string_representation_item_select">
         <select extensible="YES" genericentity="YES" selectitems="Annotation_text Composite_presentable_text Text_literal"/>
      </type>
      <entity abstract.supertype="YES" name="Annotation_curve" supertypes="Annotation_element">
         <explicit name="annotation_curve_type" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="element">
            <typename name="Curve"/>
            <redeclaration entity-ref="Styled_element"/>
         </explicit>
      </entity>
      <entity name="Annotation_element" super.expression="ONEOF (Annotation_text_occurrence, Annotation_curve)" supertypes="Detailed_geometric_model_element Styled_element"/>
      <entity name="Annotation_text" supertypes="Detailed_geometric_model_element">
         <explicit name="replicated_model">
            <typename name="Text_string_representation"/>
         </explicit>
         <explicit name="source">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="target">
            <typename name="Axis_placement"/>
         </explicit>
      </entity>
      <entity name="Annotation_text_occurrence" supertypes="Annotation_element">
         <explicit name="text">
            <typename name="text_or_composite_text"/>
            <redeclaration entity-ref="Styled_element" old_name="element"/>
         </explicit>
      </entity>
      <entity name="Defined_character_glyph" supertypes="Detailed_geometric_model_element">
         <explicit name="placement">
            <typename name="Axis_placement"/>
         </explicit>
      </entity>
      <entity name="Dimension_text" supertypes="Annotation_text_occurrence">
         <where expression="name IN ['dimension value', 'tolerance value', 'unit text', 'prefix text', 'suffix text']" label="WR1"/>
      </entity>
      <entity name="Text_string_representation" supertypes="Styled_model">
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="text_string_representation_item_select"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
      <entity name="Text_style">
         <explicit name="font_size_scale">
            <builtintype type="REAL"/>
         </explicit>
         <explicit name="mirror_placement" optional="YES">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="text_colour">
            <typename name="Colour"/>
         </explicit>
      </entity>
   </schema>
</express>