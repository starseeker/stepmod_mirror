<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">

<module
   name="b_spline_geometry"
   name.french="G&#233;om&#233;trie de b-spline"
   part="1801"
   version="2"
   wg.number="7189"
   wg.number.arm="7190"
   wg.number.mim="7191"

	wg.number.supersedes="6874" 
	wg.number.arm.supersedes="6875" 
	wg.number.mim.supersedes="6876" 
	
   status="TS"
   language="E"
   publication.year="2011-01"
   publication.date="2011-01-01"
   published="y"
   rcs.date="$Date: 2010/11/03 20:42:59 $"
   rcs.revision="$Revision: 1.2 $"
  development.folder="dvlp"
>

 <keywords>
    module, b_spline geometry, parametric curves and surfaces
 </keywords>

 <contacts>
   <projlead ref="ap203ed2.projlead"/>
   <editor ref="ap203ed2.editor"/>
 </contacts>

 <purpose>
This part of ISO 10303 specifies an application module for the representation of curves and surfaces defined using B-spline basis functions.
   
 </purpose>

 <inscope>
	<li>B-spline curves with explicit knots;</li>
	<li>B-spline curves with implicitly defined knots;</li>
	<li>B-spline surfaces with explicit knots;</li>
	<li>B-spline surfaces with implicitly defined knots;</li>
	<li>rational B-spline curves and surfaces;</li>
	<li>items within the scope of application module <module_ref linkend="basic_geometry:1_scope">Basic geometry</module_ref>, ISO/TS 10303-1652.</li>
   </inscope>

 <outscope>
   <li>
     all other types of curve and surface geometry.
     
   </li>
 </outscope>

 <normrefs>
   <normref.inc normref="ref10303-42"/>
 </normrefs>

 <arm>
   <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
  </express-g>
 </arm>

 <mapping_table>
   
   <!--  ++  B_spline_curve  ++ -->
   <ae entity="B_spline_curve">
      <aimelt>b_spline_curve</aimelt>
      <source>ISO 10303-42</source>
      <aa attribute="degree">
         <aimelt>b_spline_curve.degree</aimelt>
         <source>ISO 10303-42</source>
      </aa>
      <aa attribute="control_points" assertion_to="Cartesian_point">
         <aimelt>b_spline_curve.control_points_list</aimelt>
         <source>ISO 10303-42</source>
      </aa>
      <aa attribute="closed">
         <aimelt>b_spline_curve.closed_curve</aimelt>
         <source>ISO 10303-42</source>
      </aa>
   </ae>

<!--  ++  B_spline_surface  ++ -->
   <ae entity="B_spline_surface">
      <aimelt>b_spline_surface</aimelt>
      <source>ISO 10303-42</source>
      <aa attribute="u_degree">
         <aimelt>b_spline_surface.u_degree</aimelt>
         <source>ISO 10303-42</source>
      </aa>
        <aa attribute="v_degree">
         <aimelt>b_spline_surface.v_degree</aimelt>
         <source>ISO 10303-42</source>
      </aa>
    <aa attribute="control_points" assertion_to="Cartesian_point">
         <aimelt>b_spline_surface.control_points_list</aimelt>
         <source>ISO 10303-42</source>
      </aa>
      <aa attribute="u_closed">
         <aimelt>b_spline_surface.u_closed</aimelt>
         <source>ISO 10303-42</source>
      </aa>
      <aa attribute="v_closed">
               <aimelt>b_spline_surface.v_closed</aimelt>
               <source>ISO 10303-42</source>
      </aa>
   </ae>
    
    
    
    
    <!--  ++  Curve_with_explicit_knots ++ -->
   <ae entity="Curve_with_explicit_knots">
      <aimelt>b_spline_curve_with_knots</aimelt>
      <source>ISO 10303-42</source>
      <aa attribute="knot_multiplicities">
         <aimelt>b_spline_curve_with_knots.knot_multiplicities</aimelt>
         <source>ISO 10303-42</source>
      </aa>
      <aa attribute="knot_values">
               <aimelt>b_spline_curve_with_knots.knots</aimelt>
               <source>ISO 10303-42</source>
      </aa>
      </ae>

 <!--  ++  Curve_with_implicit_knots ++ -->
   <ae entity="Curve_with_implicit_knots">
      <alt_map id="1">
			<description>If knot_type = bezier.</description>
		<aimelt xml:space="preserve">bezier_curve</aimelt>
		<source xml:space="preserve">ISO 10303-42</source>
		<refpath xml:space="preserve">
		bezier_curve &lt;= b_spline_curve
		</refpath>
		</alt_map>
			  <alt_map id="2">
			<description>If knot_type = quasi_uniform.</description>
		<aimelt xml:space="preserve">quasi_uniform_curve</aimelt>
		<source xml:space="preserve">ISO 10303-42</source>
		<refpath xml:space="preserve">
		quasi_uniform_curve &lt;= b_spline_curve
		</refpath>
		</alt_map>
			  <alt_map id="3">
			<description>If knot_type = uniform.</description>
		<aimelt xml:space="preserve">uniform_curve</aimelt>
		<source xml:space="preserve">ISO 10303-42</source>
		<refpath xml:space="preserve">
		uniform_curve &lt;= b_spline_curve
		</refpath>
		</alt_map>
		<aa attribute="knot_type">
         <aimelt>NO MAPPING</aimelt>
         
      </aa>
      
      </ae>

 
 
 
 <!--  ++  Rational_b_spline_curve ++ -->
    <ae entity="Rational_b_spline_curve">
       <aimelt>rational_b_spline_curve</aimelt>
       <source>ISO 10303-42</source>
       <aa attribute="weight_values">
          <aimelt>b_spline_curve_with_knots.weights_data</aimelt>
          <source>ISO 10303-42</source>
       </aa>
      
      </ae>
 
 <!--  ++  Rational_b_spline_surface ++ -->
     <ae entity="Rational_b_spline_surface">
        <aimelt>rational_b_spline_curve</aimelt>
        <source>ISO 10303-42</source>
        <aa attribute="weight_values">
           <aimelt>b_spline_curve_with_knots.weights_data</aimelt>
           <source>ISO 10303-42</source>
        </aa>
       
      </ae>
 
  <!--  ++  Surface_with_explicit_knots ++ -->
    <ae entity="Surface_with_explicit_knots">
       <aimelt>b_spline_surface_with_knots</aimelt>
       <source>ISO 10303-42</source>
       <aa attribute="u_knot_multiplicities">
          <aimelt>b_spline_surface_with_knots.u_multiplicities</aimelt>
          <source>ISO 10303-42</source>
       </aa>
       <aa attribute="v_knot_multiplicities">
          <aimelt>b_spline_surface_with_knots.v_multiplicities</aimelt>
          <source>ISO 10303-42</source>
       </aa>
       <aa attribute="u_knot_values">
                <aimelt>b_spline_surface_with_knots.u_knots</aimelt>
                <source>ISO 10303-42</source>
       </aa>
       <aa attribute="v_knot_values">
                <aimelt>b_spline_surface_with_knots.v_knots</aimelt>
                <source>ISO 10303-42</source>
       </aa>
       </ae>
 
  <!--  ++  Surface_with_implicit_knots ++ -->
    <ae entity="Surface_with_implicit_knots">
       <alt_map id="1">
 			<description>If knot_type = bezier.</description>
 		<aimelt xml:space="preserve">bezier_surface</aimelt>
 		<source xml:space="preserve">ISO 10303-42</source>
 		<refpath xml:space="preserve">
 		bezier_surface &lt;= b_spline_surface
 		</refpath>
 		</alt_map>
 			  <alt_map id="2">
 			<description>If knot_type = quasi_uniform.</description>
 		<aimelt xml:space="preserve">quasi_uniform_surface</aimelt>
 		<source xml:space="preserve">ISO 10303-42</source>
 		<refpath xml:space="preserve">
 		quasi_uniform_surface &lt;= b_spline_surface
 		</refpath>
 		</alt_map>
 			  <alt_map id="3">
 			<description>If knot_type = uniform.</description>
 		<aimelt xml:space="preserve">uniform_surface</aimelt>
 		<source xml:space="preserve">ISO 10303-42</source>
 		<refpath xml:space="preserve">
 		uniform_surface &lt;= b_spline_surface
 		</refpath>
 		</alt_map>
 		<aa attribute="knot_type">
          <aimelt>NO MAPPING</aimelt>
          
       </aa>
       
       </ae>
 
 
 
 
 
 
 </mapping_table>

 <mim>
   <express-g>
     <imgfile file="mimexpg1.xml"/>
   </express-g>
 </mim>

</module>
