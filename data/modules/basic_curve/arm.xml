<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="2005-01-25T15:49:54" rcs.revision="1.0" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="basic_curve_arm schema_instance"/>
   <schema name="Basic_curve_arm">
      <interface kind="use" schema="Basic_geometry_arm"/>
      <interface kind="use" schema="External_item_identification_assignment_arm"/>
      <type name="bc_external_identification_item">
         <select extensible="YES" genericentity="YES" basedon="external_identification_item" selectitems="Boundary_curve"/>
      </type>
      <entity name="Boundary_curve" supertypes="Trimmed_curve">
         <explicit name="basis_curve">
            <typename name="Trimmed_curve"/>
         </explicit>
         <inverse name="mapping_function" entity="External_source_identification" attribute="item"/>
         <where label="WR1" expression=" NOT ( 'BASIC_CURVE_ARM.BOUNDARY_CURVE' IN TYPEOF ( basis_curve ) ) "/>
         <where label="WR2" expression=" NOT ( 'BASIC_CURVE_ARM.CLOSED_CURVE' IN TYPEOF ( SELF ) ) "/>
         <where label="WR3" expression=" NOT ( 'BASIC_CURVE_ARM.COMPOSITE_CURVE' IN TYPEOF ( basis_curve ) ) "/>
         <where label="WR4" expression=" NOT ( 'BASIC_CURVE_ARM.CLOSED_CURVE' IN TYPEOF ( basis_curve ) ) "/>
      </entity>
      <entity name="Closed_curve" supertypes="Curve"/>
      <entity name="Composite_curve" supertypes="Curve">
         <explicit name="curve_segment">
            <aggregate type="LIST" unique="YES" lower="1" upper="?"/>
            <typename name="Composite_curve_segment"/>
         </explicit>
      </entity>
      <entity name="Composite_curve_segment">
         <explicit name="segment_curve">
            <typename name="Curve"/>
         </explicit>
         <inverse name="using_curves" entity="Composite_curve" attribute="curve_segment">
            <inverse.aggregate type="SET" lower="1" upper="?"/>
         </inverse>
      </entity>
      <entity name="Measurement_path">
         <explicit name="defined_by">
            <typename name="Curve"/>
         </explicit>
         <explicit name="defined_in">
            <typename name="Geometric_coordinate_space"/>
         </explicit>
      </entity>
      <entity name="Trimmed_curve" supertypes="Curve" super.expression="Boundary_curve">
         <explicit name="start_point">
            <typename name="Cartesian_point"/>
         </explicit>
         <explicit name="end_point">
            <typename name="Cartesian_point"/>
         </explicit>
      </entity>
      <subtype.constraint name="curve_subtypes" entity="Curve" super.expression="ONEOF (Composite_curve, Trimmed_curve)"/>
   </schema>
</express>
