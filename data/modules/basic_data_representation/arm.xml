<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007-07-20 03:42:26 -0700 (Pn, 20 Lie 2007) $" rcs.revision="$Revision: 1327 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="basic_data_representation_arm schema_instance"/>
   <schema name="Basic_data_representation_arm">
      <interface kind="use" schema="Extended_date_arm"/>
      <interface kind="use" schema="Foundation_representation_arm"/>
      <entity name="Boolean_representation_item" supertypes="Representation_item">
         <explicit name="the_value">
            <builtintype type="BOOLEAN"/>
         </explicit>
      </entity>
      <entity name="Compound_representation_item" abstract.supertype="YES" supertypes="Representation_item" super.expression="ONEOF (Sequence_representation_item, Set_representation_item)"/>
      <entity name="Date_time_representation_item" supertypes="Representation_item">
         <explicit name="the_value">
            <typename name="extended_date_time_select"/>
         </explicit>
      </entity>
      <entity name="Integer_representation_item" supertypes="Representation_item">
         <explicit name="the_value">
            <builtintype type="INTEGER"/>
         </explicit>
      </entity>
      <entity name="Logical_representation_item" supertypes="Representation_item">
         <explicit name="the_value">
            <builtintype type="LOGICAL"/>
         </explicit>
      </entity>
      <entity name="Rational_representation_item" supertypes="Representation_item">
         <explicit name="numerator">
            <builtintype type="INTEGER"/>
         </explicit>
         <explicit name="denominator">
            <builtintype type="INTEGER"/>
         </explicit>
      </entity>
      <entity name="Real_representation_item" supertypes="Representation_item">
         <explicit name="the_value">
            <builtintype type="REAL"/>
         </explicit>
      </entity>
      <entity name="Sequence_representation_item" supertypes="Compound_representation_item">
         <explicit name="the_value">
            <aggregate type="LIST" lower="0" upper="?"/>
            <typename name="Representation_item"/>
         </explicit>
      </entity>
      <entity name="Set_representation_item" supertypes="Compound_representation_item">
         <explicit name="the_value">
            <aggregate type="SET" lower="0" upper="?"/>
            <typename name="Representation_item"/>
         </explicit>
      </entity>
      <subtype.constraint name="representation_item_subtypes" entity="Representation_item" super.expression="ONEOF (Boolean_representation_item, Compound_representation_item, Date_time_representation_item, Integer_representation_item, Logical_representation_item, Rational_representation_item, Real_representation_item)"/>
   </schema>
</express>
