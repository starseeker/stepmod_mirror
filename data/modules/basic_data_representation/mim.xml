<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007/11/15 11:08:31 $" rcs.revision="$Revision: 1.2 $" description.file="mim_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="basic_data_representation_mim schema_instance"/>
   <schema name="Basic_data_representation_mim">
      <interface kind="use" schema="Extended_date_mim"/>
      <interface kind="use" schema="Foundation_representation_mim"/>
      <interface kind="use" schema="ISO13584_expressions_schema">
         <interfaced.item name="boolean_literal"/>
         <interfaced.item name="int_literal"/>
         <interfaced.item name="slash_expression"/>
         <interfaced.item name="real_literal"/>
      </interface>
      
      <interface kind="use" schema="mathematical_functions_schema">
         <interfaced.item name="logical_literal"/>
      </interface>
      <entity name="boolean_representation_item" supertypes="representation_item boolean_literal"/>
      <entity name="date_representation_item" supertypes="representation_item date"/>
      <entity name="date_time_representation_item" supertypes="representation_item date_and_time"/>
      <entity name="integer_representation_item" supertypes="representation_item int_literal"/>
      <entity name="logical_representation_item" supertypes="representation_item logical_literal"/>
      <entity name="rational_representation_item" supertypes="representation_item slash_expression">
         <where label="WR1" expression="SIZEOF( QUERY( operand &lt;* SELF\binary_generic_expression.operands | &#10;        NOT('ISO13584_EXPRESSIONS_SCHEMA.INT_LITERAL' IN TYPEOF(operand)))) = 0"/>
      </entity>
      <entity name="real_representation_item" supertypes="representation_item real_literal"/>
      <subtype.constraint name="representation_item_subtypes" entity="representation_item" super.expression="ONEOF (boolean_representation_item, date_representation_item, date_time_representation_item, integer_representation_item, logical_representation_item, rational_representation_item, real_representation_item)"/>
   </schema>
</express>
