<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="basic_geometry_arm schema_instance"/>
   <schema name="Basic_geometry_arm">
      <interface kind="use" schema="Elemental_geometric_shape_arm"/>
      <type name="point_select">
         <select extensible="YES" genericentity="YES" selectitems="Cartesian_point Point_on_curve Point_on_surface"/>
      </type>
      <entity name="Curve" supertypes="Detailed_geometric_model_element"/>
      <entity name="Line" supertypes="Curve"/>
      <entity name="Plane" supertypes="Surface"/>
      <entity name="Point_on_curve" supertypes="Detailed_geometric_model_element">
         <explicit name="supporting_curve">
            <typename name="Curve"/>
         </explicit>
      </entity>
      <entity name="Point_on_surface" supertypes="Detailed_geometric_model_element">
         <explicit name="supporting_surface">
            <typename name="Surface"/>
         </explicit>
      </entity>
      <entity name="Surface" supertypes="Detailed_geometric_model_element"/>
      <subtype.constraint name="alternate_geometry_items" entity="Detailed_geometric_model_element" super.expression="ONEOF (Cartesian_point, Direction, Axis_placement, Cartesian_transformation_2d, Cartesian_transformation_3d, Curve, Point_on_curve, Point_on_surface, Surface)"/>
   </schema>
</express>
