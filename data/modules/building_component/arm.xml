<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/06/04 12:16:23 $"
  rcs.revision="$Revision: 1.7 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.33"
    source="../data/modules/building_component/arm.exp"/>

  <schema name="Building_component_arm">

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>
    <type name="main">
      <enumeration
        items="main not_main">
      </enumeration>
    </type>

    <type name="opening_functional_type">
      <enumeration
        items="door_opening service_opening window_opening">
      </enumeration>
    </type>

    <type name="opening_name">
      <builtintype
        type="STRING">
      </builtintype>
    </type>

    <type name="opening_type">
      <select
        selectitems="opening_name opening_functional_type">
      </select>
    </type>

    <entity
      name="Building_element_component"
      abstract.supertype="YES"
      super.expression="(ONEOF(Positive_component, Negative_component))"
      supertypes="Shape_element">
    </entity>

    <entity
      name="Negative_component"
      super.expression="(ONEOF(Recess,Opening))"
      supertypes="Building_element_component">
    </entity>

    <entity
      name="Opening"
      supertypes="Negative_component">
      <explicit
        name="opening_type">
        <typename
          name="opening_type"/>
      </explicit>
    </entity>

    <entity
      name="Positive_component"
      supertypes="Building_element_component">
      <explicit
        name="component_functional_type">
        <typename
          name="main"/>
      </explicit>
    </entity>

    <entity
      name="Recess"
      supertypes="Negative_component">
    </entity>

  </schema>
</express>
