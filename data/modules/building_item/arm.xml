<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2002/11/29 11:18:32 $"
  rcs.revision="$Revision: 1.2 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.23"
    source="../data/modules/building_item/arm.exp"/>

  <schema name="Building_item_arm">
	<interface
      kind="use"
      schema="Product_view_definition_arm">
    </interface>
		
	  <type name="fixture_equipment_functional_type">
      <enumeration
        items="ceiling covering_element door floor_covering furniture wall_covering window">
      </enumeration>


    </type>
    <type name="fixture_equipment_type">
      <select
        selectitems="fixture_equipment_type_name fixture_equipment_functional_type">
      </select>

    </type>
    <type name="fixture_equipment_type_name">
      <builtintype
        type="STRING">
      </builtintype>


    </type>
    <type name="service_functional_type">
      <enumeration
        items="electrical_system HVAC_system plumbing_system transport_system">
      </enumeration>


    </type>
    <type name="service_type">
      <select
        selectitems="service_type_name service_functional_type">
      </select>

    </type>
    <type name="service_type_name">
      <builtintype
        type="STRING">
      </builtintype>


    </type>
    <type name="structure_enclosure_functional_type">
      <enumeration
        items="beam brace column floor foundation structural_wire wall">
      </enumeration>


    </type>
    <type name="structure_enclosure_type">
      <select
        selectitems="structure_enclosure_type_name structure_enclosure_functional_type">
      </select>

    </type>
    <type name="structure_enclosure_type_name">
      <builtintype
        type="STRING">
      </builtintype>


    </type>
    <entity
      name="Building_element"
      super.expression="(ONEOF(Structure_enclosure_element,Fixture_equipment_element,Service_element))"
      supertypes="Building_item">
    </entity>

    <entity
      name="Building_item"
      abstract.supertype="YES"
      super.expression="(ONEOF(Space,Building_element))"
			supertypes="Product_view_definition">
    </entity>

    <entity
      name="Fixture_equipment_element"
      supertypes="Building_element">
      <explicit
        name="functional_type">
        <typename
          name="fixture_equipment_type"/>
      </explicit>
    </entity>

    <entity
      name="Service_element"
      supertypes="Building_element">
      <explicit
        name="functional_type">
        <typename
          name="service_type"/>
      </explicit>
    </entity>

    <entity
      name="Space"
      supertypes="Building_item">
    </entity>

    <entity
      name="Structure_enclosure_element"
      supertypes="Building_element">
      <explicit
        name="functional_type">
        <typename
          name="structure_enclosure_type"/>
      </explicit>
      <explicit
        name="load_bearing">
        <builtintype
          type="LOGICAL"/>
      </explicit>
    </entity>

  </schema>

</express>
