<!-- +++++++++++ clipping_mode +++++++++++  -->
<ext_description linkend="Camera_view_3d_arm.clipping_mode">
	A <b>clipping_mode</b> presents the modes of clipping.
</ext_description>

<ext_description linkend="Camera_view_3d_arm.clipping_mode.union">
	the clipping mode is union.
</ext_description>

<ext_description linkend="Camera_view_3d_arm.clipping_mode.intersection">
	the clipping mode is intersection.
</ext_description>

<!-- +++++++++++ light_type +++++++++++ -->
<ext_description linkend="Camera_view_3d_arm.light_type">
	A <b>light_type</b> presents the types of light.
</ext_description>

<ext_description linkend="Camera_view_3d_arm.light_type.ambient">
	the light is ambient;
</ext_description>

<ext_description linkend="Camera_view_3d_arm.light_type.directional">
	the light is directional;
</ext_description>

<ext_description linkend="Camera_view_3d_arm.light_type.spot">
	the light is spot;
</ext_description>

<ext_description linkend="Camera_view_3d_arm.light_type.positional">
	the light is positional.
</ext_description>

<!-- +++++++++++ view_projection_type ++++++++++ -->
<ext_description linkend="Camera_view_3d_arm.view_projection_type">
	A <b>view_projection_type</b> presents the types of view projection.
</ext_description>

<ext_description linkend="Camera_view_3d_arm.view_projection_type.central">
	the view projection type is central.
</ext_description>

<ext_description linkend="Camera_view_3d_arm.view_projection_type.parallel">
	the view projection type is parallel.
</ext_description>

<!-- +++++++++++ Camera_model_d3 +++++++++++ -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3">
	A <b>Camera_model_d3</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
</ext_description>

<!-- sources -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.sources">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Light_source"/>
	for the <b>Camera_model_d3</b>.
	There sall exist one or more
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Light_source">Light_sources</express_ref>
	for the <b>Camera_model_d3</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- clipping -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.clipping">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Clipping_operator"/>
	for the <b>Camera_model_d3</b>.
	There sall exist one or more
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Clipping_operator">Clipping_operators</express_ref>
	for the <b>Camera_model_d3</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- hidden_element_appearance -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.hidden_element_appearance">
	specifies a role of the
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Appearance_assignment"/>
	for the <b>Camera_model_d3</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- hidden_line_removal -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.hidden_line_removal">
	specifies a logical value.
</ext_description>

<!-- view_projection -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.view_projection">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.view_projection_type"/>
	for the <b>Camera_model_d3</b>.
</ext_description>

<!-- view_window -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.view_window">
	specifies a role of the
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Planar_box"/>
	for the <b>Camera_model_d3</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Camera_view_3d_arm.Camera_model_d3.wr:WR1">
	If the <b>hidden_line_removal</b> is not set, then the <b>hidden_element_appearance</b> shall not be set as well.
</ext_description>

<!-- +++++++++++ Clipping_operator +++++++++++ -->
<ext_description linkend="Camera_view_3d_arm.Clipping_operator">
	A <b>Clipping_operator</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
</ext_description>

<!-- operator -->
<ext_description linkend="Camera_view_3d_arm.Clipping_operator.operator">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.clipping_mode"/>
	for the <b>Clipping_operator</b>.
</ext_description>

<!-- elements -->
<ext_description linkend="Camera_view_3d_arm.Clipping_operator.elements">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.clipping_element"/>
	for the <b>Clipping_operator</b>.
	There shall exist one or more
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.clipping_element">clipping_elements</express_ref>
	for the <b>Clipping_operator</b>.
	
</ext_description>

