<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">
<module 
	 name="certification" 
	 part="1044" 
	 version="1" 
	 status="TS" 
   wg.number="1557" 
	 wg.number.supersedes="1146"
   wg.number.arm="1147" 
	 wg.number.mim="1148"  
	 checklist.internal_review="2137"
	 checklist.project_leader="2138"
	 checklist.convener="2139"	 
	 language="E" 
	 publication.year="2004" 
	 published="y" 
	 rcs.date="$Date: 2003/05/22 19:00:51 $" 
	 rcs.revision="$Revision: 1.22 $"
  development.folder="dvlp"
>
	<keywords>
    module, certification
 </keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>This part of ISO 10303 specifies an application module for the representation of the data that assure or validate activity or product data.
 </purpose>
	<inscope>
		<li>definition of a certificate;</li>
		<li>assignment of a certificate to activity or product data.</li>
	</inscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Certification">
			<description>The Certification UoF specifies the definitional information for representing 
			certification information that may be attached to an activity or to any aspect of product data.
			</description>
			<uof.ae entity="Certification"/>
			<uof.ae entity="Certification_assignment"/>
		</uof>

		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="Certification">
			<aimelt>certification</aimelt>
			<source>ISO 10303-41</source>
			<aa attribute="name">
				<aimelt>certification.name</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="description">
				<aimelt>certification.purpose</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="kind">
				<aimelt>certification_type.description</aimelt>
				<source>ISO 10303-41</source>
        <refpath>certification
			 	 certification.kind -&gt; certification_type
				 certification_type.description
			  </refpath>
		  </aa>
		</ae>
		
		<ae entity="Certification_assignment">
			<aimelt>applied_certification_assignment</aimelt>
			<source>ISO 10303-1044</source>
      <refpath>
			 		applied_certification_assignment &lt;= certification_assignment
			</refpath>     
  		<aa attribute="assigned_certification" assertion_to="Certification">
       <aimelt>PATH</aimelt>
       <refpath>
			 		applied_certification_assignment &lt;= certification_assignment
			 		certification_assignment.assigned_certification -&gt; certification
			 </refpath>			 
      </aa>
      <aa attribute="items" assertion_to="certification_item">
       <aimelt>PATH</aimelt>
       <refpath>
					applied_certification_assignment.items[i] -&gt; certification_item 
			 </refpath>			 
      </aa>

			<aa attribute="role">
				<aimelt>object_role.name</aimelt>
			  <source>ISO 10303-41</source>
				<refpath>
					applied_certification_assignment = role_select
					role_select &lt;- role_association.item_with_role
					role_association.role -&gt; object_role
					object_role.name
				</refpath>
			 </aa>
		</ae>
	</mapping_table>
	
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
				<imgfile file="mimexpg2.xml"/>
		</express-g>
		<shortnames>
      <shortname name="APCRAS" entity="applied_certification_assignment"/> 
 	  </shortnames>
	</mim>
</module>
