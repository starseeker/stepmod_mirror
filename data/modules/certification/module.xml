<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">
<module name="certification" part="1063" version="1" status="CD-TS" wg.number="N768" language="E" publication.year="2001" published="n" rcs.date="$Date: 2002/04/30 13:26:23 $" rcs.revision="$Revision: 1.7 $">
	<keywords>
    module, certification
 </keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>The Certification application module supports the requirement to record that a certification exists for product configuration information.
 </purpose>
	<inscope>
		<li>indicating product configuration information is related to a certification;</li>
		<li>recording of optional approvals for the certification.</li>
	</inscope>
	<outscope>
		<li>all concepts not involved in the representation of certification information and applying it to product configuration information.</li>
	</outscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Certification">
			<description>The Certification UoF specifies the definitional information for the concept of representing the certification information for product configuration information.</description>
			<uof.ae entity="Certification"/>
			<uof.ae entity="Certification_assignment"/>
		</uof>
<!--		<uoflink module="date_time" uof="Date_Time"/>
		<uoflink module="person_organization" uof="Person_Organization"/>
		<uoflink module="approval" uof="Approval"/> -->
		<express-g>
			<imgfile file="armexpg1.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="CERTIFICATION">
			<aimelt>certification</aimelt>
			<source>41</source>
			<aa attribute="description">
				<aimelt>certification.purpose</aimelt>
				<source>41</source>
			</aa>
			<aa attribute="type">
				<aimelt>certification_type.description</aimelt>
				<source>41</source>
			</aa>
		</ae>
		<ae entity="CERTIFICATION_ASSIGNMENT">
			<aimelt>certification_assignment</aimelt>
			<source>41</source>
			<aa attribute="assigned_certification">
				<aimelt>certification_assignment.assigned_certification</aimelt>
				<source>41</source>
			</aa>
			<aa attribute="items">
				<aimelt>applied_certification_assignment.items</aimelt>
				<source>1063</source>
				<refpath>certification_assignment &lt;=
applied_certification_assignment
applied_certification_assignment.items</refpath>
			</aa>
			<aa attribute="role">
				<aimelt>object_role.name</aimelt>
				<source>41</source>
				<refpath>
					applied_certification_assignment &lt;- role_association.item_with_role
					role_association.role -&gt; object_role
					object_role.name
				</refpath>
			</aa>
		</ae>
	</mapping_table>
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
		</express-g>
	</mim>
