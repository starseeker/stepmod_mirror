<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: characteristic_mim
<express_ref linkend="characteristic:mim:characteristic_mim"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="characteristic_mim">
</ext_description>

<!-- +++++++++++ characteristic_data_table_header +++++++++++ -->
<ext_description linkend="Characteristic_mim.characteristic_data_table_header">
	A <b>characteristic_data_table_header</b> is a type of
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.general_property"/>
	that implements the ARM concept of 
	<express_ref linkend="Characteristic:arm:Characteristic_arm.Characteristic_data_table_header"/>.
</ext_description>

<!-- +++++++++++ characteristic_data_table_header_link +++++++++++ -->
<ext_description linkend="Characteristic_mim.characteristic_data_table_header_link">
	A <b>characteristic_data_table_header_link</b> is a type of
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.general_property"/>
	and of
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.general_property_relationship"/>
	that implements the ARM concept of 
	<express_ref linkend="Characteristic:arm:Characteristic_arm.Characteristic_data_table_header_link"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: characteristic_type
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Characteristic_mim.characteristic_type">
A <b>characteristic_type</b> is a type of <express_ref linkend="group_schema:ir_express:group_schema.group"/> that specifies a boolean property, a numeric property whose units are in accordance with ISO 10303-41, a compound characteristic, a
logical property, a string property, or an externally defined property for a characteristic.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: table_representation_item
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Characteristic_mim.table_representation_item">
	A <b>table_representation_item</b> is a type of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item"/>.
</ext_description>

<ext_description linkend="Characteristic_mim.table_representation_item.wr:WR1">
The <express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item.item_element"/>
inherited from <express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item"/>
shall be of type <express_ref linkend="characteristic:mim:Characteristic_mim.row_representation_item"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: range_characteristic
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Characteristic_mim.range_characteristic">
	A <b>range_characteristic</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/> 
	and of
	<express_ref linkend="qualified_measure_schema:ir_express:qualified_measure_schema.descriptive_representation_item"/>
	that implements the ARM concept of
	<express_ref linkend="Characteristic:arm:Characteristic_arm.Range_characteristic"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Characteristic_mim.range_characteristic.wr:WR1">
	The
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.name"/> 
	shall not be of type
	'tolerance', 'minimum tolerance', 'maximum tolerance', 'nominal tolerance', 'plus minus tolerance', 'symmetrical tolerance', 'statistical tolerance'.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: row_representation_item
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Characteristic_mim.row_representation_item">
	A <b>row_representation_item</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item"/>.
</ext_description>

<!-- item_element -->
<ext_description linkend="Characteristic_mim.row_representation_item.item_element">
	an attribute inherited from the
	<express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item"/>
	shall be redeclared as the
	<express_ref linkend="representation_schema:ir_express:representation_schema.list_representation_item"/>
	for the <b>row_representation_item</b>.
</ext_description>

<!-- +++++++++++ c_compound_representation_item_subtypes +++++++++++ -->
<ext_description linkend="Characteristic_mim.c_compound_representation_item_subtypes">
	The <b>c_compound_representation_item_subtypes</b> constraint specifies a constraint that applies to instances of subtypes of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.compound_representation_item"/>.
</ext_description>

</ext_descriptions>
