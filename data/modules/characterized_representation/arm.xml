<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="">
   <application name="JSDAI" owner="LKSoft" source="characterized_representation_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Characterized_representation_arm">
      <interface kind="use" schema="Characterizable_object_arm"/>
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Property_assignment_arm"/>
      <interface kind="reference" schema="Foundation_representation_arm">
         <interfaced.item name="using_representations"/>
      </interface>
      <type name="cr_property_assignment_select">
         <select basedon="property_assignment_select" selectitems="Characterized_representation Characterized_item_within_representation"/>
      </type>
      <entity name="Characterized_item_within_representation" supertypes="Characterizable_object">
         <explicit name="item">
            <typename name="Representation_item"/>
         </explicit>
         <explicit name="rep">
            <typename name="Representation"/>
         </explicit>
         <where expression="rep IN using_representations(item)" label="WR1"/>
      </entity>
      <entity name="Characterized_representation" supertypes="Representation Characterizable_object"/>
   </schema>
</express>
