<module
   name="classification"
   part="1247"
   version="1"
   wg.number="1347"
   wg.number.arm="1348"
   wg.number.mim="1349"
   wg.number.ballot_package=""
   wg.number.ballot_comment=""
   checklist.internal_review="1359"
   checklist.project_leader="1360"
   checklist.convener="1361"
   status="CD-TS"
   language="E"
   publication.year="2003"
   published="n"
   rcs.date="$Date: 2002/09/27 08:07:28 $"
