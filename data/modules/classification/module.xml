 <keywords>
   module, classification
 </keywords>

 <contacts>
   <projlead ref="plcs.projlead"/>
   <editor ref="robbodington"/>
 </contacts>

 <purpose>
   This part of ISO 10303 specifies an application module for the
   representation of classification relationships between a 
   <express_ref linkend="class:arm:Class_arm.Class"/> and a member
   of that <express_ref linkend="class:arm:Class_arm.Class"/> 
   represented by an entity.
   <note>
     In this part of ISO 10303, the term 'class' and 'set' are synonyms. 
   </note>
 </purpose>

 <inscope>
   <li>
     a classification relationship between a <express_ref linkend="class:arm:Class_arm.Class"/> and a member of that <express_ref linkend="class:arm:Class_arm.Class"/>.
   </li>
 </inscope>

 <outscope>
   <li>
     relationships that are not classification relationships;
   </li>
   <li>
     the existence of a class or set;
   </li>
   <li>
     the distinction between a class or set that is defined by abstract
     criteria, and a class or set that is defined by enumerating its
     members; 
   </li>
   <li>
     a complete enumeration of the members for a class or set;
   </li>
   <li>
     the following set theory relationships:
     <ul>
       <li>complement; </li>
       <li>equivalence; </li>
       <li>intersection; </li>
       <li>power set; </li>
       <li>proper subset; </li>
       <li>subset; </li>
       <li>union. </li>
     </ul>
   </li>
 </outscope>

 <normrefs>
   <normref.inc normref="ref10303-54.-">
     <term.ref linkend="class"/>
     <term.ref linkend="set"/>
   </normref.inc>
 </normrefs>


 <arm>
   <!-- The Unit of functionality Classification -->
   <uof name="Classification">
      <description>
        The Classification UoF defines classification relationships between a 
   <express_ref linkend="class:arm:Class_arm.Class"/> and a member
   of that <express_ref linkend="class:arm:Class_arm.Class"/> 
   represented by an entity.
      </description>
      <!-- the application objects defined in the Classification UoF -->
      <uof.ae entity="Classification"/>
      <uof.ae entity="Complete_membership"/>
    </uof>

   <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
    </express-g>
 </arm>

<mapping_table>
<ae entity="Classification">
<aimelt>classification</aimelt>
<source>ISO 10303-54</source>

<aa attribute="classified" assertion_to="Classified_select">
<aimelt>PATH</aimelt>
<refpath>classification
classification.classified -&gt; classified_select</refpath>
</aa>

<aa attribute="classifier" assertion_to="Class">
<aimelt>PATH</aimelt>
<refpath>classification &lt;=
classification_assignment
classification_assignment.assigned_class-&gt;class</refpath>
</aa>
</ae>

<ae entity="Complete_membership">
<aimelt>complete_membership</aimelt>
<source>ISO 10303-54</source>

<aa attribute="containing_set" assertion_to="Class">
<aimelt>PATH</aimelt>
<refpath>complete_membership &lt;=
classification_assignment
classification_assignment.assigned_class-&gt;class</refpath>
</aa>

<aa attribute="members" assertion_to="Classified_select">
<aimelt>PATH</aimelt>
<refpath>complete_membership
complete_membership.members[i]-&gt;classified_select</refpath>
</aa>

</ae>

</mapping_table>


 <mim>
   <express-g>
     <imgfile file="mimexpg1.xml"/>
     <imgfile file="mimexpg2.xml"/>
    </express-g>
 </mim>

 <bibliography>
   <bibitem.inc ref="ISO10303-1070"/>
 </bibliography>

</module>
