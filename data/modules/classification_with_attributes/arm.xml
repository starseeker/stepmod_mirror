<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.22"
    source="../data/modules/classification_with_attributes/arm.exp"/>

  <schema name="Classification_with_attributes_arm">
    <interface
      kind="use"
      schema="Class_arm">
    </interface>

    <interface
      kind="use"
      schema="External_class_arm">
    </interface>

    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Plib_class_reference_arm">
    </interface>

    <interface
      kind="use"
      schema="Part_and_version_identification_arm">
    </interface>

    <interface
      kind="use"
      schema="Part_view_definition_arm">
    </interface>

    <type name="classified_element_select">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <type name="definable_objects">
      <select
        selectitems="Part Part_version Part_view_definition">
      </select>

    </type>
    <entity
      name="Class_with_attributes"
      supertypes="Class">
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="used_classification_system"
        optional="YES">
        <typename
          name="Classification_system"/>
      </explicit>
      <explicit
        name="characterization_attributes">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="Classification_attribute"/>
      </explicit>
      <explicit
        name="classification_source"
        optional="YES">
        <typename
          name="plib_class_source_select"/>
      </explicit>
    </entity>

    <entity
      name="Classification_association">
      <explicit
        name="associated_classification">
        <typename
          name="Class"/>
      </explicit>
      <explicit
        name="classified_element">
        <typename
          name="classified_element_select"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="definitional">
        <builtintype
          type="LOGICAL"/>
      </explicit>
      <where
        label="WR1"
        expression="('CLASSIFICATION_WITH_ATTRIBUTES_ARM.DEFINABLE_OBJECTS' IN TYPEOF(classified_element)) OR 	NOT definitional">
      </where>
    </entity>

    <entity
      name="Classification_attribute">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="allowed_values"
        optional="YES">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="Measure_item"/>
      </explicit>
    </entity>

    <entity
      name="Classification_system">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
