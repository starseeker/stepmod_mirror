<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.18"
    source="../data/modules/colour/arm.exp"/>

  <schema name="Colour_arm">
    <entity
      name="Colour">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Externally_defined_colour"
      supertypes="Colour">
      <explicit
        name="source">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Pre_defined_colour"
      supertypes="Colour">
      <where
        label="WR1"
        expression="SELF.name IN       ['red',        'green',        'blue',        'yellow',        'magenta',        'cyan',        'black',        'white']">
      </where>
    </entity>

    <entity
      name="User_defined_colour"
      supertypes="Colour">
      <explicit
        name="red">
        <builtintype
          type="REAL"/>
      </explicit>
      <explicit
        name="green">
        <builtintype
          type="REAL"/>
      </explicit>
      <explicit
        name="blue">
        <builtintype
          type="REAL"/>
      </explicit>
      <where
        label="WR1"
        expression="{0.0 &lt;= red &lt;= 1.0}">
      </where>
      <where
        label="WR2"
        expression="{0.0 &lt;= green &lt;= 1.0}">
      </where>
      <where
        label="WR3"
        expression="{0.0 &lt;= blue &lt;= 1.0}">
      </where>
    </entity>

  </schema>

</express>
