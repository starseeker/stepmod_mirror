<ext_description linkend="composite_constituent_shape_mim">
</ext_description>

<!-- +++++++++++ beveled_sheet_representation +++++++++++ -->
<ext_description linkend="Composite_constituent_shape_mim.beveled_sheet_representation">
	A <b>beveled_sheet_representation</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	that implements the ARM concept of 
	<express_ref linkend="Composite_constituent_shape:arm:Composite_constituent_shape_arm.Beveled_sheet_representation"/>.
</ext_description>

<!-- +++++++++++ composite_sheet_representation +++++++++++ -->
<ext_description linkend="Composite_constituent_shape_mim.composite_sheet_representation">
	A <b>composite_sheet_representation</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	that implements the ARM concept of 
	<express_ref linkend="Composite_constituent_shape:arm:Composite_constituent_shape_arm.Composite_sheet_representation"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Composite_constituent_shape_mim.composite_sheet_representation.wr:WR1">
	<p>
	Any instance of <b>composite_sheet_representation</b> shall be either of type 
	<express_ref linkend="aic_geometrically_bounded_surface:ir_express:aic_geometrically_bounded_surface.geometrically_bounded_surface_shape_representation"/>, 
	or of type 
	<express_ref linkend="aic_manifold_surface:ir_express:aic_manifold_surface.manifold_surface_shape_representation"/>.
	</p>
</ext_description>

<!-- +++++++++++ flat_pattern_ply_representation_relationship +++++++++++ -->
<ext_description linkend="Composite_constituent_shape_mim.flat_pattern_ply_representation_relationship">
	A <b>flat_pattern_ply_representation_relationship</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation_relationship"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Composite_constituent_shape_mim.flat_pattern_ply_representation_relationship.wr:WR1">
	<p>
	The
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/> 
	and 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/> 
	shall be 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation">shape_representations</express_ref>.
	</p>
</ext_description>

<!-- WR2 -->
<ext_description linkend="Composite_constituent_shape_mim.flat_pattern_ply_representation_relationship.wr:WR2">
	<p>
	The
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/>
	shall always be 3D.
	</p>
</ext_description>

