<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: compound_representation_mim		Entity: compound_shape_representation
<express_ref linkend="compound_shape_representation:mim:Compound_shape_representation_mim.compound_shape_representation"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation">
	A <b>compound_shape_representation</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	that implements the ARM concept of
	<express_ref linkend="compound_shape_representation:arm:Compound_shape_representation_arm.Compound_shape_representation"/>.
	A <b>compound_shape_representation</b> represents the shape or a portion of the shape of a product using elements of different dimensionality 
	such as wireframes or surface models that are topologically connected.
	The topology of a <b>compound_shape_representation</b> may be non-manifold.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: compound_shape_representation	WR:WR1
<express_ref linkend="compound_representation:mim:Compound_shape_representation_mim.compound_shape_representation.wr:WR1"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation.wr:WR1">
	<p>
	The <b>compound_shape_representation</b> shall have a 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context.coordinate_space_dimension"/> 
	equal to three.
	</p>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: compound_shape_representation	WR:WR2
<express_ref linkend="compound_representation:mim:Compound_shape_representation_mim.compound_shape_representation.wr:WR2"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation.wr:WR2">
	<p>
	The 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/> 
	in the <b>compound_shape_representation</b> shall be of type 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.edge_based_wireframe_model"/>, 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.face_based_surface_model"/>, 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/> 
	or 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.axis2_placement_3d"/>.
	</p>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: compound_shape_representation	WR:WR3
<express_ref linkend="compound_representation:mim:Compound_shape_representation_mim.compound_shape_representation.wr:WR3"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation.wr:WR3">
	<p>
	The 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/> 
	of a <b>compound_shape_representation</b> shall include at least one 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/> 
	or one 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.edge_based_wireframe_model"/> 
	or one 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.face_based_surface_model"/>. 
	</p>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: compound_shape_representation	WR:WR4
<express_ref linkend="compound_representation:mim:Compound_shape_representation_mim.compound_shape_representation.wr:WR4"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation.wr:WR4">
	<p>
	If there is a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/> 
	in a <b>compound_shape_representation</b>, the source of the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/> 
	shall be a <b>compound_shape_representation</b>, a 
	<express_ref linkend="aic_edge_based_wireframe:ir_express:aic_edge_based_wireframe.edge_based_wireframe_shape_representation"/>, 
	or a 
	<express_ref linkend="aic_non_manifold_surface:ir_express:aic_non_manifold_surface.non_manifold_surface_shape_representation"/>. 
	</p>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: compound_shape_representation	WR:IP1
<express_ref linkend="compound_representation:mim:Compound_shape_representation_mim.compound_shape_representation.wr:IP1"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Compound_shape_representation_mim.compound_shape_representation.wr:IP1">
	<p>
	All elements in a <b>compound_shape_representation</b> shall be topologically connected.
	</p>
</ext_description>

