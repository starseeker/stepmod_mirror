<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/04/09 07:03:30 $"
  rcs.revision="$Revision: 1.1 $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/configuration_item/arm.exp"/>

  <schema name="Configuration_item_arm">
    <interface
      kind="use"
      schema="Product_version_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_concept_identification_arm">
    </interface>

    <type name="version_or_definition">
      <select
        selectitems="Product_version Product_view_definition">
      </select>

    </type>
    <entity
      name="Configuration_watched_item">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="item_context">
        <typename
          name="Product_concept"/>
      </explicit>
      <inverse
        name="corresponding_design"
        entity="Item_design_association"
        attribute="watched_item">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
    </entity>

    <entity
      name="Item_design_association">
      <explicit
        name="watched_item">
        <typename
          name="Configuration_watched_item"/>
      </explicit>
      <explicit
        name="proposed_design">
        <typename
          name="version_or_definition"/>
      </explicit>
      <unique
        label="UR1">
        <unique.attribute
          attribute="watched_item"/>
        <unique.attribute
          attribute="proposed_design"/>
      </unique>
    </entity>

  </schema>

</express>
