<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="construction_geometry_arm schema_instance"/>
   <schema name="Construction_geometry_arm">
      <interface kind="use" schema="Basic_curve_arm"/>
      <type name="constructive_element_select">
         <select extensible="YES" genericentity="YES" selectitems="Axis_placement Curve point_select Surface"/>
      </type>
      <type name="constructive_geometry_select">
         <select selectitems="Constructive_geometry Geometric_model"/>
      </type>
      <entity name="Constructive_geometry" supertypes="Representation">
         <explicit name="context_of_items">
            <typename name="Geometric_coordinate_space"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="constructive_element_select"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
      <entity name="Constructive_geometry_association">
         <explicit name="auxiliary_geometry">
            <typename name="Constructive_geometry"/>
         </explicit>
         <explicit name="base_geometry">
            <typename name="constructive_geometry_select"/>
         </explicit>
         <explicit name="description">
            <builtintype type="STRING"/>
         </explicit>
         <where label="WR1" expression="auxiliary_geometry\Representation.context_of_items :=: base_geometry\Representation.context_of_items"/>
      </entity>
   </schema>
</express>
