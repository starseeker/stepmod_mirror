<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2002/11/15 17:24:50 $"
  rcs.revision="$Revision: 1.6 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.25"
    source="../data/modules/construction_geometry/arm.exp"/>

  <schema name="Construction_geometry_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <type name="constructive_element_select">
      <select
        extensible="YES"
        genericentity="YES"
        selectitems="Axis_placement Curve point_select Surface">
      </select>

    </type>
    <type name="constructive_geometry_select">
      <select
        selectitems="Constructive_geometry Geometric_model">
      </select>

    </type>
    <type name="point_select">
      <select
        selectitems="Cartesian_point Point_on_curve Point_on_surface">
      </select>

    </type>
    <entity
      name="Constructive_geometry"
      supertypes="Representation">
      <explicit
        name="context_of_items">
          <typename
            name="Geometric_coordinate_space"/>
        <redeclaration
          entity-ref="Representation"/>        </explicit>
        <where
          label="WR1"
          expression="SIZEOF(SELF\Representation.items) = SIZEOF(QUERY (it &lt;* SELF\Representation.items |	'CONSTRUCTION_GEOMETRY_ARM.CONSTRUCTIVE_ELEMENT_SELECT' IN TYPEOF(it)))">
        </where>
      </entity>

      <entity
        name="Constructive_geometry_association">
        <explicit
          name="auxiliary_geometry">
          <typename
            name="Constructive_geometry"/>
        </explicit>
        <explicit
          name="base_geometry">
          <typename
            name="constructive_geometry_select"/>
        </explicit>
        <explicit
          name="description">
          <builtintype
            type="STRING"/>
        </explicit>
        <where
          label="WR1"
          expression="auxiliary_geometry\Representation.context_of_items :=: base_geometry\Representation.context_of_items">
        </where>
      </entity>

      <entity
        name="Curve"
        supertypes="Detailed_geometric_model_element">
      </entity>

      <entity
        name="Line"
        supertypes="Curve">
      </entity>

      <entity
        name="Measurement_path">
        <explicit
          name="defined_by">
          <typename
            name="Curve"/>
        </explicit>
        <explicit
          name="defined_in">
          <typename
            name="Geometric_coordinate_space"/>
        </explicit>
      </entity>

      <entity
        name="Plane"
        supertypes="Surface">
      </entity>

      <entity
        name="Point_on_curve"
        supertypes="Detailed_geometric_model_element">
        <explicit
          name="supporting_curve">
          <typename
            name="Curve"/>
        </explicit>
      </entity>

      <entity
        name="Point_on_surface"
        supertypes="Detailed_geometric_model_element">
        <explicit
          name="supporting_surface">
          <typename
            name="Surface"/>
        </explicit>
      </entity>

      <entity
        name="Surface"
        supertypes="Detailed_geometric_model_element">
      </entity>

      <subtype.constraint name="alternate_geometry_items"
        entity="Detailed_geometric_model_element"
        super.expression="  ONEOF(Curve, Cartesian_point, Point_on_curve, Point_on_surface, Surface)">
      </subtype.constraint>

    </schema>

  </express>
