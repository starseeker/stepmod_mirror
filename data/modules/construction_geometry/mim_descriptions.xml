<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Construction_geometry_mim
   <express_ref linkend="construction_geometry:mim:Construction_geometry_mim"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim">
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Construction_geometry_mim  Entity: constructive_geometry_representation  
<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation">
	A <b>constructive_geometry_representation</b> is a type of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>
	that is a collection of geometric elements used to support the definition of the geometry that is representing a shape or a shape element.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: constructive_geometry_representation  Where: WR1 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation.wr:WR1">
	The <b>constructive_geometry_representation</b> shall have a 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/>
	as its 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.context_of_items"/>. 
	This 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/>
	shall have a 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context.coordinate_space_dimension"/>
	of value 2 or 3. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: constructive_geometry_representation  Where: WR2 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation.wr:WR2">
	The items in the <b>constructive_geometry_representation</b> shall be of type 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.placement"/>, 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.curve"/>, 
	<express_ref linkend="topology_schema:ir_express:topology_schema.edge"/>, 
	<express_ref linkend="topology_schema:ir_express:topology_schema.face"/>, 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.point"/>, 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.surface"/>, 
	<express_ref linkend="topology_schema:ir_express:topology_schema.face_surface"/> 
	or 
	<express_ref linkend="topology_schema:ir_express:topology_schema.vertex_point"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: constructive_geometry_representation  Where: WR3 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation.wr:WR3">
	The <b>constructive_geometry_representation</b> shall play the role of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/>
	for at least one 
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation_relationship"/>. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: constructive_geometry_representation  Where: WR4 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation.wr:WR4">
	The <b>constructive_geometry_representation</b> shall not play the role of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_map.mapped_representation"/>
	for a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_map"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Construction_geometry_mim  Entity: constructive_geometry_representation_relationship  
<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation_relationship"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation_relationship">
	A <b>constructive_geometry_representation_relationship</b> is a type of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship"/>
	that associates a 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	with a 
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>
	that contains geometric elements used for the definition of the shape geometry. 
	<example>
		The 
		<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>
		may contain axis placements that were used to locate planar surfaces.
	</example>
	The 
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>
	may associate two  
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation">constructive_geometry_representations</express_ref>
	in order to create a representation in more than one step.  
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: constructive_geometry_representation_relationship  Where: WR1 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation_relationship.wr:WR1">
	Both representations playing the roles of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/>
	and 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/>
	of the <b>constructive_geometry_representation_relationship</b> shall share the same 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/>. 
</ext_description>

<!-- WR2 -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation_relationship.wr:WR2">
	The representation playing the role of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/>
	of the <b>constructive_geometry_representation_relationship</b> shall be of type  
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>. 
</ext_description>

<!-- WR3 -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation_relationship.wr:WR3">
	The representation playing the role of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/>
	of the <b>constructive_geometry_representation_relationship</b> shall be of type 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	or 
	<express_ref linkend="construction_geometry:mim:Construction_geometry_mim.constructive_geometry_representation"/>. 
</ext_description>

<!-- WR4 -->
<ext_description linkend="Construction_geometry_mim.constructive_geometry_representation_relationship.wr:WR4">
	The <b>constructive_geometry_representation_relationship</b> shall not be of type 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship_with_transformation"/>. 
</ext_description>

</ext_descriptions>
