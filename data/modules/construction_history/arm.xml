<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.22"
    source="../data/modules/constuction_history/arm.exp"/>

  <schema name="Construction_history_arm">
    <interface
      kind="use"
      schema="Constructive_solid_geometry_3d_arm">
    </interface>

    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>

    <type name="shape_representation_select">
      <select
        selectitems="Detailed_geometric_model_element Detailed_topological_model_element">
      </select>

    </type>
    <entity
      name="Hybrid_shape_model"
      supertypes="Representation_relationship">
      <explicit
        name="implicit_rep">
        <typename
          name="Procedural_shape_model"/>
      </explicit>
      <explicit
        name="explicit_rep">
        <typename
          name="Manifold_solid_brep"/>
      </explicit>
    </entity>

    <entity
      name="Procedural_shape_model"
      supertypes="Geometric_model">
      <explicit
        name="operations">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="Geometric_operation_sequence"/>
      </explicit>
    </entity>

    <entity
      name="Geometric_operation_sequence"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="elements">
        <aggregate
          type="LIST"
          lower="1"
          upper="?"/>
     
        <typename
          name="Detailed_geometric_model_element"/>
      </explicit>
    </entity>

    <entity
      name="Chosen_shape_element"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="picked_element">
        <typename
          name="shape_representation_select"/>
      </explicit>
    </entity>

    <entity
      name="Transition_feature_solid"
      abstract.supertype="YES"
      super.expression="(Fillet, Round, Chamfer)"
      supertypes="Shape_element Solid_model">
    </entity>

    <entity
      name="Fillet"
      supertypes="Transition_feature_solid">
      <explicit
        name="chosen_element">
        <typename
          name="Chosen_shape_element"/>
      </explicit>
      <explicit
        name="base_solid">
        <typename
          name="Solid_model"/>
      </explicit>
      <explicit
        name="radius">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
    </entity>

    <entity
      name="Round"
      supertypes="Transition_feature_solid">
      <explicit
        name="chosen_element">
        <typename
          name="Chosen_shape_element"/>
      </explicit>
      <explicit
        name="base_solid">
        <typename
          name="Solid_model"/>
      </explicit>
      <explicit
        name="radius">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
      </entity>
      <entity
        name="Chamfer"
         supertypes="Transition_feature_solid ">
   
      <explicit
        name="chosen_element">
        <typename
          name="Chosen_shape_element"/>
      </explicit>
      <explicit
        name="base_solid">
        <typename
          name="Solid_model"/>
      </explicit>
      <explicit
        name="face1">
        <typename
          name="Face"/>
      </explicit>
      <explicit
        name="face2">
        <typename
          name="Face"/>
      </explicit>
      <explicit
        name="distance1">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
      <explicit
        name="distance2">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
    </entity>

  </schema>

</express>
