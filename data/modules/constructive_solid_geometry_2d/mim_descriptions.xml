<!-- +++++++++++ bounded_area +++++++++++ -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.bounded_area">
	An <b>bounded_area</b> is a type of
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.half_space_2d"/>
	which defines a region, bounded by a 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.composite_curve.closed_curve"/>.
	Depending on the direction of the <b>base_curve</b> and the 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.half_space_2d.agreement_flag"/> 
	the area may be outside or inside of the 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.composite_curve.closed_curve"/>. 
	An <b>bounded_area</b> is either a
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.area_with_inner_boundary"/>
	or an 
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.area_with_outer_boundary"/>.
</ext_description>

<!-- base_curve -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.bounded_area.base_curve">
	an attribute inherited from the
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.half_space_2d"/>
	shall be redeclared as the 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.composite_curve"/>
	for the <b>bounded_area</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.bounded_area.wr:WR1">
	The <b>base_curve</b> shall be closed.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.bounded_area.wr:WR2">
	The <b>base_curve</b> shall be non-intersecting.
</ext_description>

