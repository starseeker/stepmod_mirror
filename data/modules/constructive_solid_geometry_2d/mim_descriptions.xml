<!-- +++++++++++ csg_2d_shape_representation +++++++++++ -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation">
	A <b>csg_2d_shape_representation</b> is a type of 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/> 
	that implements the ARM concept of 
	<express_ref linkend="Constructive_solid_geometry_2d:arm:Constructive_solid_geometry_2d_arm.Csg_2d_model"/>.
	A <b>csg_2d_shape_representation</b> is a two-dimensional 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/> 
	that represents the shape of a product using constructive solid geometry operations and techniques. 
	The solid objects may be either 2D primitives, or half-space 2D solids. 
</ext_description>

<!-- WR1 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation.wr:WR1">
	The 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/> 
	of the <b>csg_2d_shape_representation</b> shall have a 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context.coordinate_space_dimension"/> 
	equal to two.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation.wr:WR2">
	The items in a <b>csg_2d_shape_representation</b> shall be a 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.csg_solid"/>, 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/>, 
	or an 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.axis2_placement_2d"/>. 
</ext_description>

<!-- WR3 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation.wr:WR3">
	At least one of the items in a <b>csg_2d_shape_representation</b> shall be a 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.csg_solid"/>, 
	or a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/>
	with a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_map.mapped_representation"/> 
	of the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item.mapping_source"/> 
	attribute of the type <b>csg_2d_shape_representation</b>. 
</ext_description>

<!-- WR4 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation.wr:WR4">
	If a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/> 
	is in the items set then the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_map.mapped_representation"/> 
	of the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item.mapping_source"/> 
	attribute shall be a <b>csg_2d_shape_representation</b>.
</ext_description>

<!-- WR5 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.csg_2d_shape_representation.wr:WR5">
	The <b>csg_2d_shape_representation</b> shall not be another type of 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>.
</ext_description>

<!-- +++++++++++ single_area_csg_2d_shape_representation +++++++++++ -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.single_area_csg_2d_shape_representation">
	A <b>single_area_csg_2d_shape_representation</b> is a type of
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.csg_2d_shape_representation"/>
	that implements the ARM concept of
	<express_ref linkend="Constructive_solid_geometry_2d:arm:Constructive_solid_geometry_2d_arm.Single_area_csg_2d_model"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.single_area_csg_2d_shape_representation.wr:WR1">
	The items in a 
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.csg_2d_shape_representation"/> 
	shall not be of type 
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/>.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.single_area_csg_2d_shape_representation.wr:WR2">
	Exactly one of the items in a 
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.csg_2d_shape_representation"/> 
	shall be a 
	<express_ref linkend="geometric_model_schema:ir_express:geometric_model_schema.csg_solid"/>.
</ext_description>

<!-- +++++++++++ single_boundary_csg_2d_shape_representation +++++++++++ -->
<ext_description linkend="Constructive_solid_geometry_2d_mim.single_boundary_csg_2d_shape_representation">
	A <b>single_boundary_csg_2d_shape_representation</b> is a type of
	<express_ref linkend="Constructive_solid_geometry_2d:mim:Constructive_solid_geometry_2d_mim.single_area_csg_2d_shape_representation"/>
	that implements the ARM concept of
	<express_ref linkend="Constructive_solid_geometry_2d:arm:Constructive_solid_geometry_2d_arm.Single_boundary_csg_2d_model"/>.
</ext_description>

