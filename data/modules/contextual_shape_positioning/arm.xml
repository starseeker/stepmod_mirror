<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1027">
   <application name="JSDAI" owner="LKSoft" source="contextual_shape_positioning_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Contextual_shape_positioning_arm">
      <interface kind="use" schema="Geometric_model_relationship_arm"/>
      <interface kind="use" schema="Shape_property_assignment_arm"/>
      <type name="axis_placement_mapping_source">
         <select extensible="YES" genericentity="YES" selectitems="Axis_placement"/>
      </type>
      <type name="axis_placement_mapping_target">
         <select extensible="YES" genericentity="YES" selectitems="Axis_placement"/>
      </type>
      <type name="list_placement_transformation_select">
         <aggregate lower="1" optional="NO" type="LIST" unique="NO" upper="?"/>
         <typename name="Axis_placement_mapping"/>
      </type>
      <type name="product_context_select">
         <select extensible="NO" genericentity="NO" selectitems="View_definition_relationship Product_occurrence_definition_relationship"/>
      </type>
      <type name="set_placement_transformation_select">
         <aggregate lower="1" optional="NO" type="SET" unique="NO" upper="?"/>
         <typename name="Axis_placement_mapping"/>
      </type>
      <type name="single_or_set_or_list_placement_transformation">
         <select extensible="NO" genericentity="NO" selectitems="Axis_placement_mapping set_placement_transformation_select list_placement_transformation_select"/>
      </type>
      <type name="template_instance">
         <select extensible="NO" genericentity="NO" selectitems="Geometric_placement_operation Geometric_model_relationship_with_transformation"/>
      </type>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Axis_placement_mapping">
         <explicit name="source" optional="NO">
            <typename name="axis_placement_mapping_source"/>
         </explicit>
         <explicit name="target" optional="NO">
            <typename name="axis_placement_mapping_target"/>
         </explicit>
      <where label="IP1"/>
      </entity>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Contextual_shape_representation">
         <explicit name="product_context" optional="NO">
            <typename name="product_context_select"/>
         </explicit>
         <explicit name="shape_representing_relationship" optional="NO">
            <typename name="Geometric_model_relationship"/>
         </explicit>
         <derived expression="shape_representing_relationship.rep_2" name="context_representation">
            <typename name="geometric_representation_select"/>
         </derived>
         <derived expression="shape_representing_relationship.rep_1" name="positioned_representation">
            <typename name="geometric_representation_select"/>
         </derived>
      </entity>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Geometric_composition_with_operator_transformation" supertypes="Geometric_relationship_with_operator_transformation Definitional_representation_relationship"/>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Geometric_composition_with_placement_transformation" supertypes="Geometric_relationship_with_placement_transformation Definitional_representation_relationship"/>
      <entity abstract.entity="NO" abstract.supertype="YES" name="Geometric_model_relationship_with_transformation" super.expression="ONEOF (Geometric_relationship_with_placement_transformation, Geometric_relationship_with_operator_transformation)" supertypes="Geometric_model_relationship">
         <where expression="rep_1.context_of_items :&lt;&gt;: rep_2.context_of_items" label="WR1"/>
      </entity>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Geometric_placement_model" supertypes="Geometric_model">
         <explicit name="items" optional="NO">
            <aggregate lower="1" optional="NO" type="SET" unique="NO" upper="1"/>
            <typename name="Geometric_placement_operation"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Geometric_relationship_with_operator_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation" optional="NO">
            <typename name="cartesian_transformation"/>
         </explicit>
         <where expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count" label="WR1"/>
      </entity>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Geometric_relationship_with_placement_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation" optional="NO">
            <typename name="single_or_set_or_list_placement_transformation"/>
         </explicit>
         <where expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count" label="WR1"/>
      </entity>
   </schema>
</express>
