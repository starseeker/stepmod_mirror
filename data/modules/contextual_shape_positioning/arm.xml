<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007-05-08 04:17:40 -0700 (An, 08 Geg 2007) $" rcs.revision="$Revision: 709 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="contextual_shape_positioning_arm schema_instance"/>
   <schema name="Contextual_shape_positioning_arm">
      <interface kind="use" schema="Extended_basic_geometry_arm"/>
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Shape_property_assignment_arm"/>
      <type name="template_definition_select">
         <select extensible="YES" selectitems="Geometric_model"/>
      </type>
      <type name="template_instance">
         <select selectitems="Geometric_placement_operation Geometric_model_relationship_with_transformation"/>
      </type>
      <entity name="Contextual_shape_representation">
         <explicit name="contextual_shape">
            <typename name="Contextual_item_shape"/>
         </explicit>
         <explicit name="representing_relationship">
            <typename name="Geometric_model_relationship"/>
         </explicit>
         <derived name="context_representation" expression="representing_relationship.rep_2">
            <typename name="Geometric_model"/>
         </derived>
         <derived name="positioned_representation" expression="representing_relationship.rep_1">
            <typename name="Geometric_model"/>
         </derived>
      </entity>
      <entity name="Geometric_composition_with_operator_transformation" supertypes="Geometric_relationship_with_operator_transformation Definitional_representation_relationship"/>
      <entity name="Geometric_composition_with_placement_transformation" supertypes="Geometric_relationship_with_placement_transformation Definitional_representation_relationship"/>
      <entity name="Geometric_model_relationship_with_transformation" abstract.supertype="YES" supertypes="Geometric_model_relationship" super.expression="ONEOF (Geometric_relationship_with_placement_transformation, Geometric_relationship_with_operator_transformation)">
         <where label="WR1" expression="rep_1.context_of_items :&lt;&gt;: rep_2.context_of_items"/>
      </entity>
      <entity name="Geometric_operator_transformation" supertypes="Geometric_placement_operation">
         <explicit name="target">
            <typename name="cartesian_transformation"/>
         </explicit>
      </entity>
      <entity name="Geometric_placement" supertypes="Geometric_placement_operation">
         <explicit name="target">
            <typename name="Axis_placement"/>
         </explicit>
      </entity>
      <entity name="Geometric_placement_model" supertypes="Geometric_model">
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="1"/>
            <typename name="Geometric_placement_operation"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
      <entity name="Geometric_placement_operation" abstract.supertype="YES" supertypes="Detailed_geometric_model_element" super.expression="ONEOF (Geometric_placement, Geometric_operator_transformation)">
         <explicit name="source">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="template_definition">
            <typename name="template_definition_select"/>
         </explicit>
      </entity>
      <entity name="Geometric_relationship_with_operator_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation">
            <typename name="cartesian_transformation"/>
         </explicit>
         <where label="WR1" expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count"/>
      </entity>
      <entity name="Geometric_relationship_with_placement_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation">
            <typename name="Axis_placement_mapping"/>
         </explicit>
         <where label="WR1" expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count"/>
      </entity>
      <entity name="Shape_placement_association" supertypes="Shape_description_association">
         <explicit name="representation">
            <typename name="Geometric_placement_model"/>
            <redeclaration entity-ref="Shape_description_association"/>
         </explicit>
         <explicit name="represented_characteristic">
            <typename name="Contextual_item_shape"/>
            <redeclaration entity-ref="Shape_description_association"/>
         </explicit>
      </entity>
   </schema>
</express>
