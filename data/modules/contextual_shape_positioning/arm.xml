<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1027">
   <application name="JSDAI" owner="LKSoft" source="contextual_shape_positioning_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Contextual_shape_positioning_arm">
      <interface kind="use" schema="Geometric_model_relationship_arm"/>
      <interface kind="use" schema="Shape_property_assignment_arm"/>
      <type name="template_instance">
         <select selectitems="Geometric_placement_operation Geometric_model_relationship_with_transformation"/>
      </type>
      <entity name="Contextual_shape_representation">
         <explicit name="contextual_shape">
            <typename name="Contextual_item_shape"/>
         </explicit>
         <explicit name="representing_relationship">
            <typename name="Geometric_model_relationship"/>
         </explicit>
         <derived expression="representing_relationship.rep_2" name="context_representation">
            <typename name="geometric_representation_select"/>
         </derived>
         <derived expression="representing_relationship.rep_1" name="positioned_representation">
            <typename name="geometric_representation_select"/>
         </derived>
      </entity>
      <entity name="Geometric_composition_with_operator_transformation" supertypes="Geometric_relationship_with_operator_transformation Definitional_representation_relationship"/>
      <entity name="Geometric_composition_with_placement_transformation" supertypes="Geometric_relationship_with_placement_transformation Definitional_representation_relationship"/>
      <entity abstract.supertype="YES" name="Geometric_model_relationship_with_transformation" super.expression="ONEOF (Geometric_relationship_with_placement_transformation, Geometric_relationship_with_operator_transformation)" supertypes="Geometric_model_relationship">
         <where expression="rep_1.context_of_items :&lt;&gt;: rep_2.context_of_items" label="WR1"/>
      </entity>
      <entity name="Geometric_placement_model" supertypes="Geometric_model">
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="Geometric_placement_operation"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
      <entity name="Geometric_relationship_with_operator_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation">
            <typename name="cartesian_transformation"/>
         </explicit>
         <where expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count" label="WR1"/>
      </entity>
      <entity name="Geometric_relationship_with_placement_transformation" supertypes="Geometric_model_relationship_with_transformation">
         <explicit name="transformation">
            <typename name="Axis_placement_mapping"/>
         </explicit>
         <where expression="rep_1.context_of_items\Geometric_coordinate_space.dimension_count :=:&#10;        rep_2.context_of_items\Geometric_coordinate_space.dimension_count" label="WR1"/>
      </entity>
      <entity name="Shape_placement_association" supertypes="Shape_description_association">
         <explicit name="used_representation">
            <typename name="Geometric_placement_model"/>
            <redeclaration entity-ref="Shape_description_association"/>
         </explicit>
         <explicit name="definition">
            <typename name="Contextual_item_shape"/>
            <redeclaration entity-ref="Shape_description_association"/>
         </explicit>
      </entity>
   </schema>
</express>
