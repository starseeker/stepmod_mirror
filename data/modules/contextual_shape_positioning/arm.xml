<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.15"
    source="../data/modules/contextual_shape_positioning/arm.exp"/>

  <schema name="Contextual_shape_positioning_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>

    <type name="template_instance">
      <select
        selectitems="Mapping_based_template_instance Transformation_based_template_instance">
      </select>

    </type>
    <entity
      name="Contextual_shape_representation_inclusion">
      <explicit
        name="contextual_shape">
        <typename
          name="Contextual_item_shape"/>
      </explicit>
      <explicit
        name="context_representation">
        <typename
          name="Geometric_model"/>
      </explicit>
      <explicit
        name="positioned_representation">
        <typename
          name="template_instance"/>
      </explicit>
    </entity>

    <entity
      name="Mapping_based_template_instance"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="replicated_model">
        <typename
          name="shape_model"/>
      </explicit>
      <explicit
        name="source">
        <typename
          name="Axis_placement"/>
      </explicit>
      <explicit
        name="target">
        <typename
          name="geometric_mapping_target"/>
      </explicit>
    </entity>

    <entity
      name="Transformation_based_template_instance"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="replicated_model">
        <typename
          name="shape_model"/>
      </explicit>
      <explicit
        name="replication_transformation">
        <typename
          name="cartesian_transformation"/>
      </explicit>
    </entity>

  </schema>

</express>
