  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Contextual_shape_positioning_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Contextual_shape_positioning_arm"/>

<!-- +++++++++++ Contextual_shape_representation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Contextual_shape_representation">
	A <b>Contextual_shape_representation</b> is a relationship that relates a 
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Contextual_item_shape"/>
	and a
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Geometric_model_relationship"/>.
</ext_description>

<!-- contextual_shape -->
<ext_description linkend="Contextual_shape_positioning_arm.Contextual_shape_representation.contextual_shape">
	specifies a role of the
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Contextual_item_shape"/>
	for the <b>Contextual_shape_representation</b>.
</ext_description>

<!-- representing_relationship -->
<ext_description linkend="Contextual_shape_positioning_arm.Contextual_shape_representation.representing_relationship">
	specifies a role of the
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Geometric_model_relationship"/>
	for the <b>Contextual_shape_representation</b>.
</ext_description>

<!-- context_representation -->
<ext_description linkend="Contextual_shape_positioning_arm.Contextual_shape_representation.context_representation">
	specifies the
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/>
	in which the representation of the contextual shape is characterized.
</ext_description>

<!-- positioned_representation -->
<ext_description linkend="Contextual_shape_positioning_arm.Contextual_shape_representation.positioned_representation">
	specifies the
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/>
	that contains the representation of the contextual shape in the context representation.
</ext_description>

<!-- +++++++++++ Geometric_composition_with_operator_transformation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_composition_with_operator_transformation">
	A <b>Geometric_composition_with_operator_transformation</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_relationship_with_operator_transformation"/>
	and a type of
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Definitional_representation_relationship"/>.
</ext_description>

<!-- +++++++++++ Geometric_composition_with_placement_transformation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_composition_with_placement_transformation">
	A <b>Geometric_composition_with_placement_transformation</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_relationship_with_placement_transformation"/>
	and a type of
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Definitional_representation_relationship"/>.
</ext_description>


<!-- +++++++++++ Geometric_placement +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement">
	A <b>Geometric_placement</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement_operation"/>.
</ext_description>

<!-- target -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement.target">
	the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement"/> 
	that identifies the target of the placement.
</ext_description>

<!-- +++++++++++ Geometric_placement_model +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement_model">
	A <b>Geometric_placement_model</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/>.
</ext_description>

<!-- items -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement_model.items">
	specifies the
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement_operation"/>
	for the <b>Geometric_placement_model</b>. There shal exist exactly one
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement_operation"/>
	for the <b>Geometric_placement_model</b>.	
</ext_description>

<!-- +++++++++++ Geometric_placement_operation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement_operation">
	A <b>Geometric_placement_operation</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
	A <b>Geometric_placement_operation</b> may be a
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement"/>
	or a 
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_operator_transformation"/>.
</ext_description>

<!-- source -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement_operation.source">
	the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement"/> 
	that identifies the source of the operation.
</ext_description>

<!-- template_definition -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_placement_operation.template_definition">
	the value from
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.template_definition_select"/>.
</ext_description>

<!-- +++++++++++ Geometric_model_relationship_with_transformation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_model_relationship_with_transformation">
	A <b>Geometric_model_relationship_with_transformation</b> is a type of
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Geometric_model_relationship"/>.
	A <b>Geometric_model_relationship_with_transformation</b> may be a
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_relationship_with_placement_transformation"/>
	or a 
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_relationship_with_operator_transformation"/>
</ext_description>

<!-- WR1 -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_model_relationship_with_transformation.wr:WR1">
	Both geometric representations shall belong to different geometric contexts.
</ext_description>

<!-- +++++++++++ Geometric_operator_transformation ++++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_operator_transformation">
	A <b>Geometric_operator_transformation</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement_operation"/>.
</ext_description>

<!-- target -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_operator_transformation.target">
	the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.cartesian_transformation"/> 
	that identifies the target of the transformation.
</ext_description>

<!-- +++++++++++ Geometric_relationship_with_operator_transformation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_operator_transformation">
	A <b>Geometric_relationship_with_operator_transformation</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_model_relationship_with_transformation"/>. 
</ext_description>

<!-- transformation -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_operator_transformation.transformation">
	the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.cartesian_transformation"/> 
	that identifies the transformation for the <b>Geometric_relationship_with_operator_transformation</b>. 
</ext_description>

<!-- WR1 -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_operator_transformation.wr:WR1">
	Both geometric representations shall have the same dimensionality.
</ext_description>

<!-- +++++++++++ Geometric_relationship_with_placement_transformation +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_placement_transformation">
	A <b>Geometric_relationship_with_placement_transformation</b> is a type of
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_model_relationship_with_transformation"/>.
</ext_description>

<!-- transformation -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_placement_transformation.transformation">
	the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement_mapping"/> 
	that identifies the transformation for the <b>Geometric_relationship_with_placement_transformation</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Contextual_shape_positioning_arm.Geometric_relationship_with_placement_transformation.wr:WR1">
	Both geometric representations must have the same dimensionality.
</ext_description>

<!-- +++++++++++ Shape_placement_association +++++++++++ -->
<ext_description linkend="Contextual_shape_positioning_arm.Shape_placement_association">
	A <b>Shape_placement_association</b> is a type of
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_description_association"/>.
</ext_description>

<!-- representation -->
<ext_description linkend="Contextual_shape_positioning_arm.Shape_placement_association.representation">
	specifies the
	<express_ref linkend="Contextual_shape_positioning:arm:Contextual_shape_positioning_arm.Geometric_placement_model"/>
	for the <b>Shape_placement_association</b>.
</ext_description>

<!-- represented_characteristic -->
<ext_description linkend="Contextual_shape_positioning_arm.Shape_placement_association.represented_characteristic">
	specifies the
	<express_ref linkend="shape_property_assignment:arm:Shape_property_assignment_arm.Contextual_item_shape"/>
	for the <b>Shape_placement_association</b>.
</ext_description>



  </ext_descriptions>
  
  
  