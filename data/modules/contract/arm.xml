<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/contract/arm.exp"/>

  <schema name="Contract_arm">
    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <type name="contract_item">
      <select
        extensible="YES"
        selectitems="null">
      </select>

    </type>
    <type name="contract_organization_or_person_in_organization_item">
      <select
        basedon="organization_or_person_in_organization_item"
        selectitems="Contract">
      </select>

    </type>
    <type name="contract_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Contract">
      </select>

    </type>
    <type name="contract_approval_item">
      <select
        basedon="approval_item"
        selectitems="Contract">
      </select>

    </type>
    <entity
      name="Contract">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="purpose">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="classification">
        <builtintype
          type="STRING"/>
      </explicit>
      <inverse
        name="identifier"
        entity="Organization_or_person_in_organization_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="contract_date"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <where
        label="WR1"
        expression="Query (temp &lt; * 'identifier | 'Organization_or_person_in_organization_assignment.role = 'contractor''');" >
      </where>
      <where
        label="WR2"
        expression="Query (temp &lt; * 'contract_date |'Date_or_date_time_assignment.role = 'signature date'''); " >
      </where>
      
    </entity>

    <entity
      name="Contract_assignment">
      <explicit
        name="assigned_contract">
        <typename
          name="Contract"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="contract_item"/>
      </explicit>
    </entity>

  </schema>

</express>
