 <keywords>
    module, contract
 </keywords>

 <contacts>
   <projlead ref="pdmmodules.projlead"/>
   <editor ref="pdmmodules.editor"/>
 </contacts>

 <purpose>
   <p>
     This part of ISO 10303 specifies an application module for the
     representation of contract agreements.
   </p>
   <p>
     The second edition of this part of ISO 10303 incorporates the modifications to the first edition listed below.
   </p>
   <p>The following ARM EXPRESS declaration has been added:</p>
   <ul>
     <li>
      Contract_relationship.
     </li>
   </ul>
   <p>
     In addition, modifications have been made to the mapping specification, 
     the MIM schema and the EXPRESS-G diagrams to reflect and be consistent with the modifications of the ARM.
   </p>
 </purpose>

 <inscope>
 		<li>creating and identifying the contract;</li>
		<li>associating activity or product data to the contract.</li>
 </inscope>
 <normrefs>
   <normref.inc normref="ref10303-41.e3"/>
 </normrefs>
 
 <arm>
   <uof name="Contract">
<description>The Contract UoF specifies the data structure for the representation of contract information that may be attached to an activity or to any aspect of product data.
</description>
   		<uof.ae entity="Contract" />
   		<uof.ae entity="Contract_assignment" />
   </uof>

   <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
   </express-g>
 </arm>

 <mapping_table>   
   <ae entity="Contract">
     <aimelt>contract</aimelt>
     <source>ISO 10303-41</source>   
     <aa attribute="id">
       <aimelt>contract.name</aimelt>
       <source>ISO 10303-41</source>
     </aa>
     <aa attribute="purpose">
       <aimelt>contract.purpose</aimelt>
       <source>ISO 10303-41</source>
     </aa>
     <aa attribute="kind"> 
       <aimelt>contract_type.description</aimelt>
       <source>ISO 10303-41</source>
       <refpath>
	contract.kind -&gt; contract_type
	contract_type.description
	</refpath>
     </aa>
   </ae>   
   <ae entity="Contract_assignment">
     <aimelt>applied_contract_assignment</aimelt>
     <source>ISO 10303-1062</source>
     <refpath>
	applied_contract_assignment &lt;= contract_assignment
	</refpath>     
	<aa attribute="assigned_contract" assertion_to="Contract">
       <aimelt>PATH</aimelt>
       <refpath>
	applied_contract_assignment &lt;= contract_assignment
	contract_assignment
	contract_assignment.assigned_contract -&gt; contract
	</refpath>		
</aa>
     <aa attribute="items" assertion_to="contract_item">
       <aimelt>PATH</aimelt>
       <refpath>
applied_contract_assignment.items[i] -&gt; contract_item 
	</refpath>			 
     </aa>
   </ae>
   <ae entity="Contract_relationship">
     <aimelt>contract_relationship</aimelt>
     <source>ISO 10303-41</source>
     <refpath/>
     <aa attribute="relating_contract" assertion_to="Contract">
       <aimelt>PATH</aimelt>
       <refpath>
         contract_relationship
         contract_relationship.relating_contract -&gt; contract
       </refpath>
     </aa>
     <aa attribute="related_contract" assertion_to="Contract">
       <aimelt>PATH</aimelt>
       <refpath>
         contract_relationship
         contract_relationship.related_contract -&gt; contract
       </refpath>
     </aa>
     
   </ae>
 </mapping_table>

 <mim>
   <express-g>
     <imgfile file="mimexpg1.xml"/>
     <imgfile file="mimexpg2.xml"/>
   </express-g>
	 <shortnames>
      <shortname name="APCNAS" entity="applied_contract_assignment"/> 
 	 </shortnames>
 </mim>
</module>
