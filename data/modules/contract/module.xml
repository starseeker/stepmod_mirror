 <purpose>The Contract application module supports the requirement to describe contract agreements.</purpose>

 <inscope>
 		<li>creating and identifying the contract;</li>
		<li>associating activity or product data to the contract.</li>
 </inscope>
 <normrefs>
   <normref.inc normref="ref10303-41.2000"/>
 </normrefs>
 
 <arm>
   <uof name="Contract">
      <description>The Contract UoF specifies the definitional information for representing 
	                 contract information that may be attached to an activity or to any aspect of product data.
			</description>
   		<uof.ae entity="Contract" />
   		<uof.ae entity="Contract_assignment" />
   </uof>

   <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
   </express-g>
 </arm>

 <mapping_table>   
   <ae entity="Contract">
     <aimelt>contract</aimelt>
     <source>41</source>   
     <aa attribute="id">
       <aimelt>contract.id</aimelt>
       <source>41</source>
     </aa>
     <aa attribute="purpose">
       <aimelt>contract.purpose</aimelt>
       <source>41</source>
     </aa>
     <aa attribute="kind"> 
       <aimelt>contract_type.description</aimelt>
       <source>41</source>
       <refpath>
			 	 contract.kind -&gt; contract_type
				 contract_type.description
				 </refpath>
     </aa>
   </ae>   
   <ae entity="Contract_assignment">
     <aimelt>applied_contract_assignment</aimelt>
     <source>1062</source>
     <refpath>
			 		applied_contract_assignment &lt;=
			 		contract_assignment
			 </refpath>     
		<aa attribute="assigned_contract" assertion_to="contract">
       <aimelt>PATH</aimelt>
       <refpath>
			    contract_assignment
			 		contract_assignment.assigned_contract -&gt; contract
			 </refpath>			 
			
		 </aa>
     <aa attribute="items" assertion_to="contract_item">
       <aimelt>PATH</aimelt>
       <refpath>
			 		contract_assignment =&gt;
			 		applied_contract_assignment
					applied_contract_assignment.items[i]
					-&gt; contract_item 
			 </refpath>			 
     </aa>
   </ae>
 </mapping_table>

