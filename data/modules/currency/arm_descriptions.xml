<ext_description linkend="Currency_arm">
</ext_description><!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Currency_arm  Entity: Currency  
   <express_ref linkend="currency:arm:Currency_arm.Currency"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Currency_arm.Currency">
        A <b>Currency</b> is a type of 
        <express_ref linkend="value_with_unit:arm:Value_with_unit_arm.Unit"/> 
        that is a system of money.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Currency_arm  Entity: Currency_value  
<express_ref linkend="currency:arm:Currency_arm.Currency_value"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Currency_arm.Currency_value">
	A <b>Currency_value</b> is a type of
	<express_ref linkend="Value_with_unit:arm:Value_with_unit_arm.Value_with_unit"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Currency_value  Attribute: unit
<express_ref linkend="currency:arm:Currency_arm.Currency_value.Unit"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Currency_arm.Currency_value.unit">
	an attribute inherited from the
	<express_ref linkend="Value_with_unit:arm:Value_with_unit_arm.Value_with_unit"/>
	shall be redeclared as the
	<express_ref linkend="Currency:arm:Currency_arm.Currency"/>
	for the <b>Currency_value</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Currency_arm  Entity: Iso4217_currency  
<express_ref linkend="currency:arm:Currency_arm.Iso4217_currency"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Currency_arm.Iso4217_currency">
	An <b>Iso4217_currency</b> is a type of
	<express_ref linkend="Currency:arm:Currency_arm.Currency"/>.
	The 
	<express_ref linkend="Value_with_unit:arm:Value_with_unit_arm.Unit.name">unit.name</express_ref> 
	shall be the 3 letter code defined in ISO 4217.
	
</ext_description>

