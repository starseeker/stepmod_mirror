	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Currency_mim  Entity: currency  
   <express_ref linkend="currency:mim:Currency_mim.currency_unit"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Currency_mim.currency">
        A <b>currency</b> is a type of 
        <express_ref linkend="measure_schema:ir_express:measure_schema.context_dependent_unit"/> 
        that implements the ARM concept of
        <express_ref linkend="Currency:arm:Currency_arm.Currency"/>.
        A <b>currency</b> is a system of money.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Currency_mim.currency.wr:WR1">
All dimensional exponents shall be 0.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Currency_mim  Entity: currency_measure_with_unit  
<express_ref linkend="currency:mim:Currency_mim.currency_measure_with_unit"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Currency_mim.currency_measure_with_unit">
	A <b>currency_measure_with_unit</b> is a type of 
	<express_ref linkend="measure_schema:ir_express:measure_schema.measure_with_unit"/>
	that implements the ARM concept of
    <express_ref linkend="Currency:arm:Currency_arm.Currency_value"/>.
	A <b>currency_measure_with_unit</b> conveys an amount of currency.
</ext_description>
	
<!-- unit_component -->
<ext_description linkend="Currency_mim.currency_measure_with_unit.unit_component">
	an attribute inherited from the 
	<express_ref linkend="measure_schema:ir_express:measure_schema.measure_with_unit"/>
	shall be redeclared as the
	<express_ref linkend="Currency:mim:Currency_mim.currency"/>
	for the <b>currency_measure_with_unit</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Currency_mim  Entity:  iso4217_currency 
<express_ref linkend="currency:mim:Currency_mim.iso4217_currency"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Currency_mim.iso4217_currency">
	An <b>iso4217_currency</b> is a type of
	<express_ref linkend="Currency:mim:Currency_mim.currency"/>
	that implements the ARM concept of
    <express_ref linkend="Currency:arm:Currency_arm.Iso4217_currency"/>.
	The 
	<express_ref linkend="measure_schema:ir_express:measure_schema.context_dependent_unit.name">unit.name</express_ref> 
	should be the 3 letter code defined in ISO 4217.
</ext_description>

