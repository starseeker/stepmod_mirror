<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007-05-30 06:52:39 -0700 (Tr, 30 Geg 2007) $" rcs.revision="$Revision: 1069 $" description.file="mim_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="curve_appearance_mim schema_instance"/>
   <schema name="Curve_appearance_mim">
      <interface kind="use" schema="Styled_curve_mim"/>
      <interface kind="use" schema="presentation_appearance_schema">
         <interfaced.item name="curve_style"/>
         <interfaced.item name="curve_style_font"/>
         <interfaced.item name="draughting_pre_defined_curve_font"/>
         <interfaced.item name="marker_select"/>
         <interfaced.item name="marker_type"/>
         <interfaced.item name="point_style"/>
         <interfaced.item name="pre_defined_curve_font"/>
         <interfaced.item name="pre_defined_marker"/>
      </interface>
      <interface kind="use" schema="presentation_definition_schema">
         <interfaced.item name="externally_defined_symbol"/>
         <interfaced.item name="pre_defined_symbol"/>
      </interface>
      <interface kind="use" schema="presentation_resource_schema">
         <interfaced.item name="externally_defined_text_font"/>
      </interface>
      <interface kind="use" schema="representation_schema">
         <interfaced.item name="mapped_item"/>
      </interface>
      <type name="terminator">
         <select selectitems="externally_defined_terminator_symbol pre_defined_terminator_symbol user_defined_terminator_symbol"/>
      </type>
      <entity name="externally_defined_marker" supertypes="externally_defined_symbol pre_defined_marker"/>
      <entity name="externally_defined_terminator_symbol" supertypes="externally_defined_symbol"/>
      <entity name="pre_defined_point_marker_symbol" supertypes="pre_defined_marker pre_defined_symbol">
         <where label="WR1" expression="SELF.name IN ['asterisk','circle','dot','plus','square','triangle','x']"/>
      </entity>
      <entity name="pre_defined_terminator_symbol" supertypes="pre_defined_symbol">
         <where label="WR1" expression="SELF.name IN ['blanked arrow', 'blanked box', 'blanked dot', 'blanked triangle', 'dimension origin', 'filled arrow', 'filled box', 'filled dot', 'integral symbol', 'open arrow', 'slash', 'unfilled arrow', 'unfilled triangle', 'filled triangle']"/>
      </entity>
      <entity name="user_defined_marker" supertypes="mapped_item pre_defined_marker"/>
      <entity name="user_defined_terminator_symbol" supertypes="mapped_item pre_defined_symbol"/>
      <entity name="vector_style" supertypes="curve_style pre_defined_terminator_symbol"/>
   </schema>
</express>
