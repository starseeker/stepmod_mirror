<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/date_time/arm.exp"/>

  <schema name="Date_time_arm">
    <type name="date_or_date_time_select">
      <select
        selectitems="Calendar_date Date_time">
      </select>

    </type>
    <entity
      name="Calendar_date">
      <explicit
        name="month">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="day">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="year">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <where
        label="WR1"
        expression="year &lt;&gt; 0">
      </where>
    </entity>

    <entity
      name="Date_time">
      <explicit
        name="date">
        <typename
          name="Calendar_date"/>
      </explicit>
      <explicit
        name="hour">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="minute"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="second"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="offset">
        <typename
          name="Time_offset"/>
      </explicit>
    </entity>

    <entity
      name="Time_offset">
      <explicit
        name="hour">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="minute"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="direction">
        <builtintype
          type="STRING"/>
      </explicit>
      <where
        label="WR1"
        expression="SELF.direction IN ['ahead', 'exact', 'behind']">
      </where>
    </entity>

  </schema>

</express>
