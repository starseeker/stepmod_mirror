  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Date_time_arm"/>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: date_or_date_time_select 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.date_or_date_time_select">
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: day_in_month_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.day_in_month_number">
	 A <b>day_in_month_number</b> is the position of a specified day in a month.
   </ext_description>

	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: day_in_month_number  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.day_in_month_number.wr:WR1">
	 The value of the integer number shall be between 1 to 31.
	 </ext_description>
	 
	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: month_in_year_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.month_in_year_number">
	 	 A <b>month_in_year_number</b> is the position of a specified month in a year.
   </ext_description>

	 	 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: month_in_year_number  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.month_in_year_number.wr:WR1">
	 The value of the integer number shall be between 1 to 12.
	 </ext_description>
	 
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: year_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.year_number">
	 A <b>year_number</b> is the year as defined in the Gregorian calendar.
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: hour_in_day 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.hour_in_day">
   The <b>hour_in_day</b> is the hour element of a specified time on a 24 hour clock. 
	 Midnight shall be represented by the value zero.
	 </ext_description>

	 	 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: hour_in_day  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.hour_in_day.wr:WR1">
	 The value of the integer number shall be between 0 to 24.
	 </ext_description>

	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: minute_in_hour
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.minute_in_hour">
	 A <b>minute_in_hour</b> is the minute element of a specified time.
   </ext_description>

 	 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: minute_in_hour  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.minute_in_hour.wr:WR1">
	 The value of the integer number shall be between 0 to 59.
	 </ext_description>
	 
	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: second_in_minute 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.second_in_minute">
	 A <b>second_in_minute</b> is the second element of a specified time.
   </ext_description>

 	 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: second_in_minute  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.second_in_minute.wr:WR1">
	 The value of the real number shall be between 0 to 60.0.
	 </ext_description>

	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: offset_orientation 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.offset_orientation">
	 The <b>offset_orientation</b> type specifies the values that may characterize the position of a time zone with respect to the 
Greenwich meridian.
   </ext_description>
	 
<ext_description linkend="Date_time_arm.offset_orientation.ahead">
 The time zone is located eastward of the Greenwich meridian time zone.
</ext_description>
<ext_description linkend="Date_time_arm.offset_orientation.exact">
 The time zone is the Greenwich meridian time zone;</ext_description>
<ext_description linkend="Date_time_arm.offset_orientation.behind">
 The time zone is located westward of the Greenwich meridian time zone.
</ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date">
      A <b>Calendar_date</b> defines a date as a day in a month of a year.
   </ext_description>

	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: year_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.year_component">
	 	 the year element of the <b>Calendar_date</b>.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: month_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.month_component">
	   the month element of the <b>Calendar_date</b>.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: day_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.day_component">
	   the day element of the <b>Calendar_date</b>.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Where: IP1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.ip:IP1">
	   the date shall be a valid date.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time">
	 A <b>Date_time</b> specifies the moment of time on a particular day.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: date_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.date_component">
	 the date element of the date time combination. </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: time_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.time_component">
	 the time element of the date time combination. </ext_description>
	 
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Local_time 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Local_time">
	 A <b>Local_time</b> specifies a point in time in a day, represented on a 24-hour clock
	 by hour, minute and second. It is expressed in the local time zone and the offset 
	 from the Coordinate Universal Time shall be specified.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Local_time  Attribute: hour_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Local_time.hour_component">
	 the number of hours.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: minute_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Local_time.minute_component">
the number of minutes. The value of this attibute need not be defined.
</ext_description>
	 
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: second_component 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Local_time.second_component">
the number of seconds. The value of this attibute need not be defined. 
</ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Local_time  Attribute: zone 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Local_time.zone">
the offset applied from the Coordinated Universal Time.
<p>The following formulas apply for the determination of the local time:</p>
<ul>
<li>if sense = ahead then local_time = utc_time - hour_offset - minute_offset</li>
<li>if sense = exact then local_time = utc_time</li>
<li>if sense = behind then local_time = utc_time + hour_offset + minute_offset</li>
</ul></ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset">
	 A <b>Time_offset</b> specifies the oriented offset from Coordinated Universal Time.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: hour_offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.hour_offset">
	 the number of hours by which a time is offset from Coordinated Universal Time.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: minute_offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.minute_offset">
	 the number of minutes by which a time is offset from coordinated universal time.
	 The value of this attribute need not be defined.</ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: sense 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.sense">
	 the direction of the offset.</ext_description>

	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Derive Attribute: actual_minute_offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.actual_minute_offset">
	 the actual value of the minute offset used to compute the <b>Time_offset</b>.
	 The actual value is zero if minute_offset is not specified or is equal to minute_offset.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.wr:WR1">
	 the <b>hour_offset</b> shall be a positive number, less than 24.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Where: WR2 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.wr:WR2">
	 the <b>minute_offset</b> shall be a positive number, less than 59.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Where: WR3 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.wr:WR3">
if the value of <b>sense</b> specifies that there is no offset from the Coordinate 
	 Universal Time, <b>hour_offset</b> and <b>actual_minute_offset</b> shall be both equal to zero.
If either <b>hour_offset</b> or <b>actual_minute_offset</b> are different from zero, the value of
	 <b>sense</b> shall be specified that there is an offset, either ahead or behind, from the Coordinate Universal Time.

	 </ext_description>
</ext_descriptions>