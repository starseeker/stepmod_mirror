<!DOCTYPE express SYSTEM "../../../dtd/description.dtd">
<ext_descriptions module_directory="date_time" schema_file="arm.xml" rcs.date="$Date: 2002/03/19 13:34:08 $" rcs.revision="$Revision: 1.1 $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Date_time_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Type: date_or_date_time_select 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.date_or_date_time_select">
      <p>This selects between a date alone or a date with a time.</p>
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date">
      <p>A <b>Calendar_date</b> represents a month, the day, and year within the Gregorian calendar.</p>
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: month 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.month">the month number within the <b>year</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: day 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.day">the day number within the <b>month</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Attribute: year 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.year">the year number.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.wr:WR1">The <b>year</b> shall not be zero.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Where: IP1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.wr:IP1">The <b>year</b> shall be represented by all its digits.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Calendar_date  Where: IP2 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Calendar_date.wr:IP2">The <b>year</b> is negative when it describes years in BC.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time">A <b>Date_time</b> specifies the time on a date which includes the times offset from universal time.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.date">a calendar_date.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: hour 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.hour">the integer specifying the hour represented by the <b>time</b> as described on a 24 hour clock.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: minute 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.minute">an optional integer specifying minute within the hour represented by the <b>time</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: second 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.second">an optional integer specifying second within the minute represented by the <b>time</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Date_time  Attribute: offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Date_time.offset">the offset from <module_ref linkend="date_time:3_definition">universal time</module_ref>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset">A Time_offset specifies the offset of a time from <module_ref linkend="date_time:3_definition">universal time</module_ref>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: hour 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.hour">an hour offset.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: minute 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.minute">an optional minute offset.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Attribute: direction 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.direction">specifies if the offset is ahead, behind or exactly coordinated universal time.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Date_time_arm  Entity: Time_offset  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Date_time_arm.Time_offset.wr:WR1">The <b>direction</b> shall be 'ahead', 'behind', or 'exact'.</ext_description>
</ext_descriptions>