 <keywords>
    module, date, time assignment
 </keywords>

 <contacts>
   <projlead ref="pdmmodules.projlead"/>
   <editor ref="pdmmodules.editor"/>
 </contacts>

 <purpose>The Date time assignment application module supports the requirement 
 to assign a date or a date and a time with a role to activity or product data.</purpose>

 <inscope>
<li>the assignment of a date with a role to activity or product data;</li>
<li>the assignment of a date and time with a role to activity or product data.</li> 
 </inscope>

 <normrefs>
   <normref.inc normref="ref10303-41.2000"/>
 </normrefs>

 <arm>
   <uof name="Date_ime_assignment">
     <description>The Date_time_assignment UoF specifies the definitional information 
		 for the concept of assigning date or date and time with a role to activity or product data.</description>
     <uof.ae entity="Date_or_date_time_assignment" />
   </uof>

      <express-g>
         <imgfile file="armexpg1.xml"/>
         <imgfile file="armexpg2.xml"/>
      </express-g>
 </arm>

 <mapping_table>

   <ae entity="Date_or_date_time_assignment">
     <aimelt>(date_assignment)
		         (date_and_time_assignment)
		 </aimelt>
     <source>41</source>
     <aa attribute="assigned_date">
       <aimelt>(date_and_time_assignment.assigned_date_and_time)
			 				 (date_assignment.assigned_date)
			 </aimelt>
       <source>41</source>
     </aa>
     <aa attribute="role">
       <aimelt>(date_time_role)
			         (date_role)
			 </aimelt>
       <source>PATH</source>
       <refpath>
			   (date_and_time_assignment
			 		date_and_time_assignment.role -&gt; date_time_role
					date_time_role
					date_time_role.name)
					
					(date_assignment
					date_assignment.role -&gt; date_role
					date_role
					date_role.name)
			 </refpath>
     </aa>
     <aa attribute="items" assertion_to="date_or_date_time_item">
       <aimelt>PATH</aimelt>
       <refpath>
			   (date_and_time_assignment=&gt;
			 		applied_date_and_time_assignment
					applied_date_and_time_assignment.items[i])
					(date_assignment=&gt;
					 applied_date_assignment
					 applied_date_assignment.items[i])
				</refpath>
     </aa>
   </ae>   
 </mapping_table>
 <mim>
   <express-g>
     <imgfile file="mimexpg1.xml"/>
		</express-g>
		<shortnames>
      <shortname name="APCRAS" entity="applied_date_assignment"/> 
      <shortname name="APCRAS" entity="applied_date_and_time_assignment"/> 
 	  </shortnames>
	</mim>

</module>
