<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="2004-12-20T16:02:39" rcs.revision="1.0" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="design_management_arm schema_instance"/>
   <schema name="Design_management_arm">
      <interface kind="use" schema="Approval_arm"/>
      <interface kind="use" schema="Work_order_arm"/>
      <interface kind="use" schema="Work_request_arm"/>
      <interface kind="use" schema="Product_view_definition_arm"/>
      <type name="design_object_management_relationship_item">
         <select selectitems="Work_request Work_order"/>
      </type>
      <type name="dm_approval_item">
         <select extensible="YES" genericentity="YES" basedon="_SELECT_approval_item" selectitems="Frozen_assignment"/>
      </type>
      <type name="managed_design_object">
         <select extensible="YES" genericentity="YES"/>
      </type>
      <entity name="Add_design_object_management_relationship" supertypes="Design_object_management_relationship">
         <explicit name="current_design_object">
            <typename name="managed_design_object"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute entity-ref="Add_design_object_management_relationship" attribute="current_design_object"/>
         </unique>
      </entity>
      <entity name="Change_design_object_management_relationship" supertypes="Design_object_management_relationship">
         <explicit name="current_design_object">
            <typename name="managed_design_object"/>
         </explicit>
         <explicit name="previous_design_object">
            <typename name="managed_design_object"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute entity-ref="Change_design_object_management_relationship" attribute="current_design_object"/>
         </unique>
         <unique label="UR2">
            <unique.attribute entity-ref="Change_design_object_management_relationship" attribute="previous_design_object"/>
         </unique>
      </entity>
      <entity name="Delete_design_object_management_relationship" supertypes="Design_object_management_relationship">
         <explicit name="previous_design_object">
            <typename name="managed_design_object"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute entity-ref="Delete_design_object_management_relationship" attribute="previous_design_object"/>
         </unique>
      </entity>
      <entity name="Design_object_management_relationship" abstract.supertype="YES" super.expression="ONEOF (Change_design_object_management_relationship, Delete_design_object_management_relationship, Add_design_object_management_relationship) ANDOR View_dependent_design_object_management_relationship"/>
      <entity name="Design_object_management_relationship_assignment">
         <explicit name="changes">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="Design_object_management_relationship"/>
         </explicit>
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="design_object_management_relationship_item"/>
         </explicit>
      </entity>
      <entity name="Frozen_assignment">
         <explicit name="frozen_item">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="managed_design_object"/>
         </explicit>
      </entity>
      <entity name="View_dependent_design_object_management_relationship" supertypes="Design_object_management_relationship">
         <explicit name="previous_design">
            <typename name="Product_view_definition"/>
         </explicit>
         <explicit name="current_design">
            <typename name="Product_view_definition"/>
         </explicit>
      </entity>
   </schema>
</express>
