<!-- +++++++++++ design_pdm_information_usage_right_item +++++++++++ -->
<ext_description linkend="Design_product_data_management_arm.design_pdm_information_usage_right_item.wr:WR1">
	<p>
	Neither 
	<express_ref linkend="Information_rights:arm:Information_rights_arm.Information_right"/> 
	nor
    <express_ref linkend="Information_rights:arm:Information_rights_arm.Information_usage_right"/> 
    nor
    <express_ref linkend="Information_rights:arm:Information_rights_arm.Information_usage_right_relationship"/>
	shall be a <b>design_pdm_information_usage_right_item</b>.
	</p>
	<note>
		This rule prevents the creation of a tree of information right items.
	</note>
</ext_description>

<!-- +++++++++++ product_occurrence_usage +++++++++++ -->
<ext_description linkend="Design_product_data_management_arm.product_occurrence_usage">
	The <b>product_occurrence_usage</b> rule ensures that a 
	<express_ref linkend="Generic_product_occurrence:arm:Generic_product_occurrence_arm.Product_occurrence"/> 
	is used within a product structure.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Design_product_data_management_arm.product_occurrence_usage.wr:WR1">
	A 
	<express_ref linkend="Generic_product_occurrence:arm:Generic_product_occurrence_arm.Product_occurrence"/> 
	shall either be used by a
	<express_ref linkend="Assembly_structure:arm:Assembly_structure_arm.Product_occurrence_definition_relationship"/> 
	in the role 
	<express_ref linkend="Assembly_structure:arm:Assembly_structure_arm.Product_occurrence_definition_relationship.related_view"/> 
	or by a 
	<express_ref linkend="Product_breakdown:arm:Product_breakdown_arm.Product_definition_element_relationship"/> 
	in the role 
	<express_ref linkend="Product_breakdown:arm:Product_breakdown_arm.Product_definition_element_relationship.product"/>.
	
</ext_description>

