<!-- +++++++++++ retention +++++++++++ -->
<ext_description linkend="Design_product_data_management_mim.retention">
	A <b>retention</b> is a type of
	<express_ref linkend="action_schema:ir_express:action_schema.action"/>
	that implements the ARM concept of  
	<express_ref linkend="Design_product_data_management:arm:Design_product_data_management_arm.Retention_period"/>.
	A <b>retention</b> defines a period of time that product data needs to be retained due to organizational policy or to legal requirements.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Design_product_data_management_mim.retention.wr:WR1">
	The <b>retention</b> shall be referenced as the 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.action_assignment.assigned_action"/> 
	by at least one instance of 
	<express_ref linkend="Activity:mim:Activity_mim.applied_action_assignment"/> 
	that has a 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.action_assignment.role"/> 
	with 
	<express_ref linkend="basic_attribute_schema:ir_express:basic_attribute_schema.object_role.name"/> 
	'retention'. 
</ext_description>

<!-- WR2 -->
<ext_description linkend="Design_product_data_management_mim.retention.wr:WR2">
	The <b>retention</b> shall be contained in the set of 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment.items"/> 
	of exactly one 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment"/> 
	that references as its 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.time_interval_assignment.role"/> 
	a 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_role"/> 
	with a 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_role.name"/> 
	of 'minimum retention period', and shall be contained in the set of 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment.items"/> 
	of exactly one 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment"/> 
	that references as its 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.time_interval_assignment.role"/> 
	a 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_role"/> 
	with a 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_role.name"/> 
	of 'maximum retention period'. 
	Both 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment"/> 
	instances shall reference as 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.time_interval_assignment.assigned_time_interval"/> 
	a 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_with_bounds"/> 
	that has its 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_with_bounds.primary_bound"/> 
	and either one of 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_with_bounds.secondary_bound"/> 
	or 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_with_bounds.duration"/> 
	attributes instantiated. 
	Both 
	<express_ref linkend="Time_interval_assignment:mim:Time_interval_assignment_mim.applied_time_interval_assignment"/> 
	instances shall have the same 
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.time_interval_with_bounds.primary_bound"/>. 
</ext_description>

<!-- WR3 -->
<ext_description linkend="Design_product_data_management_mim.retention.wr:WR3">
	The <b>retention</b> shall not be referenced by an 
	<express_ref linkend="action_schema:ir_express:action_schema.action_relationship"/>.
</ext_description>

