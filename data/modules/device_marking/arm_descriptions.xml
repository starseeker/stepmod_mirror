<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Device_marking_arm
   <express_ref linkend="device_marking:arm:Device_marking_arm"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Device_marking_arm">
</ext_description>

<!-- +++++++++++ TYPE message_type +++++++++++ -->
<ext_description linkend="Device_marking_arm.message_type">
A <b>message_type</b> lists the types of the message.
</ext_description>
<ext_description linkend="Device_marking_arm.message_type.part_number">
specifies a part number;
</ext_description>
<ext_description linkend="Device_marking_arm.message_type.manufacturer_code">
specifies a manufacturer code;
</ext_description>
<ext_description linkend="Device_marking_arm.message_type.revision_identifier">
specifies a revision identifier;
</ext_description>
<ext_description linkend="Device_marking_arm.message_type.approval_date">
specifies an approval date.
</ext_description>

<!-- +++++++++++ Configuration_controlled_message +++++++++++ -->
<ext_description linkend="Device_marking_arm.Configuration_controlled_message">
A <b>Configuration_controlled_message</b> is a message that has its 
content under version control, and that is source data for application of marking materials to a product.
</ext_description>

<!-- message_type_specification -->
<ext_description linkend="Device_marking_arm.Configuration_controlled_message.message_type_specification">
	specifies one of the 
	<express_ref linkend="Device_marking:arm:Device_marking_arm.message_type">message_types</express_ref>
	for the <b>Configuration_controlled_message</b>. A <b>message_type_specification</b> is 
	necessary to differentiate among the possible message sources to identify the one that has been selected for 
	the literal string.
</ext_description>

<!-- message_content -->
<ext_description linkend="Device_marking_arm.Configuration_controlled_message.message_content">
	specifies the text in the <b>Configuration_controlled_message</b>.
</ext_description>

<!-- message_source -->
<ext_description linkend="Device_marking_arm.Configuration_controlled_message.message_source">
specifies one of the 
<express_ref linkend="Device_marking:arm:Device_marking_arm.message_source_select"/>
for the <b>Configuration_controlled_message</b>.
</ext_description>

<!-- +++++++++++ Marking +++++++++++ -->
<ext_description linkend="Device_marking_arm.Marking">
<p>
	A <b>Marking</b> is the specification of what, where, and how information that is placed on a 
	<express_ref linkend="Part_view_definition:arm:Part_view_definition_arm.Part_view_definition"/> 
	for 
	identification purposes is applied.  <b>Marking</b> in this part of ISO 10303 is considered to not be part of the definition of a 
	<express_ref linkend="Layered_interconnect_module_design:arm:Layered_interconnect_module_design_arm.Stratum"/>. 
	<b>Marking</b> is text that is applied to a material object.  The <b>message_representation_text</b> shall be an item in the <b>message_representation</b>.  
</p>
</ext_description>

<!-- marking_specification -->
<ext_description linkend="Device_marking_arm.Marking.marking_specification">
	specifies the 
	<express_ref linkend="Document_definition:arm:Document_definition_arm.Document_definition"/>
	of the process and format for properly applying the <b>Marking</b>.
</ext_description>

<!-- message_representation_text -->
<ext_description linkend="Device_marking_arm.Marking.message_representation_text">
	specifies role of the 
	<express_ref linkend="Text_appearance:arm:Text_appearance_arm.Text_literal_with_extent"/> 
	for the <b>Marking</b>.
</ext_description>

<!-- message_representation -->
<ext_description linkend="Device_marking_arm.Marking.message_representation">
	specifies role of the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/> 
	for the <b>Marking</b>.
</ext_description>

<!-- placement -->
<ext_description linkend="Device_marking_arm.Marking.placement">
	specifies the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement"/> 
	of the <b>Marking</b>.  The <b>placement</b> specifies the <b>placement</b> of the <b>message_representation</b> in the <b>marked_device_shape</b>.
</ext_description>

<!-- marking_material -->
<ext_description linkend="Device_marking_arm.Marking.marking_material">
	specifies an inverse relationship that specifies that the existence of the  <b>Marking</b> 
	is dependent on the existence of the 
	<express_ref linkend="Generic_material_aspects:arm:Generic_material_aspects_arm.Material_identification"/> 
	that specifies the <b>Marking</b>
	as its 
	<express_ref linkend="Generic_material_aspects:arm:Generic_material_aspects_arm.Material_identification.items"/>. 
</ext_description>

<!-- marked_device_shape -->
<ext_description linkend="Device_marking_arm.Marking.marked_device_shape">
	specifies the 
	<express_ref linkend="Device_marking:arm:Device_marking_arm.marking_shape_select"/> 
	for the <b>Marking</b>. The <b>marked_device_shape</b> specifies one of a 
	<express_ref linkend="Part_template_3d_shape:arm:Part_template_3d_shape_arm.Part_template_3d_shape_model"/>,
	a
	<express_ref linkend="Physical_unit_3d_shape:arm:Physical_unit_3d_shape_arm.Physical_unit_3d_shape_model"/>, 
	a
	<express_ref linkend="Part_template_non_planar_shape:arm:Part_template_non_planar_shape_arm.Part_template_non_planar_2d_shape_model"/>,
	a
	<express_ref linkend="Part_template_2d_shape:arm:Part_template_2d_shape_arm.Part_template_planar_shape_model"/> 
	or a 
	<express_ref linkend="Physical_unit_2d_shape:arm:Physical_unit_2d_shape_arm.Physical_unit_planar_shape_model"/> 
	that is the shape definition for the physical device that receives the <b>Marking</b>.
</ext_description>

<!-- marked_message -->
<ext_description linkend="Device_marking_arm.Marking.marked_message">
	specifies the 
	<express_ref linkend="Device_marking:arm:Device_marking_arm.marked_message_select"/> 
	for the <b>Marking</b>.
	<!-- eco2 162c replaces marked_text with structured-text -->
	The <b>marked_message</b> specifies either a 
	<express_ref linkend="Device_marking:arm:Device_marking_arm.Configuration_controlled_message"/> 
	or 
	<express_ref linkend="Characteristic:arm:Characteristic_arm.Text_representation_item"/> 
	for <b>Marking</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Device_marking_arm.Marking.wr:WR1">
	Exactly one member of 
	<express_ref linkend="elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model.items"/>
	of <b>message_representation</b> shall be the <b>message_representation_text</b>.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Device_marking_arm.Marking.wr:WR2">
	Exactly one member of 
	<express_ref linkend="elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model.items"/>
	of <b>marked_device_shape</b> shall be the <b>placement</b>.
</ext_description>

<!-- WR3 -->
<ext_description linkend="Device_marking_arm.Marking.wr:WR3">
	The <b>marked_device_shape</b> shall be either a 
	<express_ref linkend="Physical_unit_3d_shape:arm:Physical_unit_3d_shape_arm.Physical_unit_3d_shape_model"/> 
	or shall be a 
	<express_ref linkend="Physical_unit_2d_shape:arm:Physical_unit_2d_shape_arm.Physical_unit_planar_shape_model"/>.
</ext_description>

<!-- wr4 -->
<ext_description linkend="Device_marking_arm.Marking.wr:WR4">
	The <b>marking_material</b> shall be of type 
	<express_ref linkend="conductivity_material_aspects:arm:Conductivity_material_aspects_arm.Material_identification_with_conductivity_classification"/>.
</ext_description>

<!-- WR5 -->
<ext_description linkend="Device_marking_arm.Marking.wr:WR5">
	The <b>marking_specification</b> shall be provided and its size shall be one.
</ext_description>

</ext_descriptions>

