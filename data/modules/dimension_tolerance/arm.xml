<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.25"
    source="../data/modules/dimension_tolerance/arm.exp"/>

  <schema name="Dimension_tolerance_arm">
    <interface
      kind="use"
      schema="Construction_geometry_arm">
    </interface>

    <interface
      kind="use"
      schema="Derived_shape_element_arm">
    </interface>

    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Extended_measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>

    <type name="dimension_value_select">
      <select
        selectitems="Dimension_value_with_limitation Numerical_item_with_unit Value_limit Value_range">
      </select>

    </type>
    <type name="element_with_dimension_select">
      <select
        extensible="YES"
        genericentity="YES"
        selectitems="Shape_element">
      </select>

    </type>
    <type name="limitation_definition_select">
      <select
        selectitems="Limits_and_fits Plus_minus_bounds">
      </select>

    </type>
    <type name="placed_element_select">
      <select
        selectitems="element_with_dimension_select constructive_element_select Derived_geometry">
      </select>

    </type>
    <entity
      name="Angular_location_dimension"
      supertypes="Location_dimension">
      <explicit
        name="orientation"
        optional="YES">
        <typename
          name="Axis_placement"/>
      </explicit>
    </entity>

    <entity
      name="Angular_size_dimension"
      supertypes="Size_dimension">
      <explicit
        name="full">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
      <explicit
        name="major_angle">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Curved_distance_dimension"
      supertypes="Location_dimension">
      <explicit
        name="used_path">
        <typename
          name="Measurement_path"/>
      </explicit>
    </entity>

    <entity
      name="Dimension_value_with_limitation">
      <explicit
        name="defined_by">
        <typename
          name="limitation_definition_select"/>
      </explicit>
      <explicit
        name="envelope_principle"
        optional="YES">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="General_size_dimension"
      supertypes="Size_dimension">
      <explicit
        name="dimension_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="used_path"
        optional="YES">
        <typename
          name="Measurement_path"/>
      </explicit>
    </entity>

    <entity
      name="Geometric_dimension"
      abstract.supertype="YES"
      super.expression="(ONEOF(Location_dimension, Size_dimension))">
      <explicit
        name="dimension_value">
        <typename
          name="dimension_value_select"/>
      </explicit>
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Limits_and_fits">
      <explicit
        name="deviation">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="fitting_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="grade">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Linear_distance_dimension"
      supertypes="Location_dimension">
      <explicit
        name="orientation"
        optional="YES">
        <typename
          name="Line"/>
      </explicit>
    </entity>

    <entity
      name="Location_dimension"
      abstract.supertype="YES"
      super.expression="(ONEOF(Angular_location_dimension, Curved_distance_dimension, Linear_distance_dimension))"
      supertypes="Geometric_dimension">
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="directed">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
      <explicit
        name="origin">
        <typename
          name="placed_element_select"/>
      </explicit>
      <explicit
        name="target">
        <typename
          name="placed_element_select"/>
      </explicit>
    </entity>

    <entity
      name="Plus_minus_bounds">
      <explicit
        name="lower_bound">
        <typename
          name="Value_with_unit"/>
      </explicit>
      <explicit
        name="significant_digits"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="upper_bound">
        <typename
          name="Value_with_unit"/>
      </explicit>
      <explicit
        name="value_determination"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Size_dimension"
      abstract.supertype="YES"
      super.expression="(ONEOF(Angular_size_dimension, General_size_dimension, Thickness_dimension))"
      supertypes="Geometric_dimension">
      <explicit
        name="applied_to">
        <typename
          name="element_with_dimension_select"/>
      </explicit>
      <explicit
        name="envelope_principle"
        optional="YES">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Thickness_dimension"
      supertypes="Size_dimension">
      <explicit
        name="used_path">
        <typename
          name="Measurement_path"/>
      </explicit>
    </entity>

  </schema>

</express>
