<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/02/13 14:22:06 $"
  rcs.revision="$Revision: 1.4 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/document_assignment/mim.exp"/>

  <schema name="Document_assignment_mim">
    <interface
      kind="use"
      schema="Document_and_version_identification_mim">
    </interface>

    <interface
      kind="use"
      schema="File_identification_mim">
    </interface>

    <interface
      kind="use"
      schema="Document_definition_mim">
    </interface>

    <interface
      kind="use"
      schema="document_schema">
      <interfaced.item
        name="document_product_association"/>
    </interface>

    <interface
      kind="use"
      schema="management_resources_schema">
      <interfaced.item
        name="document_usage_constraint_assignment"/>
      <interfaced.item
        name="document_reference"/>
    </interface>

    <type name="document_reference_item">
	<description>
		<p>
		A <b>document_reference_item</b> type specifies those objects to which a <b>document_reference</b>
		or a <b>document_usage_constraint</b> may be assigned through an <b>applied_document_reference</b>
		or <b>applied_document_usage_constraint_assignment</b> respectively. 
		</p>
	</description>
      <select
        extensible="YES">
      </select>

    </type>
    <entity
      name="applied_document_reference"
      supertypes="document_reference">
	<description>
		<p>An <b>applied_document_reference</b> is a type of <b>document_reference</b>
		that assigns a <b>document</b> to a <b>document_reference_item</b>.
		</p>
	</description>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="document_reference_item"/>
      </explicit>
    </entity>

    <entity
      name="applied_document_usage_constraint_assignment"
      supertypes="document_usage_constraint_assignment">
	<description>
		<p>An <b>applied_document_usage_constraint_assignment</b> is a type of <b>document_usage_constraint_assignment</b>
		that assigns a <b>document_usage_constraint</b> to a <b>document_reference_item</b>.
		</p>
	</description>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="document_reference_item"/>
      </explicit>
    </entity>

    <entity
      name="document_product_equivalence"
      supertypes="document_product_association">
	<description>
		<p>A <b>document_product_equivalence</b> is a type of <b>document_product_association</b>.
		It specifies the equivalence of a <b>product</b>, a <b>product_definition</b>,
		or <b>product_definition_formation</b> instance with a <b>document</b> instance.
		</p>
	</description>
      <where
        label="WR1"
        expression="SELF.name = 'equivalence'">
	<description>The name of the <b>document_product_association</b> shall be 'equivalence'.
	</description>
      </where>
    </entity>

  </schema>

</express>
