<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.22"
    source="../data/modules/document_definition/arm.exp"/>

  <schema name="Document_definition_arm">
    <interface
      kind="use"
      schema="Document_and_version_identification_arm">
    </interface>

    <interface
      kind="use"
      schema="External_item_identification_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="File_identification_arm">
    </interface>

    <type name="document_location_select">
      <select
        basedon="external_identification_item"
        selectitems="Document_definition">
      </select>

    </type>
    <entity
      name="Digital_document_definition"
      supertypes="Document_definition">
      <explicit
        name="files">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="Digital_file"/>
      </explicit>
    </entity>

    <entity
      name="Document_definition"
      abstract.supertype="YES"
      super.expression="(ONEOF (Digital_document_definition,                                Physical_document_definition))">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="associated_document_version">
        <typename
          name="Document_version"/>
      </explicit>
    </entity>

    <entity
      name="Document_location_identification"
      supertypes="External_source_identification">
      <where
        label="WR1"
        expression="'DOCUMENT_DEFINITION_ARM.DOCUMENT_DEFINITION' IN TYPEOF(SELF\External_source_identification.item)">
      </where>
    </entity>

    <entity
      name="Physical_document_definition"
      supertypes="Document_definition">
      <explicit
        name="components">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="Hardcopy"/>
      </explicit>
    </entity>

  </schema>

</express>
