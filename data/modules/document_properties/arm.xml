          name="valued_characteristic"
          entity="Document_property_representation"
          attribute="items">
          <inverse.aggregate
            type="SET"
            lower="1"
            upper="1"/>
        </inverse>
<graphic.element page="2" xcoord="449" ycoord="110" />
