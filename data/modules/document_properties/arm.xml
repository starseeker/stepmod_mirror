<entity name="Document_property_representation" supertypes="Representation">
<explicit name="items">
<aggregate type="SET" lower="1" upper="?" />
<typename name="descriptive_or_numerical" />
<redeclaration entity-ref="Representation" />
</explicit>
<where label="WR1" expression="SIZEOF(QUERY( pr &lt;* USEDIN(SELF, 'DOCUMENT_PROPERTIES_ARM.PROPERTY_REPRESENTATION.REP') | 'DOCUMENT_PROPERTIES_ARM.ASSIGNED_PROPERTY' IN TYPEOF(pr.property)))&gt; 0">
</where>
<where label="WR2" expression="SELF\Representation.context_of_items.kind = 'document parameters'">
</where>
<where label="WR3" expression="valid_document_property_representation(SELF)">
</where>
<where label="WR4" expression="SIZEOF(QUERY(it1 &lt;* SELF\Representation.items | SIZEOF(QUERY(it2 &lt;* SELF\Representation.items | it1.name = it2.name)) &gt; 1 ))= 0">
</where>
