<?xml version="1.0"?>
<!-- $Id: express2xml.js,v 1.2 2001/11/21 15:38:19 robbod Exp $ -->
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.2"
    source="../data/modules/document_properties/arm.exp"/>

  <schema name="Document_properties_arm">
    <interface
      kind="use"
      schema="Property_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Document_definition_arm">
    </interface>

    <interface
      kind="use"
      schema="External_item_identification_assignment_arm">
    </interface>

    <type name="document_property_assignment">
      <select
        basedon="property_assignment_select"
        selectitems="Document_definition">
      </select>

    </type>
    <entity
      name="Document_content_property">
      <explicit
        name="detail_level"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="geometry_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="real_world_scale"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="languages">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <typename
          name="document_property_assignment"/>
      </explicit>
    </entity>

    <entity
      name="Document_creation_property">
      <explicit
        name="creating_system">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="creating_interface"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="operating_system"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <typename
          name="document_property_assignment"/>
      </explicit>
    </entity>

    <entity
      name="Document_format_property">
      <explicit
        name="data_format"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="character_code"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="size_format"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <typename
          name="document_property_assignment"/>
      </explicit>
    </entity>

    <entity
      name="Document_size_property">
      <explicit
        name="digital_file_size"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="page_count"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="described_element">
        <typename
          name="document_property_assignment"/>
      </explicit>
    </entity>

    <entity
      name="Document_source_property">
      <explicit
        name="path_information">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="storage_node">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="identifying_mechanism">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <typename
          name="document_property_assignment"/>
      </explicit>
    </entity>

  </schema>

</express>
