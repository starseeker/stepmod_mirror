<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1126">
   <application name="JSDAI" owner="LKSoft" source="document_properties_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Document_properties_arm">
      <interface kind="use" schema="Document_definition_arm"/>
      <interface kind="use" schema="File_identification_arm"/>
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Measure_representation_arm"/>
      <interface kind="use" schema="Property_assignment_arm"/>
      <type name="descriptive_or_numerical">
         <select selectitems="Descriptive_document_property Numerical_document_property"/>
      </type>
      <type name="document_property_item">
         <select basedon="property_assignment_select" selectitems="Document_definition File"/>
      </type>
      <entity name="Assigned_document_property" supertypes="Assigned_property">
         <explicit name="described_element">
            <typename name="document_property_item"/>
            <redeclaration entity-ref="Assigned_property"/>
         </explicit>
         <derived expression="'document property'" name="name">
            <builtintype type="STRING"/>
            <redeclaration entity-ref="Assigned_property"/>
         </derived>
         <where expression="SIZEOF(['DOCUMENT_PROPERTIES_ARM.DOCUMENT_DEFINITION', 'DOCUMENT_PROPERTIES_ARM.FILE']*TYPEOF(SELF\Assigned_property.described_element)) = 1" label="WR1"/>
      </entity>
      <entity name="Descriptive_document_property" supertypes="String_representation_item">
         <inverse attribute="items" entity="Document_property_representation" name="valued_characteristic">
            <inverse.aggregate lower="1" type="SET" upper="1"/>
         </inverse>
      </entity>
      <entity name="Document_property_representation" supertypes="Representation">
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="descriptive_or_numerical"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <where expression="SIZEOF(QUERY( pr &lt;* USEDIN(SELF, 'PROPERTY_ASSIGNMENT_ARM.PROPERTY_DEFINITION_REPRESENTATION.USED_REPRESENTATION') | 'DOCUMENT_PROPERTIES_ARM.ASSIGNED_PROPERTY' IN TYPEOF (pr\Property_representation.property)))&gt; 0" label="WR1"/>
         <where expression="SELF\Representation.context_of_items.kind = 'document parameters'" label="WR2"/>
         <where expression="SIZEOF(QUERY(it1 &lt;* SELF\Representation.items | SIZEOF(QUERY(it2 &lt;* SELF\Representation.items | it1.name = it2.name)) &gt; 1 ))= 0" label="WR3"/>
      </entity>
      <entity name="Numerical_document_property" supertypes="Numerical_item_with_unit">
         <inverse attribute="items" entity="Document_property_representation" name="valued_characteristic">
            <inverse.aggregate lower="1" type="SET" upper="1"/>
         </inverse>
      </entity>
   </schema>
</express>
