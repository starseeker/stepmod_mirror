<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2006/04/06 11:49:55 $" rcs.revision="$Revision: 1.21 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="document_properties_arm schema_instance"/>
   <schema name="Document_properties_arm">
      <interface kind="use" schema="Document_definition_arm"/>
      <interface kind="use" schema="File_identification_arm"/>
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Measure_representation_arm"/>
      <interface kind="use" schema="Property_assignment_arm"/>
      <type name="descriptive_or_numerical">
         <select selectitems="Descriptive_document_property Numerical_document_property"/>
      </type>
      <type name="document_property_item">
         <select basedon="property_assignment_select" selectitems="Document_definition File"/>
      </type>
      <entity name="Assigned_document_property" supertypes="Assigned_property">
         <explicit name="described_element">
            <typename name="document_property_item"/>
            <redeclaration entity-ref="Assigned_property"/>
         </explicit>
         <derived name="name" expression="'document property'">
            <builtintype type="STRING"/>
            <redeclaration entity-ref="Assigned_property"/>
         </derived>
         <where label="WR1" expression="SIZEOF(['DOCUMENT_PROPERTIES_ARM.DOCUMENT_DEFINITION', 'DOCUMENT_PROPERTIES_ARM.FILE']*TYPEOF(SELF\Assigned_property.described_element)) = 1"/>
      </entity>
      <entity name="Descriptive_document_property" supertypes="String_representation_item">
         <inverse name="valued_characteristic" entity="Document_property_representation" attribute="items">
            <inverse.aggregate type="SET" lower="1" upper="1"/>
         </inverse>
      </entity>
      <entity name="Document_property_representation" supertypes="Representation">
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="descriptive_or_numerical"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <where label="WR1" expression="SIZEOF(QUERY( pr &lt;* USEDIN(SELF, 'PROPERTY_ASSIGNMENT_ARM.PROPERTY_DEFINITION_REPRESENTATION.REP') | 'DOCUMENT_PROPERTIES_ARM.ASSIGNED_PROPERTY' IN TYPEOF (pr\Property_representation.property)))&gt; 0"/>
         <where label="WR2" expression="SELF\Representation.context_of_items.kind = 'document parameters'"/>
         <where label="WR3" expression="SIZEOF(QUERY(it1 &lt;* SELF\Representation.items | SIZEOF(QUERY(it2 &lt;* SELF\Representation.items | it1.name = it2.name)) &gt; 1 ))= 0"/>
      </entity>
      <entity name="Numerical_document_property" supertypes="Numerical_item_with_unit">
         <inverse name="valued_characteristic" entity="Document_property_representation" attribute="items">
            <inverse.aggregate type="SET" lower="1" upper="1"/>
         </inverse>
      </entity>
      
   </schema>
</express>
