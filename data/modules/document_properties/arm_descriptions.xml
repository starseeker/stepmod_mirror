<?xml version="1.0" encoding="utf-8"?>
  <?xml-stylesheet 
  type="text/xsl" 
  href="../../../xsl/descriptions.xsl"?>
<?DOCTYPE 
  express SYSTEM "../../../dtd/description.dtd"?>
<ext_descriptions module_directory="document_properties" schema_file="arm.xml" rcs.date="$Date: $" rcs.revision="$Revision: $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Document_properties_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Type: document_property_assignment 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.document_property_assignment">This extends the assignment of properties to Document_definition.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property">A <b>Document_content_property</b> specifies characteristics describing the content of a <b>Document_definition</b>. At least one of the optional attributes shall be specified for each instance of this object.
<p>In this case where a <b>Document_content_property</b> is referred by a Document_definition, the characteristics apply to all individual <b>File</b> objects.</p>

   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property  Attribute: detail_level 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property.detail_level">The detail_level specifies the level of detail that the Document_definition provides.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property  Attribute: geometry_type 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property.geometry_type">The geometry_type specifies the kind or kinds of geometry that an object contains.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property  Attribute: real_world_scale 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property.real_world_scale">The real_world_scale specifies the scale that is used in the Document_definition the Document_content_property is referred by.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property  Attribute: languages 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property.languages">The languages specifies which language or languages are used in the characterized objects.
<example>'English' and 'Japanese' are examples for the fact that annotation on a drawing is provided in the language 'Japanese' or 'German' respectively.</example> 

   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_content_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_content_property.described_element">The described_element is the Document definition representation to which the document content property is assigned.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_creation_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_creation_property">A <b>Document_creation_property</b> specifies characteristics describing the context of creation of a <b>Document_definition</b>. 
<p>In the case where a <b>Document_creation_property</b> is referred by a <b>Document_definition</b>, the characteristics apply to all individual <b>File</b> objects.</p> 

   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_creation_property  Attribute: creating_system 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_creation_property.creating_system">The creating_system specifies the computer application or the machine which is used to create the object that is characterized.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_creation_property  Attribute: creating_interface 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_creation_property.creating_interface">The creating_interface specifies the computer application used to create the Document_definition object.

<example>'Postscript Printer Driver' is an example for a creating interface of a Physical_document.</example>
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_creation_property  Attribute: operating_system 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_creation_property.operating_system">The operating_system specifies the operating system that is used to execute the computer application that created the characterized object.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_creation_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_creation_property.described_element">The described_element is the Document definition representation to which the document creation property is assigned.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_format_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_format_property">A <b>Document_format_property</b> specifies characteristics describing the format of a <b>Document_definition</b>. At least one of the optional attributes shall be specified for each instance of this object.

<p>In the case where the <b>Document_format_property</b> is referred by a Document_definition, the characteristics apply to all individual <b>File</b> objects.</p>


   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_format_property  Attribute: data_format 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_format_property.data_format">The data_format specifies the convention that was used to structure the information in the characterized object.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_format_property  Attribute: character_code 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_format_property.character_code">The character_code specifies the character code that is used in the characterized object.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_format_property  Attribute: size_format 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_format_property.size_format">The size_format specifies the dimensions of a physical presentation of the object the size_format is provided for.
<example>'ISO A0' is an example for the size_format of a drawing that is stored digitally.</example>
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_format_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_format_property.described_element">The described_element is the Document definition representation to which the document format property is assigned.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_size_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_size_property">A <b>Document_size_property</b> specifies characteristics describing the size of a <b>Document_definition</b>. At least one of the optional attributes shall be specified for each instance of this object.

<p>In the case where the <b>Document_size_property</b> is referred by a <b>Document_definition</b>, the characteristics apply to all individual <b>File</b> objects.</p>


   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_size_property  Attribute: digital_file_size 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_size_property.digital_file_size">The digital_file_size specifies the value that represents the size of a digitally stored document.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_size_property  Attribute: page_count 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_size_property.page_count">The page_count specifies the number of pages of a physical document.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_size_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_size_property.described_element">The described_element is the Document definition representation to which the document size property is assigned.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_source_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_source_property">A <b>Document_source_property</b> specifies where a Document_definition can be found in a digital or physical data storage system.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_source_property  Attribute: path_information 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_source_property.path_information">The path_information is the name of the source by which it can be accessed in a physical or digital storage system.
<example number="1">In a digital storage system, the path_information might describe the Internet node and the directory in which the file can be found.</example> 
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_source_property  Attribute: storage_node 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_source_property.storage_node">The storage_node provides a meaningful storage node location information of the Document representation.
<example number="2">For a digital file, the storage_node is equivalent to the file name.</example>

   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_source_property  Attribute: identifying_mechanism 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_source_property.identifying_mechanism">The identifying_mechanism is used to specify the mechanism being applied to identify the storage item and the path information.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Document_properties_arm  Entity: Document_source_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Document_properties_arm.Document_source_property.described_element">The described_element is the Document definition representation to which the document source property is assigned.</ext_description>
</ext_descriptions>