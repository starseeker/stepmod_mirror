<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Draughting_element_arm
   <express_ref linkend="draughting_element:arm:Draughting_element_arm"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Draughting_element_arm">
</ext_description>

<!-- +++++++++++ Annotation_fill_area +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Annotation_fill_area">
	An <b>Annotation_fill_area</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
</ext_description>

<!-- boundaries -->
<ext_description linkend="Draughting_element_arm.Annotation_fill_area.boundaries">
	specifies a role of the
	<express_ref linkend="Basic_geometry:arm:Basic_geometry_arm.Curve"/>
	for the <b>Annotation_fill_area</b>.
	There shall exist one or more
	<express_ref linkend="Basic_geometry:arm:Basic_geometry_arm.Curve">Curves</express_ref>
	for the <b>Annotation_fill_area</b>.
</ext_description>

<!-- +++++++++++ Annotation_plane +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Annotation_plane">
	An <b>Annotation_plane</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_element"/>.
</ext_description>

<!-- element -->
<ext_description linkend="Draughting_element_arm.Annotation_plane.element">
	an attribute inherited from the
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_element"/>
	shall be redeclared as the 
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.plane_or_planar_box"/>
	for the <b>Annotation_plane</b>.
</ext_description>


<!-- +++++++++++ Dimension_curve +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Dimension_curve">
<p>
	A <b>Dimension_curve</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_curve"/>.
	A <b>Dimension_curve</b> is a curve that is used for the graphical representation of a dimension. 
	If necessary, it includes the additional symbology needed to show the extent of the dimension. 
</p>
	<example>
		<p>
		<module_ref linkend="draughting_element:4_entities:figure:codid">
		Figure 1</module_ref> 
		shows the use of a <b>Dimension_curve</b> in a drawing.
		</p>
		<figure id="codid" number="1">
			<title>Components of a dimension in a drawing</title>
			<img src="components_of_dimension_in_drawing.gif"/>
		</figure>
	</example>
</ext_description>

<!-- terminator -->
<ext_description linkend="Draughting_element_arm.Dimension_curve.terminator">
	specifies the
	<express_ref linkend="Curve_appearance:arm:Curve_appearance_arm.Terminator"/>
	for the <b>Dimension_curve</b>.
	There shall exist not more than two
	<express_ref linkend="Curve_appearance:arm:Curve_appearance_arm.Terminator">Terminators</express_ref>
	for the <b>Dimension_curve</b>.
</ext_description>

<!-- +++++++++++ Dimension_curve_directed_callout +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Dimension_curve_directed_callout">
	A <b>Dimension_curve_directed_callout</b> is a type of
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout"/>.
</ext_description>

<!-- dimension_curve -->
<ext_description linkend="Draughting_element_arm.Dimension_curve_directed_callout.dimension_curve">
	specifies a role of the
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Dimension_curve"/>
	for the <b>Dimension_curve_directed_callout</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Draughting_element_arm.Dimension_curve_directed_callout.wr:WR1">
	<p>
	The <b>dimension_curve</b> must be in the list of items defined in attribute 
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout.contents"/>.
	</p>
</ext_description>

<!-- +++++++++++ Draughting_callout +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Draughting_callout">
<p>
	A <b>Draughting_callout</b> is a type of
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_item"/>.
	A <b>Draughting_callout</b> may be either a
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Dimension_curve_directed_callout"/>
	or a
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Leader_directed_callout"/>
	or a
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Projection_directed_callout"/>.
</p>
	<example>
		<p>
		<module_ref linkend="draughting_element:4_entities:figure:dcod">
		Figure 2</module_ref> 
		shows typical <b>Draughting_callout</b> objects on a drawing.
		</p>
		<figure id="dcod" number="2">
			<title>Draughting callouts on a drawing</title>
			<img src="draughting_callouts_on_drawing.gif"/>
		</figure>
	</example>
</ext_description>

<!-- contents -->
<ext_description linkend="Draughting_element_arm.Draughting_callout.contents">
	specifies the
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.draughting_callout_content_select"/>
	that form the <b>Draughting_callout</b>.
	There shall exist one or more
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.draughting_callout_content_select"></express_ref>
	for the <b>Draughting_callout</b>. 
</ext_description>

<!-- +++++++++++ Fill_area +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Fill_area">
<p>
	A <b>Fill_area</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_element"/>.
	A <b>Fill_area</b> is a bounded area containing colouring, hatching, or tiling.
</p>
	<note>
		A <b>Fill_area</b> communicates some aspect of a physical part characteristic or distinguishes it from its surroundings.
	</note>
	<example>
		<p>
		<module_ref linkend="draughting_element:4_entities:figure:fas">
		Figure 3</module_ref> 
		depicts some fill area styles.
		</p>
		<figure id="fas" number="3">
			<title>Fill area styles</title>
			<img src="fill_area_styles.gif"/>
		</figure>
	</example>
</ext_description>

<!-- element -->
<ext_description linkend="Draughting_element_arm.Fill_area.element">
	an attribute inherited from the
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_element"/>
	shall be redeclared as the
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Annotation_fill_area"/>
	for the <b>Fill_area</b>.
</ext_description>

<!-- reference_point -->
<ext_description linkend="Draughting_element_arm.Fill_area.reference_point">
	specifies a point within the fill area, used in the placement and initiation of the fill area appearance. 
	The reference point is a point through that a line of a hatching pattern shall pass or at which the origin of a tile shall be located. 
	The reference point also establishes the point at which the first visible segment of a line font used as the curve appearance for 
	a hatching pattern starts.
</ext_description>

<!-- +++++++++++ Generic_annotation_curve +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Generic_annotation_curve">
	A <b>Generic_annotation_curve</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_curve"/>.
</ext_description>

<!-- +++++++++++ Leader +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Leader">
	A <b>Leader</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_curve"/>.
	A <b>Leader</b> directs a dimension, a note, or a symbol to the intended place on an element of geometry or annotation.
</ext_description>

<!-- curve -->
<ext_description linkend="Draughting_element_arm.Leader.curve">
	specifies a role of the
	<express_ref linkend="Basic_geometry:arm:Basic_geometry_arm.Curve"/>
	for the <b>Leader</b>.
</ext_description>

<!-- +++++++++++ Leader_directed_callout +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Leader_directed_callout">
	A <b>Leader_directed_callout</b> is a type of
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout"/>.
</ext_description>

<!-- leader -->
<ext_description linkend="Draughting_element_arm.Leader_directed_callout.leader">
	specifies a role of the
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Leader"/>
	for the <b>Leader_directed_callout</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Draughting_element_arm.Leader_directed_callout.wr:WR1">
	<p>
	The <b>leader</b> must be in the list of items defined in attribute
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout.contents"/>.
	</p>
</ext_description>

<!-- +++++++++++ Projection_curve +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Projection_curve">
	A <b>Projection_curve</b> is a type of
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_curve"/>.
	A <b>Projection_curve</b> is the extension of a point, line, surface, or theoretical point of intersection to a location outside the part outline.
</ext_description>

<!-- +++++++++++ Projection_directed_callout +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Projection_directed_callout">
	A <b>Projection_directed_callout</b> is a type of
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout"/>.
</ext_description>

<!-- projection_curve -->
<ext_description linkend="Draughting_element_arm.Projection_directed_callout.projection_curve">
	specifies a role of the
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Projection_curve"/>
	for the <b>Projection_directed_callout</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Draughting_element_arm.Projection_directed_callout.wr:WR1">
	<p>
	The <b>projection_curve</b> must be in the list of items defined in attribute
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Draughting_callout.contents"/>.
	</p>
</ext_description>

<!-- +++++++++++ Text_style +++++++++++ -->
<ext_description linkend="Draughting_element_arm.Text_style">
<p>
	A <b>Text_style</b> is the definition of the visual presentation of a
	<express_ref linkend="Text_appearance:arm:Text_appearance_arm.Text_literal"/>, 
	<express_ref linkend="Text_appearance:arm:Text_appearance_arm.Composite_presentable_text"/>, 
	<express_ref linkend="Associative_text:arm:Associative_text_arm.Annotation_text"/>,
	or an 
	<express_ref linkend="Text_representation:arm:Text_representation_arm.Annotation_text_character"/>.
	The visual presentation characteristics are thickness, colour, text rotation angle, character
	aspect ratio, character rotation angle, character scale, and character
	slant angle as shown in 
	<module_ref linkend="draughting_element:4_entities:figure:taar">
	figure 4</module_ref>.
</p>
	<figure id="taar" number="4">
			<title>Text appearance and rotation</title>
			<img src="text_appearance_and_rotation.gif"/>
	</figure>
</ext_description>

<!-- font_size_scale -->
<ext_description linkend="Draughting_element_arm.Text_style.font_size_scale">
	specifies a REAL value.
</ext_description>

<!-- mirror_placement -->
<ext_description linkend="Draughting_element_arm.Text_style.mirror_placement">
	specifies a role of the
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement"/>
	for the <b>Text_style</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- text_colour -->
<ext_description linkend="Draughting_element_arm.Text_style.text_colour">
	specifies a role of the
	<express_ref linkend="Colour:arm:Colour_arm.Colour"/>
	for the <b>Text_style</b>.
</ext_description>

</ext_descriptions>

