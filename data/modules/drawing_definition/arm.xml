<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1309">
   <application name="JSDAI" owner="LKSoft" source="drawing_definition_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Drawing_definition_arm">
      <interface kind="use" schema="Draughting_annotation_arm"/>
      <interface kind="use" schema="Presentation_hierarchy_arm"/>
      <type name="dd_view_element_select">
         <select basedon="view_element_select" selectitems="Camera_image_2d_with_scale"/>
      </type>
      <type name="draughting_titled_item">
         <select selectitems="Drawing Drawing_sheet"/>
      </type>
      <entity name="Camera_image_2d_with_scale" supertypes="Detailed_geometric_model_element">
         <explicit name="is_displaying">
            <typename name="presented_model_select"/>
         </explicit>
         <explicit name="source">
            <typename name="Camera_model_d2"/>
         </explicit>
         <explicit name="target">
            <typename name="Planar_box"/>
         </explicit>
      </entity>
      <entity name="Camera_model_d2" supertypes="Detailed_geometric_model_element">
         <explicit name="view_window">
            <typename name="Planar_box"/>
         </explicit>
         <explicit name="view_window_clipping">
            <builtintype type="BOOLEAN"/>
         </explicit>
      </entity>
      <entity name="Draughting_title">
         <explicit name="contents">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="draughting_titled_item"/>
         </explicit>
         <explicit name="language">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Drawing" supertypes="Presentation_set">
         <explicit name="revision_identifier">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="drawing_identifier">
            <typename name="Drawing_definition"/>
         </explicit>
         <explicit name="intended_scale" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="drawing_specification">
            <aggregate lower="0" type="SET" upper="?"/>
            <builtintype type="STRING"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="revision_identifier"/>
            <unique.attribute attribute="drawing_identifier"/>
         </unique>
      </entity>
      <entity name="Drawing_definition">
         <explicit name="drawing_number">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="drawing_type" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Drawing_sequence">
         <explicit name="predecessor">
            <typename name="Drawing"/>
         </explicit>
         <explicit name="successor">
            <typename name="Drawing"/>
         </explicit>
         <where expression="predecessor :&lt;&gt;: successor" label="WR1"/>
      </entity>
      <entity name="Drawing_sheet" supertypes="View_area">
         <explicit name="revision_identifier">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Drawing_sheet_layout" supertypes="General_symbol"/>
      <entity name="Drawing_sheet_sequence" supertypes="View_area_relationship">
         <explicit name="relating">
            <typename name="Drawing_sheet"/>
            <redeclaration entity-ref="View_area_relationship"/>
         </explicit>
         <explicit name="related">
            <typename name="Drawing_sheet"/>
            <redeclaration entity-ref="View_area_relationship"/>
         </explicit>
         <where expression="SELF\View_area_relationship.relating :&lt;&gt;: SELF\View_area_relationship.related" label="WR1"/>
      </entity>
      <subtype.constraint entity="Detailed_geometric_model_element" name="dd_detailed_geometric_model_element_subtypes" super.expression="ONEOF (Camera_model_d2, Camera_image_2d_with_scale)"/>
   </schema>
</express>
