<!-- +++++++++++ drawing_sheet_layout +++++++++++ -->
<ext_description linkend="Drawing_definition_mim.drawing_sheet_layout">
	A <b>drawing_sheet_layout</b> is a type of
	<express_ref linkend="aic_draughting_annotation:ir_express:aic_draughting_annotation.draughting_symbol_representation"/>
	that presents the layout or format for a
    <express_ref linkend="drawing_definition_schema:ir_express:drawing_definition_schema.drawing_sheet_revision"/>.
</ext_description>


<ext_description linkend="Drawing_definition_mim.draughting_specification_reference">
	A <b>draughting_specification_reference</b> is a type of
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.document_reference"/>
	that is the designation of an external draughting specification for a drawing revision.
</ext_description>
<ext_description linkend="Drawing_definition_mim.draughting_specification_reference.specified_items">
	the 
	<express_ref linkend="drawing_definition_schema:ir_express:drawing_definition_schema.drawing_revision"/>s 
	to which a draughting specification is applied.
</ext_description>
<ext_description linkend="Drawing_definition_mim.draughting_specification_reference.wr:WR1">
	Each document assigned shall be a draughting specification.
</ext_description>


