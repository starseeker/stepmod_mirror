<ext_description linkend="Edge_based_topological_representation_with_length_arm.Connected_edge_sub_set">
	A <b>Connected_edge_sub_set</b> is a type of
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>
	that represents a sub-set of a parent
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>.
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Connected_edge_sub_set.parent_edge_set">
	specifies the parent 
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>.
</ext_description>

<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Edge_based_topological_representation_with_length_arm  Entity: Connected_edge_with_length_set_representation  
   <express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Connected_edge_with_length_set_representation"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Connected_edge_with_length_set_representation">
	A <b>Connected_edge_with_length_set_representation</b> is a type of
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>
	that has as it's items one
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>
	and as needed additional 
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Path"/>s
	and
	<express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Vertex_on_edge"/>s
	on the edges of this
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>.
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Connected_edge_with_length_set_representation.items">
	an inherited set attribute whose members shall be only of type
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>,
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Path"/>
	and
	<express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Vertex_on_edge"/>.
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Connected_edge_with_length_set_representation.wr:WR1">
	the attribute <b>items</b> shall contain one
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Connected_edge_set"/>.
</ext_description>

<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Edge_based_topological_representation_with_length_arm  Entity: Edge_with_length  
   <express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Edge_with_length"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Edge_with_length">
	A <b>Edge_with_length</b> is a type of
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Edge"/>,
	which has its geometry undefined but is of a fixed length. 
	<note>An <b>Edge_with_length</b> may be used to describe the topology of flexible structures.</note>
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Edge_with_length.edge_length">
	the arc length of the <b>Edge_with_length</b>. 
</ext_description>

<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Edge_based_topological_representation_with_length_arm  Entity: Vertex_on_edge  
   <express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Vertex_on_edge"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Vertex_on_edge">
	A <b>Vertex_on_edge</b> is a type of
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Vertex"/>
	which is located on an 
	<express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Edge_with_length"/> 
	at a distance <b>distance_from_start</b> 
	from the 
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Edge.edge_start"/>. 
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Vertex_on_edge.parent_edge">
	  the 
	  <express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Edge_with_length"/> 
	  on which the vertex lies; 
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Vertex_on_edge.distance_from_start">
	the distance, measured along the edge, from the 
	<express_ref linkend="elemental_topology:arm:Elemental_topology_arm.Edge.edge_start"/> 
	to this vertex.
</ext_description>
<ext_description linkend="Edge_based_topological_representation_with_length_arm.Vertex_on_edge.wr:WR1">
	The <b>distance_from_start</b> shall be less than the
	<express_ref linkend="edge_based_topological_representation_with_length:arm:Edge_based_topological_representation_with_length_arm.Edge_with_length.edge_length"/>
	of the  <b>parent_edge</b>.
</ext_description>


