<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2006/02/24 15:15:45 $" rcs.revision="$Revision: 1.3 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="elemental_geometric_shape_arm schema_instance"/>
   <schema name="Elemental_geometric_shape_arm">
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Value_with_unit_arm"/>
      <type name="cartesian_transformation">
         <select selectitems="Cartesian_transformation_2d Cartesian_transformation_3d" genericentity="NO" extensible="NO"/>
      </type>
      <type name="geometric_mapping_target">
         <select selectitems="Axis_placement cartesian_transformation" genericentity="NO" extensible="NO"/>
      </type>
      <entity name="Axis_placement" supertypes="Detailed_geometric_model_element" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="origin" optional="NO">
            <typename name="Cartesian_point"/>
         </explicit>
         <explicit name="x_axis" optional="NO">
            <typename name="Direction"/>
         </explicit>
         <explicit name="y_axis" optional="NO">
            <typename name="Direction"/>
         </explicit>
         <derived name="dim" expression="SIZEOF(origin.coordinates)">
            <builtintype type="INTEGER" fixed="NO"/>
         </derived>
         <where label="WR1" expression="dim &gt;1"/>
         <where label="WR2" expression="dim = SIZEOF(x_axis.coordinates)"/>
         <where label="WR3" expression="dim = SIZEOF(y_axis.coordinates)"/>
      <where label="IP1"/>
      </entity>
      <entity name="Axis_placement_mapping" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="source" optional="NO">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="target" optional="NO">
            <typename name="Axis_placement"/>
         </explicit>
         <where label="WR1" expression="source\Axis_placement.dim = target\Axis_placement.dim"/>
      </entity>
      <entity name="Cartesian_point" supertypes="Detailed_geometric_model_element" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="coordinates" optional="NO">
            <aggregate type="LIST" lower="1" upper="3" unique="NO" optional="NO"/>
            <typename name="length_measure"/>
         </explicit>
      </entity>
      <entity name="Cartesian_transformation_2d" supertypes="Detailed_geometric_model_element" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="multiplication_matrix" optional="NO">
            <aggregate type="ARRAY" lower="1" upper="2" unique="NO" optional="NO"/>
            <typename name="Direction"/>
         </explicit>
         <explicit name="translation" optional="NO">
            <typename name="Cartesian_point"/>
         </explicit>
         <where label="WR1" expression="SIZEOF(multiplication_matrix[1]\Direction.coordinates)=2"/>
         <where label="WR2" expression="SIZEOF(multiplication_matrix[2]\Direction.coordinates)=2"/>
         <where label="WR3" expression="SIZEOF(translation.coordinates)=2"/>
      </entity>
      <entity name="Cartesian_transformation_3d" supertypes="Detailed_geometric_model_element" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="multiplication_matrix" optional="NO">
            <aggregate type="ARRAY" lower="1" upper="3" unique="NO" optional="NO"/>
            <typename name="Direction"/>
         </explicit>
         <explicit name="translation" optional="NO">
            <typename name="Cartesian_point"/>
         </explicit>
         <where label="WR1" expression="SIZEOF(multiplication_matrix[1]\Direction.coordinates)=3"/>
         <where label="WR2" expression="SIZEOF(multiplication_matrix[2]\Direction.coordinates)=3"/>
         <where label="WR3" expression="SIZEOF(multiplication_matrix[3]\Direction.coordinates)=3"/>
         <where label="WR4" expression="SIZEOF(translation.coordinates)=3"/>
      </entity>
      <entity name="Detailed_geometric_model_element" abstract.supertype="YES" supertypes="Representation_item" super.expression="ONEOF (Cartesian_point, Direction, Axis_placement, Cartesian_transformation_2d, Cartesian_transformation_3d)" abstract.entity="NO">
         <where label="IP1"/>
         <where label="IP2"/>
      </entity>
      <entity name="Direction" supertypes="Detailed_geometric_model_element" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="coordinates" optional="NO">
            <aggregate type="LIST" lower="2" upper="3" unique="NO" optional="NO"/>
            <typename name="length_measure"/>
         </explicit>
      </entity>
      <entity name="Geometric_coordinate_space" supertypes="Numerical_representation_context" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="dimension_count" optional="NO">
            <builtintype type="INTEGER" fixed="NO"/>
         </explicit>
         <where label="WR1" expression="dimension_count &gt;0"/>
      </entity>
      <entity name="Geometric_model" supertypes="Representation" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="version_id" optional="YES">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="model_extent" optional="YES">
            <typename name="length_measure"/>
         </explicit>
         <explicit name="context_of_items" optional="NO">
            <typename name="Geometric_coordinate_space"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <explicit name="items" optional="NO">
            <aggregate type="SET" lower="1" upper="?" unique="NO" optional="NO"/>
            <typename name="Detailed_geometric_model_element"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
      </entity>
   </schema>
</express>
