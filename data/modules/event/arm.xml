<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1064">
   <application name="JSDAI" owner="LKSoft" source="event_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Event_arm">
      <interface kind="use" schema="Date_time_arm"/>
      <interface kind="use" schema="Date_time_assignment_arm"/>
      <interface kind="use" schema="Value_with_unit_arm"/>
      <type name="date_or_event">
         <select selectitems="Calendar_date Date_time Event"/>
      </type>
      <entity name="Event">
         <explicit name="id">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="actual_start_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
         <explicit name="planned_start_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
      </entity>
      <entity name="Event_relationship">
         <explicit name="relation_type">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="relating_event">
            <typename name="Event"/>
         </explicit>
         <explicit name="related_event">
            <typename name="Event"/>
         </explicit>
      </entity>
      <entity name="Relative_event" supertypes="Event">
         <explicit name="base_event">
            <typename name="Event"/>
         </explicit>
         <explicit name="offset">
            <typename name="Duration"/>
         </explicit>
      </entity>
   </schema>
</express>
