<?xml version="1.0"?>
<!-- $Id: arm.xml,v 1.8 2002/04/02 17:55:32 goset1 Exp $ -->
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/04/02 17:55:32 $"
  rcs.revision="$Revision: 1.8 $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/event/arm.exp"/>

  <schema name="Event_arm">
    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>

    <type name="event_item">
      <select
        extensible="YES"
        selectitems="">
      </select>

    </type>
    <entity
      name="Event">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="planned_start_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
      <explicit
        name="actual_start_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
    </entity>

    <entity
      name="Event_assignment">
      <explicit
        name="assigned_event">
        <typename
          name="Event"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="event_item"/>
      </explicit>
    </entity>

    <entity
      name="Event_relationship">
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="event1">
        <typename
          name="Event"/>
      </explicit>
      <explicit
        name="event2">
        <typename
          name="Event"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Relative_event"
      supertypes="Event">
      <explicit
        name="base_event">
        <typename
          name="Event"/>
      </explicit>
      <explicit
        name="offset">
        <typename
          name="Duration"/>
      </explicit>
    </entity>

  </schema>

</express>
