<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007/03/21 11:10:23 $" rcs.revision="$Revision: 1.1 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="explicit_constraints_arm schema_instance"/>
   <schema name="Explicit_constraints_arm">
      <interface kind="use" schema="Foundation_representation_arm"/>
      <interface kind="use" schema="Parameterization_and_variational_representation_arm"/>
            
      <type name="constraint_group_member">
            <select
              selectitems="Explicit_constraint Simultaneous_constraint_group">
            </select>
    </type>
      
    <type name="variational_parameter_select">
            <select
              selectitems="Bound_variational_parameter Unbound_variational_parameter">
            </select>
    </type>
        
     <entity
       name="Boolean_expression"
       abstract.supertype="YES"
       supertypes="Expression">
     </entity> 
     
     <entity
      name="Defined_constraint"
      abstract.supertype="YES"
      super.expression="(Equal_parameter_constraint)"
      supertypes="Explicit_constraint">
    </entity> 
     
     
     <entity
           name="Equal_parameter_constraint"
           supertypes="Defined_constraint">
           <explicit
             name="constrained_elements">
             <aggregate
               type="SET"
               lower="1"
               upper="?"/>
             <typename
               name="variational_parameter_select"/>
             <redeclaration
               entity-ref="Explicit_constraint"/>
             </explicit>
             <explicit
               name="reference_elements">
               <aggregate
                 type="SET"
                 lower="0"
                 upper="1"/>
               <typename
                 name="variational_parameter_select"/>
               <redeclaration
                 entity-ref="explicit_constraint"/>
               </explicit>
               <where
                 label="WR1"
                 expression="SIZEOF(SELF\Explicit_constraint.constrained_elements + SELF\Explicit_constraint.reference_elements) &gt;= 2">
               </where>
             </entity>

     
     <entity
           name="Explicit_constraint"
           abstract.supertype="YES"
           super.expression="(ONEOF(Defined_constraint, Free_form_constraint))"
           supertypes="Variational_representation_item">
           <explicit
             name="description"
             optional="YES">
             <builtintype type="STRING"/>
           </explicit>
           <explicit
             name="constrained_elements">
             <aggregate
               type="SET"
               lower="1"
               upper="?"/>
             <typename
               name="Representation_item"/>
           </explicit>
           <explicit
             name="reference_elements">
             <aggregate
               type="SET"
               lower="0"
               upper="?"/>
             <typename
               name="Representation_item"/>
           </explicit>
           <where
             label="WR1"
             expression="SIZEOF(constrained_elements * reference_elements) = 0">
           </where>
         </entity>

     <entity
           name="Expression"
           abstract.supertype="YES">
       </entity>
   
       <entity
              name="Free_form_assignment"
              supertypes="Explicit_constraint">
             <explicit
            name="constrained_elements">
            <aggregate
              type="SET"
              lower="1"
              upper="?"/>
            <typename
              name="variational_parameter_select"/>
            <redeclaration
              entity-ref="Explicit_constraint"/>
            </explicit>
            <explicit
              name="reference_elements">
              <aggregate
                type="SET"
                lower="1"
                upper="?"/>
              <typename
                name="variational_parameter_select"/>
              <redeclaration
                entity-ref="Explicit_constraint"/>
              </explicit>
              <explicit
                name="constraining_expression">
                <typename
                  name="Expression"/>
              </explicit>
             </entity>
         
       
          <entity
	        name="Free_form_relation"
	        supertypes="Explicit_constraint">
	     <explicit
	            name="constrained_elements">
	            <aggregate
	             type="SET"
	             lower="1"
	             upper="?"/>
	             <typename
	             name="variational_parameter_select"/>
	             <redeclaration
	              entity-ref="Explicit_constraint"/>
	              </explicit>
	              <explicit
	               name="reference_elements">
	               <aggregate
	               type="SET"
	                lower="0"
	                upper="?"/>
	               <typename
	                name="variational_parameter_select"/>
	                <redeclaration
	                 entity-ref="Explicit_constraint"/>
	                 </explicit>
	                <explicit
	                  name="constraining_expression">
	                 <typename
	                  name="Boolean_expression"/>
              </explicit>
	     </entity>

       <entity
              name="Simultaneous_constraint_group"
              supertypes="Variational_representation_item">
              <explicit
                name="constraint_group">
                <aggregate
                  type="SET"
                  lower="2"
                  upper="?"/>
                <typename
                  name="constraint_group_member"/>
              </explicit>
           </entity>
          
      
   </schema>
</express>
