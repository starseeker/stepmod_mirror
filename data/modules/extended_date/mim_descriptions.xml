<!-- +++++++++++ calendar_month_year +++++++++++ -->
<ext_description linkend="Extended_date_mim.calendar_month_year">
	A <b>calendar_month_year</b> is a type of
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/>
	that implements the ARM concept of
	<express_ref linkend="Extended_date:arm:Extended_date_arm.Calendar_month_year"/>.
</ext_description>

<!-- day_component -->
<ext_description linkend="Extended_date_mim.calendar_month_year.day_component">
	an attribute inherited from the
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/>
	shall be redeclared as the
	<express_ref linkend="date_time_schema:ir_express:date_time_schema.day_in_month_number"/>
	for the <b>calendar_month_year</b>.
</ext_description>

