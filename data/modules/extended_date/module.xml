<module
	name="extended_date"
	name.french="Heure Date"
	part="1776"
	wg.number="4695"
	wg.number.arm="4696" 
	wg.number.mim="4697" 
	checklist.internal_review="4647"
	checklist.project_leader="4648"
	checklist.convener="4649"	  
	version="1"
	status="CD-TS"
	language="E"
	publication.year=""
    publication.date=""
	published="n"
	rcs.date="$Date: 2008/01/15 11:03:47 $"
	rcs.revision="$Revision: 1.5 $"
	development.folder="dvlp"
>

 <keywords>
    module, extended date, ordinal date, week, day of week, year, Georgian date
 </keywords>
 <!-- the abstract for the module. If not provided, the XSL will use the in scope -->
	<!-- <abstract>
		<li>xxxxx</li>
	</abstract>  -->
	<!-- Reference to contacts detailed in stepmod/data/basic/contacts.xml -->
	<contacts>
	   <projlead ref="ap203ed2.projlead"/>
	   <editor ref="ap203ed2.editor"/>
 	</contacts>
	<!-- Introduction -->
	<!-- The introduction should start as shown: -->
	<purpose>
		<p>
     This part of ISO 10303 specifies an application module for the
     representation of extended date capabilities on those defined in application module 
     <module_ref linkend="date_time:1_scope">Date time</module_ref> 
     and including year only, year and month, ordinal day of year, and year and week and day of week.
   </p>
	</purpose>
	<!-- Items in scope -->
	<inscope>	
		<li>definition of a year, year and month, year and ordinal date, year and week and day of week;</li>
		<li>items within the scope of application module <module_ref linkend="date_time:1_scope">Date time</module_ref>, ISO/TS 10303-1010.</li>
	</inscope>
	<!-- Items out of scope -->
