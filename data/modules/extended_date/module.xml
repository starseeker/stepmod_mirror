 <arm>
   <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
   </express-g>
 </arm>

 <mapping_table>

   <ae entity="Year_month" extensible="NO">
     <aimelt xml:space="preserve">year_month</aimelt>
     <source xml:space="preserve">ISO 10303-1776</source>
			 <refpath xml:space="preserve">
			 year_month &lt;= 
			 date
			 </refpath>
      <aa attribute="month_component" assertion_to="month_in_year_number">
       <aimelt xml:space="preserve">year_month.month_component</aimelt>
       <source xml:space="preserve">ISO 10303-41</source>
      </aa>
     	<aa attribute="year_component">
       <aimelt xml:space="preserve">date.year_component</aimelt>
     		<source xml:space="preserve">ISO 10303-41</source>
			 <refpath xml:space="preserve">
				 year_month &lt;=
				 date
				 date.year_component
			 </refpath>
     	</aa>
    </ae>

   <ae entity="Date" extensible="NO">
     <aimelt xml:space="preserve">date</aimelt>
     <source xml:space="preserve">ISO 10303-41</source>
     	<aa attribute="year_component">
       <aimelt xml:space="preserve">date.year_component</aimelt>
     		<source xml:space="preserve">ISO 10303-41</source>
     	</aa>
    </ae>

   <ae entity="Ordinal_date" extensible="NO">
     <aimelt xml:space="preserve">ordinal_date</aimelt>
     <source xml:space="preserve">ISO 10303-41</source>
			 <refpath xml:space="preserve">
			 ordinal_date &lt;= 
			 date
			 </refpath>
      <aa attribute="day_component" assertion_to="day_in_year_number">
       <aimelt xml:space="preserve">ordinal_date.day_component</aimelt>
     		<source xml:space="preserve">ISO 10303-41</source>
      </aa>
     	<aa attribute="year_component">
       <aimelt xml:space="preserve">date.year_component</aimelt>
     		<source xml:space="preserve">ISO 10303-41</source>
			 <refpath xml:space="preserve">
				 ordinal_date &lt;= 
				 date
				 date.year_component
			 </refpath>
     	</aa>
    </ae>

   <ae entity="Week_of_year_and_day_date" extensible="NO">
     <aimelt xml:space="preserve">week_of_year_and_day_date</aimelt>
     <source xml:space="preserve">ISO 10303-41</source>
     <aa attribute="week_component">
       <aimelt xml:space="preserve">week_of_year_and_day_date.week_component</aimelt>
       <source xml:space="preserve">ISO 10303-41</source>
     </aa>
     <aa attribute="day_component">
       <aimelt xml:space="preserve">week_of_year_and_day_date.day_component</aimelt>
       <source xml:space="preserve">ISO 10303-41</source>
		 </aa>
     	<aa attribute="year_component">
       <aimelt xml:space="preserve">date.year_component</aimelt>
     		<source xml:space="preserve">ISO 10303-41</source>
			 <refpath xml:space="preserve">
				 week_of_year_and_day_date &lt;= 
				 date
				 date.year_component
			 </refpath>
     	</aa>
   </ae>

 </mapping_table>
 <mim>
   <express-g>
     <imgfile file="mimexpg1.xml"/>
    </express-g>
</mim>
</module>
