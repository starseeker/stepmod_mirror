<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: datum_difference
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Extended_geometric_tolerance_mim.datum_difference">
<p>
	A <b>datum_difference</b> is a type of  
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect"/> 
	and a
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect_relationship"/> 
	that implements the ARM concept of 
	<express_ref linkend="Datum_difference_based_model:arm:Datum_difference_based_model_arm.Datum_difference"/>.
</p>
</ext_description>

<!-- relating_shape_aspect -->
<ext_description linkend="Extended_geometric_tolerance_mim.datum_difference.relating_shape_aspect">
	an attribute inherited from the 
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect_relationship"/>
	shall be redeclared as the
	<express_ref linkend="shape_aspect_definition_schema:ir_express:shape_aspect_definition_schema.datum"/>
	for the <b>datum_difference</b>.
</ext_description>


<!-- related_shape_aspect -->
<ext_description linkend="Extended_geometric_tolerance_mim.datum_difference.related_shape_aspect">
	an attribute inherited from the 
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect_relationship"/>
	shall be redeclared as the
	<express_ref linkend="shape_aspect_definition_schema:ir_express:shape_aspect_definition_schema.datum"/>
	for the <b>datum_difference</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
WR: datum_difference.WR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Extended_geometric_tolerance_mim.datum_difference.wr:WR1">
<p>
	The <b>relating_shape_aspect</b>
	shall not be equal to the
	<b>related_shape_aspect</b>.
</p>
</ext_description>

