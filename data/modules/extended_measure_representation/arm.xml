<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/03/26 20:14:26 $"
  rcs.revision="$Revision: 1.10 $"
  >

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.24"
    source="arm.exp"/>

  <schema name="Extended_measure_representation_arm">
    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>

    <type name="limit_qualifier_list">
      <enumeration
        items="minimum maximum">
      </enumeration>


    </type>
    <type name="property_value_qualifier">
      <enumeration
        extensible="YES"
        items="nominal specified typical">
      </enumeration>


    </type>
    <entity
      name="Qualified_property_value_representation"
      supertypes="Property_value_representation">
      <explicit
        name="value_determination"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="qualifier"
        optional="YES">
        <typename
          name="property_value_qualifier"/>
      </explicit>
    </entity>

    <entity
      name="Value_limit"
      supertypes="Measure_item">
      <explicit
        name="limit_qualifier">
        <typename
          name="limit_qualifier_list"/>
      </explicit>
      <explicit
        name="limit">
        <typename
          name="Value_with_unit"/>
      </explicit>
    </entity>

    <entity
      name="Value_limit_with_global_unit"
      supertypes="Measure_item">
      <explicit
        name="limit">
        <typename
          name="Numerical_item_with_global_unit"/>
      </explicit>
      <explicit
        name="limit_qualifier">
        <typename
          name="limit_qualifier_list"/>
      </explicit>
    </entity>

    <entity
      name="Value_list"
      supertypes="Measure_item">
      <explicit
        name="values">
        <aggregate
          type="LIST"
          lower="1"
          upper="?"/>
        <typename
          name="Measure_item"/>
      </explicit>
    </entity>

    <entity
      name="Value_range"
      supertypes="Measure_item">
      <explicit
        name="lower_limit">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
      <explicit
        name="upper_limit">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
    </entity>

    <entity
      name="Value_range_with_global_unit"
      supertypes="Measure_item">
      <explicit
        name="lower_limit">
        <typename
          name="Numerical_item_with_global_unit"/>
      </explicit>
      <explicit
        name="upper_limit">
        <typename
          name="Numerical_item_with_global_unit"/>
      </explicit>
    </entity>

    <entity
      name="Value_with_tolerances"
      supertypes="Measure_item">
      <explicit
        name="item_value">
        <typename
          name="Numerical_item_with_unit"/>
      </explicit>
      <explicit
        name="tolerances">
        <typename
          name="Value_range"/>
      </explicit>
    </entity>

    <subtype.constraint name="alternate_measure_items"
      entity="Measure_item"
      super.expression="  ONEOF(Numerical_item_with_unit, Numerical_item_with_global_unit, Value_limit, Value_limit_with_global_unit, Value_list, Value_range, Value_range_with_global_unit, Value_with_tolerances)">
    </subtype.constraint>

  </schema>

</express>
