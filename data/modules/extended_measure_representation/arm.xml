<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.17"
    source="../data/modules/extended_measure_representation/arm.exp"/>

  <schema name="Extended_measure_representation_arm">
    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <type name="limitation_definition_select">
      <select
        selectitems="limits_and_fits plus_minus_bounds">
      </select>

    </type>
    <type name="limit_qualifier_list">
      <enumeration
        items="minimum maximum">
      </enumeration>


    </type>
    <type name="numerical_value">
      <select
        selectitems="Numerical_item_with_global_unit Numerical_item_with_unit">
      </select>

    </type>
    <type name="property_value_qualifier">
      <enumeration
        items="nominal specified typical">
      </enumeration>
    </type>
		
    <entity
      name="Limits_and_fits">
      <explicit
        name="deviation">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="grade">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="fitting_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Plus_minus_bounds">
      <explicit
        name="upper_bound">
        <typename
          name="measure_value"/>
      </explicit>
      <explicit
        name="lower_bound">
        <typename
          name="measure_value"/>
      </explicit>
      <explicit
        name="value_determination"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="significant_digits"
        optional="YES">
        <builtintype
          type="INTEGER"/>
      </explicit>
    </entity>

    <entity
      name="Qualified_property_value_representation"
      supertypes="Property_value_representation">
      <explicit
        name="value_determination"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="qualifier"
        optional="YES">
        <typename
          name="property_value_qualifier"/>
      </explicit>
    </entity>

    <entity
      name="Value_limit"
      supertypes="Measure_item">
      <explicit
        name="limit_qualifier">
        <typename
          name="limit_qualifier_list"/>
      </explicit>
      <explicit
        name="limit">
        <typename
          name="Value_with_unit"/>
      </explicit>
    </entity>

    <entity
      name="Value_limit_with_global_unit"
      supertypes="Measure_item">
      <explicit
        name="limit_qualifier">
        <typename
          name="limit_qualifier_list"/>
      </explicit>
      <explicit
        name="limit">
        <typename
          name="measure_value"/>
      </explicit>
    </entity>

    <entity
      name="Value_limitation">
      <explicit
        name="is_defined_by">
        <typename
          name="limitation_definition_select"/>
      </explicit>
      <explicit
        name="envelope_principle"
        optional="YES">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
      <explicit
        name="limited_value">
        <typename
          name="numerical_value"/>
      </explicit>
    </entity>

    <entity
      name="Value_list"
      supertypes="Measure_item">
      <explicit
        name="values">
        <aggregate
          type="LIST"
          lower="1"
          upper="?"/>
        <typename
          name="Measure_item"/>
      </explicit>
    </entity>

    <entity
      name="Value_range"
      supertypes="Measure_item">
      <explicit
        name="lower_limit">
        <typename
          name="Value_with_unit"/>
      </explicit>
      <explicit
        name="upper_limit">
        <typename
          name="Value_with_unit"/>
      </explicit>
    </entity>

    <entity
      name="Value_range_with_global_unit"
      supertypes="Measure_item">
      <explicit
        name="lower_limit">
        <typename
          name="measure_value"/>
      </explicit>
      <explicit
        name="upper_limit">
        <typename
          name="measure_value"/>
      </explicit>
    </entity>

		<subtype.constraint
		  name="alternate_measure_items"
			entity_ref="Measure_item"
			super.expression="ONEOF(Numerical_item_with_global_unit, Numerical_item_with_unit,Value_limit, Value_limit_with_global_unit,Value_range, Value_range_with_global_unit)">
		</subtype.constraint>
		
  </schema>

</express>
