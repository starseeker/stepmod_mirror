<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1668">
   <application name="JSDAI" owner="LKSoft" source="fabrication_joint_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Fabrication_joint_arm">
      <interface kind="use" schema="Land_arm"/>
      <interface kind="use" schema="Layered_interconnect_module_with_printed_component_design_arm"/>
      <interface kind="reference" schema="Support_resource_arm">
         <interfaced.item name="bag_to_set"/>
      </interface>
      <type name="fabricated_feature_select">
         <select selectitems="Component_termination_passage_join_terminal Conductive_interconnect_element_terminal Embedded_physical_component_terminal Land_join_terminal Printed_component_join_terminal Via_terminal"/>
      </type>
      <entity name="Connection_zone_based_fabrication_joint" supertypes="Fabrication_joint">
         <explicit name="zone_1">
            <typename name="Connection_zone_in_design_view"/>
         </explicit>
         <explicit name="zone_2">
            <typename name="Connection_zone_in_design_view"/>
         </explicit>
         <where expression="zone_1 :&lt;&gt;: zone_2" label="WR1"/>
      </entity>
      <entity name="Fabrication_joint" supertypes="Component_feature_joint">
         <explicit name="fabrication_feature_1">
            <typename name="fabricated_feature_select"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_1"/>
         </explicit>
         <explicit name="fabrication_feature_2">
            <typename name="fabricated_feature_select"/>
            <redeclaration entity-ref="Component_feature_joint" old_name="feature_2"/>
         </explicit>
         <explicit name="auxiliary_joint_material" optional="YES">
            <typename name="Stratum_feature_template_component"/>
         </explicit>
         <explicit name="associated_definition">
            <typename name="Layered_interconnect_module_design_view"/>
            <redeclaration entity-ref="Shape_element"/>
         </explicit>
         <where expression="fabrication_feature_1 &lt;&gt; fabrication_feature_2" label="WR1"/>
         <where expression="TYPEOF(fabrication_feature_1) &lt;&gt; TYPEOF(auxiliary_joint_material)" label="WR2"/>
         <where expression="TYPEOF(fabrication_feature_2) &lt;&gt; TYPEOF(auxiliary_joint_material)" label="WR3"/>
      </entity>
      <entity name="Passage_terminal_based_fabrication_joint_link">
         <explicit name="associated_terminal">
            <typename name="fabricated_feature_select"/>
         </explicit>
         <explicit name="precedent_point">
            <typename name="Fabrication_joint"/>
         </explicit>
         <explicit name="subsequent_point">
            <typename name="Fabrication_joint"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="associated_terminal"/>
            <unique.attribute attribute="precedent_point"/>
            <unique.attribute attribute="subsequent_point"/>
         </unique>
         <where expression="precedent_point &lt;&gt; subsequent_point" label="WR1"/>
         <where expression="precedent_point.fabrication_feature_2 = associated_terminal" label="WR2"/>
         <where expression="subsequent_point.fabrication_feature_1 = associated_terminal" label="WR3"/>
         <where expression="SIZEOF(TYPEOF(associated_terminal) *&#10;            ['LAYERED_INTERCONNECT_MODULE_DESIGN_ARM.' + &#10;             'COMPONENT_TERMINATION_PASSAGE_JOIN_TERMINAL',&#10;             'LAYERED_INTERCONNECT_MODULE_DESIGN_ARM.' + &#10;             'VIA_TERMINAL']) = 1" label="WR4"/>
         <where expression="acyclic_passage_terminal_based_fabrication_joint_link (SELF,&#10;        [subsequent_point],&#10;        'FABRICATION_JOINT_ARM.PASSAGE_TERMINAL_BASED_FABRICATION_JOINT_LINK')" label="WR5"/>
      </entity>
      <function name="acyclic_passage_terminal_based_fabrication_joint_link">
         <parameter name="relation">
            <typename name="Passage_terminal_based_fabrication_joint_link"/>
         </parameter>
         <parameter name="relatives">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="Fabrication_joint"/>
         </parameter>
         <parameter name="specific_relation">
            <builtintype type="STRING"/>
         </parameter>
         <builtintype type="BOOLEAN"/>
         <algorithm>LOCAL
       x : SET OF Passage_terminal_based_fabrication_joint_link;
     END_LOCAL;

     IF relation.precedent_point IN relatives THEN
       RETURN (FALSE);
     END_IF;
     x := QUERY(pd &lt;* bag_to_set(USEDIN(relation.precedent_point,
       'FABRICATION_JOINT_ARM.' + 'PASSAGE_TERMINAL_BASED_FABRICATION_JOINT_LINK.' +
       'SUBSEQUENT_POINT')) | specific_relation IN TYPEOF(pd));
     REPEAT i := 1 TO HIINDEX(x);
       IF NOT acyclic_passage_terminal_based_fabrication_joint_link(x[i],
         relatives + relation.precedent_point, specific_relation) THEN
         RETURN (FALSE);
       END_IF;
     END_REPEAT;
   RETURN (TRUE);</algorithm>
      </function>
   </schema>
</express>
