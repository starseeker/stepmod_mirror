<!-- +++++++++++ Connection_zone +++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone">
<p>
	A <b>Connection_zone</b> is a type of 
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/>. 
	A <b>Connection_zone</b> is also either a type of 
	<express_ref linkend="Shape_feature:arm:Shape_feature_arm.Instanced_feature"/>
	or is a type of
	<express_ref linkend="Shape_feature:arm:Shape_feature_arm.Placed_feature"/>.	 	
	A <b>Connection_zone</b> is an area on the surface of a design object that 
	may be used to establish electrical or physical connectivity with another design object.  
	A <b>Connection_zone</b> shape is defined in the shape definition of the feature that references the <b>Connection_zone</b>.  
</p>
	<note number="1">
		This part of ISO 10303 does not provide for unique identification of <b>Connection_zone</b> so references
		to a <b>Connection_zone</b> should be explicit or should explicitly reference the geometric model transformation
		that places the geometric model of the <b>Connection_zone</b> in a geometric model of a feature or view.
	</note>
	<note number="2">
	    The majority of applications will be the case where a <b>Connection_zone</b> is also
	    an <express_ref linkend="Shape_feature:arm:Shape_feature_arm.Instanced_feature"/>.
	</note>
	<example>
	    A <b>Connection_zone</b> defined in a design automation component data library would be defined in the geometric model of
	    the terminal and so would be also an instance of 
	         <express_ref linkend="Shape_feature:arm:Shape_feature_arm.Instanced_feature"/>.
	 </example>        
</ext_description>

<!-- surface_conditions -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.surface_conditions">
	specifies a set of 
	<express_ref linkend="Surface_conditions:arm:Surface_conditions_arm.Surface_condition">Surface_conditions</express_ref> 
	that may be applied to the <b>Connection_zone</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:WR1">
	Each <b>Connection_zone</b> shall be referenced by exactly one 
	<express_ref linkend="shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/> 
	or by exactly one 
	<express_ref linkend="Feature_and_connection_zone:arm:Feature_and_connection_zone_arm.Feature_definition_with_connection_area"/>.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:WR2">
	The
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.description"/>
	shall not be populated.
</ext_description>

<!-- WR3 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:WR3">
	The
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.element_name"/>
	shall not be populated.
</ext_description>

<!-- IP1 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:IP1">
	All points in a <b>Connection_zone</b> shall be topologically connected.
</ext_description>

<!-- IP2 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:IP2">
	A particular instance of <b>Connection_zone</b> shall be referenced by exactly one shape instantiation.
</ext_description>

<!-- IP3 -->
<ext_description linkend="Feature_and_connection_zone_arm.Connection_zone.wr:IP3">
	A particular instance of <b>Connection_zone</b> shall be referenced by exactly one feature.
</ext_description>

<!-- +++++++++++ Feature_definition_with_connection_area +++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_arm.Feature_definition_with_connection_area">
	A <b>Feature_definition_with_connection_area</b> is a type of
	<express_ref linkend="Shape_feature:arm:Shape_feature_arm.Shape_feature_definition"/>
	that specifies one or more areas on the feature that may be attachment areas when used in a realization.
</ext_description>

<!-- connection_area -->
<ext_description linkend="Feature_and_connection_zone_arm.Feature_definition_with_connection_area.connection_area">
	specifies the role of one or more
	<express_ref linkend="Feature_and_connection_zone:arm:Feature_and_connection_zone_arm.Connection_zone">Connection_zones</express_ref>
	for the <b>Feature_definition_with_connection_area</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- +++++++++++ Non_definitional_shape_element +++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_arm.Non_definitional_shape_element">
	A <b>Non_definitional_shape_element</b> is a type of
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/>.
</ext_description>

<!-- +++++++++++ Definitional_shape_element +++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_arm.Definitional_shape_element">
	A <b>Definitional_shape_element</b> is a type of 
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/>
	that includes provision for unique identification of the 
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/>
	within a product context.
	The	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.element_name"/>
    inherited from 
		<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element"/>
    is used as an identifier.
</ext_description>

<!-- connection_area -->
<ext_description linkend="Feature_and_connection_zone_arm.Definitional_shape_element.connection_area">
	specifies the role of one or more 
	<express_ref linkend="Feature_and_connection_zone:arm:Feature_and_connection_zone_arm.Connection_zone">Connection_zones</express_ref> 
	for the <b>Definitional_shape_element</b>. 
	The value of this attribute need not be specified.
</ext_description>

<!-- element_name -->
<ext_description linkend="Feature_and_connection_zone_arm.Definitional_shape_element.element_name">
	the unique name of the <b>Definitional_shape_element</b> in the context of 
	the <express_ref linkend="shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.associated_definition"/>.
</ext_description>

<!-- surface_conditions -->
<ext_description linkend="Feature_and_connection_zone_arm.Definitional_shape_element.surface_conditions">
	specifies a set of 
	<express_ref linkend="Surface_conditions:arm:Surface_conditions_arm.Surface_condition">Surface_conditions</express_ref>
	that may be applied to the <b>Definitional_shape_element</b>.
</ext_description>

<!-- UR1 -->
<ext_description linkend="Feature_and_connection_zone_arm.Definitional_shape_element.ur:UR1">
	The combination of 
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.element_name"/> 
	and 
	<express_ref linkend="shape_property_assignment:arm:Shape_property_assignment_arm.Shape_element.associated_definition"/> 
	shall be unique within a population of <b>Definitional_shape_element</b>. 
</ext_description>


</ext_descriptions>

