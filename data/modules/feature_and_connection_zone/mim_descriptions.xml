<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: connection_zone_interface_plane_relationship
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_mim.connection_zone_interface_plane_relationship">
<p>
	A <b>connection_zone_interface_plane_relationship</b> is a type of 
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect"/> 
	and of 
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect_relationship"/> 
	that implements the ARM concept of 
	<express_ref linkend="Bare_die:arm:Bare_die_arm.Connection_zone_bare_die_interface_plane_relationship"/>.
</p>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
UR: connection_zone_interface_plane_relationship.UR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_mim.connection_zone_interface_plane_relationship.ur:UR1">
	The 
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect.name"/> 
	shall be unique within a population of <b>connection_zone_interface_plane_relationship</b>s.
</ext_description>

<!-- +++++++++++ feature_definition_with_connection_area +++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_mim.feature_definition_with_connection_area">
	A <b>feature_definition_with_connection_area</b> is a type of
	<express_ref linkend="Shape_feature:mim:Shape_feature_mim.shape_feature_definition"/>
	that implements the ARM concept of
	<express_ref linkend="Feature_and_connection_zone:arm:Feature_and_connection_zone_arm.Feature_definition_with_connection_area"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
