++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Feature_and_connection_zone_mim.location_shape_representation">
	A <b>location_shape_representation</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Feature_and_connection_zone_mim.location_shape_representation.wr:WR1">
The size of <express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/>
shall be one.
</ext_description>

<!-- WR2 -->
<ext_description linkend="Feature_and_connection_zone_mim.location_shape_representation.wr:WR2">
There shall be one <express_ref linkend="geometry_schema:ir_express:geometry_schema.point"/>
in <express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/>.
</ext_description>

