<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Fill_area_style_arm
   <express_ref linkend="Fill_area_style:arm:Fill_area_style_arm"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Fill_area_style_arm">
</ext_description>

<!-- +++++++++++ Externally_defined_hatch_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.Externally_defined_hatch_style">

	An <b>Externally_defined_hatch_style</b> is a type of 
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Hatch_style"/>
	that is defined in an external computer interpretable system.
</ext_description>

<!-- +++++++++++ Externally_defined_tile_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.Externally_defined_tile_style">
	An <b>Externally_defined_tile_style</b> 
	is a type of <express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Tile_style"/> 
	that is defined in an external computer interpretable system.
</ext_description>

<!-- +++++++++++ Hatch_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.Hatch_style">
	A <b>Hatch_style</b> is a type of 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
	A <b>Hatch_style</b> is either an
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Externally_defined_hatch_style"/>
	or a
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.User_defined_hatch_style"/>.
</ext_description>

<!-- +++++++++++ Solid_fill_area_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.Solid_fill_area_style">
	A <b>Solid_fill_area_style</b>  is a style for filling visible curve segments,
	<express_ref linkend="Draughting_element:arm:Draughting_element_arm.Annotation_fill_area"/>, 
	or surfaces with tiles or hatching.
</ext_description>

<!-- fill_colour -->
<ext_description linkend="Fill_area_style_arm.Solid_fill_area_style.fill_colour">
	specifies a role of the
	<express_ref linkend="Colour:arm:Colour_arm.Colour"/>
	for the <b>Solid_fill_area_style</b>.
</ext_description>

<!-- +++++++++++ Tile_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.Tile_style">
	A <b>Tile_style</b> is a type of 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
	A <b>Tile_style</b> is either an
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Externally_defined_tile_style"/>
	or a
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.User_defined_tile_style"/>.
</ext_description>

<!-- +++++++++++ User_defined_hatch_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style">
	A <b>User_defined_hatch_style</b> is a type of 
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Hatch_style"/>.
</ext_description>

<!-- hatch_line_appearance -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.hatch_line_appearance">
specifies a role of the <express_ref linkend="Curve_appearance:arm:Curve_appearance_arm.Curve_appearance"/> for the <b>User_defined_hatch_style</b>.
</ext_description>

<!-- start_of_next_hatch_line -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.start_of_next_hatch_line">
specifies a role of the <express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Vector"/> for the <b>User_defined_hatch_style</b>.
</ext_description>

<!-- point_of_reference_hatch_line -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.point_of_reference_hatch_line">
specifies a role of the <express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Cartesian_point"/> for the <b>User_defined_hatch_style</b>.
</ext_description>

<!-- pattern_start -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.pattern_start">
specifies a role of the <express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Cartesian_point"/> for the <b>User_defined_hatch_style</b>.
</ext_description>

<!-- hatch_line_angle -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.hatch_line_angle">
specifies a role of the <express_ref linkend="Value_with_unit_extension:arm:Value_with_unit_extension_arm.Angle_data_element"/> for the <b>User_defined_hatch_style</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Fill_area_style_arm.User_defined_hatch_style.wr:WR1">
A type of <express_ref linkend="Curve_appearance:arm:Curve_appearance_arm.Curve_appearance"/> of a <b>hatch_line_appearance</b> shall be <express_ref linkend="Styled_curve:arm:Styled_curve_arm.Solid_curve_font"/>. 
</ext_description> 

<!-- +++++++++++ User_defined_tile_style +++++++++++ -->
<ext_description linkend="Fill_area_style_arm.User_defined_tile_style">
	A <b>User_defined_tile_style</b> is a type of 
	<express_ref linkend="Fill_area_style:arm:Fill_area_style_arm.Tile_style"/>.
</ext_description>

<!-- first_direction_repeat_factor -->
<ext_description linkend="Fill_area_style_arm.User_defined_tile_style.first_direction_repeat_factor">
	specifies a role of the 
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Vector"/> 
	for the <b>User_defined_tile_style</b>.
</ext_description>

<!-- second_direction_repeat_factor -->
<ext_description linkend="Fill_area_style_arm.User_defined_tile_style.second_direction_repeat_factor">
	specifies a role of the 
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Vector"/> 
	for the <b>User_defined_tile_style</b>.
</ext_description>

<!-- tiling_scale -->
<ext_description linkend="Fill_area_style_arm.User_defined_tile_style.tiling_scale">
	specifies an integer value of a tiling scale.
</ext_description>

</ext_descriptions>

