<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.2"
    source="../data/modules/foundation_representation/arm.exp"/>

  <schema name="Foundation_representation_arm">
    <entity
      name="Representation">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="Representation_item"/>
      </explicit>
      <explicit
        name="foundation">
        <typename
          name="Representation_context"/>
      </explicit>
    </entity>

    <entity
      name="Representation_context">
      <explicit
        name="identifier">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="kind">
        <builtintype
          type="STRING"/>
      </explicit>
      <inverse
        name="representations_in_context"
        entity="Representation"
        attribute="context_of_items">
        <inverse.aggregate
          type="SET"
          lower="1"
          upper="?"/>
      </inverse>
    </entity>

    <entity
      name="Representation_item">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
