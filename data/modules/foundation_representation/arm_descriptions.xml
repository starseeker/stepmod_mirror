<ext_descriptions module_directory="foundation_representation" schema_file="arm.xml" rcs.date="$Date: 2002/05/10 16:10:56 $" rcs.revision="$Revision: 1.2 $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Foundation_representation_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation">
        A <b>Representation</b> is an information data space which is
      founded in a 
      <express_ref linkend="foundation_representation:arm:foundation_representation_arm.representation__context">Representation_context</express_ref>
      and contains one or more 
      <express_ref linkend="foundation_representation:arm:foundation_representation_arm.representation_item">Representation_item</express_ref>s
      as elements.  
      </ext_description>

<ext_description linkend="Foundation_representation_arm.Representation">
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: context_of_items 
   <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation.context_of_items"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Foundation_representation_arm.Representation.context_of_items">specifies the context for the domain of the
        <b>Representation</b>.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: descr 
   <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation.descr"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Foundation_representation_arm.Representation.descr">
 describes the <b>Representation.</b></ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: identifier 
   <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation.identifier"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
    <ext_description linkend="Foundation_representation_arm.Representation.identifier">identifies the <b>Representation</b>.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: items 
   <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation.items"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation.name">the word or group of words by which the
        <b>Representation</b> is known.  
        <example>
          The <b>name</b> of a <b>Representation</b> which contains all the
        elements of a CAD model might be the same as that of the CAD
        model. 
      </example>
    
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation  Attribute: items 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation.items">
          the set of <b>Representation_item</b> instances
          which make up the <b>Representation</b>.  
        </ext_description>


  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_context 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_context">
        A <b>Representation_context</b> defines the foundation for the
        definitional domain of the 
      <express_ref linkend="foundation_representation:arm:foundation_representation_arm.representation">Representation.</express_ref>
      
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_context  Attribute: identifier 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_context.identifier">
        the label that distinguishes the <b>Representation_context</b>. 
      </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_context  Attribute: kind 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_context.kind">
          a description of the foundation domain's data space. 
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_context  Attribute: representations_in_context 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_context.representations_in_context">
        there shall be at least one <b>Representation</b> referencing the
        <b>Representation_context</b>.  
        <example>
          The <b>kind</b> of a <b>Representation_context</b> might be 2D or
          3D if it were geometrical.
        </example>
        
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_item">
        A <b>Representation_item</b> is a single element of a
      <express_ref linkend="foundation_representation:arm:foundation_representation_arm.representation">Representation.</express_ref>
      
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_item  Attribute: name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Foundation_representation_arm.Representation_item.name">
        the label that distinguishes the <b>Representation_item</b>. 
      <example>
        The <b>name</b> of a <b>Representation_item</b> might be its CAD
      element tag if it were a bit of geometry. 
    </example>
  
   </ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Foundation_representation_arm  Entity: Representation_item  Attribute: items_in_representation 
   <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item.items_in_representation"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
    <ext_description linkend="Foundation_representation_arm.Representation_item.items_in_representation">there shall be at least one <b>Representation</b> referencing the <b>Representation_item.</b> 
</ext_description>
</ext_descriptions>