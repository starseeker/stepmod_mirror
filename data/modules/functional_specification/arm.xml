<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date: 2015/08/28 17:39:16 $" rcs.revision="$Revision: 1.47 $" reference="ISO/TS 10303-1679">
   <application name="JSDAI" owner="LKSoft" source="functional_specification_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Functional_specification_arm">
      <interface kind="use" schema="Network_functional_design_view_arm"/>
      <interface kind="use" schema="Signal_arm"/>
      <interface kind="reference" schema="Specification_document_arm">
         <interfaced.item name="get_document_definition"/>
      </interface>
      <type name="fs_documented_element_select">
         <select basedon="documented_element_select" selectitems="Signal_specification"/>
      </type>
      <type name="fs_external_identification_item">
         <select basedon="external_identification_item" selectitems="Functional_specification"/>
      </type>
      <type name="fs_node_or_terminal">
         <select selectitems="Functional_unit_network_node_definition Functional_unit_terminal"/>
      </type>
      <entity name="Functional_specification">
         <explicit name="associated_definition">
            <typename name="Functional_specification_definition"/>
         </explicit>
         <explicit name="reference_signal">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="Signal_specification"/>
         </explicit>
         <explicit name="characterizing_functional_unit">
            <typename name="Functional_unit"/>
         </explicit>
         <explicit name="characterizing_signal">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="Signal_specification"/>
         </explicit>
         <inverse attribute="item" entity="External_source_identification" name="characteristic_category"/>
         <where expression="characterizing_functional_unit.composed_network = associated_definition" label="WR1"/>
      </entity>
      <entity name="Functional_specification_definition" supertypes="Functional_unit_network_definition">
         <inverse attribute="associated_definition" entity="Functional_specification" name="composing_specification">
            <inverse.aggregate lower="1" type="SET" upper="?"/>
         </inverse>
      </entity>
      <entity name="Signal_specification">
         <explicit name="signal_access_mechanism">
            <typename name="fs_node_or_terminal"/>
         </explicit>
         <explicit name="reference_access_mechanism" optional="YES">
            <typename name="fs_node_or_terminal"/>
         </explicit>
         <explicit name="minimum_characteristic" optional="YES">
            <typename name="Signal_property"/>
         </explicit>
         <explicit name="maximum_characteristic" optional="YES">
            <typename name="Signal_property"/>
         </explicit>
         <explicit name="characterization_network">
            <typename name="Functional_unit_network_definition"/>
         </explicit>
         <explicit name="nominal_characteristic" optional="YES">
            <typename name="Signal_property"/>
         </explicit>
         <derived expression="get_document_definition(SELF, 'measurement condition', &#10;  &#9;&#9;&#9;'SPECIFICATION_DOCUMENT_ARM.TEST_SPECIFICATION')" name="measurement_condition">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="Document_definition"/>
         </derived>
         <where expression="EXISTS (minimum_characteristic) OR&#10;          EXISTS (maximum_characteristic) OR&#10;          EXISTS (nominal_characteristic)" label="WR1"/>
      </entity>
   </schema>
</express>
