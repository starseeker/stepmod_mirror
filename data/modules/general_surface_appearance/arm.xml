<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2002/09/18 19:10:02 $"
  rcs.revision="$Revision: 1.1 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.22"
    source="../data/modules/general_surface_appearance/arm.exp"/>

  <schema name="General_surface_appearance_arm">
    <interface
      kind="use"
      schema="Colour_arm">
    </interface>

    <interface
      kind="use"
      schema="curve_appearance_arm">
    </interface>

    <entity
      name="Boundary_curve_appearance"
      supertypes="Surface_related_curve_appearance">
    </entity>

    <entity
      name="Control_grid_appearance"
      supertypes="Surface_related_curve_appearance">
    </entity>

    <entity
      name="Parameter_line_appearance"
      supertypes="Surface_related_curve_appearance">
      <explicit
        name="number_of_u_curves">
        <builtintype
          type="INTEGER"/>
      </explicit>
      <explicit
        name="number_of_v_curves">
        <builtintype
          type="INTEGER"/>
      </explicit>
    </entity>

    <entity
      name="Segmentation_curve_appearance"
      supertypes="Surface_related_curve_appearance">
    </entity>

    <entity
      name="Silhouette_curve_appearance"
      supertypes="Surface_related_curve_appearance">
    </entity>

    <entity
      name="Surface_appearance_wireframe">
      <explicit
        name="side">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="styles">
        <aggregate
          type="SET"
          lower="1"
          upper="5"/>
        <typename
          name="surface_related_curve_appearance"/>
      </explicit>
    </entity>

    <entity
      name="Surface_colour">
      <explicit
        name="side">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="assigned_colour">
        <typename
          name="colour"/>
      </explicit>
    </entity>

    <entity
      name="Surface_related_curve_appearance"
      abstract.supertype="YES"
      super.expression="(ONEOF(Boundary_curve_appearance, Silhouette_curve_appearance, Segmentation_curve_appearance, Control_grid_appearance, Parameter_line_appearance))">
      <explicit
        name="style">
        <typename
          name="Curve_appearance"/>
      </explicit>
    </entity>

  </schema>

</express>
