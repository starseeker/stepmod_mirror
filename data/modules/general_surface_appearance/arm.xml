<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007-05-24 03:50:26 -0700 (Kt, 24 Geg 2007) $" rcs.revision="$Revision: 953 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="general_surface_appearance_arm schema_instance"/>
   <schema name="General_surface_appearance_arm">
      <interface kind="use" schema="Curve_appearance_arm"/>
      <type name="surface_side">
         <enumeration items="positive negative both"/>
      </type>
      <entity name="Boundary_curve_appearance" supertypes="Surface_related_curve_appearance"/>
      <entity name="Control_grid_appearance" supertypes="Surface_related_curve_appearance"/>
      <entity name="Parameter_line_appearance" supertypes="Surface_related_curve_appearance">
         <explicit name="number_of_u_curves">
            <builtintype type="INTEGER"/>
         </explicit>
         <explicit name="number_of_v_curves">
            <builtintype type="INTEGER"/>
         </explicit>
      </entity>
      <entity name="Segmentation_curve_appearance" supertypes="Surface_related_curve_appearance"/>
      <entity name="Silhouette_curve_appearance" supertypes="Surface_related_curve_appearance"/>
      <entity name="Surface_appearance">
         <explicit name="side">
            <typename name="surface_side"/>
         </explicit>
         <explicit name="styles">
            <aggregate type="SET" lower="1" upper="7"/>
            <typename name="Surface_appearance_element"/>
         </explicit>
      </entity>
      <entity name="Surface_appearance_element" abstract.supertype="YES" super.expression="ONEOF (Surface_related_curve_appearance, Surface_colour)"/>
      <entity name="Surface_colour" supertypes="Surface_appearance_element">
         <explicit name="assigned_colour">
            <typename name="Colour"/>
         </explicit>
      </entity>
      <entity name="Surface_related_curve_appearance" abstract.supertype="YES" supertypes="Surface_appearance_element" super.expression="ONEOF (Boundary_curve_appearance, Control_grid_appearance, Parameter_line_appearance, Segmentation_curve_appearance, Silhouette_curve_appearance)">
         <explicit name="style">
            <typename name="Curve_appearance"/>
         </explicit>
      </entity>
   </schema>
</express>
