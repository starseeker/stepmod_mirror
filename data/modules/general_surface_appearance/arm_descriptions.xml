  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm"/>
   
    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Boundary_curve_appearance
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Boundary_curve_appearance">
				A <b>Boundary_curve_appearance</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is the curve style that is applied to the boundary curves of a surface.
			</ext_description>


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Control_grid_appearance 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Control_grid_appearance">
	A <b>Control_grid_appearance</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is the curve style that is applied to the mesh of control points which are used for the definition of surfaces.  
	</ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Parameter_line_appearance
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Parameter_line_appearance">
A <b>Parameter_line_appearance</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is the curve style that is applied to the iso-parameter lines on a surface.


				</ext_description>
				
    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Parameter_line_appearance Attribute: number_of_u_curves
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Parameter_line_appearance.number_of_u_curves">
	 the number of iso-parameter lines to be presented in the u direction.
			</ext_description>


    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Parameter_line_appearance Attribute: number_of_v_curves
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Parameter_line_appearance.number_of_v_curves">
	 the number of iso-parameter lines to be presented in the v direction.
			</ext_description>


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Segmentation_curve_appearance
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Segmentation_curve_appearance">
	
A <b>Segmentation_curve_appearance</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is the curve style that is applied to the curves on the segment borders of a surface

   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Silhouette_curve_appearance
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Silhouette_curve_appearance">
	A <b>Silhouette_curve_appearance</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is the curve style that is applied to the silhouette curves of a surface.
   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_appearance_wireframe
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  -->
   <ext_description linkend="General_surface_appearance_arm.Surface_appearance_wireframe">
 A <b>Surface_appearance_wireframe</b> is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/>.  It is visual attributes for the wireframe-like presentation of a surface.
	</ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_appearance_wireframe Attribute: side
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_appearance_wireframe.side">
  the side of a surface to which the styles are applied.
   </ext_description>
   
   
    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_appearance_wireframe Attribute: styles
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_appearance_wireframe.styles">
  the curve styles used for the wireframe-like surface presentation.
   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_colour
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_colour">
	A <b>Surface_colour</b> is a type of is a type of <express_ref linkend="general_surface_appearance:arm:General_surface_appearance_arm.Surface_related_curve_appearance"/> that is the colour for  presentation of a surface that are not shaded.
			</ext_description>


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_colour  Attribute: side
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_colour.side">
	the side of a surface to which colour is applied.
			</ext_description>



  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_colour Attribute: assigned_colour
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_colour.assigned_colour">
the colour used for non-shading surface presentation.
			</ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_related_curve_appearance
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_related_curve_appearance">
A <b>Surface_related_curve_appearance</b> is a generalization of the styles assigned to curves for wireframe-like surface presentation.  
				</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: General_surface_appearance_arm  Entity: Surface_related_curve_appearance Attribute: style
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="General_surface_appearance_arm.Surface_related_curve_appearance.style">
the curve appearance associated with each curve type in the context of wireframe-like surface presentation.
				</ext_description>

</ext_descriptions>