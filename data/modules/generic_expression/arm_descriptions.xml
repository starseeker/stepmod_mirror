  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Generic_expression_arm  Function: used_variables Attribute: arg
   <express_ref linkend="generic_expression:arm:Generic_expression_arm.used_variables.arg"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Generic_expression_arm.used_variables.arg">It is a <b>generic_expression</b>.</ext_description>
