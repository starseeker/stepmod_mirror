<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="generic_product_occurrence_arm schema_instance"/>
   <schema name="Generic_product_occurrence_arm">
      <interface kind="use" schema="Assembly_structure_arm"/>
      <interface kind="use" schema="Product_view_definition_relationship_arm"/>
      <interface kind="use" schema="Extended_measure_representation_arm"/>
      <interface kind="use" schema="Specified_product_arm"/>
      <type name="extended_value_with_unit">
         <select extensible="YES" selectitems="Value_with_unit Value_limit Value_range"/>
      </type>
      <entity name="Definition_based_product_occurrence" abstract.supertype="YES" supertypes="Product_occurrence">
         <explicit name="derived_from">
            <typename name="Product_view_definition"/>
         </explicit>
         <where label="WR1" expression="SELF\Product_view_definition.defined_version = derived_from.defined_version"/>
      </entity>
      <entity name="Product_occurrence" abstract.supertype="YES" supertypes="Product_view_definition" super.expression="ONEOF (Definition_based_product_occurrence, Specification_based_product_occurrence) AND ONEOF (Product_occurrence_with_quantity, Single_instance)">
         <inverse name="occurrence_contexts" entity="Product_occurrence_definition_relationship" attribute="related_view">
            <inverse.aggregate type="SET" lower="0" upper="?"/>
         </inverse>
         <inverse name="view_definition_contexts" entity="View_definition_relationship" attribute="related_view">
            <inverse.aggregate type="SET" lower="0" upper="?"/>
         </inverse>
         <where label="WR1" expression="SIZEOF(occurrence_contexts) + SIZEOF(view_definition_contexts) &gt;= 1"/>
         <where label="WR2" expression="NOT EXISTS(SELF\Product_view_definition.additional_characterization)"/>
         <where label="WR3" expression="SIZEOF(QUERY( oc &lt;* occurrence_contexts |&#10;            NOT( NOT('ASSEMBLY_STRUCTURE_ARM.ASSEMBLY_COMPONENT_RELATIONSHIP' IN TYPEOF(oc)) OR&#10;                 NOT EXISTS(oc\Assembly_component_relationship.quantity))&#10;               )) = 0"/>
      </entity>
      <entity name="Product_occurrence_with_quantity" abstract.supertype="YES" supertypes="Product_occurrence" super.expression="ONEOF (Quantified_instance, Selected_instance)">
         <explicit name="occurrence_quantity" optional="YES">
            <typename name="extended_value_with_unit"/>
         </explicit>
      </entity>
      <entity name="Quantified_instance" supertypes="Product_occurrence_with_quantity">
         <explicit name="occurrence_quantity">
            <typename name="Value_with_unit"/>
            <redeclaration entity-ref="Product_occurrence_with_quantity"/>
         </explicit>
      </entity>
      <entity name="Selected_instance" supertypes="Product_occurrence_with_quantity">
         <explicit name="quantity_criterion" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Single_instance" supertypes="Product_occurrence"/>
      <entity name="Specification_based_product_occurrence" abstract.supertype="YES" supertypes="Product_occurrence">
         <explicit name="defined_version">
            <typename name="Specification_based_product_version"/>
            <redeclaration entity-ref="Product_view_definition"/>
         </explicit>
      </entity>
   </schema>
</express>
