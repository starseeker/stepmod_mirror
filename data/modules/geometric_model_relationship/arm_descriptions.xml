<!-- +++++++++++ Definitional_representation_relationship +++++++++++ -->
<ext_description linkend="Geometric_model_relationship_arm.Definitional_representation_relationship">
	A <b>Definitional_representation_relationship</b> is a type of 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>.
	The representation indicated by 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_1"/> 
	is part of the definition indicated by 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_2"/>.
</ext_description>
<!-- WR1 -->
<ext_description linkend="Geometric_model_relationship_arm.Definitional_representation_relationship.wr:WR1">
	The <b>Definitional_representation_relationship</b> shall not participate in cycles.
</ext_description>

<!-- +++++++++++ Geometric_model_relationship +++++++++++ -->
<ext_description linkend="Geometric_model_relationship_arm.Geometric_model_relationship">
	A <b>Geometric_model_relationship</b> is a type of 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>.
</ext_description>

<!-- rep_1 -->
<ext_description linkend="Geometric_model_relationship_arm.Geometric_model_relationship.rep_1">
<p>
	an attribute inherited from the
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>
	shall be redeclared as the
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/> 
	for the <b>Geometric_model_relationship</b>.
</p>
</ext_description>

<!-- rep_2 -->
<ext_description linkend="Geometric_model_relationship_arm.Geometric_model_relationship.rep_2">
<p>
	an attribute inherited from the
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>
	shall be redeclared as the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/> 
	for the <b>Geometric_model_relationship</b>.
</p>
</ext_description>

<!-- WR1 -->
<ext_description linkend="Geometric_model_relationship_arm.Geometric_model_relationship.wr:WR1">
<p>
	The <b>rep_1</b> shall not be <b>rep_2</b>.
</p>
</ext_description>

<!-- +++++++++++ acyclic_representation_relationship +++++++++++ -->
<ext_description linkend="Geometric_model_relationship_arm.acyclic_representation_relationship">
	The <b>acyclic_representation_relationship</b> function checks if specified
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>
	is not participating in cycle with regards to specified
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation">Representations</express_ref>.
</ext_description>

<ext_description linkend="Geometric_model_relationship_arm.acyclic_representation_relationship.relation">
	the specified 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship"/>.
</ext_description>

<ext_description linkend="Geometric_model_relationship_arm.acyclic_representation_relationship.relatives">
	the specified 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation">Representations</express_ref>.
</ext_description>

<ext_description linkend="Geometric_model_relationship_arm.acyclic_representation_relationship.specific_relation">
	the specified type of 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship">Representation_relationships</express_ref>
	to be considered.
</ext_description>

