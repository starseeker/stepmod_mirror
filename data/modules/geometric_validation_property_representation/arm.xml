<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.18"
    source="../data/modules/geometric_validation_property_representation/arm.exp"/>

  <schema name="Geometric_validation_property_representation_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Measure_representation_arm">
    </interface>

    <type name="point_or_measure">
      <select
        selectitems="Cartesian_point Measure_item">
      </select>

    </type>
    <entity
      name="Geometric_validation_property">
      <explicit
        name="property_representation">
        <typename
          name="Representation"/>
      </explicit>
      <explicit
        name="property_value">
        <typename
          name="point_or_measure"/>
      </explicit>
      <explicit
        name="validated_model">
        <typename
          name="Geometric_model"/>
      </explicit>
      <where
        label="WR1"
        expression="property_representation\Representation.context_of_items : Numerical_representation_context">
      </where>
      <where
        label="WR2"
        expression="property_representation.name IN ['centroid', 'volume', 'surface area']">
      </where>
      <where
        label="WR3"
        expression="property_value in property_representation\Representation.items">
      </where>
    </entity>

  </schema>

</express>
