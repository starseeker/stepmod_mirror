<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">

<module 
	name="identification_assignment" 
	part="1021" 
	version="1" 
	wg.number.arm="1111"
	wg.number.mim="1112"
	wg.number="1110" 
	wg.number.supersedes="735" 
	checklist.internal_review="1056"
	checklist.project_leader="1057"
	checklist.convener="1058"
	status="TS" 	
	language="E" 
	publication.year="2003" 
	published="y" 
	rcs.date="$Date: 2002/07/31 22:25:09 $" 	
	rcs.revision="$Revision: 1.15 $">
		<keywords>
   		 	module, identification, identifier assignment
 		</keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>
This part of ISO 10303 specifies an application module for the representation of assignments of an identifier to product or activity data.</purpose>
	<inscope>
		<li>assignment of an identification to a product or activity data.</li>
	</inscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Identification_Assignment">
			<description>The Identification_Assignment UoF specifies the data structure needed to represent 
			assignment of identification to product or activity data.</description>
			<uof.ae entity="Identification_assignment"/>
		</uof>

		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	
	<mapping_table>
		<ae entity="Identification_assignment">
			<aimelt>applied_identification_assignment</aimelt>
			<source>ISO 10303-1021</source>
				<refpath>
				     applied_identification_assignment &lt;= 
						 identification_assignment
				</refpath>
			
			<aa attribute="identifier">
				<aimelt>identification_assignment.assigned_id</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="role">
				<aimelt>identification_role.name</aimelt>
			<source>ISO 10303-41</source>
				<refpath>
						identification_assignment.role -&gt;
						identification_role
						identification_role.name
				</refpath>
			</aa>
			<aa attribute="description">
				<aimelt>identification_role.description</aimelt>
				<source>ISO 10303-41</source>
				<refpath>
				    identification_assignment.role &gt;
						identification_role
						identification_role.description
				</refpath>				
			</aa>
			<aa attribute="items" assertion_to="identification_item">
				<aimelt>PATH</aimelt>
				<refpath>
						applied_identification_assignment.items[i] -&gt;
						identification_item
				</refpath>
			</aa>
		</ae>
	</mapping_table>
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
			<imgfile file="mimexpg2.xml"/>
		</express-g>
	<shortnames>
			<shortname name="APIDAS" entity="applied_identification_assignment"/>
	</shortnames>
	</mim>

	<bibliography>
<bibitem>
<stdnumber>ISO/TS 10303-1013</stdnumber>
     <stdtitle>Industrial automation systems and integration - Product data representation and exchange- Part 1013: Application module: Person organization assignment
		 </stdtitle>
</bibitem>
</bibliography>
</module>
