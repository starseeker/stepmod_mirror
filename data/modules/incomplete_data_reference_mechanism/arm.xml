   <schema name="Incomplete_data_reference_mechanism_arm">
      <interface kind="use" schema="Classification_assignment_arm"/>
      <interface kind="use" schema="Document_definition_arm"/>
      <interface kind="use" schema="Part_view_definition_arm"/>
      <type name="idrm_marked_item">
         <select extensible="YES" genericentity="YES" basedon="classification_item" selectitems="Digital_document_definition Digital_file Part_view_definition"/>
      </type>
      <entity name="Incomplete_reference_marking" supertypes="Classification_assignment">
         <where label="WR1" expression="SIZEOF(QUERY(item &lt;* SELF\Classification_assignment.items |  NOT ('INCOMPLETE_DATA_REFERENCE_MECHANISM_ARM.IDRM_MARKED_ITEM' IN TYPEOF(item)))) = 0"/>
         <where label="WR2" expression="SELF\Classification_assignment.assigned_class.id = 'reference'"/>
      </entity>
   </schema>
</express>
