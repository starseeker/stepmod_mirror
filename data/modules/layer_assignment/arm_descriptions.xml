<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Layer_assignment_arm  Entity: Layer  
   <express_ref linkend="layer_assignment:arm:Layer_assignment_arm.Layer"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
  <ext_description linkend="Layer_assignment_arm.Layer">A <b>Layer</b> is a general structure for collection of <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>s. <express_ref linkend="layer_assignment:arm:Layer_assignment_arm.Layer"/>s shall not be nested, that is, a layer must not be contained in another layer.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Layer_assignment_arm  Entity: Layer  Attribute: description 
   <express_ref linkend="layer_assignment:arm:Layer_assignment_arm.Layer.description"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Layer_assignment_arm.Layer.description">the text that provides further information about the <b>Layer</b>.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Layer_assignment_arm  Entity: Layer  Attribute: id 
   <express_ref linkend="layer_assignment:arm:Layer_assignment_arm.Layer.id"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Layer_assignment_arm.Layer.id">specifies the layer identifier.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Layer_assignment_arm  Entity: Layer  Attribute: layered_elements 
   <express_ref linkend="layer_assignment:arm:Layer_assignment_arm.Layer.layered_elements"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
  <ext_description linkend="Layer_assignment_arm.Layer.layered_elements">specifies the set of <express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>s assigned to the layer.
</ext_description>

<!-- +++++++++++ Structuring_method_hierarchy +++++++++++ -->
<ext_description linkend="Layer_assignment_arm.Structuring_method_hierarchy">
	<p>
	A <b>Structuring_method_hierarchy</b> is a mechanism to build up a nesting of 
	<express_ref linkend="Group:arm:Group_arm.Group"/> 
	objects within 
	<express_ref linkend="Group:arm:Group_arm.Group"/> 
	or 
	<express_ref linkend="Layer_assignment:arm:Layer_assignment_arm.Layer"/>
	objects in structuring methods. 
	</p>
	<note>
		This mechanism facilitates the nesting of groups in other groups and the nesting of groups in a layer, 
		but not the nesting of one layer in another layer or group.	
	</note>
</ext_description>

<!-- relating -->
<ext_description linkend="Layer_assignment_arm.Structuring_method_hierarchy.relating">
	specifies the  
	<express_ref linkend="Layer_assignment:arm:Layer_assignment_arm.structuring_method_select"/>
	in that the 
	<express_ref linkend="Group:arm:Group_arm.Group"/> 
	is nested.
</ext_description>

<!-- related -->
<ext_description linkend="Layer_assignment_arm.Structuring_method_hierarchy.related">
	specifies the 
	<express_ref linkend="Group:arm:Group_arm.Group"/>
	object to be nested.
</ext_description>

</ext_descriptions>
