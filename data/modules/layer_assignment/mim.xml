<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="mim_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1008">
   <application name="JSDAI" owner="LKSoft" source="layer_assignment_mim schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Layer_assignment_mim">
      <interface kind="use" schema="Foundation_representation_mim"/>
      <interface kind="use" schema="Group_mim"/>
      <interface kind="use" schema="presentation_organization_schema">
         <interfaced.item name="presentation_layer_assignment"/>
      </interface>
      <interface kind="use" schema="geometry_schema">
         <interfaced.item name="geometric_representation_item"/>
      </interface>
      <interface kind="use" schema="topology_schema">
         <interfaced.item name="topological_representation_item"/>
      </interface>
      <entity name="rep_item_group" supertypes="group representation_item">
         <where expression="SIZEOF(USEDIN(SELF,'PRESENTATION_ORGANIZATION_SCHEMA.' + 'PRESENTATION_LAYER_ASSIGNMENT.' + 'ASSIGNED_ITEMS')) &gt; 0" label="WR1"/>
         <where expression="SIZEOF(QUERY(r &lt;* USEDIN(SELF,'REPRESENTATION_SCHEMA.' + 'REPRESENTATION.' + 'ITEMS') | r.name = 'group representation')) &gt; 0" label="WR2"/>
         <where expression="SIZEOF(QUERY(ga &lt;* USEDIN(SELF,'MANAGEMENT_RESOURCES_SCHEMA.' + 'GROUP_ASSIGNMENT.' + 'ASSIGNED_GROUP') | ga.role.name &lt;&gt; 'group membership')) = 0" label="WR3"/>
         <where expression="SIZEOF(['GEOMETRY_SCHEMA.' + 'GEOMETRIC_REPRESENTATION_ITEM', &#10;           'TOPOLOGY_SCHEMA.' + 'TOPOLOGICAL_REPRESENTATION_ITEM', &#10;           'REPRESENTATION_SCHEMA.' + 'MAPPED_ITEM',&#10;           'PRESENTATION_APPEARANCE_SCHEMA.' + 'STYLED_ITEM'] * TYPEOF(SELF)) = 1" label="WR4"/>
      </entity>
   </schema>
</express>
