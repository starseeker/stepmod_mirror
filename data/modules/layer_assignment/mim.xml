<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="mim_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="layer_assignment_mim schema_instance"/>
   <schema name="Layer_assignment_mim">
      <interface kind="use" schema="Foundation_representation_mim"/>
      <interface kind="use" schema="Group_mim"/>
      <interface kind="use" schema="presentation_organization_schema">
         <interfaced.item name="presentation_layer_assignment"/>
      </interface>
      <interface kind="use" schema="geometry_schema">
         <interfaced.item name="geometric_representation_item"/>
      </interface>
      <interface kind="use" schema="topology_schema">
         <interfaced.item name="topological_representation_item"/>
      </interface>
      <entity name="rep_item_group" supertypes="group representation_item">
         <where label="WR1" expression="SIZEOF(USEDIN(SELF,'LAYER_ASSIGNMENT_MIM.' + 'PRESENTATION_LAYER_ASSIGNMENT.' + 'ASSIGNED_ITEMS')) &gt; 0"/>
         <where label="WR2" expression="SIZEOF(QUERY(r &lt;* USEDIN(SELF,'LAYER_ASSIGNMENT_MIM.' + 'REPRESENTATION.' + 'ITEMS') | r.name = 'group representation')) &gt; 0"/>
         <where label="WR3" expression="SIZEOF(QUERY(ga &lt;* USEDIN(SELF,'LAYER_ASSIGNMENT_MIM.' + 'GROUP_ASSIGNMENT.' + 'ASSIGNED_GROUP') | ga.role.name &lt;&gt; 'group membership')) = 0"/>
         <where label="WR4" expression="SIZEOF(['LAYER_ASSIGNMENT_MIM.' + 'GEOMETRIC_REPRESENTATION_ITEM', 'LAYER_ASSIGNMENT_MIM.' + 'TOPOLOGICAL_REPRESENTATION_ITEM', 'LAYER_ASSIGNMENT_MIM.' + 'MAPPED_ITEM','LAYER_ASSIGNMENT_MIM.' + 'STYLED_ITEM'] * TYPEOF(SELF)) = 1"/>
      </entity>
   </schema>
</express>
