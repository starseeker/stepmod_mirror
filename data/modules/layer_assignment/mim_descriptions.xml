</ext_description>

<!-- +++++++++++ rep_item_group +++++++++++ -->
<ext_description linkend="Layer_assignment_mim.rep_item_group">
	A <b>rep_item_group</b> is a type of
	<express_ref linkend="group_schema:ir_express:group_schema.group"/>
	and a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_item"/>.
	A <b>rep_item_group</b> may be part of a layer or a template.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Layer_assignment_mim.rep_item_group.wr:WR1">
	<p>
	A <b>rep_item_group</b> shall be contained in the set of 
	<express_ref linkend="presentation_organization_schema:ir_express:presentation_organization_schema.presentation_layer_assignment.assigned_items"/>
	of a 
	<express_ref linkend="presentation_organization_schema:ir_express:presentation_organization_schema.presentation_layer_assignment"/>.
	</p>
</ext_description>

<!-- WR2 -->
<ext_description linkend="Layer_assignment_mim.rep_item_group.wr:WR2">
	<p>
	A <b>rep_item_group</b> shall be contained in the set of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/> 
	of a
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/> 
	with a name of 'group representation'. 
	</p>
</ext_description>

<!-- WR3 -->
<ext_description linkend="Layer_assignment_mim.rep_item_group.wr:WR3">
	<p>
	The <b>rep_item_group</b> shall only be referenced by 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.group_assignment">group_assignments</express_ref>
	that reference as 
	<express_ref linkend="management_resources_schema:ir_express:management_resources_schema.group_assignment.role"/> 
	an 
	<express_ref linkend="basic_attribute_schema:ir_express:basic_attribute_schema.object_role"/> 
	that has a name of 'group membership'.
	</p>
</ext_description>

<!-- WR4 -->
<ext_description linkend="Layer_assignment_mim.rep_item_group.wr:WR4">
	<p>
	The items in a <b>rep_item_group</b> shall be of type
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>, 
	<express_ref linkend="topology_schema:ir_express:topology_schema.topological_representation_item"/>,
	<express_ref linkend="representation_schema:ir_express:representation_schema.mapped_item"/>, 
	or 
	<express_ref linkend="presentation_appearance_schema:ir_express:presentation_appearance_schema.styled_item"/>.
	</p>
</ext_description>

</ext_descriptions>
