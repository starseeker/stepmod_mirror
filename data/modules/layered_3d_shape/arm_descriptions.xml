<!-- +++++++++++ Shape_definition_3d_intersection +++++++++++ -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection">
<p>
	A <b>Shape_definition_3d_intersection</b> is a type of 
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Geometric_model_relationship"/>. 
	A <b>Shape_definition_3d_intersection</b> is the projection into two dimensions of a three-dimensional shape based on the intersection of a plane with the three-dimensional shape.
</p>
</ext_description>

<!-- projected_volume -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.projected_volume">
	specifies a role of the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Geometric_model"/> 
	for the <b>Shape_definition_3d_intersection</b>.
</ext_description>

<!-- surface_intersection_result -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.surface_intersection_result">
	specifies a role of the 
	<express_ref linkend="Layered_2d_shape:arm:Layered_2d_shape_arm.Planar_shape_model"/> 
	for the <b>Shape_definition_3d_intersection</b>.
</ext_description>

<!-- planar_shape_origin -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.planar_shape_origin">
	specifies a role of the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement_2d"/> 
	for the <b>Shape_definition_3d_intersection</b>.  The 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement_2d"/> 
	shall define the two dimensional coordinate system.
</ext_description>

<!-- orientation_intersection_plane -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.orientation_intersection_plane">
	specifies a role of the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement_3d"/> 
	for the <b>Shape_definition_3d_intersection</b>.  The Z axis of the 
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Axis_placement_3d"/> 
	shall define the normal of the plane.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.wr:WR1">
<p>
	The <b>projected_volume</b> shall not be a 
	<express_ref linkend="layered_2d_shape:arm:Layered_2d_shape_arm.Planar_shape_model"/>.
</p>
</ext_description>

<!-- WR2 -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_intersection.wr:WR2">
	The
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_relationship.relation_type"/>
	shall not be populated.
</ext_description>

<!-- +++++++++++ Shape_definition_3d_plane_projection +++++++++++ -->
<ext_description linkend="Layered_3d_shape_arm.Shape_definition_3d_plane_projection">
<p>
	A <b>Shape_definition_3d_plane_projection</b> is a type of 
	<express_ref linkend="Extended_basic_geometry:arm:Extended_basic_geometry_arm.Geometric_model_relationship"/>.
	A <b>Shape_definition_3d_plane_projection</b> is the projection of a three-dimensional solid  onto a plane.
</p>
</ext_description>

