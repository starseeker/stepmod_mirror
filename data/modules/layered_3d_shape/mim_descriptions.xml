<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: shape_definition_3d_intersection
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Layered_3d_shape_mim.shape_definition_3d_intersection">
	A <b>shape_definition_3d_intersection</b> is a type of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>, 
	of  
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation_relationship"/>,
	and of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship_with_transformation"/>
	that implements the ARM concept of  
	<express_ref linkend="Layered_3d_shape:arm:Layered_3d_shape_arm.Shape_definition_3d_intersection"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Attribute: shape_definition_3d_intersection.transformation_operator
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Layered_3d_shape_mim.shape_definition_3d_intersection.transformation_operator">
	specifies a role of the
	<express_ref linkend="representation_schema:ir_express:representation_schema.item_defined_transformation"/>
	for the <b>shape_definition_3d_intersection</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
WR: shape_definition_3d_intersection.WR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Layered_3d_shape_mim.shape_definition_3d_intersection.wr:WR1">
	The  
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/> 
	shall not be 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/>. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
UR: shape_definition_3d_intersection.UR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Layered_3d_shape_mim.shape_definition_3d_intersection.ur:UR1">
	The combination of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_1"/> 
	and 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship.rep_2"/> 
	shall be unique within a population of <b>shape_definition_3d_intersection</b>.
</ext_description>

