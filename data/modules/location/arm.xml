<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express language_version="2" rcs.date="$Date: $" rcs.revision="$Revision: $" description.file="arm_descriptions.xml">
	<application name="GraphicalEXPRESS" owner="Eurostep" url="www.eurostep.com" version="1.3.14" source="location_arm_v010.vsd"/>
	<schema name="Location_arm">
		<interface kind="use" schema="Classification_assignment_arm"/>
		<interface kind="use" schema="Person_organization_arm"/>
		<interface kind="use" schema="Product_identification_arm"/>
		<interface kind="use" schema="Value_with_unit_arm"/>
		<interface kind="use" schema="Zonal_breakdown_arm"/>
		<type name="location_classification_item">
			<select extensible="YES" genericentity="YES" basedon="Classification_item" selectitems="Location_relationship"/>
			<graphic.element page="2" xcoord="468" ycoord="717"/>
		</type>
		<type name="location_representation">
			<select extensible="YES" genericentity="YES" selectitems="Address_based_location_representation Global_location_representation Organization_based_location_representation product_based_location_representation Regional_grid_location_representation"/>
			<graphic.element page="2" xcoord="85" ycoord="653"/>
		</type>
		<type name="product_based_location_representation">
			<select selectitems="Product_based_location_identification Zone_element"/>
			<graphic.element page="2" xcoord="170" ycoord="291"/>
		</type>
		<entity name="Address_based_location_representation">
			<explicit name="postal_address">
				<typename name="Address_assignment"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="348"/>
		</entity>
		<entity name="Global_location_representation">
			<explicit name="altitude" optional="YES">
				<typename name="Value_with_unit"/>
			</explicit>
			<explicit name="geographical_area" optional="YES">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="latitude">
				<typename name="Value_with_unit"/>
			</explicit>
			<explicit name="longitude">
				<typename name="Value_with_unit"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="603"/>
		</entity>
		<entity name="Location">
			<explicit name="alternative_location_representations">
				<aggregate type="SET" lower="1" upper="?"/>
				<typename name="location_representation"/>
			</explicit>
			<explicit name="description" optional="YES">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="name">
				<builtintype type="STRING"/>
			</explicit>
			<graphic.element page="2" xcoord="85" ycoord="717"/>
		</entity>
		<entity name="Location_relationship">
			<explicit name="description" optional="YES">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="name">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="related">
				<description>
          Child location within Location_relationship
        </description>
				<typename name="Location"/>
			</explicit>
			<explicit name="relating">
				<description>
          Parent location for Location_relationship
        </description>
				<typename name="Location"/>
			</explicit>
			<graphic.element page="2" xcoord="270" ycoord="717"/>
		</entity>
		<entity name="Organization_based_location_representation">
			<explicit name="location_identifications">
				<aggregate type="SET" lower="0" upper="?"/>
				<typename name="Organizational_location_identification"/>
			</explicit>
			<explicit name="organization_for_location">
				<typename name="Organization"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="476"/>
		</entity>
		<entity name="Organizational_location_identification">
			<explicit name="identification_type">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="location_value">
				<builtintype type="STRING"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="405"/>
		</entity>
		<entity name="Product_based_location_identification">
			<explicit name="location_identification">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="location_value">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="referenced_product">
				<typename name="Product"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="235"/>
		</entity>
		<entity name="Regional_coordinate">
			<explicit name="coordinate_value">
				<typename name="Value_with_unit"/>
			</explicit>
			<explicit name="description">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="grid_system">
				<typename name="Regional_grid_location_representation"/>
			</explicit>
			<explicit name="name">
				<builtintype type="STRING"/>
			</explicit>
			<graphic.element page="2" xcoord="468" ycoord="121"/>
		</entity>
		<entity name="Regional_grid_location_representation">
			<explicit name="description" optional="YES">
				<builtintype type="STRING"/>
			</explicit>
			<explicit name="name">
				<builtintype type="STRING"/>
			</explicit>
			<graphic.element page="2" xcoord="170" ycoord="121"/>
		</entity>
		<graphic.element page="1" xcoord="205" ycoord="218"/>
	</schema>
</express>
