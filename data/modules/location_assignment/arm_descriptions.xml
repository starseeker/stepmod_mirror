	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Location_assignment_arm
   <express_ref linkend="location_assignment:arm:Location_assignment_arm"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<ext_description linkend="Location_assignment_arm">
      Represents context of the location within its usage for a product or other physical entity
    </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Type: assignment_qualifier 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.assignment_qualifier"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.assignment_qualifier">
        type of role of assigned location. This describes the usage of the location entity, examples are planned, realized, scheduled , constraint, approved, authorized, preferred
      </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Type: location_assignment_effectivity_item 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.location_assignment_effectivity_item"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.location_assignment_effectivity_item">
        defines the effectivity for the location assignment
      </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Type: location_assignment_select 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.location_assignment_select"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.location_assignment_select">
        Selects the type, where the location is assigned to
      </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Type: organization_or_person_in_organization_select 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.organization_or_person_in_organization_select"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.organization_or_person_in_organization_select"/>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Type: purpose 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.purpose"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment">
        defines the relationship of a product, event or person to a location for a purpose. There may be distinct assignment for each qualification. for example planned, scheduled or actual. Each assignment may have a start and end date/time. A Location may have multiple assignments.
      </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  Attribute: assignment_qualification 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment.assignment_qualification"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment.assignment_qualification">
          qualifies the assignment is qualified for
        </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  Attribute: description 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment.description"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment.description">
          textual description of the meaning of this location assignment
        </ext_description>

<ext_description linkend="Location_assignment_arm.Location_assignment.role">
	        defines possible roles of location assignments:
		<example>Roles of a location assignment might be:
			<ul>
				<li>operating</li>
				<li>storage</li>
				<li>maintenance</li>
				<li>engineering</li>
			</ul>
		</example>
      </ext_description>

	<!-- 
	
	
	
	
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  Attribute: entity_for_location 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment.entity_for_location"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment.entity_for_location">
          Identifies the product, person, product_group, event or activity which is related to the specified location 
        </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  Attribute: location_for_assignment 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment.location_for_assignment"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment.location_for_assignment">
          defines the location which is subject of this assignment
        </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Location_assignment_arm  Entity: Location_assignment  Attribute: purpose_for_location_assignment 
   <express_ref linkend="location_assignment:arm:Location_assignment_arm.Location_assignment.purpose_for_location_assignment"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Location_assignment_arm.Location_assignment.purpose_for_location_assignment">
          identifies the purpose of the assignment of the location to the entity
        </ext_description>
</ext_descriptions>
