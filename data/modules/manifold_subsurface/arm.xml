<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1702">
   <application name="JSDAI" owner="LKSoft" source="manifold_subsurface_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Manifold_subsurface_arm">
      <interface kind="use" schema="Manifold_surface_arm"/>
      <type name="manifold_subsurface_shape_representation_item">
         <select selectitems="Axis_placement_3d Geometric_placement_operation Connected_face_set"/>
      </type>
      <type name="ms_geometric_model_item">
         <select basedon="geometric_model_item" extensible="YES" genericentity="YES" selectitems="Connected_face_set"/>
      </type>
      <type name="open_shell_or_subsurface">
         <select selectitems="Manifold_surface_shape_representation Manifold_subsurface_model"/>
      </type>
      <entity name="Manifold_subsurface_model" supertypes="Geometric_model">
         <explicit name="parent_surface">
            <typename name="open_shell_or_subsurface"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="manifold_subsurface_shape_representation_item"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <where expression="SELF :&lt;&gt;: parent_surface" label="WR1"/>
         <where expression="SELF\Geometric_model.context_of_items :=: parent_surface\Geometric_model.context_of_items" label="WR2"/>
      </entity>
   </schema>
</express>
