<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.15"
    source="../data/modules/measure_representation/arm.exp"/>

  <schema name="Measure_representation_arm">
    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>

    <entity
      name="Property_value_representation"
      supertypes="Representation">
      <explicit
        name="SELF\Representation.context_of_items">
        <typename
          name="Numerical_representation_context"/>
      </explicit>
    </entity>

    <entity
      name="Measure_item"
      supertypes="Representation_item">
      <where
        label="WR1"
        expression="SIZEOF(USEDIN(SELF, 'MEASURE_REPRESENTATION_ARM.PROPERTY_VALUE_REPRESENTATION.ITEMS'))&gt;0">
      </where>
    </entity>

    <entity
      name="Numerical_item_with_global_unit"
      supertypes="Measure_item">
      <explicit
        name="value_component">
        <typename
          name="measure_value"/>
      </explicit>
      <where
        label="WR1"
        expression="SIZEOF(QUERY( pvr &lt;* USEDIN(SELF, 'MEASURE_REPRESENTATION_ARM.PROPERTY_VALUE_REPRESENTATION.ITEMS') |	EXISTS(pvr.units) )) &gt;0">
      </where>
    </entity>

    <entity
      name="Numerical_item_with_unit"
      supertypes="Measure_item Value_with_unit">
    </entity>

  </schema>

</express>
