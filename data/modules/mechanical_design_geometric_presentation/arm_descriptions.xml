<!-- +++++++++++ Light_source +++++++++++ -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Light_source">
	A <b>Light_source</b> is a type of
	<express_ref linkend="Elemental_geometric_shape:arm:Elemental_geometric_shape_arm.Detailed_geometric_model_element"/>.
</ext_description>

<!-- light_type -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Light_source.light_type">
	specifies a STRING value.
</ext_description>

<!-- colour -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Light_source.colour">
	specifies a role of the
	<express_ref linkend="Colour:arm:Colour_arm.Colour"/>
	for the <b>Light_source</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- is_defined_for -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Light_source.is_defined_for">
	specifies a role of the
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Model_image_3d"/>
	for the <b>Light_source</b>.
	There shall exist one or more
	<express_ref linkend="Camera_view_3d:arm:Camera_view_3d_arm.Model_image_3d"/>
	for the <b>Light_source</b>.
</ext_description>

<!-- +++++++++++ Mechanical_design_view_area +++++++++++ -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Mechanical_design_view_area">
	A <b>Mechanical_design_view_area</b> is a type of
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>.
</ext_description>

<!-- +++++++++++ Mechanical_representation_styled_model +++++++++++ -->
<ext_description linkend="Mechanical_design_geometric_presentation_arm.Mechanical_representation_styled_model">
	A <b>Mechanical_representation_styled_model</b> is a type of
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_model"/>.
</ext_description>


</ext_descriptions>

