<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="">
   <application name="JSDAI" owner="LKSoft" source="model_based_3d_geometrical_dimensioning_and_tolerancing_representation_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Model_based_3d_geometrical_dimensioning_and_tolerancing_representation_arm">
      <interface kind="use" schema="Product_and_manufacturing_information_with_nominal_3d_models_arm"/>
      <interface kind="use" schema="Geometric_tolerance_arm"/>
      <type name="mb3gdtsr_dimension_target">
         <select basedon="dimension_target" extensible="YES" genericentity="YES" selectitems="Nominal_3d_integral_feature Nominal_3d_derived_feature"/>
      </type>
      <type name="mb3gdtsr_geometric_tolerance_target">
         <select basedon="geometric_tolerance_target" extensible="YES" genericentity="YES" selectitems="Nominal_3d_integral_feature Nominal_3d_derived_feature"/>
      </type>
      <type name="nominal_3d_derived_feature_geometry">
         <select selectitems="Curve point_select Surface"/>
      </type>
      <type name="nominal_3d_integral_feature_geometry">
         <select selectitems="Advanced_face Edge_curve Vertex_point Manifold_subsurface_model Edge_loop"/>
      </type>
      <entity name="Gdt_representation_shape" supertypes="Nominal_3d_model_shape">
         <where expression="'xxx.Gdt_semantic_representation_view_context' IN TYPEOF(described_element\Product_view_definition.additional_context)" label="WR1"/>
      </entity>
      <entity name="Nominal_3d_derived_feature" supertypes="Nominal_3d_feature Derived_shape_element">
         <derived expression="association\Geometric_item_specific_usage.identified_item" name="associated_item">
            <typename name="nominal_3d_derived_feature_geometry"/>
            <redeclaration entity-ref="Associated_shape_element"/>
         </derived>
         <where expression="EXISTS(associated_item)" label="WR1"/>
      </entity>
      <entity abstract.supertype="YES" name="Nominal_3d_feature" super.expression="ONEOF (Nominal_3d_integral_feature, Nominal_3d_derived_feature)" supertypes="Associated_shape_element">
         <explicit name="containing_shape">
            <typename name="Gdt_representation_shape"/>
            <redeclaration entity-ref="Shape_element"/>
         </explicit>
      </entity>
      <entity name="Nominal_3d_integral_feature" supertypes="Nominal_3d_feature">
         <derived expression="association\Geometric_item_specific_usage.identified_item" name="associated_item">
            <typename name="nominal_3d_integral_feature_geometry"/>
            <redeclaration entity-ref="Associated_shape_element"/>
         </derived>
         <where expression="EXISTS(associated_item)" label="WR1"/>
      </entity>
   </schema>
</express>
