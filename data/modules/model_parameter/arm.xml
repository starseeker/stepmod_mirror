<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="model_parameter_arm schema_instance"/>
   <schema name="Model_parameter_arm">
      <interface kind="use" schema="Activity_method_assignment_arm"/>
      <interface kind="use" schema="Characteristic_arm"/>
      <interface kind="use" schema="Classification_with_attributes_arm"/>
      <interface kind="use" schema="Independent_property_representation_arm"/>
      <interface kind="use" schema="Group_arm"/>
      <interface kind="reference" schema="Specification_document_arm">
         <interfaced.item name="get_document_definition"/>
      </interface>
      <type name="mp_activity_method_item_select">
         <select extensible="YES" genericentity="YES" basedon="activity_method_item" selectitems="Test_method_based_parameter_assignment"/>
      </type>
      <type name="mp_documented_element_select">
         <select extensible="YES" genericentity="YES" basedon="documented_element_select" selectitems="Model_parameter"/>
      </type>
      <type name="mp_groupable_item">
         <select basedon="groupable_item" selectitems="Group_relationship" genericentity="NO" extensible="NO"/>
      </type>
      <entity name="Category_model_parameter" supertypes="Model_parameter" abstract.supertype="NO" abstract.entity="NO">
         <inverse name="associated_attribute" entity="Classification_attribute" attribute="attribute_definition">
            <inverse.aggregate type="SET" lower="1" upper="1"/>
         </inverse>
      </entity>
      <entity name="Independent_property_with_unit" supertypes="Independent_property" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="unit_of_measure" optional="NO">
            <aggregate type="SET" lower="1" upper="?" unique="NO" optional="NO"/>
            <typename name="Unit"/>
         </explicit>
      <where label="IP1"/>
      </entity>
      <entity name="Model_parameter" supertypes="Independent_property" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="valid_range" optional="YES">
            <aggregate type="SET" lower="1" upper="?" unique="NO" optional="NO"/>
            <typename name="Value_range"/>
         </explicit>
         <explicit name="default_value" optional="YES">
            <typename name="scalar_or_coordinated_characteristics"/>
         </explicit>
         <derived name="reference_document" expression="get_document_definition(SELF, 'reference document', &#10;        'DOCUMENT_DEFINITION_ARM.DOCUMENT_DEFINITION')">
            <aggregate type="SET" lower="0" upper="?" unique="NO" optional="NO"/>
            <typename name="Document_definition"/>
         </derived>
         <where label="WR1" expression="EXISTS (reference_document) AND (SIZEOF(reference_document) = 1)"/>
      </entity>
      <entity name="Model_parameter_with_unit" supertypes="Independent_property_with_unit Model_parameter" abstract.supertype="NO" abstract.entity="NO">
         <where label="WR1" expression="NOT('MODEL_PARAMETER_ARM.SCHEMA_BASED_MODEL_PARAMETER' IN TYPEOF(SELF))"/>
      </entity>
      <entity name="Parameter_assignment" supertypes="Independent_property_representation" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="property" optional="NO">
            <typename name="Model_parameter"/>
            <redeclaration entity-ref="Independent_property_representation"/>
         </explicit>
      </entity>
      <entity name="Parameter_assignment_override" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="overridden_parameter_assignment" optional="NO">
            <typename name="Parameter_assignment"/>
         </explicit>
         <explicit name="overriding_parameter_assignment" optional="NO">
            <typename name="Parameter_assignment"/>
         </explicit>
      </entity>
      <entity name="Product_specific_parameter_value_assignment" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="of_product" optional="NO">
            <typename name="Product"/>
         </explicit>
         <explicit name="assigned_parameter" optional="NO">
            <typename name="Parameter_assignment"/>
         </explicit>
         <derived name="the_model_parameter" expression="assigned_parameter\Independent_property_representation.property">
            <typename name="Model_parameter"/>
         </derived>
         <unique label="UR1">
            <unique.attribute attribute="the_model_parameter"/>
            <unique.attribute attribute="of_product"/>
         </unique>
      </entity>
      <entity name="Schema_based_model_parameter" supertypes="Model_parameter" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="entity_name" optional="NO">
            <typename name="Independent_property"/>
         </explicit>
         <explicit name="attribute_name" optional="YES">
            <typename name="Independent_property"/>
         </explicit>
         <explicit name="schema_identifier" optional="NO">
            <typename name="Independent_property"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="entity_name"/>
            <unique.attribute attribute="attribute_name"/>
            <unique.attribute attribute="schema_identifier"/>
         </unique>
      </entity>
      <entity name="Test_method_based_parameter_assignment" supertypes="Parameter_assignment" abstract.supertype="NO" abstract.entity="NO">
         <where label="WR1" expression="SIZEOF(USEDIN(SELF,'ACTIVITY_METHOD_ASSIGNMENT_ARM.APPLIED_ACTIVITY_METHOD_ASSIGNMENT.ITEMS')) = 1"/>
      </entity>
   </schema>
</express>
