<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1703">
   <application name="JSDAI" owner="LKSoft" source="model_parameter_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Model_parameter_arm">
      <interface kind="use" schema="Activity_method_assignment_arm"/>
      <interface kind="use" schema="Characteristic_arm"/>
      <interface kind="use" schema="Classification_with_attributes_arm"/>
      <interface kind="use" schema="Independent_property_representation_arm"/>
      <interface kind="use" schema="Group_arm"/>
      <interface kind="reference" schema="Specification_document_arm">
         <interfaced.item name="get_document_definition"/>
      </interface>
      <type name="mp_activity_method_item_select">
         <select basedon="activity_method_item" selectitems="Test_method_based_parameter_assignment"/>
      </type>
      <type name="mp_documented_element_select">
         <select basedon="documented_element_select" selectitems="Model_parameter"/>
      </type>
      <type name="mp_groupable_item">
         <select basedon="groupable_item" selectitems="Group_relationship"/>
      </type>
      <type name="parameter_assignment_select">
         <select extensible="YES" genericentity="YES" selectitems="Model_parameter"/>
      </type>
      <entity name="Category_model_parameter" supertypes="Model_parameter">
         <inverse attribute="attribute_definition" entity="Classification_attribute" name="associated_attribute">
            <inverse.aggregate lower="1" type="SET" upper="1"/>
         </inverse>
      </entity>
      <entity name="Independent_property_with_unit" supertypes="Independent_property">
         <explicit name="unit_of_measure">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="Unit"/>
         </explicit>
      </entity>
      <entity name="Model_parameter" supertypes="Independent_property">
         <explicit name="valid_range" optional="YES">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="Value_range"/>
         </explicit>
         <explicit name="default_value" optional="YES">
            <typename name="scalar_or_coordinated_characteristics"/>
         </explicit>
         <derived expression="get_document_definition(SELF, 'reference document', &#10;        'DOCUMENT_DEFINITION_ARM.DOCUMENT_DEFINITION')" name="reference_document">
            <aggregate lower="0" type="SET" upper="?"/>
            <typename name="Document_definition"/>
         </derived>
         <where expression="EXISTS (reference_document) AND (SIZEOF(reference_document) = 1)" label="WR1"/>
      </entity>
      <entity name="Model_parameter_with_unit" supertypes="Independent_property_with_unit Model_parameter">
         <where expression="NOT('MODEL_PARAMETER_ARM.SCHEMA_BASED_MODEL_PARAMETER' IN TYPEOF(SELF))" label="WR1"/>
      </entity>
      <entity name="Parameter_assignment" supertypes="Property_definition_representation">
         <explicit name="definition">
            <typename name="parameter_assignment_select"/>
            <redeclaration entity-ref="Property_definition_representation"/>
         </explicit>
      </entity>
      <entity name="Parameter_assignment_override">
         <explicit name="overridden_parameter_assignment">
            <typename name="Parameter_assignment"/>
         </explicit>
         <explicit name="overriding_parameter_assignment">
            <typename name="Parameter_assignment"/>
         </explicit>
      </entity>
      <entity name="Product_specific_parameter_value_assignment">
         <explicit name="of_product">
            <typename name="Product"/>
         </explicit>
         <explicit name="assigned_parameter">
            <typename name="Parameter_assignment"/>
         </explicit>
         <derived expression="assigned_parameter\Property_definition_representation.definition" name="the_model_parameter">
            <typename name="Model_parameter"/>
         </derived>
         <unique label="UR1">
            <unique.attribute attribute="the_model_parameter"/>
            <unique.attribute attribute="of_product"/>
         </unique>
      </entity>
      <entity name="Schema_based_model_parameter" supertypes="Model_parameter">
         <explicit name="entity_name">
            <typename name="Independent_property"/>
         </explicit>
         <explicit name="attribute_name" optional="YES">
            <typename name="Independent_property"/>
         </explicit>
         <explicit name="schema_identifier">
            <typename name="Independent_property"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="entity_name"/>
            <unique.attribute attribute="attribute_name"/>
            <unique.attribute attribute="schema_identifier"/>
         </unique>
      </entity>
      <entity name="Test_method_based_parameter_assignment" supertypes="Parameter_assignment">
         <where expression="SIZEOF(USEDIN(SELF,'ACTIVITY_METHOD_ASSIGNMENT_ARM.APPLIED_ACTIVITY_METHOD_ASSIGNMENT.ITEMS')) = 1" label="WR1"/>
      </entity>
   </schema>
</express>
