<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.18"
    source="../data/modules/multi_linguism/arm.exp"/>

  <schema name="Multi_linguism_arm">
    <type name="string_select">
      <select
        extensible="YES">
      </select>

    </type>
    <entity
      name="Language">
      <explicit
        name="language_code">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="country_code"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Language_indication">
      <explicit
        name="considered_instance">
        <typename
          name="string_select"/>
      </explicit>
      <explicit
        name="considered_attribute">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="used_language">
        <typename
          name="Language"/>
      </explicit>
    </entity>

    <entity
      name="Attribute_translation_assignment">
      <explicit
        name="considered_instance">
        <typename
          name="string_select"/>
      </explicit>
      <explicit
        name="considered_attribute">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="translation_text">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="translation_language">
        <typename
          name="Language"/>
      </explicit>
      <unique
        label="UR1">
        <unique.attribute
          attribute="considered_object"/>
        <unique.attribute
          attribute="considered_attribute"/>
        <unique.attribute
          attribute="translation_language"/>
      </unique>
    </entity>

  </schema>

</express>
