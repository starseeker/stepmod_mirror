	<!-- Clause 4 ARM  -->
	<arm>
		<!-- Note ARM short form EXPRESS is in arm.xml -->
		<!-- Units of functionality -->
		<uof name="Numeric_function">
			<description>
			The Numeric function UOF specifies the data structure for the representation of numeric functions.
			A numeric function is a function which the range is NUMBER data type defined in clause 8.1.1 of ISO 10303-11.</description>
			<uof.ae entity="Function_parameter_value"/>
			<uof.ae entity="Int_value_function"/>
			
			<uof.ae entity="Length_function"/>
			
			<uof.ae entity="Odd_function"/>
			
			
		</uof>
		<!-- Short form EXPRESS-G -->
		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<!-- Clause 5.1 Mapping specification -->
	<mapping_table>
		
		<ae entity="Function_parameter_value">
					<aimelt>value_function</aimelt>
					<source>ISO 13584-20</source>
					<refpath>value_function &lt;= 
		[numeric_expression]
		[unary_generic_expression]
		</refpath>
					<aa attribute="operand" assertion_to="String_expression">
						<aimelt>PATH</aimelt>
						<refpath>unary_generic_expression</refpath>
					</aa>
		</ae>
		
		<ae entity="Int_value_function">
			<aimelt>int_value_function</aimelt>
			<source>ISO 13584-20</source>
			<refpath>exp_function &lt;= value_function</refpath>
		</ae>
		
		<ae entity="Length_function">
			<aimelt>length_function</aimelt>
			<source>ISO 13584-20</source>
			<refpath>length_function &lt;= unary_function_call</refpath>
			<aa attribute="operand" assertion_to="String_expression">
				<aimelt>PATH</aimelt>
				<refpath>unary_generic_expression</refpath>
			</aa>
		</ae>
		
		
		<ae entity="Odd_function">
			<aimelt>odd_function</aimelt>
			<source>ISO 13584-20</source>
			<refpath>odd_function &lt;= unary_boolean_expression</refpath>
			<aa attribute="operand" assertion_to="Numeric_expression">
				<aimelt>PATH</aimelt>
				<refpath>unary_generic_expression</refpath>
			</aa>
		</ae>
		

	</mapping_table>
	<!-- Clause 5.2 MIM -->
	<mim>
		<!--  Note MIM short form express is in mim.xml -->
		<express-g>
			<imgfile file="mimexpg1.xml"/>
		</express-g>
	</mim>
