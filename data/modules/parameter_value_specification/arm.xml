href="../../../xsl/express.xsl" ?>
<express
   language_version="2"
   rcs.date="$Date: 2006/03/22 18:41:08 $"
   rcs.revision="$Revision: 1.7 $"
	 description.file="arm_descriptions.xml">
	 
<!-- Note:  this file has been hand edited. The link to Express-g needs to be recreated -->

  <schema name="Parameter_value_specification_arm">
    <interface
      kind="use"
      schema="Generic_expression_arm">
    </interface>
    <interface
      kind="use"
      schema="Maths_value_arm">
    </interface>
    <interface
      kind="use"
      schema="Numeric_function_arm">
    </interface>
    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>
    <type name="parameter_value_select"> 
      <select
      extensible="YES"
      genericentity="YES"
        selectitems="Generic_expression Maths_value_with_unit Value_with_unit"/>
    </type>

    <entity
      name="Maths_value_with_unit"	>

      <explicit
        name="value_component">
        <typename name="maths_value"/>
      </explicit>
      <explicit
        name="unit_component">
        <typename name="Unit"/>
      </explicit>
    </entity>

    <entity
      name="Named_variable_semantics"
      supertypes="Variable_semantics"      >

      <explicit
        name="name">
        <builtintype type="STRING"/>
      </explicit>
      <explicit
        name="variable_context">
        <typename name="Generic_expression"/>
      </explicit>
    </entity>

  </schema>

</express>
