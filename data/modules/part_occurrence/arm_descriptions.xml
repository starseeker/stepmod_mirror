<ext_descriptions module_directory="part_occurrence" schema_file="arm.xml" rcs.date="$Date: 2002/03/19 13:34:12 $" rcs.revision="$Revision: 1.1 $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Part_occurrence_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_occurrence 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_occurrence">A <b>Part_occurrence</b> specifies the instance of a component at a particular location in its assembly.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_occurrence  Attribute: location 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_occurrence.location">the optional position of the occurrence.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_occurrence  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_occurrence.wr:WR1">Either the <b>location</b> or <b>location_indicator</b> shall exist.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance">A <b>Part_instance</b> is the occurrence of a part within a subassembly of an assembly.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Attribute: assembly 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.assembly">an <b>Assembly_component</b> that is the same instance of the attribute <b>view1</b> as this <b>Part_instance</b> and the same instance of the attribute <b>view2</b> as the <b>view1</b> of the <b>next_assembly_usage</b> referenced by the attribute <b>sub_assembly</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Attribute: sub_assembly 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.sub_assembly">a <b>Next_assembly_usage</b> that is the same instance of the attribute <b>view2</b> as this <b>Part_instance</b> and the same instance of the <b>product_view_definition</b> referenced by the attribute <b>view1</b> as the <b>product_view_definition</b> referenced by the attribute <b>view2</b> of the attribute <b>assembly</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.wr:WR1">The instance of <b>Part_instance</b> shall not be the same as the instance of <b>assembly</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Where: WR2 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.wr:WR2">The <b>view1</b> attribute of the <b>Part_instance</b> shall reference the same instance of <b>product_view_definition</b> as the <b>view1</b> for the <b>assembly</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Where: WR3 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.wr:WR3">The <b>view2</b> of the <b>Part_instance</b> shall reference the same instance of <b>product_view_definition</b> as the <b>view2</b> for the sub_assembly.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Where: WR4 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.wr:WR4">The <b>view2</b> for the <b>assembly</b> shall reference, or be related to, the same instance of <b>product_view_definition</b> as the <b>view1</b> for the <b>sub_assembly</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Part_occurrence_arm  Entity: Part_instance  Unique: UR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Part_occurrence_arm.Part_instance.ur:UR1">The combination of the <b>assembly</b> and <b>sub_assembly</b> attributes shall be unique.</ext_description>
</ext_descriptions>