 <!-- Clause 5.1 Mapping specification -->
 <mapping_table>

 <!--  ++  GENERAL_PART_FEATURE  ++ -->
<ae entity="General_part_feature">
	<aimelt>shape_aspect</aimelt>
	<source>ISO 10303-41</source>
	<refpath>
	  {shape_aspect.product_definitional = .TRUE.}
	</refpath>
</ae> 

 <!--  ++  Part_shape_element  ++ -->
<ae entity="Part_shape_element">
	<aimelt>shape_aspect</aimelt>
	<source>ISO 10303-41</source>
	<aa attribute="associated_definition" assertion_to="Part_view_definition">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect.of_shape -&gt;
			product_definition_shape &lt;= 
			property_definition
			property_definition.definition -&gt; 
			characterized_definition = 
			characterized_product_definition =
			product_definition
		</refpath>
	</aa>
	<aa attribute="associated_definition" assertion_to="Part_shape_element">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect.of_shape -&gt;
			product_definition_shape_or_shape_aspect =
			shape_aspect
		</refpath>
	</aa>
	<aa attribute="definition" assertion_to="Shape_feature_definition">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect =&gt;
			shape_aspect_occurrence 
			shape_aspect_occurrence.definition -&gt;
			shape_aspect_or_feature_definition =
			feature_definition
		</refpath>
	</aa>
	<aa attribute="definition" assertion_to="Part_shape_element">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect =&gt;
			shape_aspect_occurrence 
			shape_aspect_occurrence.definition -&gt;
			shape_aspect_or_feature_definition =
			shape_aspect
		</refpath>
	</aa>
</ae> 

<ae entity="Part_shape_element_relationship">
	<aimelt>shape_aspect_relationship</aimelt>
	<source>ISO 10303-41</source>
	<aa attribute="related" assertion_to="Part_shape_element">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect_relationship.related_shape_aspect -&gt;
			shape_aspect
		</refpath>
	</aa>
	<aa attribute="relating" assertion_to="Part_shape_element">
		<aimelt>PATH</aimelt>
		<refpath>
			shape_aspect_relationship.relating_shape_aspect -&gt;
			shape_aspect
		</refpath>
	</aa>
</ae> 

 </mapping_table>

