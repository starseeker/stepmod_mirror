<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$">
   <application name="JSDAI" owner="LKSoft" source="part_template_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Part_template_arm">
      <interface kind="use" schema="Analytical_model_arm"/>
      <interface kind="use" schema="Feature_and_connection_zone_arm"/>
      <type name="correlated_or_independent">
         <select selectitems="Property_value_representation characteristic"/>
      </type>
      <type name="physical_unit_or_part_template">
         <select selectitems="Part_view_definition Template_definition"/>
      </type>
      <type name="plp_material_item_select">
         <select basedon="material_item_select" extensible="YES" genericentity="YES" selectitems="Template_definition"/>
      </type>
      <entity name="Reference_part_template_for_analytical_model">
         <explicit name="template">
            <typename name="Template_definition"/>
         </explicit>
         <explicit name="analytical_representation">
            <typename name="Analytical_model_definition"/>
         </explicit>
         <unique label="UR1">
            <unique.attribute attribute="template"/>
         </unique>
      </entity>
      <entity name="Template" supertypes="Product">
         <unique label="UR1">
            <unique.attribute attribute="id" entity-ref="Product"/>
         </unique>
      </entity>
      <entity name="Template_definition" supertypes="Item_shape Product_view_definition">
         <explicit name="defined_version">
            <typename name="Template_version"/>
            <redeclaration entity-ref="Product_view_definition"/>
         </explicit>
         <explicit name="physical_characteristic" optional="YES">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="correlated_or_independent"/>
         </explicit>
         <derived expression="SELF" name="described_element">
            <typename name="Template_definition"/>
            <redeclaration entity-ref="Item_shape"/>
         </derived>
      </entity>
      <entity name="Template_version" supertypes="Product_version">
         <explicit name="of_product">
            <typename name="Template"/>
            <redeclaration entity-ref="Product_version"/>
         </explicit>
      </entity>
      <rule appliesto="Product_view_definition" name="template_definition_constraint">
         <where expression="SIZEOF ( QUERY ( pvd &lt;* Product_view_definition | ( NOT ( 'PHYSICAL_LAYOUT_TEMPLATE_ARM.' + 'TEMPLATE_DEFINITION' IN TYPEOF (pvd) ) ) AND ( 'PHYSICAL_LAYOUT_TEMPLATE_ARM.' + 'TEMPLATE_VERSION' IN TYPEOF ( pvd.defined_version) ) ) ) =0" label="WR1"/>
      </rule>
      <rule appliesto="Product_version" name="template_version_constraint">
         <where expression="SIZEOF ( QUERY ( pv &lt;* Product_version | ( NOT ( 'PHYSICAL_LAYOUT_TEMPLATE_ARM.' + 'TEMPLATE_VERSION' IN TYPEOF ( pv) ) ) AND ( 'PHYSICAL_LAYOUT_TEMPLATE_ARM.' + 'TEMPLATE' IN TYPEOF ( pv.of_product) ) ) ) =0" label="WR1"/>
      </rule>
   </schema>
</express>
