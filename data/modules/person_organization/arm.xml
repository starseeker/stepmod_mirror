<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/05/28 12:46:12 $"
  rcs.revision="$Revision: 1.5 $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/person_organization/arm.exp"/>

  <schema name="Person_organization_arm">
    <entity
      name="Address">
      <explicit
        name="street_number"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="street"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="postal_box"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="town"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="region"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="postal_code"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="country"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="internal_location"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="facsimile_number"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="telephone_number"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="electronic_mail_address"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="telex_number"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="address_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="WHERE">
        <typename
          name="( EXISTS ( street_number ) OR EXISTS ( street ) OR EXISTS ( postal_box ) OR EXISTS ( town ) OR EXISTS ( region ) OR EXISTS ( postal_code ) OR EXISTS ( country ) OR EXISTS ( internal_location ) OR EXISTS ( faxsimile_number ) OR EXISTS ( telephone_number ) OR EXISTS ( electronic_mail_address ) OR EXISTS ( telex_number ) )"/>
      </explicit>
    </entity>

    <entity
      name="Organization">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="short_name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="long_name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="address_category">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="address_type"/>
      </explicit>
      <unique
        label="organizations_are_unique">
        <unique.attribute
          attribute="id"/>
      </unique>
      <unique
        label="WHERE">
        <unique.attribute
          attribute="SELF.address_categoryIN['postal'"/>
        <unique.attribute
          attribute="'electronic_mail'"/>
        <unique.attribute
          attribute="'internal_location']"/>
      </unique>
      <unique
        label="END_ENTITY">
        <unique.attribute
          attribute="END_ENTITY"/>
      </unique>
      <unique
        label="ENTITY">
        <unique.attribute
          attribute="ENTITYPerson_in_organization"/>
      </unique>
      <unique
        label="id">
        <unique.attribute
          attribute="STRING"/>
      </unique>
      <unique
        label="id_org">
        <unique.attribute
          attribute="Organization"/>
      </unique>
      <unique
        label="last_name">
        <unique.attribute
          attribute="OPTIONALSTRING"/>
      </unique>
      <unique
        label="first_name">
        <unique.attribute
          attribute="OPTIONALSTRING"/>
      </unique>
      <unique
        label="middle_names">
        <unique.attribute
          attribute="OPTIONALLIST[1:?]OFSTRING"/>
      </unique>
      <unique
        label="prefix_titles">
        <unique.attribute
          attribute="OPTIONALLIST[1:?]OFSTRING"/>
      </unique>
      <unique
        label="suffix_titles">
        <unique.attribute
          attribute="OPTIONALLIST[1:?]OFSTRING"/>
      </unique>
      <unique
        label="person_is_unique">
        <unique.attribute
          attribute="id"/>
        <unique.attribute
          attribute="id_org"/>
      </unique>
    </entity>

  </schema>

</express>
