	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address">
An <b>Address</b> is the information that locate persons or organizations.
It provides location details for communication via postal mail, telephone, facsimile, telex or electronic mail.
	</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: street_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.street_number">
	is the number of a location on a street.
	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: street 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.street">
	is the name of a street.	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: postal_box 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.postal_box">
	is the number of a postal box.
	The value of this attribute need not be specified.
		</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: town 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.town">
	is the name of a town.	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: region 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.region">
	is the name of a region.	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: postal_code 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.postal_code">
	is the code that is used by the country's postal service.
  The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: country 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.country">
	is the name of a country.	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: internal_location 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.internal_location">
	is an organization-defined address for internal mail delivery.
	The value of this attribute need not be specified.</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: facsimile_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.facsimile_number">
	is the number to which facsimiles may be sent.
	The value of this attribute need not be specified.
		</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: telephone_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.telephone_number">
	is the number at which telephone calls may be received.
	The value of this attribute need not be specified.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: electronic_mail_address 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.electronic_mail_address">
	is the electronic address to which electronic mail may be sent.
	The value of this attribute need not be specified.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: telex_number 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.telex_number">
	is the number where telex messages may be received.
	The value of this attribute need not be specified.
		</ext_description>
	<ext_description linkend="Person_organization_arm.Address.url">
	is the text that specifies the uniform resource locator associated with the address.
	The value of this attribute need not be specified.
		</ext_description>
	<ext_description linkend="Person_organization_arm.Address.name">
	is the text that specifies the name of the location identified by the address.
	is The value of this attribute need not be specified.
	<example>"White House", "Buckingham Palace", "Kremlin" are examples of address name.
	</example>
		</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Where: WR1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address.wr:WR1">
	At least one of the attributes shall have a value.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Organization 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Organization">
		An <b>Organization</b> is an administrative structure in which persons are active.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Organization  Attribute: id 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Organization.id">
	is the identifier that distinguishes the <b>Organization</b>. 
	</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Organization  Attribute: name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Organization.name">
	is a text by which an <b>Organization</b> is known.
	</ext_description>

	<ext_description linkend="Person_organization_arm.Organization_relationship">
An <b>Organization_relationship</b> is a relationship between two instances of <b>Organization</b>.
<example>
A team belongs to a department which itself belongs to a company. Such an organizational structure can be described up using instances of Organization_relationship.
</example>
	</ext_description>
	
	<ext_description linkend="Person_organization_arm.Organization_relationship.relation_type">
is the string that specifies the meaning of the relationship.
<p>Where applicable the following values shall be used:</p>
<ul>
<li>
'hierarchy': The related Organization is a sub organization of the relating Organization;
</li><li>
'legal succession': The related Organization is the legal successor of the relating Organization;
</li><li> 
'reorganization': The related Organization is the successor of the relating Organization due to an organizational transfer of responsibility. 
</li></ul>
	</ext_description>

	<ext_description linkend="Person_organization_arm.Organization_relationship.description">
is a text that provides further information about the <b>Organization_relationship</b>.
The value of this attribute need not be specified.
	</ext_description>

   <ext_description linkend="Person_organization_arm.Organization_relationship.relating_organization">
is the first <b>Organization</b> that is a part of the relationship.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_view_definition_relationship_arm  Entity: View_definition_relationship  Attribute: related_view 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Person_organization_arm.Organization_relationship.related_organization">
is the other <b>Organization</b> that is part of the relationship.
	 </ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person">
		A <b>Person</b> is an individual human being.
	</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person  Attribute: last_name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person.last_name">
	is the <b>Person</b>'s name.
		</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person  Attribute: first_name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person.first_name">
	is the first element of the <b>Person</b>'s list of forenames.
	The value of this attribute need not be specified.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person  Attribute: middle_names 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person.middle_names">
	is the <b>Person</b>'s other forenames. 
	The value of this attribute need not be specified.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person  Attribute: prefix_titles 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person.prefix_titles">
	is the text that specifies the <b>Person</b>'s social or professional 
	standing and appear before his or her names.
	The value of this attribute need not be specified.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person  Attribute: suffix_titles 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person.suffix_titles">
is the text that specifies the <b>Person</b>'s social or professional standing and appear after his or her names.
	The value of this attribute need not be specified.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person_in_organization 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person_in_organization">
A <b>Person_in_organization</b> is the identification of a <b>Person</b> and of his role in an <b>Organization</b> 
	</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person_in_organization  Attribute: concerned_person
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person_in_organization.concerned_person">
	is the <b>Person</b> who is related with an <b>Organization</b>.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person_in_organization  Attribute: containing_organization
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person_in_organization.containing_organization">
	is the <b>Organization</b> to which a <b>Person</b> is related.

	</ext_description>
		<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person_in_organization  Attribute: role 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person_in_organization.role">
	is the text that designates the role of the <b>Person</b> in the related <b>Organization</b>.</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Person_in_organization  Unique: person_is_unique_in_organization 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Person_in_organization.ur:person_is_unique_in_organization">
	the <b>concerned_person</b> shall be unique in the <b>containing_organization</b>.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address_assignment 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address_assignment">
		An <b>Address_assignment</b> is the association of an <b>Organization</b> 
		or a <b> Person_in_organization</b> with an <b>Address</b>.
	</ext_description>
	
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address_assignment  Attribute: assigned_address 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address_assignment.assigned_address">
	is the <b>Address</b> that is provided.
	</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address_assignment  Attribute: address_type 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address_assignment.address_type">
is the string that specifies the type of the <b>Address</b>.
	The value of this attribute need not be specified.
	<example> 'postal address' and 'visitor address' are examples of address types that may be used to characterize addresses of an organization.
	</example>
	</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address_assignment  Attribute: located_person_organizations 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_arm.Address_assignment.located_person_organizations">
	is the <b>Organization</b> or the <b>Person_in_organization</b> that is located with the <b>Address</b>.
		</ext_description>

</ext_descriptions>
