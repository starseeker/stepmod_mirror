   <ext_description linkend="Person_organization_mim"/>
	 
<!--  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: person_and_organization_address 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_mim.person_and_organization_address">
A <b>person_and_organization_address</b> is a type of <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.personal_address"/>

 and of <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.organizational_address"/>

 that defines the address of a person in the context of his activity in an organization.
	</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: SELF\personal_address.people 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_mim.person_and_organization_address.people">
the <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.person"/>

 whose address is specified.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Attribute: SELF\organizational_address.organizations 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Person_organization_mim.person_and_organization_address.organizations">
the <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.organization"/>

 in which the person is active.</ext_description>

	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Person_organization_arm  Entity: Address  Where: WR1
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
        <ext_description
          linkend="Person_organization_mim.person_and_organization_address.wr:WR1">
          <p>
            The located person shall be referred to by one instance of <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.person_and_organization"/>
          that refers to the considered organization in its <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.person_and_organization.the_organization"/>
 attribute.
        </p>
<note> This rule ensures that the person is registered in the organization where he/she is located by the <b>person_and_organization_address</b>.
</note>

</ext_description>

</ext_descriptions>