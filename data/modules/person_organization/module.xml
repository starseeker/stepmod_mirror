		</ae>
		<ae entity="Organization">
			<aimelt>organization</aimelt>
			<source>ISO 10303-41</source>
			<aa attribute="id">
				<aimelt>organization.id</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="name">
				<aimelt>organization.name</aimelt>
				<source>ISO 10303-41</source>
			</aa>
		</ae>
		
		<ae entity="Person_in_organization">
			<aimelt>person_and_organization</aimelt>
			<source>ISO 10303-41</source>
			<aa attribute="concerned_person" assertion_to="Person">
				<aimelt>PATH</aimelt>
				<refpath>
				  person_and_organization.the_person -&gt; person
        </refpath>
			</aa>
			<aa attribute="containing_organization" assertion_to="Organization">
				<aimelt>PATH</aimelt>
				<refpath>
				  person_and_organization.the_organization -&gt; organization
        </refpath>
			</aa>	
			<aa attribute="role">
				<aimelt>name_attribute.attribute_value</aimelt>
				<source>ISO 10303-41</source>
				<refpath>
				person_and_organization &lt;- name_attribute.named_item
				name_attribute.attribute_value
				</refpath>
			</aa>
		</ae>
			
		<ae entity="Person">
			<aimelt>person</aimelt>
			<source>ISO 10303-41</source>
