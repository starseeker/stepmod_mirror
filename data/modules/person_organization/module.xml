	<keywords>
    		module, person, organization
  	</keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>The Person organization application module supports the requirement to define and describe persons, 
	organizations, persons who are registered in an organization and their addresses.
	</purpose>
	<inscope>
<li>definition of a person;</li>
<li>definition of an organization;</li>
<li>identification of a person in the context of an organization;</li>
<li>definition of an address for persons or organizations;</li>
<li>assignment of an address to a person in an organization or to an organizations;</li>
	</inscope>
	<outscope>
<li>identification of a person independently of any organizational context;</li>
<li>definition of the personal address of a person;</li>
</outscope>
<normrefs>
		<normref.inc normref="ref10303-41.2000" resource.name="person_organization_schema"/>
	</normrefs>
	
	<arm>
		<uof name="Person_Organization">
<description>The Person_Organization UoF specifies the data structure for the representation of the concepts of organization, 
person, person in organization and address.</description>
			
		</uof>
		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="Address">
			<aimelt>address</aimelt>
			<source>ISO 10303-41</source>
			<aa attribute="street_number">
				<aimelt>address.street_number</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="street">
				<aimelt>address.street</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="postal_box">
				<aimelt>address.postal_box</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="town">
				<aimelt>address.town</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="region">
				<aimelt>address.region</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="postal_code">
				<aimelt>address.postal_code</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="country">
				<aimelt>address.country</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="internal_location">
				<aimelt>address.internal_location</aimelt>
				<source>ISO 10303-41</source>
			</aa>
			<aa attribute="facsimile_number">
