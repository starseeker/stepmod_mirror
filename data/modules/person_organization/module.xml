			</aa>
			<aa attribute="suffix_titles">
				<aimelt>person.suffix_titles</aimelt>
				<source>ISO 10303-41</source>
			</aa>
		</ae>

		<ae entity="Address_assignment">
		 <alt_map id="1">
		 <description>
for members of located_person_organizations that are instances of Person_in_organization
		</description>
			<aimelt>
			(person_and_organization_address)
			</aimelt>
			<source>
			ISO 10303-1011
			</source>
			<refpath>
			(person_and_organization_address &lt;=
					 [personal_address]
			     [organizational_address])
			</refpath>
			</alt_map>
			
		 <alt_map id="2">
		 <description>			
		 for members of located_person_organizations that are instances of Organization
		</description>
			<aimelt>
			(organizational_address)
			</aimelt>
			<source>
			ISO 10303-41
			</source>
			</alt_map>

			<aa attribute="assigned_address" assertion_to="Address">
			 <alt_map alt_map.inc="1">
				<aimelt>IDENTICAL MAPPING</aimelt>
				<refpath>
          (person_and_organization_address &lt;= address)
				</refpath>
			</alt_map>
			 <alt_map alt_map.inc="2">			 
				<aimelt>IDENTICAL MAPPING</aimelt>
				<refpath>
					(organizational_address &lt;= address)
				</refpath>
			</alt_map>
			</aa>
			
			<aa attribute="address_type">
			 <alt_map alt_map.inc="1">	
				<aimelt>
				organizational_address.description
				</aimelt>
				<source>ISO 10303-41</source>
				<refpath>
				(person_and_organization_address &lt;= organizational_address
					   organizational_address.description)
        </refpath>
			</alt_map>
			 <alt_map alt_map.inc="2">					
				<aimelt>
				organizational_address.description
				</aimelt>
				<source>ISO 10303-41</source>
			</alt_map>
			</aa>
			<aa attribute="located_person_organizations" assertion_to="Person_in_organization">
				<aimelt>PATH</aimelt>
				<refpath>
        person_and_organization_address &lt;= personal_address
        personal_address.people[i] -&gt; person
				person &lt;- person_and_organization.the_person
				{person_and_organization.the_organization -&gt; organization  
        organization &lt;- organizational_address.organizations[i]
				organizational_address =&gt; person_and_organization_address}
			  </refpath>
			</aa>
			<aa attribute="located_person_organizations" assertion_to= "Organization">
				<aimelt>PATH</aimelt>
				<refpath>
				organizational_address.organizations[i] &lt;- organization
				</refpath>
		  </aa>
		</ae>
	</mapping_table>

	<mim>
		<express-g>
