<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express>
  <schema name="Person_organization_assignment_mim">
    <interface schema="Person_organization_mim">
      <interfaced.item name="organization"/>
      <interfaced.item name="person_and_organization"/>
      <interfaced.item name="personal_address"/>
      <interfaced.item name="organizational_address"/>
    </interface>
    <interface schema="person_organization_schema">
      <interfaced.item name="organization_role"/>
      <interfaced.item name="person_and_organization_role"/>
    </interface>
    <interface schema="management_resources_schema">
      <interfaced.item name="organization_assignment"/>
      <interfaced.item name="person_and_organization_assignment"/>
    </interface>
    <type name="organization_item">
      <description>An <type_ref>organization_item</type_ref> specifies
those objects to which an <entity_ref>organization</entity_ref> may be
assigned.</description>
      <select extensible="YES"/>
    </type>
    <type name="person_and_organization_item">
      <description>A <type_ref>person_and_organization_item</type_ref>
specifies those objects to which a
<entity_ref>person_and_organization</entity_ref> may be
assigned.</description>
      <select extensible="YES"/>
    </type>
    <entity name="applied_organization_assignment"
      supertypes="organization_assignment">
      <explicit name="items">
	<aggregate type="SET" lower="1"/>
	<typename name="organization_item"/>
      </explicit>
    </entity>
    <entity name="applied_person_and_organization_assignment"
      supertypes="person_and_organization_assignment">
      <explicit name="items">
	<aggregate type="SET" lower="1"/>
	<typename name="person_and_organization_item"/>
      </explicit>
    </entity>
  </schema>
</express>
