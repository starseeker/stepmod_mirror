<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">

<module 
	name="person_organization_assignment" 
	part="1013" 
   wg.number="1566" 
	 wg.number.supersedes="1089"
	 wg.number.arm="1090" 
	 wg.number.mim="1091" 
	 checklist.internal_review="1056"
	 checklist.project_leader="1057"
	 checklist.convener="1058"	 
	version="1" 
	status="TS" 
	language="E" 
	publication.year="2003" 
	published="y" 
	rcs.date="$Date: 2003/04/16 09:53:21 $" 
	rcs.revision="$Revision: 1.21 $"
  development.folder="dvlp"
>
	<keywords>
    		module, person, organization, organization assignment
 	</keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>
This part of ISO 10303 specifies an application module for the representation of assignments of an organization or a person in an organization to activity or product data.</purpose>
	<inscope>
		<li>association of an organization with activity or product data;</li>
		<li>association of a person in an organization with activity or product data.</li>
	</inscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Organization_or_person_in_organization_assignment">
			<description>The Organization_or_person_in_organization_Assignment UoF specifies 
			the data structure needed to represent the assignment 
			of an organization or a person in an organization to activity or product data.
			</description>
	
		<uof.ae entity="Organization_or_person_in_organization_assignment"/>
		</uof>

		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="Organization_or_person_in_organization_assignment">
		 <alt_map id="1">
		   <description>if assigned_entity is an Organization</description>
			 <aimelt> 
			(applied_organization_assignment)
			</aimelt>
			<source>ISO 10303-1013</source>
			<refpath>
			(applied_organization_assignment &lt;= organization_assignment)
	    </refpath>
			</alt_map>
		<alt_map id="2">
		   <description>if assigned_entity is a Person_in_organization</description>
			 <aimelt> 
			(applied_person_and_organization_assignment)
			</aimelt>
			<source>ISO 10303-1013</source>
			<refpath>
			(applied_person_and_organization_assignment &lt;= person_and_organization_assignment)
	    </refpath>
			</alt_map>

			<aa attribute="assigned_entity" assertion_to="Organization">
			<aimelt>PATH</aimelt>
			<refpath>
			applied_organization_assignment &lt;= organization_assignment
			organization_assignment.assigned_organization -&gt; organization
			</refpath>
			</aa>
			<aa attribute="assigned_entity" assertion_to="Person_in_organization">
			<aimelt>PATH</aimelt>
			<refpath>
			applied_person_and_organization_assignment &lt;= person_and_organization_assignment
			person_and_organization_assignment.assigned_person_and_organization -&gt; person_and_organization
			</refpath>
			</aa>
			<aa attribute="role">
			 <alt_map alt_map.inc="1">
       <aimelt>
			   (organization_role.name)
			 </aimelt>
       <source>ISO 10303-41</source>
        <refpath>				
					(organization_assignment
					 organization_assignment.role -&gt; organization_role
					 organization_role
					 organization_role.name)
				</refpath>
				</alt_map>

			 <alt_map alt_map.inc="2">
       <aimelt>
			   (person_and_organization_role.name)
			 </aimelt>
       <source>ISO 10303-41</source>
        <refpath>						
			  (person_and_organization_assignment
			 		person_and_organization_assignment.role -&gt; person_and_organization_role
					person_and_organization_role
					person_and_organization_role.name)
				</refpath>
			</alt_map>
			</aa>
			
     <aa attribute="items" assertion_to="organization_or_person_in_organization_item">
			 <alt_map alt_map.inc="1">
			 <aimelt>PATH</aimelt>
       <refpath>
			 (applied_organization_assignment.items[i] -&gt; organization_item)
				</refpath>
				</alt_map>
					
			 <alt_map alt_map.inc="2">
       <aimelt>
			   PATH
			 </aimelt>
			 <refpath>
			 (applied_person_and_organization_assignment.items[i] -&gt; person_and_organization_item)
				</refpath>
				</alt_map>
     </aa>
   </ae>   
	</mapping_table>
	
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
			<imgfile file="mimexpg2.xml"/>
		</express-g>
		<shortnames>
      <shortname name="APORAS" entity="applied_organization_assignment"/> 
      <shortname name="APAOA" entity="applied_person_and_organization_assignment"/> 
 	  </shortnames>
	</mim>

</module>
