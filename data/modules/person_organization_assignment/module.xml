<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">

<module 
	name="person_organization_assignment" 
	part="1013" 
   wg.number="1092" 
	 wg.number.supersedes="714" 
	 checklist.internal_review="1089"
	 checklist.project_leader="1090"
	 checklist.convener="1091"	 
	version="1" 
	status="TS" 
	language="E" 
	publication.year="2002" 
	published="n" 
	rcs.date="$Date: 2002/05/28 20:17:41 $" 
	rcs.revision="$Revision: 1.9 $">
	<keywords>
    		module, person, organization, organization, assignment
 	</keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>The Person organization assignment application module supports the requirement 
	to assign an organization or a person in an organization to activity or product data.</purpose>
	<inscope>
		<li>the assignment of an organization to activity or product data;</li>
		<li>the assignment of a person in an organization to activity or product data.</li>
	</inscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Organization_or_person_in_organization_assignment">
			<description>The Organization_or_person_in_organization_Assignment UoF specifies 
			the definitional information for the concept of the assignment 
			of an organization or a person in an organization to activity or product data.</description>
			
	
		<uof.ae entity="Organization_or_person_in_organization_assignment">
			</uof.ae>
		</uof>

		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="Organization_or_person_in_organization_assignment">
			<aimelt> 
							 (person_and_organization_assignment)
							 (organization_assignment)
			</aimelt>
			<source>41</source>
			<aa attribute="assigned_entity">
			<aimelt>
							(person_and_organization_assignment.assigned_person_and_organization)
							(organization_assignment.assigned_organization)
			</aimelt>
			<source>41</source>
			</aa>
			<aa attribute="role">
				<aimelt>PATH
			  </aimelt>
        <refpath>
			   (person_and_organization_assignment
			 		person_and_organization_assignment.role -&gt; person_and_organization_role
					person_and_organization_role
					person_and_organization_role.name)
					
					(organization_assignment
					organization_assignment.role -&gt; organization_role
					organization_role
					organization_role.name)
       </refpath>
			</aa>
     <aa attribute="items" assertion_to="Organization_or_person_in_organization_assignment">
       <aimelt>PATH</aimelt>
       <refpath>
			   (person_and_organization_assignment =&gt;
			 		applied_person_and_organization_assignment
					applied_person_and_organization_assignment.items[i])
					(organization_assignment =&gt;
					 applied_organization_assignment
					 applied_organization_assignment.items[i])
				</refpath>
     </aa>
   </ae>   
	</mapping_table>
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
		</express-g>
		<shortnames>
      <shortname name="APCRAS" entity="applied_organization_assignment"/> 
      <shortname name="APCRAS" entity="applied_person_and_organization_assignment"/> 
 	  </shortnames>
	</mim>

</module>
