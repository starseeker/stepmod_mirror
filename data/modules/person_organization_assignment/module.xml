<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">

<module 
	name="person_organization_assignment" 
	part="1013" 
   wg.number="1092" 
	 wg.number.supersedes="714"
	 wg.number.arm="1093" 
	 wg.number.mim="1094" 
	 checklist.internal_review="1089"
	 checklist.project_leader="1090"
	 checklist.convener="1091"	 
	version="1" 
	status="TS" 
	language="E" 
	publication.year="2002" 
	published="y" 
	rcs.date="$Date: 2002/06/20 06:21:56 $" 
	rcs.revision="$Revision: 1.11 $">
	<keywords>
    		module, person, organization, organization, assignment
 	</keywords>
	<contacts>
		<projlead ref="pdmmodules.projlead"/>
		<editor ref="pdmmodules.editor"/>
	</contacts>
	<purpose>The Person organization assignment application module supports the requirement 
	to assign an organization or a person in an organization to activity or product data.</purpose>
	<inscope>
		<li>association of an organization with activity or product data;</li>
		<li>association of a person in an organization with activity or product data.</li>
	</inscope>
	<normrefs>
		<normref.inc normref="ref10303-41.2000"/>
	</normrefs>
	<arm>
		<uof name="Organization_or_person_in_organization_assignment">
			<description>The Organization_or_person_in_organization_Assignment UoF specifies 
			the data structure needed to represent the assignment 
			of an organization or a person in an organization to activity or product data.</description>
			
	
		<uof.ae entity="Organization_or_person_in_organization_assignment">
			</uof.ae>
		</uof>

		<express-g>
			<imgfile file="armexpg1.xml"/>
			<imgfile file="armexpg2.xml"/>
		</express-g>
	</arm>
	<mapping_table>
		<ae entity="Organization_or_person_in_organization_assignment">
		 <alt>
			 #1 : for assigned person_organizations that are instances of Organization
	 		 #2 : for assigned person_organizations that are instances of Person_in_organization
			</alt>
			<aimelt> 
			(#1: applied_organization_assignment)
			(#2: applied_person_and_organization_assignment)
			</aimelt>
			<source>
			(#1: ISO 10303-1013)
			(#2: ISO 10303-1013)
			</source>
			<refpath>
			(#1: applied_organization_assignment &lt;= organization_assignment)
			(#2: applied_person_and_organization_assignment&lt;= person_and_organization_assignment)
			</refpath>
			<aa attribute="assigned_entity" assertion_to="Organization">
			<aimelt>PATH</aimelt>
			<refpath>
			applied_organization_assignment &lt;= organization_assignment
			organization_assignment.assigned_organization -&gt; organization
			</refpath>
			</aa>
			<aa attribute="assigned_entity" assertion_to="Person_in_organization">
			<aimelt>PATH</aimelt>
			<refpath>
			applied_person_and_organization_assignment&lt;= person_and_organization_assignment
			person_and_organization_assignment.assigned_person_and_organization -&gt; person_and_organization
			</refpath>
			</aa>
			<aa attribute="role">
				<aimelt>
				#1: (organization_role.name)
				#2: (person_and_organization_role.name)
			  </aimelt>
        <refpath>				
					(#1: organization_assignment
					 organization_assignment.role -&gt; organization_role
					 organization_role
					 organization_role.name)
			    (#2: person_and_organization_assignment
			 		person_and_organization_assignment.role -&gt; person_and_organization_role
					person_and_organization_role
					person_and_organization_role.name)
       </refpath>
			</aa>
     <aa attribute="items" assertion_to="Organization_or_person_in_organization_select">
       <aimelt>PATH</aimelt>
       <refpath>
					#1: (applied_organization_assignment.items[i] -&gt; organization_item)
			    #2: (applied_person_and_organization_assignment.items[i] -&gt; person_and_organization_item)
				</refpath>
     </aa>
   </ae>   
	</mapping_table>
	<mim>
		<express-g>
			<imgfile file="mimexpg1.xml"/>
		</express-g>
		<shortnames>
      <shortname name="APORAS" entity="applied_organization_assignment"/> 
      <shortname name="APAOA" entity="applied_person_and_organization_assignment"/> 
 	  </shortnames>
	</mim>

</module>
