<module>
  <object_id>{ iso standard 10303 part(1013) version(0) }</object_id>
  <name>Person_organization_assignment</name>
  <purpose>The Person organization assignment application module
supports the requirement to assign an organization or a person in an
organization to product data.</purpose>
  <inscope>
    <li>the assignment of an organization to product data</li>
    <li>the assignment of a person in an organization to product data</li>
  </inscope>
  <outscope>
    <li>all things which are not involved in the specification of the
assignment organizations or people within them</li>
  </outscope>
&normrefs;
  <normref url="../person_organization/person_organization.xml">
    <stdref><orgname>ISO</orgname> <stdnumber>10303-1011</stdnumber>,
<stdtitle>Industrial automation systems and integration - Product data
representation and exchange</stdtitle><subtitle> - Part 1011:
Application module: Person organization</subtitle>.</stdref>
  </normref>
&abbreviations;
