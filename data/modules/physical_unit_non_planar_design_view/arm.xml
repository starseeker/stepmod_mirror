<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="physical_unit_non_planar_design_view_arm schema_instance"/>
   <schema name="Physical_unit_non_planar_design_view_arm">
      <interface kind="use" schema="Manifold_subsurface_arm"/>
      <interface kind="use" schema="Physical_unit_design_view_arm"/>
      <interface kind="reference" schema="Characterizable_object_arm">
         <interfaced.item name="bag_to_set"/>
      </interface>
      <entity name="Assembly_component_non_planar_shape_model" supertypes="Manifold_subsurface_model" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="shape_characterized_component" optional="NO">
            <aggregate type="SET" lower="1" upper="?" unique="NO" optional="NO"/>
            <typename name="Assembly_component"/>
         </explicit>
         <derived name="equivalent_reference_shape_model" expression="bag_to_set(QUERY( gmr &lt;* USEDIN(SELF, 'EXTENDED_BASIC_GEOMETRY_ARM.GEOMETRIC_MODEL_RELATIONSHIP.REP_2') |&#10;        (gmr\Representation_relationship.relation_type = 'equivalent reference shape model')))">
            <aggregate type="SET" lower="0" upper="1" unique="NO" optional="NO"/>
            <typename name="Geometric_model_relationship"/>
         </derived>
         <where label="WR1" expression="NOT EXISTS(SELF\Representation.description)"/>
         <where label="WR2" expression="SIZEOF(equivalent_reference_shape_model) &lt; 2"/>
      <where label="IP1"/>
      </entity>
      <rule name="unique_assembly_component_non_planar_shape_model" appliesto="Assembly_component_non_planar_shape_model">
         <algorithm>LOCAL
     ac : BAG OF Assembly_component := [];
   END_LOCAL;
   REPEAT i := 1 to SIZEOF(Assembly_component_non_planar_shape_model) by 1;
     ac  := ac + Assembly_component_non_planar_shape_model[i].shape_characterized_component;
   END_REPEAT;</algorithm>
         <where label="WR1" expression="SIZEOF(ac) = SIZEOF(bag_to_set(ac))"/>
      </rule>
   </schema>
</express>
