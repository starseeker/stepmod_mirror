<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1613">
   <application name="JSDAI" owner="LKSoft" source="physical_unit_non_planar_design_view_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Physical_unit_non_planar_design_view_arm">
      <interface kind="use" schema="Manifold_subsurface_arm"/>
      <interface kind="use" schema="Physical_unit_design_view_arm"/>
      <interface kind="reference" schema="Support_resource_arm">
         <interfaced.item name="bag_to_set"/>
      </interface>
      <entity abstract.entity="NO" abstract.supertype="NO" name="Assembly_component_non_planar_shape_model" supertypes="Manifold_subsurface_model">
         <explicit name="shape_characterized_component" optional="NO">
            <aggregate lower="1" optional="NO" type="SET" unique="NO" upper="?"/>
            <typename name="Assembly_component"/>
         </explicit>
         <derived expression="bag_to_set(QUERY( gmr &lt;* USEDIN(SELF, 'GEOMETRIC_MODEL_RELATIONSHIP_ARM.GEOMETRIC_MODEL_RELATIONSHIP.REP_2') |&#10;        (gmr\Representation_relationship.relation_type = 'equivalent reference shape model')))" name="equivalent_reference_shape_model">
            <aggregate lower="0" optional="NO" type="SET" unique="NO" upper="1"/>
            <typename name="Geometric_model_relationship"/>
         </derived>
         <where expression="NOT EXISTS(SELF\Representation.description)" label="WR1"/>
         <where expression="SIZEOF(equivalent_reference_shape_model) &lt; 2" label="WR2"/>
      <where label="IP1"/>
      </entity>
      <rule appliesto="Assembly_component_non_planar_shape_model" name="unique_assembly_component_non_planar_shape_model">
         <algorithm>LOCAL
     ac : BAG OF Assembly_component := [];
   END_LOCAL;
   REPEAT i := 1 to SIZEOF(Assembly_component_non_planar_shape_model) by 1;
     ac  := ac + Assembly_component_non_planar_shape_model[i].shape_characterized_component;
   END_REPEAT;</algorithm>
         <where expression="SIZEOF(ac) = SIZEOF(bag_to_set(ac))" label="WR1"/>
      </rule>
   </schema>
</express>
