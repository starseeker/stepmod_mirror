<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="picture_representation_arm schema_instance"/>
   <schema name="Picture_representation_arm">
      <interface kind="use" schema="Binary_representation_arm"/>
      <interface kind="use" schema="Presentation_hierarchy_arm"/>
      <constant name="pre_defined_picture_representation_types" expression="[ 'JPEG', 'PNG', 'TIFF', 'BMP', 'GIF']">
         <aggregate type="SET" lower="0" upper="?"/>
         <builtintype type="STRING"/>
      </constant>
      <type name="picture_representation_element_select">
         <select extensible="YES" genericentity="YES" selectitems="Styled_element Picture_representation_item Axis_placement_2d"/>
      </type>
      <type name="pr_external_identification_item">
         <select extensible="YES" genericentity="YES" basedon="external_identification_item" selectitems="Externally_defined_picture_representation_item"/>
      </type>
      <entity name="Externally_defined_picture_representation_item" supertypes="Picture_representation_item">
         <inverse name="source" entity="External_source_identification" attribute="item"/>
         <where label="WR1" expression="NOT (SELF\Representation_item.name IN pre_defined_picture_representation_types)"/>
      </entity>
      <entity name="Picture_representation" supertypes="View_area">
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="picture_representation_element_select"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <where label="WR1" expression="SIZEOF(QUERY(item &lt;* items | &#10;        'PICTURE_REPRESENTATION_ARM.'+'PICTURE_REPRESENTATION_ITEM' IN TYPEOF(item))) = 1"/>
      </entity>
      <entity name="Picture_representation_item" abstract.supertype="YES" supertypes="Bytes_representation_item" super.expression="ONEOF (Externally_defined_picture_representation_item, Predefined_picture_representation_item)"/>
      <entity name="Predefined_picture_representation_item" supertypes="Picture_representation_item">
         <where label="WR1" expression="SELF\Representation_item.name IN pre_defined_picture_representation_types"/>
      </entity>
   </schema>
</express>
