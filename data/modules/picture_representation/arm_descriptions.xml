<ext_description linkend="Picture_representation_arm">
</ext_description>

<!-- +++++++++++ pre_defined_picture_representation_types +++++++++++ -->

<ext_description linkend="Picture_representation_arm.pre_defined_picture_representation_types">
	A <b>pre_defined_picture_representation_types</b> is a list of constant values.
</ext_description>

<!-- +++++++++++ Binary_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Binary_representation_item">
	A <b>Binary_representation_item</b> is a type of 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_item"/>.
</ext_description>

<!-- +++++++++++ Bytes_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Bytes_representation_item">
	A <b>Bytes_representation_item</b> is a type of 
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Binary_representation_item"/>.
</ext_description>

<!-- +++++++++++ Externally_defined_picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Externally_defined_picture_representation_item">
	A <b>Externally_defined_picture_representation_item</b> is a type of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Picture_representation_item"/>.
</ext_description>

<!-- source -->
<ext_description linkend="Picture_representation_arm.Externally_defined_picture_representation_item.source">
	an inverse relationship that specifies that the existence of the <b>Externally_defined_picture_representation_item</b> is dependent on the existence of the 
	<express_ref linkend="External_item_identification_assignment:arm:External_item_identification_assignment_arm.External_source_identification"/> 
	that specifies the <b>Externally_defined_picture_representation_item</b> as its 
	<express_ref linkend="External_item_identification_assignment:arm:External_item_identification_assignment_arm.External_source_identification.item"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_arm.Externally_defined_picture_representation_item.wr:WR1">
	A 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_item.name"/>
	shall not be a type of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.pre_defined_picture_representation_types"/>.
</ext_description>

<!-- +++++++++++ Picture_representation +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Picture_representation">
	A <b>Picture_representation</b> is a type of 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>.
</ext_description>

<!-- items -->
<ext_description linkend="Picture_representation_arm.Picture_representation.items">
	an attribute inherited from the
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation"/>
	shall be redeclared as the
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.picture_representation_element_select"/>
	for the <b>Picture_representation</b>.
	There shall exist one or more
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.picture_representation_element_select"/>
	for the <b>Picture_representation</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_arm.Picture_representation.wr:WR1">
	<p>
	A <b>Picture_representation</b> shall have exactly one 
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_element"/> 
	as an item in the <b>items</b> list.
	</p>
</ext_description>

<!-- WR2 -->
<ext_description linkend="Picture_representation_arm.Picture_representation.wr:WR2">
	<p>
	The  
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_element"/> 
	in the <b>items</b> list shall refer to a 
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Picture_representation_item"/>.
	</p>
</ext_description>


<!-- +++++++++++ Picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Picture_representation_item">
	A <b>Picture_representation_item</b> is a type of 
	<express_ref linkend="Binary_representation:arm:Binary_representation_arm.Bytes_representation_item"/>.
	A <b>Picture_representation_item</b> is a
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Externally_defined_picture_representation_item"/>
	or a
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Predefined_picture_representation_item"/>.
</ext_description>

<!-- +++++++++++ Predefined_picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_arm.Predefined_picture_representation_item">
	A <b>Predefined_picture_representation_item</b> is a type of 
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Picture_representation_item"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_arm.Predefined_picture_representation_item.wr:WR1">
	A 
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation_item.name"/>
	shall not be a type of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.pre_defined_picture_representation_types"/>.
</ext_description>













