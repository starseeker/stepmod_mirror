<ext_description linkend="picture_representation_mim">
</ext_description>

<!-- +++++++++++ pre_defined_picture_representation_types +++++++++++ -->
<ext_description linkend="Picture_representation_mim.pre_defined_picture_representation_types">
	A <b>pre_defined_picture_representation_types</b> is a list of contstant values. 
</ext_description>

<!-- +++++++++++ externally_defined_picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_mim.externally_defined_picture_representation_item">
	An <b>externally_defined_picture_representation_item</b> is a type of
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.picture_representation_item"/>
	that implements the ARM concept of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Externally_defined_picture_representation_item"/>. 
</ext_description>

<!-- source -->
<ext_description linkend="Picture_representation_mim.externally_defined_picture_representation_item.source">
	an inverse relationship that specifies that the existence of the <b>externally_defined_picture_representation_item</b> is dependent on the existence of the 
	<express_ref linkend="External_item_identification_assignment:mim:External_item_identification_assignment_mim.applied_external_identification_assignment"/> 
	that specifies the <b>externally_defined_picture_representation_item</b> as its 
	<express_ref linkend="External_item_identification_assignment:mim:External_item_identification_assignment_mim.applied_external_identification_assignment.items"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_mim.externally_defined_picture_representation_item.wr:WR1">
	<p>
		A name of <b>externally_defined_picture_representation_item</b> shall not be from a set of names defined in 
		<express_ref linkend="Picture_representation:mim:Picture_representation_mim.pre_defined_picture_representation_types"/>.
	</p>
</ext_description>

<!-- +++++++++++ picture_representation +++++++++++ -->
<ext_description linkend="Picture_representation_mim.picture_representation">
	A <b>picture_representation</b> is a type of
	<express_ref linkend="presentation_organization_schema:ir_express:presentation_organization_schema.presentation_view"/>
	that implements the ARM concept of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Picture_representation"/>.
</ext_description>

<!-- items -->
<ext_description linkend="Picture_representation_mim.picture_representation.items">
	an attribute inherited from the
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>
	shall be redeclared as the
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.picture_representation_item_select"/>
	for the <b>picture_representation</b>.
	There shall exist two or more
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.picture_representation_item_select"/>
	for the <b>picture_representation</b>.
</ext_description>

<!-- size -->
<ext_description linkend="Picture_representation_mim.picture_representation.size">
	an inverse relationship that specifies that the existence of the <b>picture_representation</b> is dependent on the existence of the 
	<express_ref linkend="presentation_organization_schema:ir_express:presentation_organization_schema.presentation_size"/> 
	that specifies the <b>picture_representation</b> as its 
	<express_ref linkend="presentation_organization_schema:ir_express:presentation_organization_schema.presentation_size.unit"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_mim.picture_representation.wr:WR1">
	<p>
	A <b>picture_representation</b> must have exactly one 
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.picture_representation_item"/> 
	as an item in the <b>items</b> list.
	
	</p>
</ext_description>

<!-- +++++++++++ picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_mim.picture_representation_item">
	A <b>picture_representation_item</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.bytes_representation_item"/>
	that implements the ARM concept of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Picture_representation_item"/>.
	A <b>picture_representation_item</b> is either an
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.externally_defined_picture_representation_item"/>
	or a
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.predefined_picture_representation_item"/>.
</ext_description>

<!-- +++++++++++ predefined_picture_representation_item +++++++++++ -->
<ext_description linkend="Picture_representation_mim.predefined_picture_representation_item">
	A <b>predefined_picture_representation_item</b> is a type of
	<express_ref linkend="Picture_representation:mim:Picture_representation_mim.picture_representation_item"/>
	that implements the ARM concept of
	<express_ref linkend="Picture_representation:arm:Picture_representation_arm.Predefined_picture_representation_item"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Picture_representation_mim.predefined_picture_representation_item.wr:WR1">
	<p>
	A name of <b>predefined_picture_representation_item</b> shall be from a set of names defined in 
		<express_ref linkend="Picture_representation:mim:Picture_representation_mim.pre_defined_picture_representation_types"/>.
	</p>
</ext_description>

</ext_descriptions>
