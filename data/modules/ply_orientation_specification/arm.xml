<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="ply_orientation_specification_arm schema_instance"/>
   <schema name="Ply_orientation_specification_arm">
      <interface kind="use" schema="Construction_geometry_arm"/>
      <type name="angle_select">
         <select selectitems="Curve Direction Point_path"/>
      </type>
      <entity name="Draped_orientation_angle" supertypes="Ply_orientation_angle"/>
      <entity name="Laid_orientation_angle" supertypes="Ply_orientation_angle"/>
      <entity name="Ply_orientation_angle" super.expression="ONEOF (Draped_orientation_angle, Laid_orientation_angle)">
         <explicit name="angle_reference">
            <typename name="angle_select"/>
         </explicit>
         <explicit name="basis">
            <typename name="Reinforcement_orientation_basis"/>
         </explicit>
      </entity>
      <entity name="Point_and_vector">
         <explicit name="location">
            <typename name="point_select"/>
         </explicit>
         <explicit name="vector">
            <aggregate type="LIST" lower="1" upper="2"/>
            <typename name="Direction"/>
         </explicit>
      </entity>
      <entity name="Point_path">
         <explicit name="directions">
            <aggregate type="LIST" lower="1" upper="?"/>
            <typename name="Point_and_vector"/>
         </explicit>
      </entity>
      <entity name="Reinforcement_orientation_basis">
         <explicit name="basis_location">
            <typename name="point_select"/>
         </explicit>
         <explicit name="orientation">
            <typename name="Direction"/>
         </explicit>
      </entity>
   </schema>
</express>
