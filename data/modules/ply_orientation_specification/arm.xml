<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1772">
   <application name="JSDAI" owner="LKSoft" source="ply_orientation_specification_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Ply_orientation_specification_arm">
      <interface kind="use" schema="Part_and_zone_laminate_tables_arm"/>
      <type name="angle_select">
         <select selectitems="Axis_placement_3d Curve Direction Point_path"/>
      </type>
      <entity name="Direction_of_fiber_orientation_within_a_ply" supertypes="Representation">
         <explicit name="context_of_items">
            <typename name="Geometric_coordinate_space"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="angle_select"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <inverse attribute="rep_1" entity="Ply_orientation_angle" name="orientations">
            <inverse.aggregate lower="1" type="SET" upper="1"/>
         </inverse>
      </entity>
      <entity name="Draped_orientation_angle" supertypes="Ply_orientation_angle"/>
      <entity name="Laid_orientation_angle" supertypes="Ply_orientation_angle"/>
      <entity name="Ply_orientation_angle" super.expression="ONEOF (Draped_orientation_angle, Laid_orientation_angle)" supertypes="Representation_relationship">
         <explicit name="angle_reference">
            <typename name="angle_select"/>
         </explicit>
         <explicit name="rep_1">
            <typename name="Direction_of_fiber_orientation_within_a_ply"/>
            <redeclaration entity-ref="Representation_relationship"/>
         </explicit>
         <explicit name="rep_2">
            <typename name="Reinforcement_orientation_basis"/>
            <redeclaration entity-ref="Representation_relationship"/>
         </explicit>
      </entity>
      <entity name="Point_and_vector" supertypes="Detailed_geometric_model_element">
         <explicit name="location">
            <typename name="Point"/>
         </explicit>
         <explicit name="vector">
            <aggregate lower="1" type="LIST" upper="2"/>
            <typename name="Direction"/>
         </explicit>
      </entity>
      <entity name="Point_path" supertypes="Detailed_geometric_model_element">
         <explicit name="directions">
            <aggregate lower="1" type="LIST" upper="?"/>
            <typename name="Point_and_vector"/>
         </explicit>
      </entity>
      <entity name="Reinforcement_orientation_basis" supertypes="Representation">
         <explicit name="context_of_items">
            <typename name="Geometric_coordinate_space"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="Axis_placement_3d"/>
            <redeclaration entity-ref="Representation"/>
         </explicit>
         <derived expression="SELF\Representation.items[1]\Axis_placement.location" name="basis_location">
            <typename name="Cartesian_point"/>
         </derived>
         <derived expression="SELF\Representation.items[1]\Axis_placement.ref_direction" name="orientation">
            <typename name="Direction"/>
         </derived>
         <inverse attribute="basis" entity="Laminate_table" name="tables">
            <inverse.aggregate lower="1" type="SET" upper="?"/>
         </inverse>
         <inverse attribute="rep_2" entity="Ply_orientation_angle" name="orientations">
            <inverse.aggregate lower="1" type="SET" upper="?"/>
         </inverse>
      </entity>
      <subtype.constraint entity="Detailed_geometric_model_element" name="pos_detailed_geometric_model_element_subtypes" super.expression="ONEOF (Point_and_vector, Point_path)"/>
   </schema>
</express>
