<!-- +++++++++++ draped_defined_transformation +++++++++++ -->
<ext_description linkend="Ply_orientation_specification_mim.draped_defined_transformation">
	A <b>draped_defined_transformation</b> is a type of
	<express_ref linkend="Ply_orientation_specification:mim:Ply_orientation_specification_mim.transformation_with_derived_angle"/>
	that implements the ARM concept of 
	<express_ref linkend="Ply_orientation_specification:arm:Ply_orientation_specification_arm.Draped_orientation_angle"/>.
</ext_description>

<!-- +++++++++++ laid_defined_transformation +++++++++++ -->
