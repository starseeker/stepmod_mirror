<!-- +++++++++++ derive_angle +++++++++++ -->
<ext_description linkend="Ply_orientation_specification_mim.derive_angle">
	The <b>derive_angle</b> accepts as input two 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.axis2_placement_3d"/> 
	with a common 3 direction and calculates the angle of rotation between them.
</ext_description>

<!-- placement_1 -->
<ext_description linkend="Ply_orientation_specification_mim.derive_angle.placement_1">
	the first of the two
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.axis2_placement_3d">axis2_placement_3ds</express_ref>
	with a common direction.
</ext_description>

<!-- placement_2 -->
<ext_description linkend="Ply_orientation_specification_mim.derive_angle.placement_2">
	the second of the two
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.axis2_placement_3d">axis2_placement_3ds</express_ref>
	with a common direction.
</ext_description>

