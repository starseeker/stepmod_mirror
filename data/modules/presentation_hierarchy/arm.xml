<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="presentation_hierarchy_arm schema_instance"/>
   <schema name="Presentation_hierarchy_arm">
      <interface kind="use" schema="Contextual_shape_positioning_arm"/>
      <type name="area_select">
         <select extensible="YES" selectitems="View_area"/>
      </type>
      <type name="presentation_association_select">
         <select extensible="YES"/>
      </type>
      <type name="view_placement_select">
         <select selectitems="Axis_placement_mapping Cartesian_transformation_2d Geometric_placement_operation"/>
      </type>
      <entity name="Presentation_set">
         <explicit name="areas">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="View_area"/>
         </explicit>
      </entity>
      <entity name="View">
         <explicit name="id" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="layout">
            <typename name="area_select"/>
         </explicit>
         <explicit name="view_space">
            <typename name="Geometric_coordinate_space"/>
         </explicit>
         <explicit name="view_placement">
            <typename name="view_placement_select"/>
         </explicit>
      </entity>
      <entity name="View_area">
         <explicit name="id" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="area_space">
            <typename name="Geometric_coordinate_space"/>
         </explicit>
         <explicit name="revision_id" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="size">
            <builtintype type="REAL"/>
         </explicit>
      </entity>
      <entity name="View_area_assignment">
         <explicit name="associated_view_area">
            <typename name="View_area"/>
         </explicit>
         <explicit name="is_describing">
            <typename name="presentation_association_select"/>
         </explicit>
      </entity>
      <entity name="View_area_relationship">
         <explicit name="relation_type">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="relating">
            <typename name="View_area"/>
         </explicit>
         <explicit name="related">
            <typename name="View_area"/>
         </explicit>
      </entity>
      <entity name="View_relationship">
         <explicit name="relation_type">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="relating">
            <typename name="View"/>
         </explicit>
         <explicit name="related">
            <typename name="View"/>
         </explicit>
      </entity>
   </schema>
</express>
