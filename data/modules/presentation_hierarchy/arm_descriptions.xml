<ext_description linkend="Presentation_hierarchy_arm">
</ext_description>

<!-- +++++++++++ view_area_relation_type +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type">
	A <b>view_area_relation_type</b> is a list of view area relation types.
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type.copy">
	the view area  relation type is copy;
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type.derivation">
	the view area  relation type is derivation;
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type.hierarchy">
	the view area  relation type is hierarchy;
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type.substitution">
	the view area  relation type is substitution;
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_area_relation_type.unspecified">
	the view area  relation type is unspecified.
</ext_description>

<!-- +++++++++++ view_relation_type +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.view_relation_type">
	A <b>view_relation_type</b> is a list of view relation types.
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_relation_type.dependency">
	the view relation type is dependency;
</ext_description>

<ext_description linkend="Presentation_hierarchy_arm.view_relation_type.unspecified">
	the view relation type is unspecified.
</ext_description>


<!-- +++++++++++ Presentation_set ++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.Presentation_set">
	A <b>Presentation_set</b> is a collection of 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area">View_areas</express_ref>.
</ext_description>

<!-- areas -->
<ext_description linkend="Presentation_hierarchy_arm.Presentation_set.areas">
	the set of 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/> 
	objects which make up the <b>Presentation_set</b>.
</ext_description>

<!-- +++++++++++ Presentation_set_assignment +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.Presentation_set_assignment">
	A <b>Presentation_set_assignment</b> is a mechanism to associate a
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.Presentation_set"/> 
	with the object that is presented in this set. 
</ext_description>

<!-- associated_presentation -->
<ext_description linkend="Presentation_hierarchy_arm.Presentation_set_assignment.associated_presentation">
	specifies the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.Presentation_set"/> 
	that is associated with the object.
</ext_description>

<!-- is_describing -->
<ext_description linkend="Presentation_hierarchy_arm.Presentation_set_assignment.is_describing">
	specifies the object that is associated with the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.Presentation_set"/>.
</ext_description>

<!-- +++++++++++ View +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View">
	A <b>View</b> is a type of
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_model"/>.
</ext_description>

<!-- items -->
<ext_description linkend="Presentation_hierarchy_arm.View.items">
	an attribute inherited from the
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation"/>
	shall be redeclared as the
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_element_select"/>
	for the <b>View</b>.
	There shall exist one or more
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_element_select"/>
	for the <b>View</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Presentation_hierarchy_arm.View.wr:WR1">
	<p>
		This 
		<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation"/> 
		must be defined in 2D.
	</p>
</ext_description>

<!-- +++++++++++ View_area +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View_area">
	A <b>View_area</b> is a type of
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_model"/>.
	A <b>View_area</b> is a collection of 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View"/> 
	objects, placed in a specified rectangular area. 
	The placement of the views is defined relative to the two-dimensional coordinate space of the <b>View_area</b>.
</ext_description>

<!-- size -->
<ext_description linkend="Presentation_hierarchy_arm.View_area.size">
	specifies the width and the height of the <b>View_area</b>.
</ext_description>

<!-- items -->
<ext_description linkend="Presentation_hierarchy_arm.View_area.items">
	an attribute inherited from the
	<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation"/>
	shall be redeclared as the
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_area_element_select"/>
	for the <b>View_area</b>.
	There shall exist one or more
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_area_element_select"/>
	for the <b>View_area</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="Presentation_hierarchy_arm.View_area.wr:WR1">
	<p>
		This 
		<express_ref linkend="Foundation_representation:arm:Foundation_representation_arm.Representation"/> 
		must be defined in 2D.
	</p>
</ext_description>

<!-- +++++++++++ View_area_assignment +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_assignment">
	A <b>View_area_assignment</b> is an association of a 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/> 
	with the object that is presented on the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>.
</ext_description>

<!-- associated_view_area -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_assignment.associated_view_area">
	specifies the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>
	that is associated with the object.
</ext_description>

<!-- is_describing -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_assignment.is_describing">
	specifies the object that is associated with the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>.
</ext_description>

<!-- +++++++++++ View_area_relationship +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_relationship">
	A <b>View_area_relationship</b> is a relationship between two 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/> 
	objects.
</ext_description>

<!-- relation_type -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_relationship.relation_type">
	specifies the 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_area_relation_type"/> 
	for the <b>View_area_relationship</b>.
</ext_description>

<!-- description -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_relationship.description">
	specifies additional information about the <b>View_area_relationship</b>. 
	The value of this attribute need not be specified.
</ext_description>

<!-- relating -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_relationship.relating">
	<p>
	specifies the primary 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/> 
	in the relationship.
	</p>
	<note>
		The semantics of this attribute are defined by the attribute <b>relation_type</b>.
	</note>
</ext_description>

<!-- related -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_relationship.related">
	<p>
	specifies the secondary 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/> 
	in the relationship. 
	</p>
	<note>
		The semantics of this attribute are defined by the attribute <b>relation_type</b>.
	</note>
</ext_description>

<!-- +++++++++++ View_area_replication +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_replication">
	A <b>View_area_replication</b> is a type of
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_model_replication"/>.
</ext_description>

<!-- replicated_model -->
<ext_description linkend="Presentation_hierarchy_arm.View_area_replication.replicated_model">
	an attribute inherited from the
	<express_ref linkend="Appearance_assignment:arm:Appearance_assignment_arm.Styled_model_replication"/>
	shall be redeclared as the
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View_area"/>
	for the <b>View_area_replication</b>.
</ext_description>

<!-- +++++++++++ View_relationship +++++++++++ -->
<ext_description linkend="Presentation_hierarchy_arm.View_relationship">
	A <b>View_relationship</b> is a relationship between two 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View"/> 
	objects.
</ext_description>

<!-- relation_type -->
<ext_description linkend="Presentation_hierarchy_arm.View_relationship.relation_type">
	specifies a role of the
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.view_relation_type"/>
	for the <b>View_relationship</b>. 
</ext_description>

<!-- description -->
<ext_description linkend="Presentation_hierarchy_arm.View_relationship.description">
	additional information about the <b>View_relationship</b>. 
	The value of this attribute need not be specified.
</ext_description>

<!-- relating -->
<ext_description linkend="Presentation_hierarchy_arm.View_relationship.relating">
	<p>
	the first of the two 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View"/>
	objects related by the <b>View_relationship</b>.
	</p>
	<note>
		The semantics of this attribute are defined by the attribute <b>relation_type</b>.
	</note>
</ext_description>

<!-- related -->
<ext_description linkend="Presentation_hierarchy_arm.View_relationship.related">
	<p>
	the second of the two 
	<express_ref linkend="Presentation_hierarchy:arm:Presentation_hierarchy_arm.View"/>
	objects related by the <b>View_relationship</b>.
	</p>
	<note>
		The semantics of this attribute are defined by the attribute <b>relation_type</b>.
	</note>
</ext_description>

</ext_descriptions>

