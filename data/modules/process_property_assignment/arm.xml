<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/01/16 14:24:56 $"
  rcs.revision="$Revision: 1.3 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/process_property_assignment/arm.exp"/>

  <schema name="Process_property_assignment_arm">
    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="Independent_property_usage_arm">
    </interface>

    <interface
      kind="use"
      schema="Work_order_arm">
    </interface>

    <type name="independent_process_property_assignment">
      <description>
        This extends the association of <b>Independent_property</b> to
        <b>Activity_property</b> and Resource_property. 
      </description>
      <select
        basedon="independent_property_usage_select"
        selectitems="Activity_property">
      </select>

    </type>
    <entity
      name="Activity_property">
      <description>
        An Activity_property specifies a property of an activity.
      </description>
      <explicit
        name="name">
        <description>
          specifies the described Activity.
        </description>
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <description>
          specifies the described Activity.
        </description>
        <typename
          name="Activity"/>
      </explicit>
      <explicit
        name="description">
        <description>
          specifies the description of the Activity_property.
        </description>
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Activity_property_representation">
      <description>
        An Activity_property_representation specifies an association
        between an <b>Activity_property</b> and its representation. 
      </description>
      <explicit
        name="item">
        <description>
          specifies the represented <b>Activity_property</b>.
        </description>
        <typename
          name="Activity_property"/>
      </explicit>
      <explicit
        name="representation">
        <description>
          specifies the Representation.
        </description>
        <typename
          name="Representation"/>
      </explicit>
    </entity>

  </schema>

</express>


