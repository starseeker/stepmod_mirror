  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Process_property_assignment_arm"> This schema enabmes properties to be assigned to Activities and those properties to be derived from Independent_properties.</ext_description>>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property">
        An Activity_property specifies a property of an activity.
      </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property  Attribute: name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property.name">
          specifies the described Activity.
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property  Attribute: described_element 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property.described_element">
          specifies the described Activity.
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property  Attribute: description 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property.description">
          specifies the description of the Activity_property.
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_representation 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_representation">
        An Activity_property_representation specifies an association
        between an <b>Activity_property</b> and its representation. 
      </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_representation  Attribute: item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_representation.item">
          specifies the represented <b>Activity_property</b>.
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_representation  Attribute: representation 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_representation.rep">
          specifies the Representation.
        </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_with_derived_property  
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_with_derived_property">
          This element specifies an Activity_property that is derived from an eIndependent_property.
        </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_with_derived_property Attribute: base_element_property  
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_with_derived_property.base_element_property">The Independent_property from which it is derived.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Process_property_assignment_arm  Entity: Activity_property_with_derived_property Attribute: name
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Process_property_assignment_arm.Activity_property_with_derived_property.name">The name of the property, which must be the same as that of the base property.</ext_description>

</ext_descriptions>