<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="">
   <application name="JSDAI" owner="LKSoft" source="product_and_manufacturing_information_with_nominal_3d_models_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Product_and_manufacturing_information_with_nominal_3d_models_arm">
      <interface kind="use" schema="Product_and_manufacturing_information_view_context_arm"/>
      <interface kind="use" schema="Shape_property_assignment_arm"/>
      <interface kind="use" schema="Advanced_boundary_representation_arm"/>
      <interface kind="use" schema="Manifold_surface_arm"/>
      <interface kind="use" schema="Manifold_subsurface_arm"/>
      <interface kind="use" schema="Construction_geometry_arm"/>
      <type name="advanced_face_model">
         <select selectitems="Advanced_brep_shape_representation Manifold_surface_shape_representation Manifold_subsurface_model"/>
      </type>
      <entity name="Nominal_3d_model_shape" supertypes="Associated_item_shape">
         <derived expression="get_advanced_brep(associated_model)" name="associated_abrep">
            <typename name="Advanced_brep_shape_representation"/>
         </derived>
         <derived expression="get_construction_geometry(associated_model)" name="associated_construction_geometry_models">
            <aggregate lower="0" type="SET" upper="?"/>
            <typename name="Constructive_geometry"/>
         </derived>
         <where expression="'xxx.Model_based_view_context' IN TYPEOF(described_element\Product_view_definition.initial_context)" label="WR1"/>
         <where expression="TRUE" label="WR2"/>
         <where expression="EXISTS(associated_abrep)" label="WR3"/>
      </entity>
      <function name="get_advanced_brep">
         <parameter name="m">
            <typename name="shape_model"/>
         </parameter>
         <typename name="Advanced_brep_shape_representation"/>
         <algorithm>RETURN;</algorithm>
      </function>
      <function name="get_construction_geometry">
         <parameter name="m">
            <typename name="shape_model"/>
         </parameter>
         <typename name="Constructive_geometry"/>
         <algorithm>RETURN;</algorithm>
      </function>
   </schema>
</express>
