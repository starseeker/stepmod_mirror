<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/05/28 23:58:43 $"
  rcs.revision="$Revision: 1.4 $"
  description.file="arm_descriptions.xml">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/product_categorization/arm.exp"/>

  <schema name="Product_categorization_arm">
    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <type name="product_categorization_organization_or_person_in_organization_item">
      <select
        basedon="organization_or_person_in_organization_item"
        selectitems="Product_category">
      </select>

    </type>
    <entity
      name="Product_category">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="owner">
        <aggregate
          type="SET"
          lower="0"
          upper="1"/>
        <typename
          name="organization_or_person_in_organization_assignment"/>
      </explicit>
      <explicit
        name="!">
        <typename
          name="SIZEOF ( Query ( organization_or_person_in_organization_assignment.owner.role = 'category owner' ) ) =0"/>
      </explicit>
    </entity>

    <entity
      name="Product_category_hierarchy">
    </entity>

  </schema>

</express>
