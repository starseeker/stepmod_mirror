	<ext_description linkend="Product_categorization_arm"/>
	<!--   
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_categorization_arm  Entity: Product_category  
	 ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Product_categorization_arm.Product_category"><p>A <b>Product_category</b> is a type of product that is defined for a purpose that is specific to a module or application protocol.</p>
		<note>For the purpose of a general classification of products, use entity<express_ref linkend="class:arm:Class_arm.Class"/>

 and <express_ref linkend="classification_assignment:arm:Classification_assignment_arm.Classification_assignment"/>, standardized in  ISO 10303-1070 and ISO 10303-1114.</note>
	</ext_description>

	<!--   
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  Schema: Product_categorization_arm  Entity: Product_category  Attribute: id   
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
 -->
	<ext_description linkend="Product_categorization_arm.Product_category.id">
    the identifier that distinguishes the <b>Product_category</b>. 
		The value of this attribute need not be specified.  
 </ext_description>

	<!--   
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  Schema: Product_categorization_arm  Entity: Product_category  Attribute: name   
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
 -->
        <ext_description
          linkend="Product_categorization_arm.Product_category.name"><p>the words by which the  <b>Product_category</b> is known.
        </p>
<example>
  "part" and "document" are examples of categories of product.
	</example>   
 </ext_description>
	<!--  
 ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
 Schema: Product_categorization_arm  Entity: Product_category  Attribute: description   
 ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Product_categorization_arm.Product_category.description">
	the text that provides further information about the <b>Product_category</b>.
	The value of this attribute need not be specified.</ext_description>

 <!--  
 ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
 Schema: Product_categorization_arm  Entity: Product_category_hierarchy   
 ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++   
 -->
	<ext_description linkend="Product_categorization_arm.Product_category_hierarchy">
		A <b>Product_category_hierarchy</b> is a hierarchical relationship between one instance of <express_ref linkend="product_categorization:arm:Product_categorization_arm.Product_category"/>

		and  another.
	</ext_description>
	<!--  
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  Schema: Product_categorization_arm  Entity: Product_category_hierarchy  Attribute: super_category   
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
  -->
	<ext_description linkend="Product_categorization_arm.Product_category_hierarchy.super_category">
	one instance of <express_ref linkend="product_categorization:arm:Product_categorization_arm.Product_category"/>

that participates in the relationship.</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++   
Schema: Product_categorization_arm  Entity: Product_category_hierarchy  Attribute: sub_category   
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
 -->
	<ext_description linkend="Product_categorization_arm.Product_category_hierarchy.sub_category">
	the instance of <express_ref linkend="product_categorization:arm:Product_categorization_arm.Product_category"/>

 that is dependent upon the other.</ext_description>
	</ext_descriptions>
