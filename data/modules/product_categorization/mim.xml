<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/04/22 12:44:23 $"
  rcs.revision="$Revision: 1.6 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/product_categorization/mim.exp"/>

  <schema name="Product_categorization_mim">
    <interface
      kind="use"
      schema="Person_organization_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="product_definition_schema">
      <interfaced.item
        name="product_category"/>
      <interfaced.item
        name="product_category_relationship"/>
    </interface>

    <type name="product_categorization_organization_item">
      <description>A <b>product_categorization_organization_item</b> specifies the extension of <b>organization_item</b> to <b>product_category</b> instances.</description>
      <select
        basedon="organization_item"
        selectitems="product_category">
      </select>

    </type>
    <type name="product_categorization_person_and_organization_item">
      <description>A <b>product_categorization_person_and_organization_item</b> specifies the extension of <b>person_and_organization_item</b> to <b>product_category</b> instances.</description>
      <select
        basedon="person_and_organization_item"
        selectitems="product_category">
      </select>

    </type>
  </schema>

</express>
