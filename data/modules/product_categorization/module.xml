<!DOCTYPE module SYSTEM "../../../dtd/module.dtd"> 

<module 
 
	 name="product_categorization"  
	 part="1016"   
	 wg.number="1098"   
	 wg.number.supersedes="714"
	 wg.number.arm="1099"
	 wg.number.mim="1100"
	 checklist.internal_review="1056"
	 checklist.project_leader="1057"
	 checklist.convener="1058"	 
	 version="1"   
	 status="TS"   
	 language="E"   
	 publication.year="2003"   
	 published="y"   
	 rcs.date="$Date: 2002/08/02 12:56:53 $"   
	 rcs.revision="$Revision: 1.9 $"> 

	<keywords>   
		 module, product, categorization, categorization 
	</keywords>
 
	<contacts>   
		<projlead ref="pdmmodules.projlead"/>   
		<editor ref="pdmmodules.editor"/> 
	</contacts>
 
	<purpose>
This part of ISO 10303 specifies an application module for the representation of structured hierarchies of categories for products. 
	</purpose> 

	<inscope>
	  	<li>definition of a category of products;</li>
	  	<li>relationship between two product categories.</li>
	</inscope>
	<normrefs>  
 	<normref.inc normref="ref10303-41.2000"/>
 	</normrefs> 
   <arm>   
      <uof name="Product_Categorization">     
	  <description>
The Product_Categorization UoF specifies the data structure to represent categories and hierarchies of categories for products.
	  </description> 
  
	  <uof.ae entity="Product_category" />        
	  <uof.ae entity="Product_category_hierarchy" />   
      </uof>

	<express-g>     
		<imgfile file="armexpg1.xml"/>
		<imgfile file="armexpg2.xml"/>     
	</express-g> 
   </arm> 

	<mapping_table>
   
		<ae entity="Product_category">     
			<aimelt>product_category</aimelt>     
			<source>ISO 10303-41</source>     
			<aa attribute="id">       		
			  <aimelt>PATH</aimelt>       
			  <refpath>
				  id_attribute
				  id_attribute.identified_item -&gt; id_attribute_select
				  id_attribute_select = product_category
				  product_category 
			  </refpath>  
			</aa>     
			<aa attribute="name">       		
			  <aimelt>product_category.name</aimelt>       
			  <source>ISO 10303-41</source>     
			</aa>     
			<aa attribute="description">       												
		    <aimelt>product_category.description</aimelt>
			  <source>ISO 10303-41</source>     
			</aa>     
		</ae>  
			
		<ae entity="Product_category_hierarchy">    
			<aimelt>product_category_relationship</aimelt> 
			<source>ISO 10303-41</source>  
			<refpath>
			  product_category_relationship
				{product_category_relationship.name = 'hierarchy'}
			</refpath>    
			<aa attribute="super_category" assertion_to="Product_category">       
				<aimelt>PATH</aimelt>       
				<refpath>     
				  product_category_relationship
				  product_category_relationship.category -&gt; product_category
				</refpath>
			</aa>     
			<aa attribute="sub_category" assertion_to="Product_category">       
				<aimelt>PATH</aimelt>       
				<refpath>     
				  product_category_relationship
				  product_category_relationship.sub_category -&gt; product_category
				</refpath>
			</aa>
		</ae> 
	</mapping_table> 
	<mim>   
		<express-g>    
			 <imgfile file="mimexpg1.xml"/>    
		</express-g>
	</mim>
</module>