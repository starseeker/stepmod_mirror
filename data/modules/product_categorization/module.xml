	<purpose>
This part of ISO 10303 specifies an application module for the
representation of structured hierarchies of application protocol or module specific categories for products. 

	</purpose> 

	<inscope>
		<li>definition and assignment categories of products;</li>
	  	<li>relationship between two product categories;</li>
	  	<li>items within the scope of application module <module_ref linkend="product_identification:1_scope">Product identification</module_ref>, ISO/TS 10303-1017.</li>
	</inscope>
	<normrefs>  
 	<normref.inc normref="ref10303-41"/>
 	</normrefs> 
   <arm>   
      <uof name="Product_Categorization">     
	  <description>
The Product_Categorization UoF specifies the data structure to represent categories and hierarchies of categories 
assigned to products.
	  </description> 
  
	  <uof.ae entity="Product_category" />
	  <uof.ae entity="Product_category_assignment" />   	  
	  <uof.ae entity="Product_category_hierarchy" />   
      </uof>

	<express-g>     
		<imgfile file="armexpg1.xml"/>
		<imgfile file="armexpg2.xml"/>     
	</express-g> 
   </arm> 

	<mapping_table>
   
		<ae entity="Product_category">     
			<aimelt>product_category</aimelt>     
			<source>ISO 10303-41</source>     
			<aa attribute="id">       		
			  <aimelt>PATH</aimelt>       
			  <refpath>
				  product_category 
				  id_attribute_select = product_category
				  id_attribute_select &lt;-
				  id_attribute.identified_item
				  id_attribute.attribute_value 
			  </refpath>  
			</aa>     
			<aa attribute="name">       		
			  <aimelt>product_category.name</aimelt>       
			  <source>ISO 10303-41</source>     
			</aa>     
			<aa attribute="description">       												
		    <aimelt>product_category.description</aimelt>
			  <source>ISO 10303-41</source>     
			</aa>     
		</ae>  
		  <ae entity="Product_category_assignment">
     <aimelt>product_related_product_category</aimelt>
     <source>ISO 10303-41</source>
     <aa attribute="category" assertion_to="Product_category">
       <aimelt>IDENTICAL MAPPING</aimelt>
       <refpath>
</refpath>
     </aa>
    <aa attribute="products" assertion_to="Product">
       <aimelt>PATH</aimelt>
       <refpath>product_related_product_category.products[i]-&gt;
product
</refpath>
     </aa>
   </ae>
		
		<ae entity="Product_category_hierarchy">    
			<aimelt>product_category_relationship</aimelt> 
			<source>ISO 10303-41</source>  
			<refpath>
			  product_category_relationship
				{product_category_relationship.name = 'hierarchy'}
			</refpath>    
			<aa attribute="super_category" assertion_to="Product_category">       
				<aimelt>PATH</aimelt>       
				<refpath>     
				  product_category_relationship
				  product_category_relationship.category -&gt; product_category
				</refpath>
			</aa>     
			<aa attribute="sub_category" assertion_to="Product_category">       
				<aimelt>PATH</aimelt>       
				<refpath>     
				  product_category_relationship
				  product_category_relationship.sub_category -&gt; product_category
				</refpath>
			</aa>
		</ae> 
	</mapping_table> 
	<mim>   
		<express-g>    
			 <imgfile file="mimexpg1.xml"/>    
		</express-g>
	</mim>
