   </arm> 

	<mapping_table>
   
		<ae entity="PRODUCT_CATEGORY">     
			<aimelt>product_category</aimelt>     
				<source>41</source>     
			<aa attribute="name">       		
				<aimelt>product_category.name</aimelt>       
				<source></source>     
			</aa>     
			<aa attribute="description">       												<aimelt>product_category.description</aimelt>
			        <source></source>     
			</aa>     
			<aa attribute="owner">       												<aimelt>(applied_organization_assignment.items)(applied_person_and_organization_assignment.items)</aimelt>       				<source>1013</source>       	
				<refpath>product_category &lt;-(applied_organization_assignment.items[i]applied_organization_assignment{applied_organization_assignment.role -&gt;organization_roleorganization_role.name='category owner'})(applied_person_and_organization_assignment.items[i]applied_person_and_organization_assignment{applied_person_and_organization_assignment.role -&gt;person_and_organization_roleperson_and_organization_role.name='category owner'})        						</refpath>     
			</aa>
		</ae>  
			
		<ae entity="PRODUCT_CATEGORY_HIERARCHY">    
