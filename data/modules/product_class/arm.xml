<?xml version="1.0"?>
<!-- $Id: express2xml.js,v 1.18 2002/07/14 16:55:57 robbod Exp $ -->
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.18"
    source="../data/modules/product_class/arm.exp"/>

  <schema name="Product_class_arm">
    <type name="expression_operator">
      <enumeration
        items="or_operator and_operator oneof_operator not_operator">
      </enumeration>


    </type>
    <type name="specification_operand_select">
      <select
        selectitems="Specification_expression Specification">
      </select>

    </type>
    <entity
      name="Class_category_association">
      <explicit
        name="associated_product_class">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="mandatory">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
      <explicit
        name="associated_category">
        <typename
          name="Specification_category"/>
      </explicit>
    </entity>

    <entity
      name="Class_condition_association">
      <explicit
        name="condition_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="associated_product_class">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="associated_condition">
        <typename
          name="Specification_expression"/>
      </explicit>
    </entity>

    <entity
      name="Class_inclusion_association">
      <explicit
        name="associated_product_class">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="associated_inclusion">
        <typename
          name="Specification_inclusion"/>
      </explicit>
    </entity>

    <entity
      name="Class_specification_association">
      <explicit
        name="associated_product_class">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="association_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="associated_specification">
        <typename
          name="Specification"/>
      </explicit>
    </entity>

    <entity
      name="Product_class">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="level_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Product_class_relationship">
      <explicit
        name="relating">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="related">
        <typename
          name="Product_class"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Specification">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="category">
        <typename
          name="Specification_category"/>
      </explicit>
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="package">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Specification_category">
      <explicit
        name="implicit_exclusive_condition">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Specification_category_hierarchy">
      <explicit
        name="sub_category">
        <typename
          name="Specification_category"/>
      </explicit>
      <explicit
        name="super_category">
        <typename
          name="Specification_category"/>
      </explicit>
    </entity>

    <entity
      name="Specification_expression">
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="operation">
        <typename
          name="expression_operator"/>
      </explicit>
      <explicit
        name="operand">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="specification_operand_select"/>
      </explicit>
      <explicit
        name="id"
        optional="YES">
        <typename
          name="undefined_object"/>
      </explicit>
    </entity>

    <entity
      name="Specification_inclusion">
      <explicit
        name="if_condition">
        <typename
          name="specification_operand_select"/>
      </explicit>
      <explicit
        name="included_specification">
        <typename
          name="specification_operand_select"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
