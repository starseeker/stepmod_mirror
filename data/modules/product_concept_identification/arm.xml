<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.2"
    source="../data/modules/product_concept_identification/arm.exp"/>

  <schema name="Product_concept_identification_arm">
    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Project_arm">
    </interface>

    <type name="product_concept_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Product_concept">
      </select>

    </type>
    <type name="product_concept_project_item">
      <select
        basedon="project_item"
        selectitems="Product_concept">
      </select>

    </type>
    <entity
      name="Market">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Product_concept">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="target_market">
        <typename
          name="Market"/>
      </explicit>
      <inverse
        name="identifier"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="projects"
        entity="Project_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="?"/>
      </inverse>
      <unique
        label="UR1">
        <unique.attribute
          attribute="id"/>
        <unique.attribute
          attribute="identifier"/>
      </unique>
      <where
        label="WR1"
        expression="SELF.identifer.role = 'concept owner'">
      </where>
    </entity>

  </schema>

</express>
