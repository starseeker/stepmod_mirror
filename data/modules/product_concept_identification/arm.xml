    source="../data/modules/product_concept_identification/arm.exp"/>

  <schema name="Product_concept_identification_arm">
    <entity
      name="Market">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="market_segment_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Product_concept">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
