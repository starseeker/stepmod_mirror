        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="target_market"
        optional="YES">
        <typename
          name="Market"/>
      </explicit>
      <unique
        label="UR1">
        <unique.attribute
