<entity name="product_group" supertypes="group">
<description>
        means to group products and types in order to set boundaries of PIF.
      </description>
<explicit name="membership_rule">
<description>
          Describes the list of criteria for a product to be a member of the group
        </description>
<aggregate type="LIST" lower="1" upper="?" />
<builtintype type="STRING" />
</explicit>
<explicit name="product_group_context">
<description>
          Describes the context in which the product group is formed
        </description>
<builtintype type="STRING" />
</explicit>
<explicit name="purpose">
<description>
          Describes the purpose of this product group<example>all individual products which are subject of a planned maintenance</example>
</description>
<builtintype type="STRING" />
</explicit>
<graphic.element page="2" xcoord="397" ycoord="191" />
</entity>
<entity name="product_group_membership" supertypes="group_assignment">
<description>
        a declaration that a selected product belongs to a group
      </description>
<explicit name="member">
<description>
          member of the product group
        </description>
<typename name="product_select" />
</explicit>
<graphic.element page="2" xcoord="264" ycoord="206" />
</entity>
<entity name="product_group_relationship" supertypes="group_relationship">
<description>
        Relates a product_group as a subset of another group, the identification of the relationsship as a subgroup relationship is specified through the product_group_classification_item
      </description>
<graphic.element page="2" xcoord="128" ycoord="191" />
</entity>
