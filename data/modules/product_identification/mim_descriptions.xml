   <ext_description linkend="Product_identification_mim.product_organization_item">An <b>product_organization_item</b> extends organization assignment to <b>product</b> instances.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_identification_mim  Type: product_person_and_organization_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_identification_mim.product_person_and_organization_item">A <b>product_person_and_organization_item</b> extends person and organization assignment to <b>product</b> instances.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_identification_mim  Rule: product_requires_product_category 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_identification_mim.product_requires_product_category">
        The <b>product_requires_product_category</b> rule specifies that all
        instances of product shall have at least 1 associated
        <b>product_related_product_category</b> instance. 
      </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_identification_mim  Rule: restrict_product_category_name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_identification_mim.restrict_product_category_name">
          The <b>restrict_product_category_name</b> rule specifies that each
          instance of product_category shall have a name of 'assembly',
          'detail', 'part', 'raw material', 'document', 'functionality', or
          'requirement' or the <b>description</b> value shall exist. 
        </ext_description>
</ext_descriptions>