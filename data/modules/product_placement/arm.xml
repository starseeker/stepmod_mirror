<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/07/17 08:31:03 $"
  rcs.revision="$Revision: 1.4 $">

  <application
    name="express2xml2.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.3"
    source="../data/modules/product_placement/arm.exp"/>

  <schema name="Product_placement_arm">

    <interface
      kind="use"
      schema="Contextual_shape_positioning_arm">
    </interface>
    <interface
      kind="use"
      schema="Physical_breakdown_arm">
    </interface>
    <interface
      kind="use"
      schema="Product_occurrence_arm">
    </interface>
    <entity
      name="Occurrence_placement"
      abstract.supertype="YES"
      super.expression="(ONEOF(Part_occurrence_placement,Physical_element_placement))">
      <explicit
        name="reference_physical_element">
        <typename
          name="Physical_element_definition"/>
      </explicit>
      <explicit
        name="reference_geometric_space">
        <typename
          name="Geometric_model"/>
      </explicit>
      <explicit
        name="positioned_representation">
        <typename
          name="template_instance"/>
      </explicit>
    </entity>

    <entity
      name="Part_occurrence_placement"
      supertypes="Occurrence_placement">
      <explicit
        name="placed_part_occurrence">
        <typename
          name="Single_instance"/>
      </explicit>
    </entity>

    <entity
      name="Physical_element_placement"
      supertypes="Occurrence_placement">
      <explicit
        name="placed_physical_element">
        <typename
          name="Physical_element_definition"/>
      </explicit>
      <where
        label="WR1"
        expression="placed_physical_element\Product_view_definition.defined_version :&lt;&gt;: Occurrence_placement.reference_physical_element\Product_view_definition.defined_version">
      </where>
    </entity>

  </schema>
</express>
