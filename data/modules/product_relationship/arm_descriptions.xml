   <ext_description linkend="Product_relationship_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_relationship_arm  Entity: Product_relationship 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_relationship_arm.Product_relationship">
      <b>A Product_relationship</b> is an association between two <b>Products</b>.
			</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_relationship_arm  Entity: Product_relationship  Attribute: relating_product 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_relationship_arm.Product_relationship.relating_product">
	 one of the instances of <b>Product</b> that is a part of the relationship.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_relationship_arm  Entity: Product_relationship  Attribute: related_product 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_relationship_arm.Product_relationship.related_product">
	 the other instance of <b>Product</b> that is a part of the relationship.
	 If one element of the relationship is dependent on the other, this attribute shall be the dependent one.
	 </ext_description>
 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_relationship_arm  Entity: Product_relationship  Attribute: relation_type 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_relationship_arm.Product_relationship.relation_type">
	 the text that specifies the nature of the relationship between the instances of <b>Product</b>.
	 </ext_description>
 <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_relationship_arm  Entity: Product_relationship  Attribute: description 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_relationship_arm.Product_relationship.description">
	 the text that characterizes the <b>Product_relationship</b>.
	 The value of this attribute need not be specified.
	 </ext_description>

</ext_descriptions>