<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/01/16 14:24:57 $"
  rcs.revision="$Revision: 1.3 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/product_structure/arm.exp"/>

  <schema name="Product_structure_arm">
    <interface
      kind="use"
      schema="Product_identification_arm">
    </interface>

    <entity
      name="Product_relationship">
      <description><b>A Product_relationship</b> relates two <b>Products</b>.</description>
    
      <explicit
        name="product1">
      <description>a <b>Product</b> to be related to <b>product2</b>.</description>
        <typename
          name="Product"/>
      </explicit>
      <explicit
        name="product2">
      <description>a <b>Product</b> to be related to <b>product1</b>.</description>
        <typename
          name="Product"/>
      </explicit>
    </entity>

    <entity
      name="Product_composition_relationship"
      supertypes="Product_relationship">
      <description><p>A <b>Product_composition_relationship</b> is a relationship between two <b>Products</b> where one contains the other.</p>
<p><b>product1</b> specifies the product which is composed of <b>product2</b>.</p>
<p><b>product2</b> specifies the product which is used in the composition of <b>product1</b>.</p>
</description>
    </entity>

  </schema>

</express>
