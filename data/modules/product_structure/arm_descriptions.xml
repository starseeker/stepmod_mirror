   <ext_description linkend="Product_structure_arm.Product_relationship">
      <b>A Product_relationship</b> relates two <b>Products</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_structure_arm  Entity: Product_relationship  Attribute: product1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_structure_arm.Product_relationship.product1">a <b>Product</b> to be related to <b>product2</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_structure_arm  Entity: Product_relationship  Attribute: product2 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_structure_arm.Product_relationship.product2">a <b>Product</b> to be related to <b>product1</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_structure_arm  Entity: Product_composition_relationship 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Product_structure_arm.Product_composition_relationship">
      <p>A <b>Product_composition_relationship</b> is a relationship between two <b>Products</b> where one contains the other.</p>

      <p>
         <b>product1</b> specifies the product which is composed of <b>product2</b>.</p>

      <p>
         <b>product2</b> specifies the product which is used in the composition of <b>product1</b>.</p>

   </ext_description>
