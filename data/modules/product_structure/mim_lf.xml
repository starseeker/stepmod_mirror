      </select>

    </type>
    <type name="id_attribute_select">
      <select
        selectitems="application_context">
      </select>

    </type>
    <type name="identifier">
      <builtintype
        type="STRING">
      </builtintype>


    </type>
    <type name="label">
      <builtintype
        type="STRING">
      </builtintype>


    </type>
    <type name="name_attribute_select">
      <select
        selectitems="person_and_organization">
      </select>

    </type>
    <type name="organization_item">
