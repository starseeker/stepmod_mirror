      </derived>
      <derived
        name="description"
        expression="get_description_value(SELF)">
        <typename
          name="text "/>
      </derived>
      <where
        label="wr1"
        expression="(SIZEOF(USEDIN(SELF,'PRODUCT_STRUCTURE_MIM.' +                'NAME_ATTRIBUTE.NAMED_ITEM')) &lt;= 1)">
      </where>
      <where
        label="wr2"
        expression="(SIZEOF(USEDIN(SELF,'PRODUCT_STRUCTURE_MIM.' +                'DESCRIPTION_ATTRIBUTE.DESCRIBED_ITEM')) &lt;= 1)">
