<express
   language_version="2"
   rcs.date="$Date: 2003/11/21 11:10:13 $"
   rcs.revision="$Revision: 1.6 $">
  <schema name="Product_structure_and_classification_mim">
<interface kind="use" schema="Class_of_product_library_mim"></interface>
<interface kind="use" schema="Individual_product_structure_mim"></interface>
<interface kind="use" schema="Classification_mim"></interface>
<interface kind="use" schema="External_item_identification_assignment_mim"></interface>

<type name="individual_product_or_product_relationship">
<description>
A <express_ref linkend="product_as_individual:arm:Product_as_individual_arm.Product_as_individual">Product_as_individual</express_ref>
or relationship between individual products that is classified.
</description>
<select basedon="classification_select" selectitems="composition_of_individual_product connection_of_individual_product containment_of_individual_product involvement_of_individual_product_in_connection product_as_individual" />
</type>
<type name="complete_membership_individual_product_or_product_relationship">
<description>
An <express_ref linkend="product_as_individual:arm:Product_as_individual_arm.Product_as_individual">Product_as_individual</express_ref>
or relationship between individual products that is specified as part of the complete membership of a class.
</description>
<select basedon="complete_membership_select" selectitems="composition_of_individual_product connection_of_individual_product containment_of_individual_product involvement_of_individual_product_in_connection product_as_individual" />
</type>
<type name="externally_identified_class_of_product_or_relationship">
<description>
A <express_ref linkend="class_of_product:arm:Class_of_product_arm.Class_of_product">Class_of_product</express_ref>
or relationship with a class of product that has an external identification.
</description>
<select basedon="external_identification_item" selectitems="class_of_product class_of_composition_of_product class_of_connection_of_product class_of_containment_of_product class_of_involvement_of_product_in_connection" />
</type>
  </schema>
