<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/product_version/arm.exp"/>

  <schema name="Product_version_arm">
    <interface
      kind="use"
      schema="Product_identification_arm">
    </interface>

    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Contract_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Security_classification_arm">
    </interface>

    <type name="product_version_security_classification_item">
      <select
        basedon="security_classification_item"
        selectitems="Product_version">
      </select>

    </type>
    <type name="product_version_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Product_version">
      </select>

    </type>
    <type name="product_version_approval_item">
      <select
        basedon="approval_item"
        selectitems="Product_version">
      </select>

    </type>
    <type name="product_version_contract_item">
      <select
        basedon="contract_item"
        selectitems="Product_version">
      </select>

    </type>
    <entity
      name="Product_version">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="of_product">
        <typename
          name="Product"/>
      </explicit>
      <inverse
        name="security"
        entity="Security_classification_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="creator"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
      </inverse>
      <inverse
        name="custodian"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="approval"
        entity="Approval_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="?"/>
      </inverse>
      <inverse
        name="contracts"
        entity="Contract_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="?"/>
      </inverse>
      <unique
        label="UR1">
        <unique.attribute
          attribute="id"/>
        <unique.attribute
          attribute="of_product"/>
      </unique>
      <where
        label="WR1"
        expression="SELF.creator.role = 'creator'">
      </where>
      <where
        label="WR2"
        expression="SELF.custodian.role = 'design supplier' OR NOT EXISTS(custodian)">
      </where>
    </entity>

  </schema>

</express>
