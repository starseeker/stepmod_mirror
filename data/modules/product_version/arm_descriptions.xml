rcs.date="$Date: 2002/08/05 11:50:49 $" rcs.revision="$Revision: 1.8 $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm"/>


  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_arm.Product_version">
   		A <b>Product_version</b> is  a revision of a <express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>. 
			It is a collector of the definitions of this revision of the <express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>.
			
   		<note>The set of all instances of <b>Product_version</b> of the same <express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>

 represents the history of the product.</note>
   	</ext_description>
  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: id
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_arm.Product_version.id">
   			the text that distinguishes the <b>Product_version</b>.
   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: description
  +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.description">
   			the text that characterizes the <b>Product_version</b>. 
   			The value of this attribute need not be specified.
   	</ext_description>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: of_product
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.of_product">
			the <express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>, the <b>Product_version</b> identifies a version of.
   </ext_description>			
   
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Unique: UR1
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.ur:UR1">
   			the <b>id</b> of each <b>Product_version</b> shall be unique among the
   			instances of <b>Product_version</b> that identify versions of the same <express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>.
   </ext_description>
</ext_descriptions>
