  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm"/>


  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_arm.Product_version">
   		A <b>Product_version</b> identifies a revision of a <b>Product</b>. 
			It is a collector of the definitions of this revision of the <b>Product</b>.
			A <b>Product_version</b> shall be functionally and physically interchangeable with other versions of the same product.
   		<note>The set of all versions of a product represents the history of the product.</note>
   	</ext_description>
  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: id
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_arm.Product_version.id">
   			the text that distinguishes the <b>Product_version</b>.
   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: description
  +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.description">
   			the text that characterizes the <b>Product_version</b>. 
   			The value of this attribute need not be specified.
   	</ext_description>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Attribute: of_product
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.of_product">
			the <b>Product</b>, the <b>product_version</b> identifies a version of.
   </ext_description>			
   
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_arm  Entity: Product_version  Unique: UR1
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_arm.Product_version.ur:UR1">
   			the <b>id</b> of each <b>Product_version</b> shall be unique among the
   			instances of <b>Product_version</b> that identify versions of the same <b>Product</b>.
   </ext_description>
</ext_descriptions>
