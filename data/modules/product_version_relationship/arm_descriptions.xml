  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_relationship_arm  Entity: Product_version_relationship
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_relationship_arm.Product_version_relationship">
   		A <b>Product_version_relationship</b> identifies a revision of a <b>Product</b>. 
			It is a collector of the definitions of this revision of the <b>Product</b>.
			
   		<note>The set of all instances of <b>Product_version_relationship</b> of the same <b>Product</b> represents the history of the product.</note>
   	</ext_description>
  <!--
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_relationship_arm  Entity: Product_version_relationship  Attribute: id
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  -->
   <ext_description linkend="Product_version_relationship_arm.Product_version_relationship.id">
   			the text that distinguishes the <b>Product_version_relationship</b>.
   </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_relationship_arm  Entity: Product_version_relationship  Attribute: description
  +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_relationship_arm.Product_version_relationship.description">
   			the text that characterizes the <b>Product_version_relationship</b>. 
   			The value of this attribute need not be specified.
   	</ext_description>

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_relationship_arm  Entity: Product_version_relationship  Attribute: of_product
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_relationship_arm.Product_version_relationship.of_product">
			the <b>Product</b>, the <b>product_version_relationship</b> identifies a version of.
   </ext_description>			
   
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_version_relationship_arm  Entity: Product_version_relationship  Unique: UR1
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Product_version_relationship_arm.Product_version_relationship.ur:UR1">
   			the <b>id</b> of each <b>Product_version_relationsip</b> shall be unique among the
   			instances of <b>Product_version_relationship</b> that identify versions of the same <b>Product</b>.
   </ext_description>
