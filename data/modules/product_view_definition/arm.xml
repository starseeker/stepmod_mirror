<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.2"
    source="../data/modules/product_view_definition/arm.exp"/>

  <schema name="Product_view_definition_arm">
    <interface
      kind="use"
      schema="Product_version_arm">
    </interface>

    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <type name="product_view_definition_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Product_view_definition">
      </select>

    </type>
    <type name="product_view_definition_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Product_view_definition">
      </select>

    </type>
    <type name="product_view_definition_approval_item">
      <select
        basedon="approval_item"
        selectitems="Product_view_definition">
      </select>

    </type>
    <entity
      name="Product_view_definition">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="defining_context">
        <typename
          name="View_definition_context"/>
      </explicit>
      <explicit
        name="using_contexts"
        optional="YES">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="View_definition_context"/>
      </explicit>
      <explicit
        name="definition_for">
        <typename
          name="Product_version"/>
      </explicit>
      <inverse
        name="creator"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="creation_date"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="approval"
        entity="Approval_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="?"/>
      </inverse>
      <where
        label="WR1"
        expression="SELF.creator.role = 'creator' OR NOT EXISTS(creator)">
      </where>
      <where
        label="WR2"
        expression="SELF.creation_date.role = 'creation date' OR NOT EXISTS(creation_date)">
      </where>
    </entity>

    <entity
      name="View_definition_context">
      <explicit
        name="view_name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="life_cycle_stage">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="relevant_role"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
