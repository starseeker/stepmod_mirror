<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/02/13 09:45:50 $"
  rcs.revision="$Revision: 1.4 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/product_view_definition/mim.exp"/>

  <schema name="Product_view_definition_mim">
    <interface
      kind="use"
      schema="Person_organization_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Approval_mim">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Product_version_mim">
    </interface>

    <interface
      kind="use"
      schema="product_definition_schema">
      <interfaced.item
        name="product_definition"/>
      <interfaced.item
        name="product_definition_context_association"/>
    </interface>

    <interface
      kind="use"
      schema="application_context_schema">
      <interfaced.item
        name="product_definition_context"/>
    </interface>

    <type name="product_definition_approval_item">
      <description>A <b>product_definition_approval_item</b> extends approval assignment to <b>product_definition</b> instances.</description>
      <select
        basedon="approval_item"
        selectitems="product_definition">
      </select>

    </type>
    <type name="product_definition_date_item">
      <description>A <b>product_definition_date_item</b> extends date assignment to <b>product_definition</b> instances.</description>
      <select
        basedon="date_item"
        selectitems="product_definition">
      </select>

    </type>
    <type name="product_definition_date_and_time_item">
      <description>A <b>product_definition_date_and_time_item</b> extends date and time assignment to <b>product_definition</b> instances.</description>
      <select
        basedon="date_and_time_item"
        selectitems="product_definition">
      </select>

    </type>
    <type name="product_definition_organization_item">
      <description>An <b>product_definition_organization_item</b> extends organization assignment to <b>product_definition</b> instances.</description>
      <select
        basedon="organization_item"
        selectitems="product_definition">
      </select>

    </type>
    <type name="product_definition_person_and_organization_item">
      <description>A <b>product_definition_person_and_organization_item</b> extends person and organization assignment to <b>product_definition</b> instances.</description>
      <select
        basedon="person_and_organization_item"
        selectitems="product_definition">
      </select>

    </type>
  </schema>

</express>
