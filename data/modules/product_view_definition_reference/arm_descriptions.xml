<ext_description linkend="Product_view_definition_reference_arm.Generic_product_view_definition_reference">
	A <b>Generic_product_view_definition_reference</b> is a is a reference to an externally defined
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" />
	which may or may not have a local representation.
	A <b>Generic_product_view_definition_reference</b> is either a
	<express_ref linkend="product_view_definition_reference:arm:Product_view_definition_reference_arm.Product_view_definition_reference"/>
	or a
	<express_ref linkend="product_view_definition_reference:arm:Product_view_definition_reference_arm.Product_view_definition_reference_with_local_representation"/>.
</ext_description>

<ext_description linkend="Product_view_definition_reference_arm.Generic_product_view_definition_reference.source">
	defines the location which contains the original definition of the
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" />.
</ext_description>

<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Product_view_definition_reference_arm  Entity: Product_view_definition_reference  
   <express_ref linkend="product_view_definition_reference:arm:Product_view_definition_reference_arm.Product_view_definition_reference"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Product_view_definition_reference_arm.Product_view_definition_reference">
	A <b>Product_view_definition_reference</b> is a type of
	<express_ref linkend="product_view_definition_reference:arm:Product_view_definition_reference_arm.Generic_product_view_definition_reference" />
	that identifies the externally defined 
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" />
	by providing the key attributes necessary to unambiguously identify it and the associated 
	<express_ref linkend="product_version:arm:Product_version_arm.Product_version"/>, 
	<express_ref linkend="product_identification:arm:Product_identification_arm.Product"/> 
	and 
	<express_ref linkend="person_organization:arm:Person_organization_arm.Organization"/> 
	that owns the product id. 
</ext_description>

<ext_description linkend="Product_view_definition_reference_arm.Product_view_definition_reference.product_id">
	specifies the identifier of the externally defined 
	<express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>, 
	where the referenced 
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" /> 
	is assigned to one of its 
	<express_ref linkend="product_version:arm:Product_version_arm.Product_version"/>.
</ext_description>

<ext_description linkend="Product_view_definition_reference_arm.Product_view_definition_reference.product_definition_formation_id">
	specifies the identifier of the externally defined 
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" />.
</ext_description>

<ext_description linkend="Product_view_definition_reference_arm.Product_view_definition_reference.product_definition_id">
	specifies the identifier of the externally defined 
	<express_ref linkend="product_view_definition:arm:Product_view_definition_arm.Product_view_definition" />.
</ext_description>

<ext_description linkend="Product_view_definition_reference_arm.Product_view_definition_reference.id_owning_organization_name">
    specifies the id owner of the externally defined 
	<express_ref linkend="product_identification:arm:Product_identification_arm.Product"/>, 
    realised by an applied 
    <express_ref linkend="person_organization_assignment:arm:Person_organization_assignment_arm.Organization_or_person_in_organization_assignment"/> 
    with the role 'id owner'. 
</ext_description>

