<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/05/28 12:48:27 $"
  rcs.revision="$Revision: 1.6 $"
  description.file="arm_descriptions.xml">


  <schema name="Project_arm">
    <interface
      kind="use"
      schema="Event_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <type name="project_organization_or_person_in_organization_item">
      <select
        basedon="organization_or_person_in_organization_item"
        selectitems="Project">
      </select>

    </type>
    <type name="project_event_item">
      <select
        basedon="event_item"
        selectitems="Project">
      </select>

    </type>
    <entity
      name="Project">
      <explicit
        name="id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="participants"
        optional="YES">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="organization_or_person_in_organization_select"/>
      </explicit>
      <explicit
        name="planned_start_date"
        optional="YES">
        <aggregate
          type="SET"
          lower="0"
          upper="1"/>
        <typename
          name="Date_or_date_time_assignment"/>
      </explicit>
      <explicit
        name="planned_end_date"
        optional="YES">
        <aggregate
          type="SET"
          lower="0"
          upper="1"/>
        <typename
          name="Date_or_date_time_assignment"/>
      </explicit>
      <explicit
        name="actual_start_date"
        optional="YES">
        <aggregate
          type="SET"
          lower="0"
          upper="1"/>
        <typename
          name="Date_or_date_time_assignment"/>
      </explicit>
      <explicit
        name="actual_end_date"
        optional="YES">
        <aggregate
          type="SET"
          lower="0"
          upper="1"/>
        <typename
          name="Date_or_date_time_assignment"/>
      </explicit>
      <inverse
        name="identifier"
        entity="Organization_or_person_in_organization_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <where
        label="WR1"
        expression="SELF.project.identifier = 'id owner'">
      </where>
    </entity>

    <entity
      name="Project_assignment">
      <explicit
        name="assigned_project">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="project_item"/>
      </explicit>
    </entity>

    <entity
      name="Project_relationship">
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="project1">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="project2">
        <typename
          name="Project"/>
      </explicit>
    </entity>

  </schema>

</express>
