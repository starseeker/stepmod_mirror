<?xml version="1.0"?>
<!-- $Id: express2xml.js,v 1.15 2002/06/18 11:51:06 robbod Exp $ -->
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.15"
    source="../data/modules/project/arm.exp"/>

  <schema name="Project_arm">
    <interface
      kind="use"
      schema="Date_time_arm">
    </interface>

    <interface
      kind="use"
      schema="Event_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_arm">
    </interface>

    <type name="project_item">
      <select
        extensible="YES">
      </select>

    </type>
    <entity
      name="Project">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="responsible_organizations"
        optional="YES">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="Organization"/>
      </explicit>
      <explicit
        name="planned_end_date"
        optional="YES">
        <typename
          name="date_or_event"/>
      </explicit>
      <explicit
        name="actual_start_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
      <explicit
        name="actual_end_date"
        optional="YES">
        <typename
          name="date_or_date_time_select"/>
      </explicit>
    </entity>

    <entity
      name="Project_assignment">
      <explicit
        name="assigned_project">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="project_item"/>
      </explicit>
    </entity>

    <entity
      name="Project_relationship">
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="relating_project">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="related_project">
        <typename
          name="Project"/>
      </explicit>
    </entity>

  </schema>

</express>
