<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/project/arm.exp"/>

  <schema name="Project_arm">
    <interface
      kind="use"
      schema="Event_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <type name="project_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Project">
      </select>

    </type>
    <type name="project_event_item">
      <select
        basedon="event_item"
        selectitems="Project">
      </select>

    </type>
    <entity
      name="Project">
      <explicit
        name="id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="participants">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="organisation_or_person_in_organisation_select"/>
      </explicit>
      <inverse
        name="identifier"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="start_date"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="end_date"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
    </entity>

    <entity
      name="Project_assignment">
      <explicit
        name="assigned_project">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="role">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="project_item"/>
      </explicit>
    </entity>

    <entity
      name="Project_relationship">
      <explicit
        name="relation_type"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="project1">
        <typename
          name="Project"/>
      </explicit>
      <explicit
        name="project2">
        <typename
          name="Project"/>
      </explicit>
    </entity>

  </schema>

</express>
