<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="project_arm schema_instance"/>
   <schema name="Project_arm">
      <interface kind="use" schema="Date_time_arm"/>
      <interface kind="use" schema="Date_time_assignment_arm"/>
      <interface kind="use" schema="Event_arm"/>
      <interface kind="use" schema="Event_assignment_arm"/>
      <interface kind="use" schema="Person_organization_arm"/>
      <type name="project_item">
         <select extensible="YES" genericentity="NO"/>
      </type>
      <entity name="Project" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="id" optional="NO">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="name" optional="NO">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="responsible_organizations" optional="NO">
            <aggregate type="SET" lower="0" upper="?" unique="NO" optional="NO"/>
            <typename name="Organization"/>
         </explicit>
         <explicit name="planned_start_date" optional="YES">
            <typename name="date_or_event"/>
         </explicit>
         <explicit name="planned_end_date" optional="YES">
            <typename name="date_or_event"/>
         </explicit>
         <explicit name="actual_start_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
         <explicit name="actual_end_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
      </entity>
      <entity name="Project_assignment" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="assigned_project" optional="NO">
            <typename name="Project"/>
         </explicit>
         <explicit name="role" optional="NO">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="items" optional="NO">
            <aggregate type="SET" lower="1" upper="?" unique="NO" optional="NO"/>
            <typename name="project_item"/>
         </explicit>
      </entity>
      <entity name="Project_relationship" abstract.supertype="NO" abstract.entity="NO">
         <explicit name="relation_type" optional="NO">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING" fixed="NO"/>
         </explicit>
         <explicit name="relating_project" optional="NO">
            <typename name="Project"/>
         </explicit>
         <explicit name="related_project" optional="NO">
            <typename name="Project"/>
         </explicit>
      <where label="IP1"/>
      </entity>
   </schema>
</express>
