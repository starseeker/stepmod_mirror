  -->

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project">
	 A <b>Project</b> is an identified program of work.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: id 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.id">
	 the text that identifies the <express_ref linkend="project:arm:Project_arm.Project"/>.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: name 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.name">
	 the words by which the <express_ref linkend="project:arm:Project_arm.Project"/> is known.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: description 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.description">
	 the text that provides further information about the <express_ref linkend="project:arm:Project_arm.Project"/>. The value of this attribute need not be specified.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: responsible_organizations  
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.responsible_organizations">
the set of instances of <express_ref linkend="person_organization_schema:ir_express:person_organization_schema.organization"/>

 that specify the organizations that are responsible for the project.
	 
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: planned_start_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.planned_start_date">
	 the <express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/>, the <express_ref linkend="date_time:arm:Date_time_arm.Date_time"/> or the <express_ref linkend="event:arm:Event_arm.Event"/> 
	 when execution of the <express_ref linkend="project:arm:Project_arm.Project"/> is expected to start.
	 The value of this attribute need not be specified.
	 </ext_description>
  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: Planned_end_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.planned_end_date">
	 the <express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/>, the <express_ref linkend="date_time:arm:Date_time_arm.Date_time"/> or the <express_ref linkend="event:arm:Event_arm.Event"/> 
	 when the <express_ref linkend="project:arm:Project_arm.Project"/> is or was expected to be finished.
	 The value of this attribute need not be specified.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: actual_start_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.actual_start_date">
	 the <express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/> or the <express_ref linkend="date_time:arm:Date_time_arm.Date_time"/> 
	 when the <express_ref linkend="project:arm:Project_arm.Project"/> was actually started. 
	 The value of this attribute need not be specified.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project  Attribute: actual_end_date 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project.actual_end_date">
	 the <express_ref linkend="date_time_schema:ir_express:date_time_schema.calendar_date"/> or the <express_ref linkend="date_time:arm:Date_time_arm.Date_time"/>, 
	 when the <express_ref linkend="project:arm:Project_arm.Project"/> was actually finished. 
	 The value of this attribute need not be specified.
	 </ext_description>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_assignment 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_assignment">
	 A <b>Project_assignment</b> is a mechanism to associate a <express_ref linkend="project:arm:Project_arm.Project"/> 
	 with activity or product data.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_assignment  Attribute: assigned_project 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_assignment.assigned_project">
	 the <express_ref linkend="project:arm:Project_arm.Project"/> that is associated.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_assignment  Attribute: role 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_assignment.role">
	 the text that specifies the meaning of the <express_ref linkend="project:arm:Project_arm.Project"/> with respect to the product or activity it is associated with.
	 
	 <p>When identifying the activities included in the work program of the project, the value 'work program' shall be assigned to the role attribute.
	 </p>
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_assignment  Attribute: items 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_assignment.items">
	 the set of instances of entity types listed in <express_ref linkend="project:arm:Project_arm.project_item"/>, that are  
	  associated with the <express_ref linkend="project:arm:Project_arm.Project"/>.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship">
   A <b>Project_relationship</b> is an association between two instances of <express_ref linkend="project:arm:Project_arm.Project"/> with an identifiaction and 
	 a description of their relationship.   
   </ext_description>

   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship  Attribute: relation_type 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship.relation_type">
	 the text that specifies the meaning of the relationship.
	<p> Where applicable the following values shall be used: 
	</p>
	<ul>
	<li>'decomposition': The application object defines a relationship where 
									the related project is a component of the relating project;</li>
 <li>'dependency': The completion of the related project depends upon the completion of the relating project;</li>
 <li>'sequence': The application object defines a relationship where 
									the relating project shall be completed before the related project starts;</li>
<li>'succession': The related project is the successor of the relating project.</li>
</ul>
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship  Attribute: description 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship.description">
	the text that provides further information about the relationship.
	 The value of this attribute need not be specified.
	 </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship  Attribute: relating_project 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship.relating_project">
	 the first <express_ref linkend="project:arm:Project_arm.Project"/> that is a part of the relationship.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship  Attribute: related_project 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship.related_project">
	 the other <express_ref linkend="project:arm:Project_arm.Project"/> that is a part of the relationship.
	 If one element of the relationship is dependent upon the other, this attribute shall be 
	 the dependent one.</ext_description>
	 
	   <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Project_arm  Entity: Project_relationship  Where: IP1 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Project_arm.Project_relationship.wr:IP1">
	 The graph of instances of <express_ref linkend="project:arm:Project_arm.Project"/>, related by instances of <b>Project_relationship</b>, shall be acyclic.</ext_description>
</ext_descriptions>