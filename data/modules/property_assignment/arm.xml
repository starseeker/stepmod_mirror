<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/02/13 14:21:32 $"
  rcs.revision="$Revision: 1.4 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/property_assignment/arm.exp"/>

  <schema name="Property_assignment_arm">
    <type name="property_assignment_select">
    <description>
      This select is a place holder for the assignment of properties to
      elements. 
    </description>
      <select
        extensible="YES">
      </select>

    </type>
    <entity
      name="Element_property">
      <description>
        An Element_property specifies a property that is
        assigned to an element.
      </description>
      <explicit
        name="name"
        optional="YES">
        <description>
          the name by which the property is known.
        </description>
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <description>
          text that characterises the property.
        </description>
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="described_element">
        <description>
          the element to which the property is assigned.
        </description>
        <typename
          name="property_assignment_select"/>
      </explicit>
    </entity>
  </schema>

</express>
