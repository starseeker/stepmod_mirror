(action_method,
 action_resource);

USE FROM Classification_assignment_mim;

USE FROM measure_schema
(measure_value,
 measure_with_unit);

USE FROM process_property_representation_schema
(resource_property_representation);

USE FROM process_property_schema
(action_resource_requirement,
 action_resource_requirement_relationship,
 characterized_resource_definition,
 requirement_for_action_resource,
 resource_property,
 resource_requirement_type);

USE FROM representation_schema
(representation,
 representation_context,
 representation_item,
 value_representation_item);

USE FROM Resource_item_mim;

USE FROM Value_with_unit_mim;

TYPE required_resource_classifcation_item = EXTENSIBLE SELECT BASED_ON classification_item WITH
  (action_resource_requirement,
   action_resource_requirement_relationship);
END_TYPE;

END_SCHEMA;