<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1786">
   <application name="JSDAI" owner="LKSoft" source="risk_definition_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Risk_definition_arm">
      <interface kind="use" schema="Activity_method_assignment_arm"/>
      <interface kind="use" schema="Probability_distribution_arm"/>
      <interface kind="use" schema="Process_property_assignment_arm"/>
      <interface kind="use" schema="Product_relationship_arm"/>
      <interface kind="use" schema="Product_view_definition_relationship_arm"/>
      <interface kind="use" schema="Property_assignment_arm"/>
      <type name="risk_activity_method_item">
         <select basedon="activity_method_item" extensible="YES" genericentity="YES" selectitems="Risk_perception"/>
      </type>
      <type name="risk_impact_item">
         <select extensible="YES" genericentity="YES" selectitems="Product Product_version"/>
      </type>
      <type name="risk_perception_source_item">
         <select extensible="YES" genericentity="YES" selectitems="Product"/>
      </type>
      <type name="risk_property_assignment_select">
         <select basedon="property_assignment_select" extensible="YES" genericentity="YES" selectitems="Risk_perception"/>
      </type>
      <entity name="Causal_consequence" supertypes="View_definition_relationship">
         <explicit name="relating_view">
            <typename name="Risk_consequence"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
         <explicit name="related_view">
            <typename name="Risk_consequence"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
      </entity>
      <entity name="Probability_representation" supertypes="Activity_property_representation">
         <explicit name="property">
            <typename name="Risk_event_probability"/>
            <redeclaration entity-ref="Activity_property_representation"/>
         </explicit>
         <explicit name="rep">
            <typename name="Probability"/>
            <redeclaration entity-ref="Activity_property_representation"/>
         </explicit>
      </entity>
      <entity name="Related_consequence" supertypes="View_definition_relationship">
         <explicit name="relating_view">
            <typename name="Risk_perception"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
         <explicit name="related_view">
            <typename name="Risk_consequence"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
      </entity>
      <entity name="Risk" supertypes="Product"/>
      <entity name="Risk_attitude" supertypes="Property_representation">
         <explicit name="criticality_factor">
            <typename name="Property_value_representation"/>
            <redeclaration entity-ref="Property_definition_representation" old_name="used_representation"/>
         </explicit>
         <explicit name="property">
            <typename name="Risk_level"/>
            <redeclaration entity-ref="Property_representation"/>
         </explicit>
      </entity>
      <entity name="Risk_consequence" supertypes="Product_view_definition">
         <explicit name="defined_version">
            <typename name="Risk_version"/>
            <redeclaration entity-ref="Product_view_definition"/>
         </explicit>
      </entity>
      <entity name="Risk_event" supertypes="Applied_activity_method_assignment">
         <explicit name="associated_risk">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="Risk_perception"/>
            <redeclaration entity-ref="Applied_activity_method_assignment" old_name="items"/>
         </explicit>
         <derived expression="'causal event'" name="role">
            <builtintype type="STRING"/>
            <redeclaration entity-ref="Applied_activity_method_assignment"/>
         </derived>
      </entity>
      <entity name="Risk_event_probability" supertypes="Activity_property">
         <explicit name="described_element">
            <typename name="Activity_method"/>
            <redeclaration entity-ref="Activity_property"/>
         </explicit>
      </entity>
      <entity name="Risk_impact_assignment">
         <explicit name="assigned_risk_consequence">
            <typename name="Risk_consequence"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="risk_impact_item"/>
         </explicit>
      </entity>
      <entity name="Risk_level" supertypes="Assigned_property">
         <explicit name="described_element">
            <typename name="Risk_perception"/>
            <redeclaration entity-ref="Assigned_property"/>
         </explicit>
      </entity>
      <entity name="Risk_perception" supertypes="Product_view_definition">
         <explicit name="defined_version">
            <typename name="Risk_version"/>
            <redeclaration entity-ref="Product_view_definition"/>
         </explicit>
         <explicit name="risk_perception_context">
            <typename name="Risk_perception_context"/>
            <redeclaration entity-ref="Product_view_definition" old_name="initial_context"/>
         </explicit>
      </entity>
      <entity name="Risk_perception_context" supertypes="Initial_view_definition_context"/>
      <entity name="Risk_perception_relationship" supertypes="View_definition_relationship">
         <explicit name="relating_view">
            <typename name="Risk_perception"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
         <explicit name="related_view">
            <typename name="Risk_perception"/>
            <redeclaration entity-ref="View_definition_relationship"/>
         </explicit>
      </entity>
      <entity name="Risk_perception_source_assignment">
         <explicit name="assigned_risk">
            <typename name="Risk_perception"/>
         </explicit>
         <explicit name="items">
            <aggregate lower="1" type="SET" upper="?"/>
            <typename name="risk_perception_source_item"/>
         </explicit>
      </entity>
      <entity name="Risk_relationship" supertypes="Product_relationship">
         <explicit name="relating_risk">
            <typename name="Risk"/>
            <redeclaration entity-ref="Product_relationship" old_name="relating_product"/>
         </explicit>
         <explicit name="related_risk">
            <typename name="Risk"/>
            <redeclaration entity-ref="Product_relationship" old_name="related_product"/>
         </explicit>
      </entity>
      <entity name="Risk_version" supertypes="Product_version">
         <explicit name="of_risk">
            <typename name="Risk"/>
            <redeclaration entity-ref="Product_version" old_name="of_product"/>
         </explicit>
      </entity>
   </schema>
</express>
