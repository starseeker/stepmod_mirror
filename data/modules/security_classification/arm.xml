<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.9"
    source="../data/modules/security_classification/arm.exp"
    description.file="arm_descriptions.xml"/>

  <schema name="Security_classification_arm">
    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Alias_identification_arm">
    </interface>

    <type name="security_classification_item">
      <select
        extensible="YES"
        selectitems="null">
      </select>

    </type>
    <type name="security_classification_organization_or_person_in_organization_item">
      <select
        basedon="organization_or_person_in_organization_item"
        selectitems="Security_classification">
      </select>

    </type>
    <type name="security_classification_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Security_classification">
      </select>

    </type>
    <type name="security_classification_approval_item">
      <select
        basedon="approval_item"
        selectitems="Security_classification">
      </select>

    </type>
    <entity
      name="Security_classification">
      <explicit
        name="classification">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Security_classification_assignment">
      <explicit
        name="classification">
        <typename
          name="Security_classification"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="security_classification_item"/>
      </explicit>
    </entity>

  </schema>

</express>
