<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="$Revision: $"
    source="../data/modules/security_classification/arm.exp"/>

  <schema name="Security_classification_arm">
    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Alias_identification_arm">
    </interface>

    <type name="security_classification_item">
      <select
        extensible="YES"
        selectitems="">
      </select>

    </type>
    <type name="security_classification_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Security_classification">
      </select>

    </type>
    <type name="security_classification_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Security_classification">
      </select>

    </type>
    <type name="security_classification_approval_item">
      <select
        basedon="approval_item"
        selectitems="Security_classification">
      </select>

    </type>
    <type name="security_classification_alias_identification_item">
      <select
        extensible="YES"
        basedon="alias_identification_item"
        selectitems="Security_classification">
      </select>

    </type>
    <entity
      name="Security_classification">
      <explicit
        name="classification">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <inverse
        name="classifier"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="classification_dates"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="2"/>
      </inverse>
      <inverse
        name="approval"
        entity="Approval_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="idalias"
        entity="Alias_identification"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <where
        label="WR1"
        expression="(SELF.classification IN ['unclassified', 'confidential',        'secret', 'top secret', 'proprietary'] OR EXISTS(SELF.description))">
      </where>
      <where
        label="WR2"
        expression="NOT (SELF.classification = 'classified' AND (NOT EXISTS(SELF.description)))">
      </where>
      <where
        label="WR3"
        expression="SELF.classifier.role = 'classification officer'">
      </where>
      <where
        label="WR4"
        expression="SELF.classification_dates.role IN ['classification date','declassification date']">
      </where>
      <where
        label="WR5"
        expression="SIZEOF(QUERY(cdr &lt;* USEDIN(SELF,'SECURITY_CLASSIFICATION_MIM.' + 'DATE_OR_DATE_TIME_ASSIGNMENT.ITEMS') | ((SELF.role.name="classification date" ))) &lt;="1"">
      </where>
      <where
        label="WR6"
        expression="SIZEOF(QUERY(cdr &lt;* USEDIN(SELF,'SECURITY_CLASSIFICATION_MIM.' + 'DATE_OR_DATE_TIME_ASSIGNMENT.ITEMS') | ((SELF.role.name="declassification date" ))) &lt;="1"">
      </where>
    </entity>

    <entity
      name="Security_classification_assignment">
      <explicit
        name="classification">
        <typename
          name="Security_classification"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"
          typelabel="security_classification_item"/>
      </explicit>
    </entity>

  </schema>

</express>
