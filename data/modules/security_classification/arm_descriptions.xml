<?DOCTYPE 
  express SYSTEM "../../../dtd/description.dtd"?>
<ext_descriptions module_directory="security_classification" schema_file="arm.xml" rcs.date="$Date: 2002/03/19 13:34:14 $" rcs.revision="$Revision: 1.1 $">


  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
   <ext_description linkend="Security_classification_arm"/>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Type: security_classification_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.security_classification_item">This select is a place holder for assignments of security classification to elements of product data.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Type: security_classification_organization_or_person_in_organization_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.security_classification_organization_or_person_in_organization_item">This select extends the assignments of an organization or a person in an organization to Security_classification.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Type: security_classification_date_or_date_time_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.security_classification_date_or_date_time_item">This select is a extends the assignments of a date or a date and time to <b>Security_classification</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Type: security_classification_approval_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.security_classification_approval_item">This select extends an <b>Approval_assignment</b> to apply to <b>Security_classification</b> instances.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Type: security_classification_alias_identification_item 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.security_classification_alias_identification_item">This select extends the assignments of identification for aliasing to security classifications.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification">A <b>Security_classification</b> specifies information about the sensitivity of product data.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Attribute: classification 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.classification">the identification the <b>Security_classification</b>.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Attribute: description 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.description">the optional text which defines the <b>Security_classification</b>. This is provided when the classification is not generally understood.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Attribute: classification_dates 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.classification_dates">the optional dates or dates and times related to the classification.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Attribute: approval 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.approval">the organization or person in organization that approved the classification.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Where: WR2 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.wr:WR2">If the <b>classification</b> is 'classified', the <b>description</b> value shall exist.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Where: WR3 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.wr:WR3">The <b>classifier</b> role shall be 'classification officer'.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Where: WR4 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.wr:WR4">The <b>classification_dates</b> role shall be either 'classification date' or 'declassification date'.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Where: WR5 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.wr:WR5">At most 1 <b>classification_dates</b> role may be 'classification date'.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification  Where: WR6 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.wr:WR6">At most 1 <b>classification_dates</b> role may be 'declassification date'.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification_assignment 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification_assignment">
      <p>A <b>Security_classification_assignment</b> assigns a <b>Security_classification</b> to product data.</p>
   </ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification_assignment  Attribute: classification 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification_assignment.classification">the <b>Security_classification</b> to be assigned to product data.</ext_description>

  <!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification_assignment  Attribute: items 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
 
   <ext_description linkend="Security_classification_arm.Security_classification_assignment.items">the product data to which the <b>Security_classification</b> is assigned.</ext_description>
  <!-- 
   ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Security_classification_arm  Entity: Security_classification_assignment  Attribute: classifier 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
   <ext_description linkend="Security_classification_arm.Security_classification.classifier">the optional organization or person in organization that defines or owns the classification.</ext_description>

  </ext_descriptions>