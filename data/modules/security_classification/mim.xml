<!DOCTYPE express
  SYSTEM "../express_model.dtd">
<express rcs.date="$Date:$" rcs.revision="$Revision:$">
   <application name="pdm_module2mim.xml" owner="PDTec GmbH" url="http://www.pdtec.de" version="0.8" source="../data/modules/approval/mim.exp"/>
   <schema name="security_classification_mim">
      <interface kind="use" schema="approval_mim"/>
      <interface kind="use" schema="date_time_assignment_mim"/>
      <interface kind="use" schema="person_organisation_assignment_mim"/>
      <interface kind="use" schema="alias_identification_mim"/>
      <interface kind="use" schema="security_classification_schema">
         <interfaced.item name="security_classification_level"/>
         <interfaced.item name="security_classification"/>
      </interface>
      <interface kind="use" schema="management_resources_schema">
         <interfaced.item name="security_classification_assignment"/>
      </interface>
      <type name="security_classification_item">
         <select extensible="YES"/>
      </type>
      <type name="security_classification_approval_item">
         <select basedon="approval_item" selectitems="security_classification"/>
      </type>
      <type name="security_classification_date_item">
         <select basedon="date_item" selectitems="security_classification"/>
      </type>
      <type name="security_classification_date_and_time_item">
         <select basedon="date_and_time_item" selectitems="security_classification"/>
      </type>
      <type name="security_classification_organization_item">
         <select basedon="organization_item" selectitems="security_classification"/>
      </type>
      <type name="security_classification_person_and_organization_item">
         <select basedon="person_and_organization_item" selectitems="security_classification"/>
      </type>
      <type name="security_classification_alias_identification_item">
         <select basedon="alias_identification_item" selectitems="security_classification"/>
      </type>
      <entity name="applied_security_classification_assignment" supertypes="security_classification_assignment">
         <explicit name="items">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="security_classification_item"/>
         </explicit>
      </entity>
   </schema>
</express>