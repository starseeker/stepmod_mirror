<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.15"
    source="../data/modules/shape_property_assignment/arm.exp"/>

  <schema name="Shape_property_assignment_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_relationship_arm">
    </interface>

    <interface
      kind="use"
      schema="Property_assignment_arm">
    </interface>

    <type name="shape_select">
      <select
        basedon="property_assignment_select"
        selectitems="Shape_element Shape_element_relationship">
      </select>

    </type>
    <type name="shapeable_definition_select">
      <select
        selectitems="Characterizable_object Product_view_definition View_definition_relationship">
      </select>

    </type>
    <type name="shape_dependent_select">
      <select
        selectitems="Item_shape Shape_element">
      </select>

    </type>
    <type name="shape_definition_select">
      <select
        selectitems="Item_shape Shape_element Shape_element_relationship">
      </select>

    </type>
    <entity
      name="Item_shape"
      supertypes="Assigned_property">
      <derived
        name="SELF\Assigned_property.name"
        expression="'shape' ">
        <builtintype
          type="STRING"/>
      </derived>
      <where
        label="WR1"
        expression="('SHAPE_PROPERTY_ASSIGNMENT_ARM.' + 'SHAPEABLE_DEFINITION_SELECT') IN 	TYPEOF(SELF\Assigned_property.described_element) ))">
      </where>
    </entity>

    <entity
      name="Characterizable_object">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Shape_element">
      <explicit
        name="containing_shape">
        <typename
          name="Item_shape"/>
      </explicit>
      <explicit
        name="element_name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Shape_element_relationship">
      <explicit
        name="related">
        <typename
          name="Shape_element"/>
      </explicit>
      <explicit
        name="relating">
        <typename
          name="Shape_element"/>
      </explicit>
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Shape_dependent_property_representation">
      <explicit
        name="described_element">
        <typename
          name="shape_dependent_select"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="is_defined_in">
        <typename
          name="Cartesian_coordinate_space"/>
      </explicit>
    </entity>

    <entity
      name="Shape_description_association"
      supertypes="Property_representation">
      <explicit
        name="SELF\Property_representation.property">
        <typename
          name="shape_definition_select"/>
      </explicit>
      <explicit
        name="SELF\Property_representation.rep">
        <typename
          name="Geometric_model"/>
      </explicit>
    </entity>

  </schema>

</express>
