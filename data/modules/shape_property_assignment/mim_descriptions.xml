<!-- +++++++++++ geometric_item_specific_usage +++++++++++ -->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage">
	A <b>geometric_item_specific_usage</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	that implements the ARM concept of
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Geometric_item_specific_usage"/>.
</ext_description>

<!-- definition-->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage.definition">
	an attribute inherited from the
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	shall be redeclared as the
	<express_ref linkend="product_property_definition_schema:ir_express:product_property_definition_schema.shape_aspect"/>
	for the <b>geometric_item_specific_usage</b>.
</ext_description>

