<!-- +++++++++++ chain_based_geometric_item_specific_usage +++++++++++ -->
<ext_description linkend="Shape_property_assignment_mim.chain_based_geometric_item_specific_usage">
	A <b>chain_based_geometric_item_specific_usage</b> is a type of
	<express_ref linkend="shape_property_assignment:mim:Shape_property_assignment_mim.geometric_item_specific_usage"/>
	that implements the ARM concept of
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Chain_based_geometric_item_specific_usage"/>.
</ext_description>


<!-- +++++++++++ geometric_item_specific_usage +++++++++++ -->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage">
	A <b>geometric_item_specific_usage</b> is a type of
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	that implements the ARM concept of
	<express_ref linkend="Shape_property_assignment:arm:Shape_property_assignment_arm.Geometric_item_specific_usage"/>.
	In this specialization of 
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>,
	the
<express_ref linkend="Shape_property_assignment_mim:mim:Shape_property_assignment_mim.geometric_item_specific_usage.identified_item"/>
is directly included in the set of items of the
<express_ref linkend="Shape_property_assignment_mim:mim:Shape_property_assignment_mim.geometric_item_specific_usage.used_representation"/>.	
</ext_description>

<!-- definition-->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage.definition">
	an attribute inherited from the
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	shall be redeclared as the
	<express_ref linkend="Shape_property_assignment:mim:Shape_property_assignment_mim.geometric_item_specific_usage_select"/>
	for the <b>geometric_item_specific_usage</b>.
</ext_description>

<!-- used_representation -->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage.used_representation">
	an attribute inherited from the
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	shall be redeclared as the
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.shape_representation"/>
	for the <b>geometric_item_specific_usage</b>.
</ext_description>

<!-- identified_item -->
<ext_description linkend="Shape_property_assignment_mim.geometric_item_specific_usage.identified_item">
	an attribute inherited from the
	<express_ref linkend="product_property_representation_schema:ir_express:product_property_representation_schema.item_identified_representation_usage"/>
	shall be redeclared as the
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>
	for the <b>geometric_item_specific_usage</b>.
</ext_description>

</ext_descriptions>