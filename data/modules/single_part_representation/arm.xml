<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.27"
    source="../data/modules/single_part_representation/arm.exp"/>

  <schema name="Single_part_representation_arm">
    <interface
      kind="use"
      schema="Document_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Extended_measure_representation_arm">
    </interface>

    <interface
      kind="use"
      schema="External_model_arm">
    </interface>

    <interface
      kind="use"
      schema="Part_and_version_identification_arm">
    </interface>

    <interface
      kind="use"
      schema="Part_view_definition_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_categorization_arm">
    </interface>

    <interface
      kind="use"
      schema="Property_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_arm">
    </interface>

    <constant name="schema_name"
      expression="STRING := 'SINGLE_PART_REPRESENTATION_ARM';">
    </constant>
    <type name="spr_documented_element_select">
      <select
        basedon="documented_element_select"
        selectitems="Part_view_definition Part Part_version">
      </select>

    </type>
    <type name="spr_product_property_assignment">
      <select
        basedon="property_assignment_select"
        selectitems="Part_view_definition">
      </select>

    </type>
    <type name="spr_organization_or_person_in_organization_item">
      <select
        extensible="YES"
        basedon="organization_or_person_in_organization_item"
        selectitems="Document Document_version Document_definition Part Part_view_definition Part_version">
      </select>

    </type>
    <rule
      name="part_requires_version"
      appliesto="Part">
      <algorithm>
      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF(QUERY(prod &lt;* Part | 	(SIZEOF(USEDIN(prod, schema_name + '.PART_VERSION.OF_PRODUCT')) = 0))) = 0">
      </where>

    </rule>

    <rule
      name="part_requires_id_owner"
      appliesto="Part">
      <algorithm>
      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF ( QUERY ( prod &lt;* Part |   SIZEOF( QUERY (apoa &lt;* USEDIN ( prod, schema_name + '.ORGANIZATION_OR_PERSON_IN_ORGANIZATION_ASSIGNMENT.ITEMS' ) |    apoa\Organization_or_person_in_organization_assignment.role = 'id owner' )) &lt;&gt;  1 )) = 0">
      </where>

    </rule>

  </schema>

</express>
