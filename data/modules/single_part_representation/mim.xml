<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="mim_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.26"
    source="../data/modules/single_part_representation/mim.exp"/>

  <schema name="Single_part_representation_mim">
    <interface
      kind="use"
      schema="Document_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Extended_measure_representation_mim">
    </interface>

    <interface
      kind="use"
      schema="External_model_mim">
    </interface>

    <interface
      kind="use"
      schema="Part_and_version_identification_mim">
    </interface>

    <interface
      kind="use"
      schema="Part_view_definition_mim">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Product_categorization_mim">
    </interface>

    <interface
      kind="use"
      schema="Property_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Shape_property_assignment_mim">
    </interface>

    <constant name="schema_name"
      expression="STRING := 'SINGLE_PART_REPRESENTATION_MIM';">
    </constant>
    <type name="spr_document_reference_item">
      <select
        basedon="document_reference_item"
        selectitems="product product_definition product_definition_formation">
      </select>

    </type>
    <type name="spr_organization_item">
      <select
        extensible="YES"
        basedon="organization_item"
        selectitems="product product_definition product_definition_formation">
      </select>

    </type>
    <type name="spr_person_and_organization_item">
      <select
        extensible="YES"
        basedon="person_and_organization_item"
        selectitems="product product_definition product_definition_formation">
      </select>

    </type>
    <rule
      name="product_requires_category"
      appliesto="product">
      <algorithm>
      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF(QUERY(p &lt;* product |   SIZEOF(USEDIN(p, schema_name + '.PRODUCT_RELATED_PRODUCT_CATEGORY.PRODUCTS')) = 0)) = 0">
      </where>

    </rule>

    <rule
      name="part_requires_version"
      appliesto="product">
      <algorithm>
LOCAL
  parts: SET OF product := [];
END_LOCAL;
  parts := QUERY ( prod &lt;* product | 
     SIZEOF(['part', 'raw material', 'tool']*types_of_product(SELF)) &gt; 0) ;

      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF(QUERY(prod &lt;* parts | 	SIZEOF(USEDIN(prod, schema_name + '.PRODUCT_DEFINITION_FORMATION.OF_PRODUCT')) = 0 )) = 0">
      </where>

    </rule>

    <rule
      name="part_requires_id_owner"
      appliesto="product">
      <algorithm>
LOCAL
  parts: SET OF product := [];
END_LOCAL;
  parts := QUERY ( prod &lt;* product | 
     SIZEOF(['part', 'raw material', 'tool']*types_of_product(SELF)) &gt; 0) ;
      </algorithm>

      <where
        label="WR1"
        expression="SIZEOF ( QUERY ( prod &lt;* parts |   SIZEOF( QUERY (apoa &lt;* USEDIN ( prod, schema_name + '.APPLIED_PERSON_AND_ORGANIZATION_ASSIGNMENT.ITEMS' ) |    apoa\person_and_organization_assignment.role.name = 'id owner' )) +   SIZEOF( QUERY (oa &lt;* USEDIN ( prod, schema_name + '.APPLIED_ORGANIZATION_ASSIGNMENT.ITEMS' ) |     oa\organization_assignment.role.name = 'id owner' )) &lt;&gt;  1 )) = 0">
      </where>

    </rule>

  </schema>

</express>
