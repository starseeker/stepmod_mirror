<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2003/12/02 09:39:56 $"
  rcs.revision="$Revision: 1.6 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.33"
    source="../data/modules/specified_product/arm.exp"/>

  <schema name="Specified_product_arm">

    <interface
      kind="use"
      schema="Configuration_item_arm">
    </interface>
    <interface
      kind="use"
      schema="Product_class_arm">
    </interface>
    <interface
      kind="use"
      schema="Product_version_arm">
    </interface>
    <entity
      name="Product_specification"
      supertypes="Product_configuration">
      <explicit
        name="version_id"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="item_context">
        <typename
          name="Product_class"/>
        <redeclaration
          entity-ref="Product_configuration"/>
        </explicit>
        <explicit
          name="defining_specifications">
          <aggregate
            type="SET"
            lower="0"
            upper="?"/>
          <typename
            name="Specification"/>
        </explicit>
      </entity>

      <entity
        name="Specification_based_product_version"
        supertypes="Product_version">
        <inverse
          name="specification_source"
          entity="Item_design_association"
          attribute="design">
        </inverse>
        <where
          label="WR1"
          expression="'SPECIFIED_PRODUCT_ARM.PRODUCT_SPECIFICATION' IN TYPEOF(specification_source.configuration)">
        </where>
      </entity>

    </schema>
  </express>
