TYPE sbb_property_assignment_select = SELECT BASED_ON property_assignment_select WITH 
	(Activity_method, 
	Assigned_property, 
	Behaviour_view_definition, 
	Condition_parameter, 
	File,					-- hpf insert - from pushdown
	Generic_expression, 
	Independent_property, 
	Independent_property_relationship, 
	Product, 
	Product_category, 
	Product_version, 
	Product_version_relationship, 
	Product_view_definition,
	Property_definition_representation, 
	Representation, 
	Representation_context, 
	Representation_item);
END_TYPE; 

TYPE sbb_state_definition_of_item = SELECT BASED_ON state_definition_of_item WITH 
	(Activity_method,			-- hpf insert - from pushdown
	Behaviour_description_association,	-- hpf insert - from pushdown
	File_location_identification,		-- hpf insert - from pushdown
	Product_version,			-- hpf insert - from pushdown
	Product_view_definition);
END_TYPE;

END_SCHEMA;  -- State_based_behaviour_arm

