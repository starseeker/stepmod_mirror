SCHEMA State_based_behaviour_arm;

USE FROM Activity_method_assignment_arm;    -- ISO/TS 10303-1249

USE FROM Alias_identification_arm;    -- ISO/TS 10303-1025

USE FROM Behaviour_description_assignment_arm;    -- ISO/CD-TS 10303-1483

USE FROM Condition_arm;    -- ISO/TS 10303-1253

USE FROM Description_assignment_arm;    -- ISO/CD-TS 10303-1473

USE FROM Expression_assignment_arm;    -- ISO/CD-TS 10303-1491

USE FROM External_state_based_behaviour_model_arm;    -- ISO/CD-TS 10303-1468

USE FROM General_model_parameter_arm;    -- ISO/CD-TS 10303-1472			

USE FROM Textual_expression_representation_arm;    -- ISO/CD-TS 10303-1367

TYPE sbb_activity_method_item = SELECT BASED_ON activity_method_item  WITH 
	(State_definition);
END_TYPE;

TYPE sbb_behaviour_model = SELECT BASED_ON behaviour_model WITH 
	(State_based_behaviour_model);
END_TYPE; 

TYPE sbb_classification_item = SELECT BASED_ON classification_item WITH 
	(Activity_method,
	Applied_activity_method_assignment,
	Applied_state_definition_assignment, 
	Assigned_property,
	Behaviour, 
	Behaviour_view_definition, 
	Class,						-- hpf insert - from pushdown
	Condition, 
	Condition_assignment,				-- hpf insert - from pushdown
	Condition_parameter,				-- hpf insert - from pushdown
	Condition_relationship,				-- hpf insert - from pushdown
	Constrained_general_parameter_relationship,	-- hpf insert - from pushdown
	Context_dependent_unit,				-- hpf insert - from pushdown
	Conversion_based_unit, 
	Derived_unit, 
	Description_text, 
	Description_text_assignment, 
	Digital_file,					-- hpf insert - from pushdown
	External_class_library, 
	External_item_identification, 
	External_source_identification, 
	File, 
	File_location_identification,			-- hpf insert - from pushdown
	General_model_parameter, 
	Hardcopy,					-- hpf insert - from pushdown
	Identification_assignment,			-- hpf insert - from pushdown
	Independent_property,				-- hpf insert - from pushdown
	Independent_property_relationship,		-- hpf insert - from pushdown
	Independent_property_representation,		-- hpf insert - from pushdown
	Parameter_value_representation_item,		-- hpf insert - from pushdown
	Product, 
	Product_category,				-- hpf insert - from pushdown
	Product_version, 
	Product_version_relationship,			-- hpf insert - from pushdown
	Product_view_definition, 
	Property_representation,			-- hpf insert - from pushdown
	Representation, 
	Representation_context,				-- hpf insert - from pushdown
	Representation_item,				-- hpf insert - from pushdown
	State_based_behaviour_model, 
	State_definition, 
	State_definition_relationship,
	String_representation_item,			-- hpf insert - from pushdown
	Supplied_part_relationship,
	Text_based_representation,			-- hpf insert - from pushdown
	Uncertainty_with_unit,				-- hpf insert - from pushdown
	Unit,						-- hpf insert - from pushdown
	Value_with_unit);				-- hpf insert - from pushdown
END_TYPE; 

TYPE sbb_condition_item = SELECT BASED_ON condition_item WITH 
	(Assigned_property, 
	State_definition, 
	State_definition_relationship,
	State_transition_definition);
END_TYPE; 

TYPE sbb_condition_parameter_item = SELECT BASED_ON condition_parameter_item WITH 
	(Activity_method, 
	Assigned_property, 
	Classification_assignment, 
	Condition_relationship,				-- hpf insert - from pushdown
	Identification_assignment, 
	Independent_property_representation, 
	parameter_value_select,
	Product, 
	Product_category_assignment, 
	Product_version, 
	Product_view_definition, 
	Property_representation, 
	Representation,
	State_definition);
END_TYPE; 

TYPE sbb_description_item = SELECT BASED_ON description_item WITH 
	(Activity_method, 
	Behaviour, 
	behaviour_model,
	Behaviour_version, 
	Behaviour_view_definition, 
	Condition, 
	General_model_parameter, 
	Product, 
	Product_version, 
	Product_view_definition, 
	Representation, 
	State_based_behaviour_model, 
	State_definition, 
	State_definition_relationship);
END_TYPE; 

TYPE sbb_expression_assignment_item = SELECT BASED_ON expression_assignment_item WITH 
	(Condition);
END_TYPE; 

TYPE sbb_external_identification_item = EXTENSIBLE GENERIC_ENTITY SELECT BASED_ON external_identification_item WITH 
	(File,
	Product);
END_TYPE; 

TYPE sbb_identification_item = SELECT BASED_ON identification_item WITH 
	(Activity_method, 
	Applied_state_definition_assignment,
	Assigned_property,			-- hpf insert - from pushdown
	Behaviour,				-- hpf insert - from pushdown
	Behaviour_version,			-- hpf insert - from pushdown
	Behaviour_view_definition,		-- hpf insert - from pushdown
	Condition, 
	Description_text_assignment, 
	Digital_file, 
	External_class_library, 
	External_source_identification, 
	File, 
	General_model_parameter, 
	Hardcopy,				-- hpf insert - from pushdown
	Independent_property, 
	Independent_property_relationship, 
	Product, 
	Product_category, 
	Product_version, 
	Product_view_definition, 
	Representation, 
	State_based_behaviour_model, 
	State_definition, 
	State_definition_relationship,
	State_transition_definition,
	View_definition_context);
END_TYPE; 

TYPE sbb_parameter_value_select = SELECT BASED_ON parameter_value_select WITH 
	(Product_view_definition,
	Representation, 
	Representation_item, 
	State_definition);
END_TYPE; 

