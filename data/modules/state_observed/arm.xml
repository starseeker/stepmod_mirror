<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.26"
    source="../data/modules/state_observed/arm.exp"/>

  <schema name="State_observed_arm">
    <interface
      kind="use"
      schema="Classification_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Condition_evaluation_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organization_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="State_definition_arm">
    </interface>

    <type name="observer">
      <select
        basedon="organization_or_person_in_organization_item"
        selectitems="State_assessment">
      </select>

    </type>
    <type name="state_classified_select">
      <select
        basedon="classification_item"
        selectitems="State">
      </select>

    </type>
    <type name="state_date_and_time">
      <select
        basedon="date_or_date_time_item"
        selectitems="Applied_state_assignment">
      </select>

    </type>
    <type name="state_of_item">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <entity
      name="Applied_state_assignment">
      <explicit
        name="assigned_to">
        <typename
          name="state_of_item"/>
      </explicit>
      <explicit
        name="described_state">
        <typename
          name="State"/>
      </explicit>
    </entity>

    <entity
      name="Composition_of_state"
      supertypes="State_relationship">
      <explicit
        name="relating RENAMED whole">
        <redeclaration
          entity-ref="State_relationship"/>
          <typename
            name="State"/>
        </explicit>
        <explicit
          name="related RENAMED part">
          <redeclaration
            entity-ref="State_relationship"/>
            <aggregate
              type="SET"
              lower="2"
              upper="?"/>
            <typename
              name="State"/>
          </explicit>
        </entity>

        <entity
          name="Defined_state_relationship">
          <explicit
            name="defined_state">
            <typename
              name="State_assessment"/>
          </explicit>
          <explicit
            name="definitive_state">
            <typename
              name="State_assertion"/>
          </explicit>
        </entity>

        <entity
          name="Sequence_of_state"
          supertypes="State_relationship">
          <explicit
            name="relating RENAMED successor">
            <redeclaration
              entity-ref="State_relationship"/>
              <typename
                name="State"/>
            </explicit>
            <explicit
              name="related RENAMED predecessor">
              <redeclaration
                entity-ref="State_relationship"/>
                <typename
                  name="State"/>
              </explicit>
            </entity>

            <entity
              name="State"
              super.expression="(ONEOF(State_observed, State_predicted))">
              <explicit
                name="name">
                <builtintype
                  type="STRING"/>
              </explicit>
              <explicit
                name="description"
                optional="YES">
                <builtintype
                  type="STRING"/>
              </explicit>
            </entity>

            <entity
              name="State_assertion"
              supertypes="Condition_assertion">
              <explicit
                name="asserted_state">
                <typename
                  name="State"/>
              </explicit>
              <explicit
                name="conformance_state">
                <typename
                  name="State_definition"/>
              </explicit>
            </entity>

            <entity
              name="State_assessment"
              supertypes="Condition_assertion">
              <explicit
                name="assessed_state">
                <typename
                  name="State"/>
              </explicit>
              <explicit
                name="comparable_state">
                <typename
                  name="State_definition"/>
              </explicit>
            </entity>

            <entity
              name="State_cause_effect"
              supertypes="State_relationship">
              <explicit
                name="relating RENAMED effect">
                <redeclaration
                  entity-ref="State_relationship"/>
                  <aggregate
                    type="SET"
                    lower="1"
                    upper="?"/>
                  <typename
                    name="State"/>
                </explicit>
                <explicit
                  name="related RENAMED cause">
                  <redeclaration
                    entity-ref="State_relationship"/>
                    <aggregate
                      type="SET"
                      lower="1"
                      upper="?"/>
                    <typename
                      name="State"/>
                  </explicit>
                </entity>

                <entity
                  name="State_observed"
                  supertypes="State">
                </entity>

                <entity
                  name="State_predicted"
                  supertypes="State">
                </entity>

                <entity
                  name="State_relationship">
                  <explicit
                    name="name">
                    <builtintype
                      type="STRING"/>
                  </explicit>
                  <explicit
                    name="description">
                    <builtintype
                      type="STRING"/>
                  </explicit>
                  <explicit
                    name="relating">
                    <aggregate
                      type="SET"
                      lower="1"
                      upper="?"/>
                    <typename
                      name="State"/>
                  </explicit>
                  <explicit
                    name="related">
                    <aggregate
                      type="SET"
                      lower="1"
                      upper="?"/>
                    <typename
                      name="State"/>
                  </explicit>
                </entity>

                <entity
                  name="State_transition"
                  supertypes="State_relationship">
                  <explicit
                    name="relating RENAMED end_state">
                    <redeclaration
                      entity-ref="State_relationship"/>
                      <typename
                        name="State"/>
                    </explicit>
                    <explicit
                      name="related RENAMED start_state">
                      <redeclaration
                        entity-ref="State_relationship"/>
                        <typename
                          name="State"/>
                      </explicit>
                    </entity>

                  </schema>

                </express>
