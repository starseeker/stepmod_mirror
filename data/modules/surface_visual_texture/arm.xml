<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?><!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date: 2017/08/22 16:18:31 $" rcs.revision="$Revision: 1.5 $" reference="">
   <application name="JSDAI" owner="LKSoft" source="surface_visual_texture_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Surface_visual_texture_arm">
      <interface kind="use" schema="Appearance_assignment_arm"/>
      <interface kind="use" schema="Support_resource_arm"/>
      <interface kind="use" schema="Tessellated_geometry_arm"/>
      
      <type name="non_negative_real">
         <builtintype type="REAL"/>
         <where expression="0.0 &lt;= SELF" label="WR1"/>
      </type>
      <type name="svt_appearance_select">
         <select basedon="appearance_select" selectitems="Texture_style_tessellation_specification"/>
      </type>
      <type name="tessellated_face_or_tessellated_surface_set">
         <select selectitems="Tessellated_face Tessellated_surface_set"/>
      </type>
      <type name="visual_texture_file_type">
         <enumeration items="JPEG PNG GIF TIFF BMP DDS TGA other"/>
      </type>
      <entity name="Single_texture_style_tessellation_specification" supertypes="Texture_style_tessellation_specification">
         <explicit name="texture_image">
            <typename name="label"/>
         </explicit>
         <explicit name="texture_coordinates">
            <aggregate lower="1" type="LIST" upper="?"/>
            <aggregate lower="2" type="LIST" upper="2"/>
            <typename name="non_negative_real"/>
         </explicit>
         <explicit name="texture_format">
            <typename name="visual_texture_file_type"/>
         </explicit>
         <explicit name="repeating_pattern">
            <builtintype type="BOOLEAN"/>
         </explicit>
      </entity>
      <entity name="Styled_tessellated_face_or_surface_with_texture" supertypes="Styled_element">
         <explicit name="appearance">
            <aggregate lower="1" type="SET" upper="1"/>
            <typename name="Appearance_assignment"/>
            <redeclaration entity-ref="Styled_element"/>
         </explicit>
         <explicit name="element">
            <typename name="tessellated_face_or_tessellated_surface_set"/>
            <redeclaration entity-ref="Styled_element"/>
         </explicit>
         <where expression="SELF\styled_element.invisible = FALSE" label="WR1"/>
         <where expression="(SIZEOF(appearance) = 1) AND &#10;         (SIZEOF(appearance[1]\Appearance_assignment.appearance_components) = 1)" label="WR2"/>
         <where expression="'SURFACE_VISUAL_TEXTURE_ARM.SINGLE_TEXTURE_STYLE_TESSELLATION_SPECIFICATION' IN &#10;               TYPEOF(appearance[1]\Appearance_assignment.appearance_components[1])" label="WR3"/>
      </entity>
      <entity abstract.supertype="YES" name="Texture_style_tessellation_specification"/>
   </schema>
</express>
