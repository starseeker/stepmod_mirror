  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="Tagged_text_representation_mim.tagged_text_format">
		An <b>tagged_text_format</b> is a type of 
		<express_ref linkend="classification_schema:ir_express:classification_schema.class"/> 
		and of 
		<express_ref linkend="representation_schema:ir_express:representation_schema.representation_context"/>
		that implements the ARM concept of
		<express_ref linkend="Tagged_text_representation:arm:Tagged_text_representation_arm.Tagged_text_format"/>.
	</ext_description>	
		<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
