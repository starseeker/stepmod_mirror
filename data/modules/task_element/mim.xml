<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="mim_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="task_element_mim schema_instance"/>
   <schema name="Task_element_mim">
      <interface kind="use" schema="Activity_method_assignment_mim"/>
      <interface kind="use" schema="Condition_mim"/>
      <interface kind="use" schema="measure_schema">
         <interfaced.item name="count_measure"/>
      </interface>
      <interface kind="use" schema="method_definition_schema"/>
      <interface kind="use" schema="support_resource_schema">
         <interfaced.item name="text"/>
      </interface>
      <entity name="concurrent_task_element" supertypes="task_element"/>
      <entity name="decision_point" supertypes="action_method_to_select_from task_element">
         <derived name="number_of_elements" expression="1">
            <typename name="count_measure"/>
            <redeclaration entity-ref="action_method_to_select_from"/>
         </derived>
         <derived name="purpose" expression="'decision'">
            <typename name="text"/>
            <redeclaration entity-ref="action_method"/>
         </derived>
      </entity>
      <entity name="end_task" supertypes="task_element"/>
      <entity name="exit_loop" supertypes="task_element"/>
      <entity name="looping_element" supertypes="task_element"/>
      <entity name="start_task" supertypes="task_element"/>
      <entity name="task_element" supertypes="action_method"/>
      <entity name="task_element_relationship" supertypes="action_method_relationship"/>
      <entity name="task_element_sequence" supertypes="task_element"/>
      <entity name="task_step" supertypes="task_element"/>
      <subtype.constraint name="restrict_task_method_subtypes" entity="task_element" super.expression="ONEOF (concurrent_task_element, end_task, exit_loop, looping_element, task_element_sequence, task_step)"/>
   </schema>
</express>
