<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.25"
    source="../data/modules/text_appearance/arm.exp"/>

  <schema name="Text_appearance_arm">
    <interface
      kind="use"
      schema="Elemental_geometric_shape_arm">
    </interface>

    <type name="composite_text_element_select">
      <select
        selectitems="Composite_presentable_text Presentable_text_item">
      </select>

    </type>
    <entity
      name="Text_style">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Presentable_text_item"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="literal">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="style">
        <typename
          name="Text_style"/>
      </explicit>
      <explicit
        name="placement">
        <typename
          name="Axis_placement"/>
      </explicit>
    </entity>

    <entity
      name="Composite_presentable_text"
      supertypes="Detailed_geometric_model_element">
      <explicit
        name="collected_text">
        <aggregate
          type="SET"
          lower="2"
          upper="?"/>
        <typename
          name="composite_text_element_select"/>
      </explicit>
    </entity>

  </schema>

</express>
