<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date: 2007-09-19 12:03:16 +0300 (Tr, 19 Rgs 2007) $" rcs.revision="$Revision: 1540 $" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="text_appearance_arm schema_instance"/>
   <schema name="Text_appearance_arm">
      <interface kind="use" schema="Basic_geometry_arm"/>
      <type name="composite_text_element_select">
         <select selectitems="Composite_presentable_text Text_literal"/>
      </type>
      <type name="font_select">
         <select extensible="YES" genericentity="YES" selectitems="Draughting_pre_defined_text_font Externally_defined_text_font"/>
      </type>
      <type name="text_alignment">
         <enumeration extensible="YES" items="top_right top_centre top_left centre_right centre_centre centre_left bottom_right bottom_centre bottom_left"/>
      </type>
      <type name="text_delineation">
         <enumeration extensible="YES" items="underline overline"/>
      </type>
      <type name="text_path">
         <enumeration items="left right up down"/>
      </type>
      <entity name="Composite_presentable_text" supertypes="Detailed_geometric_model_element">
         <explicit name="collected_text">
            <aggregate type="LIST" lower="2" upper="?"/>
            <typename name="composite_text_element_select"/>
         </explicit>
      </entity>
      <entity name="Draughting_pre_defined_text_font"/>
      <entity name="Externally_defined_text_font">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Text_literal" supertypes="Detailed_geometric_model_element" super.expression="Text_literal_with_extent ANDOR Text_literal_with_delineation ANDOR Text_literal_with_associated_curves ANDOR Text_literal_with_blanking_box">
         <explicit name="alignment">
            <typename name="text_alignment"/>
         </explicit>
         <explicit name="font">
            <typename name="font_select"/>
         </explicit>
         <explicit name="literal">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="path">
            <typename name="text_path"/>
         </explicit>
         <explicit name="placement">
            <typename name="Axis_placement"/>
         </explicit>
      </entity>
      <entity name="Text_literal_with_associated_curves" supertypes="Text_literal">
         <explicit name="associated_curves">
            <aggregate type="SET" lower="1" upper="?"/>
            <typename name="Curve"/>
         </explicit>
      </entity>
      <entity name="Text_literal_with_blanking_box" supertypes="Text_literal"/>
      <entity name="Text_literal_with_delineation" supertypes="Text_literal">
         <explicit name="delineation">
            <typename name="text_delineation"/>
         </explicit>
      </entity>
      <entity name="Text_literal_with_extent" supertypes="Text_literal">
         <explicit name="width">
            <typename name="length_measure"/>
         </explicit>
         <explicit name="height">
            <typename name="length_measure"/>
         </explicit>
      </entity>
      <subtype.constraint name="ta_detailed_geometric_model_element_subtypes" entity="Detailed_geometric_model_element" super.expression="ONEOF (Composite_presentable_text, Text_literal)"/>
   </schema>
</express>
