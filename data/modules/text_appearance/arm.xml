<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="text_appearance_arm schema_instance"/>
   <schema name="Text_appearance_arm">
      <interface kind="use" schema="Elemental_geometric_shape_arm"/>
      <type name="composite_text_element_select">
         <select selectitems="Composite_presentable_text Presentable_text_item"/>
      </type>
      <type name="font_select">
         <select selectitems="Draughting_pre_defined_text_font Externally_defined_text_font"/>
      </type>
      <entity name="Composite_presentable_text" supertypes="Detailed_geometric_model_element">
         <explicit name="collected_text">
            <aggregate type="LIST" lower="2" upper="?"/>
            <typename name="composite_text_element_select"/>
         </explicit>
      </entity>
      <entity name="Draughting_pre_defined_text_font"/>
      <entity name="Externally_defined_text_font">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
      <entity name="Presentable_text_item" supertypes="Detailed_geometric_model_element">
         <explicit name="literal">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="placement">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="style">
            <typename name="Text_style"/>
         </explicit>
      </entity>
      <entity name="Text_literal_with_extent" supertypes="Presentable_text_item">
         <explicit name="font">
            <typename name="font_select"/>
         </explicit>
      </entity>
      <entity name="Text_style">
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
      </entity>
   </schema>
</express>
