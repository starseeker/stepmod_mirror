<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="arm_descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO/TS 10303-1750">
   <application name="JSDAI" owner="LKSoft" source="text_representation_arm schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="Text_representation_arm">
      <interface kind="use" schema="Text_appearance_arm"/>
      <type name="label1">
         <typename name="label"/>
         <where expression="LENGTH(SELF) = 1" label="WR1"/>
      </type>
      <type name="tr_font_select">
         <select basedon="font_select" extensible="YES" genericentity="YES" selectitems="Text_font"/>
      </type>
      <entity name="Annotation_text_character" supertypes="Detailed_geometric_model_element">
         <explicit name="replicated_model">
            <typename name="Character_glyph_symbol"/>
         </explicit>
         <explicit name="source">
            <typename name="Axis_placement"/>
         </explicit>
         <explicit name="target">
            <typename name="Axis_placement"/>
         </explicit>
      </entity>
      <entity name="Character_glyph_font_usage">
         <explicit name="character">
            <typename name="Character_glyph_symbol"/>
         </explicit>
         <explicit name="font">
            <typename name="Text_font"/>
         </explicit>
      </entity>
      <entity name="Character_glyph_symbol" supertypes="Representation">
         <explicit name="character">
            <typename name="label1"/>
            <redeclaration entity-ref="Representation" old_name="name"/>
         </explicit>
      </entity>
      <entity name="Text_font">
         <explicit name="id">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description">
            <builtintype type="STRING"/>
         </explicit>
         <inverse attribute="font" entity="Character_glyph_font_usage" name="glyphs">
            <inverse.aggregate lower="1" type="SET" upper="?"/>
         </inverse>
      </entity>
      <entity name="Text_font_family">
         <explicit name="id">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description">
            <builtintype type="STRING"/>
         </explicit>
         <inverse attribute="family" entity="Text_font_in_family" name="fonts">
            <inverse.aggregate lower="1" type="SET" upper="?"/>
         </inverse>
      </entity>
      <entity name="Text_font_in_family">
         <explicit name="font">
            <typename name="Text_font"/>
         </explicit>
         <explicit name="family">
            <typename name="Text_font_family"/>
         </explicit>
      </entity>
   </schema>
</express>
