<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="2005-04-22T15:09:06" rcs.revision="1.0" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="text_representation_arm schema_instance"/>
   <schema name="Text_representation_arm">
      <interface kind="use" schema="Elemental_geometric_shape_arm"/>
      <interface kind="use" schema="Specification_document_arm"/>
      <type name="font_select">
         <select selectitems="Registered_font Font_definition"/>
      </type>
      <type name="st_documented_element_select">
         <select extensible="YES" genericentity="YES" basedon="documented_element_select" selectitems="Registered_font"/>
      </type>
      <entity name="Font_definition"/>
      <entity name="Registered_font">
         <explicit name="font_code">
            <builtintype type="STRING"/>
         </explicit>
         <inverse name="registration_document" entity="Document_assignment" attribute="is_assigned_to"/>
         <unique label="UR1">
            <unique.attribute entity-ref="Registered_font" attribute="font_code"/>
            <unique.attribute entity-ref="Registered_font" attribute="registration_document"/>
         </unique>
      </entity>
      <entity name="Styled_text" supertypes="Detailed_geometric_model_element">
         <explicit name="text_font">
            <typename name="font_select"/>
         </explicit>
      </entity>
   </schema>
</express>
