<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express language_version="2" rcs.date="$Date: 2006/03/23 15:28:42 $" rcs.revision="$Revision: 1.3 $" description.file="arm_descriptions.xml">
	<application name="GraphicalEXPRESS" owner="Eurostep" url="www.eurostep.com" version="1.3" source="textual_expression_representation_arm_v002.vsd"/>
  <schema name="Textual_expression_representation_arm">
    <interface
      kind="use"
      schema="Classification_assignment_arm">
    </interface>
    <interface
      kind="use"
      schema="Foundation_representation_arm">
    </interface>
    <type name="list_of_text_based_item"> 
      <aggregate type="LIST"
        lower="1"
        upper="?"/>

      <typename name="Textual_expression_representation_item"/>
      <graphic.element
        page="2"
        xcoord="494"
        ycoord="513"/>
    </type>

    <type name="list_or_set_of_text_based_item"> 
      <select
        selectitems="list_of_text_based_item set_of_text_based_item"/>
      <graphic.element
        page="2"
        xcoord="496"
        ycoord="425"/>
    </type>

    <type name="set_of_text_based_item"> 
      <aggregate type="SET"
        lower="1"
        upper="?"/>

      <typename name="Textual_expression_representation_item"/>
      <graphic.element
        page="2"
        xcoord="496"
        ycoord="467"/>
    </type>

    <type name="ter_classification_item"> 
      <select
         basedon="classification_item"
        selectitems="Representation_context Text_based_representation"/>
      <graphic.element
        page="2"
        xcoord="453"
        ycoord="311"/>
    </type>

    <type name="text_based_item_select"> 
      <select
        selectitems="Included_text_based_representation Textual_expression_composition Textual_expression_representation_item"/>
      <graphic.element
        page="2"
        xcoord="218"
        ycoord="544"/>
    </type>

    <entity
      name="Included_text_based_representation"
      supertypes="Representation_item"      >

      <explicit
        name="source">
        <typename name="Text_based_representation"/>
      </explicit>
      <graphic.element
        page="2"
        xcoord="184"
        ycoord="375"/>
    </entity>

    <entity
      name="Text_based_representation"
      supertypes="Representation"      >

      <explicit
        name="context_of_items">
        <typename name="Text_based_representation_context"/>
        <redeclaration
          entity-ref="Representation"/>
      </explicit>
      <explicit
        name="items">
        <aggregate type="SET"
          lower="1"
          upper="1"/>

        <typename name="text_based_item_select"/>
        <redeclaration
          entity-ref="Representation"/>
      </explicit>
      <graphic.element
        page="2"
        xcoord="147"
        ycoord="626"/>
    </entity>

    <entity
      name="Text_based_representation_context"
      supertypes="Representation_context"      >

      <graphic.element
        page="2"
        xcoord="162"
        ycoord="177"/>
    </entity>

    <entity
      name="Textual_expression_composition"
      supertypes="Representation_item"      >

      <explicit
        name="content">
        <typename name="list_or_set_of_text_based_item"/>
      </explicit>
      <graphic.element
        page="2"
        xcoord="362"
        ycoord="378"/>
    </entity>

    <entity
      name="Textual_expression_representation_item"
      supertypes="String_representation_item"      >

      <graphic.element
        page="2"
        xcoord="416"
        ycoord="629"/>
    </entity>

    <graphic.element
      page="1"
      xcoord="120"
      ycoord="744"/>
  </schema>

</express>
