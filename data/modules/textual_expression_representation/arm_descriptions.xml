	<ext_description linkend="Textual_expression_representation_arm.list_of_formal_language_item">
		A list of representation items written using a formal language.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Textual_expression_representation_arm  Entity: Formal_language_representation 
   <express_ref linkend="textual_expression_representation:arm:Textual_expression_representation_arm.Formal_language_representation"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
