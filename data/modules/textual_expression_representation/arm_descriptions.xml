	<ext_description linkend="Textual_expression_representation_arm.Formal_language_representation">
		A <b>Formal_language_representation</b> is a type of 
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	  where the representation is written in using a formal language.
	</ext_description>
				<ext_description linkend="Textual_expression_representation_arm.Formal_language_representation.items">
			the items in the representation
			</ext_description>

		<ext_description linkend="Textual_expression_representation_arm.Included_formal_language_representation">
		A <b>Included_formal_language_representation</b> is a type of 
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/> 
	  where one <express_ref linkend="textual_expression_representation:arm:Textual_expression_representation_arm.Formal_language_representation"/> 
		is included as a constituent of a  
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>.
	</ext_description>
			<ext_description linkend="Textual_expression_representation_arm.Included_formal_language_representation.source">
			the representation that is to be included
			</ext_description>
			
					<ext_description linkend="Textual_expression_representation_arm.Textual_expression_composition">
		A <b>Textual_expression_composition</b> is a type of 
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/> 
	  where that is made up of constituent 
		<express_ref linkend="textual_expression_representation:arm:Textual_expression_representation_arm.Textual_expression_representation_item"/>'s.
	</ext_description>
			<ext_description linkend="Textual_expression_representation_arm.Textual_expression_composition.content">
			the items to be included in the composition
			</ext_description>
			
			
					<ext_description linkend="Textual_expression_representation_arm.Textual_expression_representation_item">
		A <b>Textual_expression_representation_item</b> is a type of 
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.String_representation_item"/> 
	  where one that is written using a formal language.
	</ext_description>
			<ext_description linkend="Textual_expression_representation_arm.Textual_expression_representation_item.language">
			the formal language in which the expression is written
			</ext_description>
			
			
</ext_descriptions>
