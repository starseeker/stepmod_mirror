<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.12"
    source="../data/modules/time_interval/arm.exp"/>

  <schema name="Time_interval_arm">
    <interface
      kind="use"
      schema="Event_arm">
    </interface>

    <interface
      kind="use"
      schema="Value_with_unit_arm">
    </interface>

    <type name="time_interval_item">
      <select
        extensible="YES">
      </select>

    </type>
    <entity
      name="Time_interval">
      <explicit
        name="id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Time_interval_with_bounds"
      supertypes="Time_interval">
      <explicit
        name="primary_bound"
        optional="YES">
        <typename
          name="date_or_event"/>
      </explicit>
      <explicit
        name="secondary_bound"
        optional="YES">
        <typename
          name="date_or_event"/>
      </explicit>
      <explicit
        name="duration_from_primary_bound"
        optional="YES">
        <typename
          name="Duration"/>
      </explicit>
      <where
        label="WR1"
        expression="NOT (EXISTS (secondary_bound) AND EXISTS (duration_from_primary_bound))">
      </where>
      <where
        label="WR2"
        expression="EXISTS (primary_bound) OR EXISTS (secondary_bound)">
      </where>
    </entity>

    <entity
      name="Time_interval_assignment">
      <explicit
        name="assigned_time_interval">
        <typename
          name="Time_interval"/>
      </explicit>
      <explicit
        name="role">
        <typename
          name="Time_interval_role"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="time_interval_item"/>
      </explicit>
    </entity>

    <entity
      name="Time_interval_role">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Time_interval_relationship">
      <explicit
        name="relation_type">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="relating_time_interval">
        <typename
          name="Time_interval"/>
      </explicit>
      <explicit
        name="related_time_interval">
        <typename
          name="Time_interval"/>
      </explicit>
    </entity>

  </schema>

</express>
