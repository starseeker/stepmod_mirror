<!DOCTYPE module SYSTEM "../../../dtd/module.dtd">
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<module name="value_with_unit" part="1054" version="1" 
wg.number="1300" wg.number.arm="1301" wg.number.mim="1302" 
checklist.internal_review="1074" checklist.project_leader="1075" 
checklist.convener="1076" wg.number.supersedes="795"
status="TS" publication.year="2003" published="y" language="E" 
rcs.date="$Date: 2003/02/10 20:48:28 $" rcs.revision="$Revision: 1.27 $">
  <keywords>
    module, measure value, unit, uncertainty
 </keywords>
  <contacts>
    <projlead ref="pdmmodules.projlead"/>
    <editor ref="pdmmodules.editor"/>
  </contacts>
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <purpose>
	This part of ISO 10303 specifies an application module for the representation of units and of quantities.</purpose>
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <inscope>
    <li>quantity values expressed with a unit;</li>
		<li>uncertainty values, expressed with a unit;</li>
    <li>units.</li>
  </inscope>
  <outscope>
    <li>asociation of quantity value with the identification data of a product or activity property;</li>
    <li>range of values;</li>
    <li>addition of qualifiers to a quantity value.</li>
  </outscope>

  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <normrefs>
    <normref.inc normref="ref10303-41.2000"/>
		<normref.inc normref="ref10303-43.2000"/>
  </normrefs>
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <arm>
    <uof name="Value_with_unit">
      <description>
The Value_with_unit UoF supports the specification of units and of numerical values of quantities.
			</description>
      <uof.ae entity="Amount_of_substance_unit"/>
      <uof.ae entity="Context_dependent_unit"/>
      <uof.ae entity="Conversion_based_unit"/>
      <uof.ae entity="Derived_unit"/>
      <uof.ae entity="Duration"/>
      <uof.ae entity="Electric_current_unit"/>
      <uof.ae entity="Length_unit"/>
      <uof.ae entity="Luminous_intensity_unit"/>
      <uof.ae entity="Mass_unit"/>
      <uof.ae entity="Plane_angle_unit"/>
      <uof.ae entity="Ratio_unit"/>
      <uof.ae entity="Solid_angle_unit"/>
      <uof.ae entity="Thermodynamic_temperature_unit"/>
      <uof.ae entity="Time_unit"/>
       <uof.ae entity="Uncertainty_with_unit"/> 
			<uof.ae entity="Unit"/>
      <uof.ae entity="Value_with_unit"/>
    </uof>
		
    <express-g>
     <imgfile file="armexpg1.xml"/>
     <imgfile file="armexpg2.xml"/>
     <imgfile file="armexpg3.xml"/>
    </express-g>
  </arm>
  <mapping_table>
    <ae entity="Amount_of_substance_unit">
      <aimelt>amount_of_substance_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
		
    <ae entity="Context_dependent_unit">
      <aimelt>context_dependent_unit</aimelt>
      <source>ISO 10303-41</source>
    </ae>
		
		<ae entity="Conversion_based_unit">
      <aimelt>conversion_based_unit</aimelt>
      <source>ISO 10303-41</source>
      <aa attribute="conversion_factor" assertion_to="Value_with_unit">
	<aimelt>PATH</aimelt>
	<refpath>
	conversion_based_unit.conversion_factor -&gt; measure_with_unit
	</refpath>
      </aa>
    </ae>
		
    <ae entity="Derived_unit">
      <aimelt>derived_unit</aimelt>
      <source>ISO 10303-41</source>
      <aa attribute="elements" assertion_to="Derived_unit_element">
			<aimelt>PATH</aimelt>
			<refpath>
			derived_unit.elements[i] -&gt; derived_unit_element
			</refpath>
			      </aa>
    </ae>
    <ae entity="Derived_unit_element">
      <aimelt>derived_unit_element</aimelt>
      <source>ISO 10303-41</source>

      <aa attribute="base_unit" assertion_to="Unit">
	<aimelt>PATH</aimelt>
	<refpath>
	derived_unit_element.unit -&gt; named_unit
	</refpath>
      </aa>
      <aa attribute="exponent">
	<aimelt>derived_unit_element.exponent</aimelt>
	<source>ISO 10303-41</source>
      </aa>
    </ae>

    <ae entity="Duration">
      <aimelt>time_measure_with_unit</aimelt>
      <source>ISO 10303-41</source>
	<refpath>time_measure_with_unit &lt;= 
measure_with_unit</refpath>
      </ae>
			
    <ae entity="Electric_current_unit">
      <aimelt>electric_current_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Length_unit">
      <aimelt>length_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Luminous_intensity_unit">
      <aimelt>luminous_intensity_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Mass_unit">
      <aimelt>mass_unit</aimelt>
      <source>ISO 10303-41</source>
    </ae>
    <ae entity="Plane_angle_unit">
      <aimelt>plane_angle_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Ratio_unit">
      <aimelt>ratio_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Solid_angle_unit">
      <aimelt>solid_angle_unit</aimelt>
      <source>ISO 10303-41</source>
	      </ae>
    <ae entity="Thermodynamic_temperature_unit">
      <aimelt>thermodynamic_temperature_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
    <ae entity="Time_unit">
      <aimelt>time_unit</aimelt>
      <source>ISO 10303-41</source>
      </ae>
		
    <ae entity="Uncertainty_with_unit">
      <aimelt>uncertainty_measure_with_unit</aimelt>
      <source>ISO 10303-43</source>
			<refpath>
			uncertainty_measure_with_unit &lt;= measure_with_unit
			</refpath>
      <aa attribute="name">
	<aimelt>uncertainty_measure_with_unit.name</aimelt>
	<source>ISO 10303-41</source>		
	</aa>
	<aa attribute="description">
	<aimelt>uncertainty_measure_with_unit.description</aimelt>
	<source>ISO 10303-41</source>		
	</aa>				
		</ae>

    <ae entity="Unit">
		<description>
<note>The entity Unit maps onto all combinations of units defined in measure_schema of ISO 10303-41
</note>
</description>

      <aimelt>
			(named_unit)
			(derived_unit)</aimelt>
      <source>ISO 10303-41</source>
			
      <aa attribute="name">
	<alt_map id="1">
		  <description>If the unit is a SI unit</description>
	  <aimelt>(si_unit.name)</aimelt>
	  <source>ISO 10303-41</source>
	  <refpath>(named_unit =&gt;
si_unit
si_unit.name)</refpath>
	</alt_map>
	<alt_map id="2">
		  <description>If the unit is not a unit related to the International unit system</description>
	  <aimelt>(context_dependent_unit.name)</aimelt>
	  <source>ISO 10303-41</source>
	  <refpath>(named_unit =&gt;
context_dependent_unit
context_dependent_unit.name)</refpath>
	</alt_map>
	<alt_map id="3">
	<description>If the unit is converted from another unit</description>
	  <aimelt>(conversion_based_unit.name)</aimelt>
	  <source>ISO 10303-41</source>
	  <refpath>(named_unit =&gt;
conversion_based_unit
conversion_based_unit.name)</refpath>
	</alt_map>
	<alt_map id="4">
			  <description>If the unit is a derived unit</description>
	  <aimelt>(derived_unit.name)</aimelt>
	  <source>ISO 10303-41</source>
	  <refpath></refpath>
	</alt_map>
      </aa>
			
      <aa attribute="si_unit">

	<alt_map id="1">
	  <description>If the unit is a SI unit
		<note>In the other cases, the si_unit attribute is not reflected in the MIM</note></description>
	  <aimelt>si_unit</aimelt>
	  <source>ISO 10303-41</source>
	  <refpath>(named_unit =&gt;
si_unit)</refpath>
	</alt_map>
		<alt_map id="2">
		<description>In the other case, the si_unit attribute is not reflected in the MIM</description>
			</alt_map>
      </aa>
    </ae>
					
    <ae entity="Value_with_unit">
      <aimelt>measure_with_unit</aimelt>
      <source>ISO 10303-41</source>
      <aa attribute="value_component">
	<aimelt>measure_with_unit.value_component</aimelt>
	<source>ISO 10303-41</source>
      </aa>
<aa attribute="value_component" assertion_to="any_number_value"> 
<aimelt>PATH</aimelt> 
<refpath>measure_with_unit.value_component
(measure_with_unit.value_component = numeric_measure)
(measure_with_unit.value_component = mass_measure)
(measure_with_unit.value_component = time_measure)
(measure_with_unit.value_component = electric_current_measure)
(measure_with_unit.value_component = thermodynamic_temperature_measure)
(measure_with_unit.value_component = celsius_temperature_measure)
(measure_with_unit.value_component = amount_of_substance_measure)
(measure_with_unit.value_component = luminous_intensity_measure)
(measure_with_unit.value_component = plane_angle_measure)
(measure_with_unit.value_component = solid_angle_measure)
(measure_with_unit.value_component = area_measure)
(measure_with_unit.value_component = volume_measure)
(measure_with_unit.value_component = ratio_measure)
(measure_with_unit.value_component = parameter_value)
(measure_with_unit.value_component = numeric_measure)
(measure_with_unit.value_component = context_dependent_measure)
(measure_with_unit.value_component = descriptive_measure)
(measure_with_unit.value_component = positive_length_measure)
(measure_with_unit.value_component = positive_plane_angle_measure)
(measure_with_unit.value_component = positive_ratio_measure)
(measure_with_unit.value_component = count_measure)
</refpath> 
</aa> 

<aa attribute="value_component" assertion_to="any_string_value"> 
<aimelt>PATH</aimelt> 
<source> </source> 
<refpath> measure_with_unit.value_component
measure_with_unit.value_component =  descriptive_measure

</refpath> 
</aa> 

<aa attribute="value_component" assertion_to="length_measure"> 
<aimelt>PATH</aimelt> 
<source> </source> 
<refpath> measure_with_unit.value_component
(measure_with_unit.value_component =  length_measure)
(measure_with_unit.value_component =  positive_length_measure)
</refpath> 
</aa>
      <aa attribute="unit" assertion_to="Unit">
	<aimelt>PATH</aimelt>
	<refpath>
	measure_with_unit.unit_component -&gt; unit
	</refpath>
      </aa>
    </ae>
    </mapping_table>
		
  <mim>
    <express-g>
      <imgfile file="mimexpg1.xml"/>
    </express-g>
  </mim>

</module>






