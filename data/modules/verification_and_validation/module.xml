 <!-- Clause 5.1 Mapping specification -->
 <mapping_table>
		<ae entity="Validation">
			<aimelt>validation</aimelt>
			<source>ISO 10303-1488</source>
			<refpath>
				validation &lt;=
				group
			</refpath>
			<aa attribute="validates" assertion_to="validation_item">
				<aimelt>PATH</aimelt>
				<refpath>
				   validation &lt;= group
				   group &lt;- group_assignment.assigned_group
				   group_assignment =&gt; applied_group_assignment
				   applied_group_assignment.items -&gt; groupable_item
				</refpath>
			</aa>
			<aa attribute="validates" assertion_to="Product_version">
				<aimelt>PATH</aimelt>
				<refpath>
				   validation &lt;= group
				   group &lt;- group_assignment.assigned_group
				   group_assignment =&gt; applied_group_assignment
				   applied_group_assignment.items -&gt; groupable_item
				   groupable_item *&gt; validation_groupable_item
				   validation_groupable_item = product_definition_formation
				</refpath>
			</aa>
		</ae>

		<ae entity="Verification">
			<aimelt>verification</aimelt>
			<source>ISO 10303-1488</source>
			<refpath>
				verification &lt;=
				group
			</refpath>
			<aa attribute="verifies" assertion_to="Requirement_satisfied_by">
				<aimelt>group_relationship</aimelt>
				<refpath>
				   verification &lt;=
				   group &lt;- group_relationship.related_group
				   group_relationship.relating_group -&gt;
				   group =&gt;
				   satisfied_requirement
				</refpath>
			</aa>
		</ae>

		<ae entity="Evidence">
			<aimelt>evidence</aimelt>
			<source>ISO 10303-1488</source>
			<refpath>
				evidence &lt;=
				group_assignment
			</refpath>
			<aa attribute="supports">
				<aimelt>PATH</aimelt>
				<refpath>
						evidence &lt;= group_assignment
						group_assignment.assigned_group
				</refpath>
			</aa>
			<aa attribute="supports" assertion_to="Validation">
				<aimelt>PATH</aimelt>
				<refpath>
						evidence &lt;= group_assignment
						group_assignment.assigned_group -&gt; group
						group =&gt; validation
				</refpath>
			</aa>
			<aa attribute="supports" assertion_to="Verification">
				<aimelt>PATH</aimelt>
				<refpath>
						evidence &lt;= group_assignment
						group_assignment.assigned_group -&gt; group
						group =&gt; verification
				</refpath>
			</aa>
			<aa attribute="items" assertion_to="evidence_item">
				<aimelt>PATH</aimelt>
				<refpath>
						evidence.items[i] -&gt;
						evidence_item
				</refpath>
			</aa>
			<aa attribute="items" assertion_to="Validation">
				<aimelt>PATH</aimelt>
				<refpath>
						evidence.items[i] -&gt;
						evidence_item -&gt; validation
				</refpath>
			</aa>
			<aa attribute="items" assertion_to="Verification">
				<aimelt>PATH</aimelt>
