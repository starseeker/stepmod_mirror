<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: 2002/01/16 15:01:04 $"
  rcs.revision="$Revision: 1.3 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.6"
    source="../data/modules/work_order/mim.exp"/>

  <schema name="work_order_mim">
    <interface
      kind="use"
      schema="Approval_mim">
    </interface>

    <interface
      kind="use"
      schema="Contract_mim">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_mim">
    </interface>

    <interface
      kind="use"
      schema="Work_request_mim">
    </interface>

    <interface
      kind="use"
      schema="action_schema">
      <interfaced.item
        name="action"/>
      <interfaced.item
        name="action_status"/>
      <interfaced.item
        name="action_directive"/>
      <interfaced.item
        name="directed_action"/>
      <interfaced.item
        name="executed_action"/>
    </interface>

    <type name="action_approval_item">
      <description>
        A <b>action_approval_item</b> extends approval assignment to
      <b>action</b> instances.  
      </description>
      <select
        basedon="approval_item"
        selectitems="action">
      </select>

    </type>
    <type name="action_date_item">
      <description>
        A <b>action_date_item</b> extends date assignment to <b>action</b>
      instances.  
      </description>
      <select
        basedon="date_item"
        selectitems="action">
      </select>

    </type>
    <type name="action_date_and_time_item">
      <description>
        A <b>action_date_and_time_item</b> extends date and time assignment
        to <b>action</b> instances.  
      </description>
      <select
        basedon="date_and_time_item"
        selectitems="action">
      </select>

    </type>
    <type name="action_organization_item">
      <description>
        An <b>action_organization_item</b> extends organization assignment
      to <b>action</b> instances. 
      </description>
      <select
        basedon="organization_item"
        selectitems="action">
      </select>

    </type>
    <type name="action_person_and_organization_item">
      <description>
        A <b>action_person_and_organization_item</b> extends person and 
      organization assignment to <b>action</b> instances. 
      </description>
      <select
        basedon="person_and_organization_item"
        selectitems="action">
      </select>

    </type>
    <type name="action_contract_item">
      <description>
        An <b>action_contract_item</b> extends contract assignment to
      <b>action</b> instances.  
      </description>
      <select
        basedon="contract_item"
        selectitems="action">
      </select>

    </type>
  </schema>

</express>
