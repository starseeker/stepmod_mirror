<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $"
>

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="$Revision: 1.1 $"
    source="../data/modules/work_request/arm.exp"/>

  <schema name="work_request_arm">
    <interface
      kind="use"
      schema="Approval_arm">
    </interface>

    <interface
      kind="use"
      schema="Date_time_assignment_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_version_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_view_definition_structure_arm">
    </interface>

    <interface
      kind="use"
      schema="Person_organisation_assignment_arm">
    </interface>

    <type name="affected_item_select">
      <select
        selectitems="Product_version Product_view_definition View_definition_relationship">
      </select>

    </type>
    <type name="status_value">
      <enumeration
        items="proposed in-work issued hold">
      </enumeration>


    </type>
    <type name="work_request_organisation_or_person_in_organisation_item">
      <select
        basedon="organisation_or_person_in_organisation_item"
        selectitems="Work_request">
      </select>

    </type>
    <type name="work_request_date_or_date_time_item">
      <select
        basedon="date_or_date_time_item"
        selectitems="Work_request">
      </select>

    </type>
    <type name="work_request_approval_item">
      <select
        basedon="approval_item"
        selectitems="Work_request">
      </select>

    </type>
    <entity
      name="Activity_method">
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="consequence">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="purpose">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="Work_request">
      <explicit
        name="version_id">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="status">
        <typename
          name="status_value"/>
      </explicit>
      <explicit
        name="purpose">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="potential_solutions">
        <aggregate
          type="SET"
          lower="0"
          upper="?"
          typelabel="Activity_method"/>
      </explicit>
      <explicit
        name="affected_items">
        <aggregate
          type="SET"
          lower="0"
          upper="?"
          typelabel="affected_item_select"/>
      </explicit>
      <inverse
        name="requestor"
        entity="Organisation_or_person_in_organisation_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="request_date"
        entity="Date_or_date_time_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="1"/>
      </inverse>
      <inverse
        name="approval"
        entity="Approval_assignment"
        attribute="items">
        <inverse.aggregate
          type="SET"
          lower="0"
          upper="?"/>
      </inverse>
      <where
        label="WR1"
        expression="SELF.requestor.role = 'requestor' OR NOT EXISTS(requestor)">
      </where>
      <where
        label="WR2"
        expression="SELF.request_date.role = 'request date' OR NOT EXISTS(request_date)">
      </where>
    </entity>

  </schema>

</express>
