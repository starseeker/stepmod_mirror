<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: Work_structure_arm
   <express_ref linkend="work_structure:arm:Work_structure_arm"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
<ext_description linkend="Work_structure_arm">
	<note>Implementation usage guide </note>
	<p>To support the implementation of this business use capability can be obtained 
	from DEXLIB see web site location
	<b>http://cvs.sourceforge.net/viewcvs.py/dexlib/dexlib/data/capabilities/</b></p>
	<p>See dexlib/data/capabilities <b>assigning </b>folders:</p>
	<ul>
	<li>assigning observation;</li>
	<li><p>See dexlib/data/capabilities <b> referencing</b> folders:</p>;</li>
	<li>referencing work order;</li>
	<li>referencing work request;</li>
	<li><p>See dexlib/data/capabilities <b> representing</b> folders:</p>;</li>
	<li>representing work done;</li>
	<li>representing work order;</li>
	<li>representing work output;</li>
	<li>representing work package;</li>
	<li>representing work request;</li>
	<li>requesting and ordering work.</li></ul>
	<p>Also see all <b>other</b> dexlib/data/capabilities folders.</p>
	<p>These all provide implementation guides. To achive harmonization AP233 intends to adopt these guidelines.</p>
</ext_description>
-->
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Work_structure_arm  Type: ws_affected_item_select 
   <express_ref linkend="work_structure:arm:Work_structure_arm.ws_affected_item_select"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Work_structure_arm.ws_affected_item_select">
  Using
  <express_ref linkend="work_request:arm:Work_request_arm.Affected_items_assignment"/>
  a
  <express_ref linkend="work_request:arm:Work_request_arm.Work_request"/>
  can be assigned to the entities in <b>ws_affected_item_select</b>.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Work_structure_arm  Type: ws_observed_context 
   <express_ref linkend="work_structure:arm:Work_structure_arm.ws_observed_context"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Work_structure_arm.ws_observed_context">
  Using 
  <express_ref linkend="observation:arm:Observation_arm.Observation"/>,
  an <express_ref linkend="observation:arm:Observation_arm.Observation"/>
  can be linked to the entities in <b>ws_observed_context</b>. 
  These entities define the context in which the observation is made.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Work_structure_arm  Type: ws_work_item 
   <express_ref linkend="work_structure:arm:Work_structure_arm.ws_work_item"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Work_structure_arm.ws_work_item">
  Using
  <express_ref linkend="work_output:arm:Work_output_arm.Work_output_assignment"/>
  a
  <express_ref linkend="work_output:arm:Work_output_arm.Work_output"/>
  can be assigned to the entities in <b>ws_work_item</b>.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: Work_structure_arm  Type: ws_work_output_item 
   <express_ref linkend="work_structure:arm:Work_structure_arm.ws_work_output_item"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
<ext_description linkend="Work_structure_arm.ws_work_output_item">
  Using
  <express_ref linkend="work_output:arm:Work_output_arm.Work_output"/>
  the amount of output expressed as a 
  <express_ref linkend="value_with_unit:arm:Value_with_unit_arm.Value_with_unit"/>
  resulting from the associated activity or task 
  can be assigned to the entities in <b>ws_work_output_item</b>.
</ext_description>
</ext_descriptions>
