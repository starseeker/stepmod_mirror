<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.5"
    source="../data/resources/classification_schema/classification_schema.exp"/>

  <schema name="classification_schema">
    <interface
      kind="reference"
      schema="support_resource_schema">
      <interfaced.item
        name="identifier"/>
      <interfaced.item
        name="label"/>
      <interfaced.item
        name="text"/>
    </interface>

    <type name="classified_select">
      <select
        extensible="YES"
        selectitems="attribute_reference thing">
      </select>

    </type>
    <type name="classifier_select">
      <select
        extensible="YES"
        selectitems="class">
      </select>

    </type>
    <type name="entity_for_attribute_select">
      <select
        extensible="YES"
        selectitems="">
      </select>

    </type>
    <entity
      name="attribute_reference">
      <explicit
        name="id">
        <typename
          name="identifier"/>
      </explicit>
      <explicit
        name="name">
        <typename
          name="label"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <typename
          name="text"/>
      </explicit>
      <explicit
        name="entity_reference">
        <typename
          name="entity_for_attribute_select"/>
      </explicit>
      <explicit
        name="attribute_id">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="class"
      super.expression="(ONEOF (    class_by_extension,    class_by_intension))"
      supertypes="thing">
    </entity>

    <entity
      name="class_by_extension"
      supertypes="class">
    </entity>

    <entity
      name="class_by_intension"
      supertypes="class">
    </entity>

    <entity
      name="classification">
      <explicit
        name="id">
        <typename
          name="identifier"/>
      </explicit>
      <explicit
        name="name">
        <typename
          name="label"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <typename
          name="text"/>
      </explicit>
      <explicit
        name="classified">
        <typename
          name="classified_select"/>
      </explicit>
      <explicit
        name="classifier">
        <typename
          name="classifier_select"/>
      </explicit>
    </entity>

    <entity
      name="complete_membership">
      <explicit
        name="id">
        <typename
          name="identifier"/>
      </explicit>
      <explicit
        name="name">
        <typename
          name="label"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <typename
          name="text"/>
      </explicit>
      <explicit
        name="containing_set">
        <typename
          name="classifier_select"/>
      </explicit>
      <explicit
        name="members">
        <aggregate
          type="SET"
          lower="0"
          upper="?"/>
        <typename
          name="classified_select"/>
      </explicit>
    </entity>

    <entity
      name="thing"
      abstract.supertype="YES">
      <explicit
        name="id">
        <typename
          name="identifier"/>
      </explicit>
      <explicit
        name="name">
        <typename
          name="label"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <typename
          name="text"/>
      </explicit>
    </entity>

  </schema>

</express>
