	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: experience_schema
   <express_ref linkend="experience_schema::experience_schema"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<ext_description linkend="experience_schema"/>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: experience_schema  Entity: experience  
   <express_ref linkend="experience_schema::experience_schema.experience"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="experience_schema.experience">
		An <b>experience</b> represents a particular episode of experience that a person might undertake or undergo.
		<example>
			<i>Ten years' C++ programming</i> and <i>compulsary military service</i> are examples of experiences.		
		</example>
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: experience_schema  Entity: experience  Attribute: description 
   <express_ref linkend="experience_schema::experience_schema.experience.description"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="experience_schema.experience.description">
		a word or group of words that characterizes the <b>experience</b>. The value of this attribute need not be specified. 
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: experience_schema  Entity: experience  Attribute: id 
   <express_ref linkend="experience_schema::experience_schema.experience.id"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="experience_schema.experience.id">
		the identifying string that distinguishes the <b>experience</b>.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: experience_schema  Entity: experience  Attribute: name 
   <express_ref linkend="experience_schema::experience_schema.experience.name"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="experience_schema.experience.name">
		a word or group of words by which the <b>experience</b> is known. The value of this attribute need not be specified.
	</ext_description>
</ext_descriptions>
