   <express_ref linkend="expression_extensions_schema::expression_extensions_schema.literal_assignment.context"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
  <ext_description linkend="expression_extensions_schema.literal_assignment.value_context">
	the entity instance to which the expression literal value is associated with.
</ext_description>
<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
