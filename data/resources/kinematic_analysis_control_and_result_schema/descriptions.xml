<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: kinematic_analysis_control_and_result_schema
<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema">
</ext_description>

<!-- +++++++++++ interpolation_type +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolation_type">
	The <b>interpolation_type</b> describes the method of interpolation between two configuration definitions of a kinematic structure.
</ext_description>

<!-- undefined -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolation_type.undefined">
	an interpolation in which all pair parameters shall match the set of pair parameter values defined in the next configuration definition.
</ext_description>

<!-- synchronous -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolation_type.synchronous">
	an interpolation in which all pair parameters are interpolated such that the pair parameters pass from one value 
	to the next one at the same rate.
	The rate may vary proportionally among the pairs.
</ext_description>

<!-- linear -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolation_type.linear">
	an interpolation in which all pair parameters are interpolated such that the pair parameters pass from one value 
	to the next one at the same rate.
	The rate remains constant.
</ext_description>

<!-- +++++++++++ kinematic_analysis_definition +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_definition">
	A <b>kinematic_analysis_definition</b> allows a reference to either an 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/> 
	or a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.prescribed_path"/>.
	With an 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/>,
	motion is specified in terms of the pair parameters of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_structure"/>.
	With a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.prescribed_path"/>, 
	motion is specified in Cartesian space.
</ext_description>

<!-- +++++++++++ kinematic_result +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_result">
	A <b>kinematic_result</b> allows a reference to either an 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/>
	or a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.resulting_path"/>.
	With an 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/>, 
	motion is specified in terms of the pair parameters of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_structure"/>, 
	where all the interpolations between the configuration definitions in the sequence are undefined.
	With a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.resulting_path"/>, 
	motion is specified in Cartesian space.
</ext_description>

<!-- +++++++++++ configuration_interpolation +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_interpolation">
	A <b>configuration_interpolation</b> is an interpolation of the configurations between two configuration definitions.
</ext_description>

<!-- previous_configuration_definition -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_interpolation.previous_configuration_definition">
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_definition"/>
	from which the interpolation starts.
</ext_description>

<!-- next_configuration_definition -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_interpolation.next_configuration_definition">
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_definition"/> 
	at which the interpolation finishes.
</ext_description>

<!-- interpolation -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_interpolation.interpolation">
	the type of interpolation from the previous configuration definition to the next.
</ext_description>

<!-- +++++++++++ kinematic_control +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_control">
	A <b>kinematic_control</b> is a control information necessary for a forward or a backward analysis of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.mechanism"/>.
	The 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.prescribed_path"/> 
	is used for the backward analysis and the
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/> 
	is used for the forward analysis.
</ext_description>

<!-- controlled_mechanism -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_control.controlled_mechanism">
	the 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.mechanism"/> 
	to which the control information applies.
</ext_description>

<!-- contained_kinematic_programs -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_control.contained_kinematic_programs">
	a set of motion definitions.
</ext_description>

<!-- +++++++++++ founded_kinematic_path +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.founded_kinematic_path">
	A <b>founded_kinematic_path</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>.
	A <b>founded_kinematic_path</b> specifies the geometric founding of a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>  
	in the context of a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>.
</ext_description>	

<!-- items -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.founded_kinematic_path.items">
	a set of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path">kinematic_paths</express_ref> 
	which are to be founded.
</ext_description>

<!-- context_of_items -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.founded_kinematic_path.context_of_items">
	the 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/> 
	in which the <b>items</b> are founded.
</ext_description>

<!-- paths -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.founded_kinematic_path.paths">
	the set of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path">kinematic_paths</express_ref> 
	that are founded.
</ext_description>

<!-- founding -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.founded_kinematic_path.founding">
	the context of the path.
</ext_description>

<!-- +++++++++++ motion_link_relationship +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship">
	A <b>motion_link_relationship</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship"/>.
	A <b>motion_link_relationship</b> describes the relation of a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.founded_kinematic_path"/> 
	with a frame on a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link_representation"/>.
	A <b>motion_link_relationship</b> may be either a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.prescribed_path"/>
	or a
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.resulting_path"/>.
</ext_description>

<!-- rep_1 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.rep_1">
	a 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.founded_kinematic_path"/>
	which specifies a motion.
</ext_description>

<!-- rep_2 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.rep_2">
	a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link_representation"/> 
	that is to be moved.
</ext_description>

<!-- related_frame -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.related_frame">
	the frame on a link that is to be moved along the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.founded_kinematic_path"/>
	defined as motion.
</ext_description>

<!-- motion -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.motion">
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.founded_kinematic_path"/> 
	that specifies the motion.
	The <b>motion</b> is derived from the inherited <b>rep_1</b> attribute.
</ext_description>

<!-- frame_link -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.frame_link">
	the 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link_representation"/> 
	in the context of which the <b>related_frame</b> is geometrically founded that is to be moved along <b>motion</b>.
	The <b>frame_link</b> is derived from the inherited <b>rep_2</b> attribute.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.motion_link_relationship.wr:WR1">
	The <b>related_frame</b> shall be in the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.items"/> 
	set of <b>frame_link</b>.
</ext_description>

<!-- +++++++++++ configuration_definition +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_definition">
	A <b>configuration_definition</b> is a configuration of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_structure"/> 
	in terms of pair parameter sets.
</ext_description>

<!-- pair_values -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_definition.pair_values">
	the set of values applied to the pairs that specify a  <b>configuration_definition</b>.
</ext_description>

<!-- t_parameter -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.configuration_definition.t_parameter">
	the parameter associated to the <b>configuration_definition</b>.
</ext_description>

<!-- +++++++++++ interpolated_configuration_sequence +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence">
	An <b>interpolated_configuration_sequence</b> is a specification of a motion (forward analysis) of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_structure"/> 
	in terms of a set of
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_interpolation">configuration_interpolations</express_ref>.
	These define the sequence of 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_definition">configuration_definitions</express_ref> 
	and the interpolation between them.
</ext_description>

<!-- interpolation -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence.interpolation">
	the interpolation between the configurations.
</ext_description>

<!-- +++++++++++ prescribed_path +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.prescribed_path">
	A <b>prescribed_path</b> is a type of
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.motion_link_relationship"/>.
	A <b>prescribed_path</b> specifies the continuous motion for a control frame that is defined on a
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link"/>. 
	A <b>prescribed_path</b> may be used for backward analysis.
	All 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform">transforms</express_ref>
	belonging to this path are given relative to the coordinate system identified as the context in which 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.motion_link_relationship.motion"/> 
	is geometrically founded.
	<p>
		If the exact path cannot be achieved for any reason, any combination of joints may be used to achieve a path 
		whose average distance from the prescribed path is minimized.
		If no controlling joints are given, any joints may be used to achieve the prescribed path.
	</p>
</ext_description>

<!-- controlling_joints -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.prescribed_path.controlling_joints">
<p>
	an optional set of the 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_joint">kinematic_joints</express_ref>
	which are used to achieve the prescribed path motion.
</p>
	<note>
		The individual degrees of freedom of a joint depend on the type of the pair that references the joint.
		Values to the degrees of freedom are assigned by the appropriate subtype of 
		<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.pair_value"/> 
		which always specifies values for all the individual degrees of freedom of a pair.
		On the other hand, the number of all individual degrees of freedom for the joints in the <b>controlling_joints</b> 
		set must not exceed six in order to avoid the backward analysis problem becoming indeterminate.
		For this reason, if a pair with more than one degree of freedom (e.g., a 
		<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.cylindrical_pair"/>) 
		is associated with any joint in the <b>controlling_joints</b> set, the size of this set will be less than six.
	</note>
</ext_description>

<!-- +++++++++++ kinematic_analysis_result +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_result">
	A <b>kinematic_analysis_result</b> is a result information from the kinematic simulation of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.mechanism"/>.
</ext_description>

<!-- analysed_mechanism -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_result.analysed_mechanism">
	the 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.mechanism"/> 
	whose motion produced the results.
</ext_description>

<!-- contained_kinematic_results -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_result.contained_kinematic_results">
	a list of the motions, called results.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_result.wr:WR1">
	If there are no 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.kinematic_result">kinematic_results</express_ref> 
	in the <b>contained_kinematic_results</b> set which are of type 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.resulting_path"/>, 
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_interpolation.interpolation"/> 
	attributes of all the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.configuration_interpolation"/>
	instances in all the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.interpolated_configuration_sequence"/> 
	instances in the <b>contained_kinematic_results</b> set shall all have the value 
	undefined.
</ext_description>

<!-- +++++++++++ kinematic_analysis_consistency +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_consistency">
	A <b>kinematic_analysis_consistency</b> is a relationship between the result of a kinematic analysis and its input.
	It asserts that <b>result</b> has been obtained from an analysis using <b>control</b> as its input.
</ext_description>

<!-- control -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_consistency.control">
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.kinematic_control"/> 
	providing the input for the analysis.
</ext_description>

<!-- result -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_consistency.result">
	the 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.kinematic_analysis_result"/> 
	which contains the results of the analysis.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.kinematic_analysis_consistency.wr:WR1">
	Input and result data shall be related to the same 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.mechanism"/>.
</ext_description>

<!-- +++++++++++ resulting_path +++++++++++ -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.resulting_path">
	A <b>resulting_path</b> is a type of
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.motion_link_relationship"/>.
	A <b>resulting_path</b> describes a continuous rigid object motion for a control frame which is on a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link"/>.
	The <b>resulting_path</b> may be obtained from the forward analysis.
	All 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform">transforms</express_ref> 
	belonging to the path are given relative to the coordinate system identified as the context in which 
	<express_ref linkend="kinematic_analysis_control_and_result_schema:ir_express:kinematic_analysis_control_and_result_schema.motion_link_relationship.motion"/> 
	is geometrically founded.
</ext_description>

<!-- controlling_joints -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.resulting_path.controlling_joints">
	the 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_joint">kinematic_joints</express_ref> 
	which have been used to achieve the resulting path motion.
</ext_description>

<!-- IP1 -->
<ext_description linkend="kinematic_analysis_control_and_result_schema.resulting_path.wr:IP1">
	All the pairs which were used to achieve this <b>resulting_path</b> shall be given.
</ext_description>



</ext_descriptions>
