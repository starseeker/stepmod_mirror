<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: kinematic_motion_representation_schema
<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema"/>
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema">
</ext_description>

<!-- +++++++++++ motion_parameter_measure +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.motion_parameter_measure">
	The <b>motion_parameter_measure</b> is a mechanism by which different poses in the course of a motion are distinguished. 
	The motion parameter may be defined with or without units.
	<note>
		To introduce time aspects, the motion parameter may be defined with time units.
	</note>
</ext_description>

<!-- +++++++++++ translation +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.translation">
	A <b>translation</b> is a type of 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>
	that specifies a displacement in Cartesian coordinate space <i>R</i><sup>3</sup>.
</ext_description>

<!-- x -->
<ext_description linkend="kinematic_motion_representation_schema.translation.offset">
	specifies the role of the 
	<express_ref linkend="measure_schema:ir_express:measure_schema.length_measure"/>
	for the <b>translation</b>.
	There shall exist two or three 
	<express_ref linkend="measure_schema:ir_express:measure_schema.length_measure"/>
	for the <b>translation</b>.
</ext_description>

<!-- +++++++++++ transform +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.transform">
	A <b>transform</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.functionally_defined_transformation"/>
	and of
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>.
	A <b>transform</b> specifies a linear transformation of a frame along a path, composed of a rotation and a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.translation"/>.
	First the rotation shall be performed and then the t
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.translation"/>.
</ext_description>

<!-- rotation_component -->
<ext_description linkend="kinematic_motion_representation_schema.transform.rotation_component">
	the rotational part of the <b>transform</b>.
</ext_description>

<!-- translation_component -->
<ext_description linkend="kinematic_motion_representation_schema.transform.translation_component">
	the displacement part of the <b>transform</b>.
</ext_description>

<!-- +++++++++++ path_node +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.path_node">
	A <b>path_node</b> is a type of
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>
	that is a constituent of a path definition.
	It consists of a linear transformation and its associated motion parameter.
</ext_description>

<!-- control_transform -->
<ext_description linkend="kinematic_motion_representation_schema.path_node.control_transform">
	a linear transformation that specifies a local frame on a path.
</ext_description>

<!-- t_parameter -->
<ext_description linkend="kinematic_motion_representation_schema.path_node.t_parameter">
	the parameter t of a path which corresponds to the control transform.
</ext_description>

<!-- +++++++++++ kinematic_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path">
	A <b>kinematic_path</b> is a type of
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>.
	A <b>kinematic_path</b> describes a path or a segment of a path along which motion is to take place.
	A <b>kinematic_path</b> may be either a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>
	or a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.composite_path"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path.wr:WR1">
	
</ext_description>

<!-- +++++++++++ kinematic_path_representation_with_parameter +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path_representation_with_parameter">
	A <b>kinematic_path_representation_with_parameter</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>
	that specifies the geometric founding of a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>  
	in the context of a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>.
</ext_description>	

<!-- items -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path_representation_with_parameter.items">
	a set of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path">kinematic_paths</express_ref> 
	which are to be founded.
</ext_description>

<!-- context_of_items -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path_representation_with_parameter.context_of_items">
	the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.geometric_representation_context_with_parameter"/> 
	in which the <b>items</b> are founded.
</ext_description>

<!-- paths -->
<ext_description linkend="kinematic_motion_representation_schema.kinematic_path_representation_with_parameter.paths">
	the set of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path">kinematic_paths</express_ref> 
	that are founded.
</ext_description>

<!-- +++++++++++ link_motion_relationship +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship">
	A <b>link_motion_relationship</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.definitional_representation_relationship"/>
	and of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship_with_transformation"/>.
	A <b>link_motion_relationship</b> describes the relation of a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path_representation_with_parameter"/> 
	with a frame on a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link_representation"/>.
	Each <b>link_motion_relationship</b> may be either a 
	<express_ref linkend="representation_schema:ir_express:representation_schema.definitional_representation_relationship"/>
	or a
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation_relationship_with_transformation"/>.
</ext_description>

<!-- rep_1 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship.rep_1">
	a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_or_shape_representation"/>
	which specifies a motion.
</ext_description>

<!-- rep_2 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship.rep_2">
	a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_motion_representation_along_path"/> 
	that is to be moved.
</ext_description>

<!-- transformation_operator -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship.transformation_operator">
	the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_motion_transformation"/> 
	that relates the 
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation.context_of_items"/> 
	of the related 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_or_shape_representation"/>
	and
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_motion_representation_along_path"/>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship.wr:WR1">
	
</ext_description>

<!-- WR2 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_relationship.wr:WR2">
	
</ext_description>

<!-- +++++++++++ link_motion_representation_along_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_representation_along_path">
	A <b>link_motion_representation_along_path</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>.
</ext_description>

<!-- context_of_items -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_representation_along_path.context_of_items">
	a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.geometric_representation_context_with_parameter"/>
	in which the items are related to form a representation of some concept.
</ext_description>

<!-- +++++++++++ link_motion_transformation +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_transformation">
	A <b>link_motion_transformation</b> is a type of
	<express_ref linkend="representation_schema:ir_express:representation_schema.item_defined_transformation"/>
	that transforms a
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.rigid_placement"/> 
	of a 
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.kinematic_link_representation"/> 
	along a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>.	
</ext_description>

<!-- transform_item_1 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_transformation.transform_item_1">
	an attribute inherited from the
	<express_ref linkend="representation_schema:ir_express:representation_schema.item_defined_transformation"/>
	shall be redeclared as the
	<express_ref linkend="kinematic_structure_schema:ir_express:kinematic_structure_schema.rigid_placement"/>
	for the <b>link_motion_transformation</b>.
</ext_description>

<!-- transform_item_2 -->
<ext_description linkend="kinematic_motion_representation_schema.link_motion_transformation.transform_item_2">
	an attribute inherited from the
	<express_ref linkend="representation_schema:ir_express:representation_schema.item_defined_transformation"/>
	shall be redeclared as the
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>
	for the <b>link_motion_transformation</b>.
</ext_description>

<!-- +++++++++++ path_element_connection +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.path_element_connection">
	A <b>path_element_connection</b> is a type of 
	<express_ref linkend="representation_schema:ir_express:representation_schema.founded_item"/>
	that connects two adjacent 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref>.
	The parameter t at the end of the previous 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	is the same as the parameter t at the start of the next 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
</ext_description>

<!-- previous_element -->
<ext_description linkend="kinematic_motion_representation_schema.path_element_connection.previous_element">
	the first element in a sequence of two 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref>.
</ext_description>

<!-- next_element -->
<ext_description linkend="kinematic_motion_representation_schema.path_element_connection.next_element">
	the second element in a sequence of two
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.path_element_connection.wr:WR1">
	The 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node"/> 
	at the end of the previous 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	shall be identical with the
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node"/> 
	at the start of the next 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
</ext_description>

<!-- WR2 -->
<ext_description linkend="kinematic_motion_representation_schema.path_element_connection.wr:WR2">
	The 
	<express_ref linkend="measure_schema:ir_express:measure_schema.measure_with_unit.unit_component">unit_components</express_ref> 
	of the parameter values of the two 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref> 
	shall be identical.
</ext_description>

<!-- +++++++++++ composite_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path">
	A <b>composite_path</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>. 
	A <b>composite_path</b> is a collection of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref> 
	joined end to end.
	The <b>composite_path</b> has its own t parameter range; the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref> 
	are re-parametrised in such a way that the sum of the lengths of their individual t parameter ranges fits the length of the parameter range
	of the <b>composite_path</b>, and the ratio between the lengths of the individual parameter ranges
remains unchanged.
</ext_description>

<!-- elements -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.elements">
	the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element_connection">path_element_connections</express_ref> 
	that define the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref>,
	their sequence and connectivity.
</ext_description>

<!-- t_start -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.t_start">
	the parameter value at the start of the <b>composite_path</b>.
</ext_description>

<!-- t_end -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.t_end">
	the parameter value at the end of the <b>composite_path</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.wr:WR1">
	The parameters shall be increasing.
</ext_description>

<!-- WR2 -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.wr:WR2">
	The 
	<express_ref linkend="measure_schema:ir_express:measure_schema.measure_with_unit.unit_component">unit_components</express_ref> 
	of the parameter values at the start and end of a <b>composite_path</b> shall be identical.
</ext_description>

<!-- WR3 -->
<ext_description linkend="kinematic_motion_representation_schema.composite_path.wr:WR3">
	Every 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	in a <b>composite_path</b> shall be connected to every other 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	in that <b>composite_path</b>, either directly through a single 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element_connection"/>,
	or indirectly through a number of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element_connection">path_element_connections</express_ref>, 
	in such a way that the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref> 
	form a single open coherent chain without gaps or branches.
	This is checked by the function 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.connected_in_simple_path"/>.
</ext_description>

<!-- +++++++++++ path_element +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.path_element">
	A <b>path_element</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>
	that describes either a point-to-point, a linear, a circular, or a general curve-based type of motion.
	A <b>path_element</b> may be either a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.point_to_point_path"/>
	or a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.circular_path"/>
	or a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.linear_path"/>
	or a
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.curve_based_path"/>.
</ext_description>

<!-- node_from -->
<ext_description linkend="kinematic_motion_representation_schema.path_element.node_from">
	the frame where the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	starts.
</ext_description>

<!-- node_to -->
<ext_description linkend="kinematic_motion_representation_schema.path_element.node_to">
	the frame where the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/> 
	ends.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.path_element.wr:WR1">
	The parameter t shall be increasing from the beginning to the end of the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
</ext_description>

<!-- +++++++++++ point_to_point_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.point_to_point_path">
	A <b>point_to_point_path</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
	A <b>point_to_point_path</b> defines the frames which are to be traversed.
	It does not have a prescribed interpolation.
	<note>
		The interpolation is left to the software that uses the data.
	</note>
</ext_description>

<!-- +++++++++++ circular_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.circular_path">
	A <b>circular_path</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
	A <b>circular_path</b> describes a portion of a complete 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/> 
	such that the interpolation rule gives a circle for the translational part of the motion of the origin of the frame of the
	<express_ref linkend="kinematic_topology_schema:ir_express:kinematic_topology_schema.kinematic_link"/>.
	The interpolation for the orientation is performed in synchronous fashion with the interpolation of translation.
</ext_description>

<!-- via_point -->
<ext_description linkend="kinematic_motion_representation_schema.circular_path.via_point">
	an intermediate point through which the <b>circular_path</b> passes.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.circular_path.wr:WR1">
	The endpoint of a <b>circular_path</b> shall not coincide with its startpoint.
</ext_description>

<!-- WR2 -->
<ext_description linkend="kinematic_motion_representation_schema.circular_path.wr:WR2">
	The <b>via_point</b> of a <b>circular_path</b> shall not coincide with either its startpoint or its endpoint.
</ext_description>

<!-- +++++++++++ linear_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.linear_path">
	A <b>linear_path</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
	A <b>linear_path</b> is an arcwise connected bounded linear path element defined by the two 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform">transforms</express_ref> 
	of the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node">path_nodes</express_ref> 
	at the beginning and the end of the path element.
	The 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform">transforms</express_ref>
	between the values of the motion parameters given in these 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node">path_nodes</express_ref> 
	are obtained by linear interpolation between the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform">transforms</express_ref> 
	specified in 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element.node_from"/> 
	and 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element.node_to"/> 
	of the <b>linear_path</b>.
</ext_description>

<!-- +++++++++++ curve_based_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.curve_based_path">
	A <b>curve_based_path</b> is a type of
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element"/>.
	A <b>curve_based_path</b> describes a portion of a complete 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/> 
	such that the interpolation rule follows a curve for the translational part of the motion of the origin of the frame of the 
	<express_ref linkend="kinematic_topology_schema:ir_express:kinematic_topology_schema.kinematic_link"/>.
	The interpolation for the orientation is performed in synchronous fashion with the interpolation of translation.
</ext_description>

<!-- path_curve -->
<ext_description linkend="kinematic_motion_representation_schema.curve_based_path.path_curve">
	the curve which defines the translational interpolation between the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node">path_nodes</express_ref>
	that are connected by the <b>curve_based_path</b>.
</ext_description>

<!-- WR1 -->
<ext_description linkend="kinematic_motion_representation_schema.curve_based_path.wr:WR1">
	The endpoint of a <b>curve_based_path</b> shall not coincide with its startpoint.
</ext_description>

<!-- IP1 -->
<ext_description linkend="kinematic_motion_representation_schema.curve_based_path.wr:IP1">
	The startpoint of a <b>curve_based_path</b> shall lie on the curve which is referenced as <b>path_curve</b>.
</ext_description>

<!-- IP2 -->
<ext_description linkend="kinematic_motion_representation_schema.curve_based_path.wr:IP2">
	The endpoint of a <b>curve_based_path</b> shall lie on the curve which is referenced as <b>path_curve</b>.
</ext_description>

<!-- +++++++++++ geometric_representation_context_with_parameter +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.geometric_representation_context_with_parameter">
	A <b>geometric_representation_context_with_parameter</b> is a type of
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_context"/>
	with an additional parameter.
</ext_description>

<!-- parameter_unit -->
<ext_description linkend="kinematic_motion_representation_schema.geometric_representation_context_with_parameter.parameter_unit">
	specifies an additional parameter for the <b>geometric_representation_context_with_parameter</b>.
	The value of this attribute need not be specified.
</ext_description>

<!-- +++++++++++ kmr_representation_subtypes +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.kmr_representation_subtypes">
	A <b>kmr_representation_subtypes</b> is a constraint that specifies the subtypes 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path_representation_with_parameter"/>
	and
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.link_motion_representation_along_path"/>
	of
	<express_ref linkend="representation_schema:ir_express:representation_schema.representation"/>
	are mutually exclusive.
</ext_description>

<!-- +++++++++++ kmr_geometric_representation_item_subtypes +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.kmr_geometric_representation_item_subtypes">
	A <b>kmr_geometric_representation_item_subtypes</b> is a constraint that specifies the subtypes 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.kinematic_path"/>,
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_node"/>,
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.placement"/>,
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.transform"/>,
	and
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.translation"/>
	of
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.geometric_representation_item"/>
	are mutually exclusive.
</ext_description>

<!-- +++++++++++ connected_in_simple_path +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.connected_in_simple_path">
	The <b>connected_in_simple_path</b> function checks whether a 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.composite_path"/> 
	is simply connected.
	The function returns TRUE if the <b>connections</b> connect all the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element">path_elements</express_ref> 
	of the path in such a way that they form an open (i.e., acyclic) coherent chain without gaps or branches.
	The function returns FALSE otherwise. 
	The type of the function is BOOLEAN.
</ext_description>

<!-- connections -->
<ext_description linkend="kinematic_motion_representation_schema.connected_in_simple_path.connections">
	the set of 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.path_element_connection">path_element_connections</express_ref>
	which has to be checked.
</ext_description>

<!-- +++++++++++ non_coincident_coordinates +++++++++++ -->
<ext_description linkend="kinematic_motion_representation_schema.non_coincident_coordinates">
	The <b>non_coincident_coordinates</b> function checks whether a given 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.translation"/> 
	coincides with a given 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.cartesian_point"/>
	or not.
	It returns TRUE if <b>trltn</b> does not coincide with <b>crtpt</b>.
	It returns FALSE otherwise.
	The type of the function is BOOLEAN.
</ext_description>

<!-- crtpt -->
<ext_description linkend="kinematic_motion_representation_schema.non_coincident_coordinates.crtpt">
	the 
	<express_ref linkend="geometry_schema:ir_express:geometry_schema.cartesian_point"/>
	whose non-coincidence with <b>trltn</b> has to be checked.
</ext_description>

<!-- trltn -->
<ext_description linkend="kinematic_motion_representation_schema.non_coincident_coordinates.trltn">
	the 
	<express_ref linkend="kinematic_motion_representation_schema:ir_express:kinematic_motion_representation_schema.translation"/> 
	whose non-coincidence with <b>crtpt</b> has to be checked.
</ext_description>

</ext_descriptions>
