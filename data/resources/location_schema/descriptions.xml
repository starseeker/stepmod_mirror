	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  Schema: location_schema
   <express_ref linkend="location_schema::location_schema"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<ext_description linkend="location_schema"/>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location  
   <express_ref linkend="location_schema::location_schema.location"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location">
		A <b>location</b> is a place or position in space at which something can take place or exist.
		<note>
			The specification or representation of a location might take the form of a postal address, a set of geographical or 
			spacial coordinates, or an association with a product.
		</note>
		<example number="1">A map reference specifies a location where a building exists.</example>
		<example number="2">The "bridge" of a particular ship specifies a location where navigation equipment should be installed.</example>
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location  Attribute: id 
   <express_ref linkend="location_schema::location_schema.location.id"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location.id">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.identifier"/> 
		that distinguishes the <b>location</b>.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location  Attribute: name 
   <express_ref linkend="location_schema::location_schema.location.name"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location.name">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.label"/> 
		by which the <b>location</b> is known.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location  Attribute: description 
   <express_ref linkend="location_schema::location_schema.location.description"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location.description">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.text"/>
		that characterizes the <b>location</b>.
		The value of this attribute need not be specified.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  
   <express_ref linkend="location_schema::location_schema.location_relationship"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship">
		A <b>location_relationship</b> is a relationship between two instances of the 
		<express_ref linkend="location_schema:ir_express:location_schema.location"/> 
		entity data type and provides for the identification, naming, and description of that relationship.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  Attribute: id 
   <express_ref linkend="location_schema::location_schema.location_relationship.id"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship.id">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.identifier"/> 
		that distinguishes the <b>location_relationship</b>.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  Attribute: name 
   <express_ref linkend="location_schema::location_schema.location_relationship.name"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship.name">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.label"/> 
		by which the <b>location_relationship</b> is known.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  Attribute: description 
   <express_ref linkend="location_schema::location_schema.location_relationship.description"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship.description">
		the 
		<express_ref linkend="support_resource_schema:ir_express:support_resource_schema.text"/> 
		that characterizes the <b>location_relationship</b>.
		The value of this attribute need not be specified.
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  Attribute: related_location 
   <express_ref linkend="location_schema::location_schema.location_relationship.related_location"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship.related_location">
	<p>
		the other instance of 
		<express_ref linkend="location_schema:ir_express:location_schema.location"/> 
		that is a part of the relationship.  
		If one element of the relationship is dependent upon the other, attribute shall be the dependent one.
	</p>
		<note number="2">
			The meaning of this attribute can be defined in the annotated EXPRESS schemas that use or specialize this entity, 
			or in an agreement of common understanding between the partners sharing this information.
		</note>
	</ext_description>
	<!-- 
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   Schema: location_schema  Entity: location_relationship  Attribute: relating_location 
   <express_ref linkend="location_schema::location_schema.location_relationship.relating_location"/>
  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 
  -->
	<ext_description linkend="location_schema.location_relationship.relating_location">
	<p>
		one of the instances of 
		<express_ref linkend="location_schema:ir_express:location_schema.location"/> 
		that is a part of the relationship.
	</p>
		<note number="1">
			The meaning of this attribute can be defined in the annotated EXPRESS schemas that use or specialize this entity, 
			or in an agreement of common understanding between the partners sharing this information.
		</note>
	</ext_description>
	
	<!-- +++++++++++ acyclic_location_relationship +++++++++++ -->
	<ext_description linkend="location_schema.acyclic_location_relationship">
		The <b>acyclic_location_relationship</b> function determines whether the graph of instances of the entity data type 
		<express_ref linkend="location_schema:ir_express:location_schema.location"/> 
		that contains relation as one of its links contains a cycle. 
		This function may be used to evaluate either an 
		<express_ref linkend="location_schema:ir_express:location_schema.location_relationship"/> 
		or any of its subtypes.
		<p>
			The function returns TRUE if no cycle has been detected. Otherwise it returns FALSE.
		</p>
		<note number="1">
			The algorithm of the function is explained in annex E.2.
		</note>
		<note number="2">
			This function is not used in this schema. 
			It is defined here because other ISO 10303 integrated resources and application protocols that use the 
			<express_ref linkend="location_schema:ir_express:location_schema.location_relationship"/> 
			entity include rules that use this function.
		</note>
	</ext_description>
	<!-- relation -->
	<ext_description linkend="location_schema.acyclic_location_relationship.relation">
		(input) the candidate 
		<express_ref linkend="location_schema:ir_express:location_schema.location_relationship"/>  
		to be checked.
	</ext_description>
	<!-- relatives -->
	<ext_description linkend="location_schema.acyclic_location_relationship.relatives">
		(input) the set of instances of the entity data type 
		<express_ref linkend="location_schema:ir_express:location_schema.location"/> 
		that the function is searching for in the
		<express_ref linkend="location_schema:ir_express:location_schema.location_relationship.relating_location"/> 
		parameter of the <b>relation</b> argument.
	</ext_description>
	<!-- specific_relation -->
	<ext_description linkend="location_schema.acyclic_location_relationship.specific_relation">
		(input) the fully qualified name of a subtype of the 
		<express_ref linkend="location_schema:ir_express:location_schema.location_relationship"/> 
		entity.
	</ext_description>
</ext_descriptions>
