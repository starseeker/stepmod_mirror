<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express description.file="descriptions.xml" language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" reference="ISO 10303-52">
   <application name="JSDAI" owner="LKSoft" source="mesh_connectivity_schema schema_instance" url="www.lksoft.com" version="4.0 beta"/>
   <schema name="mesh_connectivity_schema">
      <interface kind="reference" schema="mesh_topology_schema">
         <interfaced.item name="mesh"/>
         <interfaced.item name="unstructured_mesh"/>
         <interfaced.item name="structured_mesh"/>
         <interfaced.item name="mesh_location"/>
         <interfaced.item name="indices_group"/>
         <interfaced.item name="indices_range"/>
      </interface>
      <interface kind="reference" schema="mathematical_description_of_distribution_schema">
         <interfaced.item name="property_distribution_description"/>
      </interface>
      <interface kind="reference" schema="mathematical_functions_schema">
         <interfaced.item name="listed_real_data"/>
      </interface>
      <interface kind="reference" schema="support_resource_schema">
         <interfaced.item name="identifier"/>
         <interfaced.item name="label"/>
         <interfaced.item name="text"/>
      </interface>
      <type name="mismatched_region_type">
         <enumeration extensible="YES" items="abutting overset"/>
      </type>
      <entity name="matched_mesh_connection" supertypes="mesh_connectivity">
         <explicit name="current">
            <typename name="structured_mesh"/>
            <redeclaration entity-ref="mesh_connectivity"/>
         </explicit>
         <explicit name="range">
            <typename name="indices_range"/>
         </explicit>
         <explicit name="donor">
            <typename name="structured_mesh"/>
         </explicit>
         <explicit name="donor_range">
            <typename name="indices_range"/>
         </explicit>
         <explicit name="transform">
            <aggregate lower="1" type="ARRAY" upper="SELF\mesh_connectivity.index_count"/>
            <builtintype type="INTEGER"/>
         </explicit>
         <where expression="current :&lt;&gt;: donor" label="wr1"/>
         <where expression="( donor\mesh.index_count = SELF\mesh_connectivity.index_count )" label="wr2"/>
         <where expression="( range\indices_range.nindices = SELF\mesh_connectivity.index_count )" label="wr3"/>
         <where expression="( donor_range\indices_range.nindices = SELF\mesh_connectivity.index_count )" label="wr4"/>
      </entity>
      <entity abstract.supertype="YES" name="mesh_connectivity" super.expression="ONEOF (matched_mesh_connection, mismatched_mesh_connection)">
         <explicit name="name">
            <typename name="label"/>
         </explicit>
         <explicit name="description">
            <typename name="text"/>
         </explicit>
         <explicit name="id">
            <typename name="identifier"/>
         </explicit>
         <explicit name="current">
            <typename name="mesh"/>
         </explicit>
         <derived expression="current.index_count" name="index_count">
            <builtintype type="INTEGER"/>
         </derived>
      </entity>
      <entity name="mesh_overset_hole" supertypes="mismatched_mesh_connection"/>
      <entity abstract.supertype="YES" name="mismatched_donor_mesh" super.expression="ONEOF (structured_donor_mesh, unstructured_donor_mesh)">
         <explicit name="donor">
            <typename name="mesh"/>
         </explicit>
         <inverse attribute="donor" entity="mismatched_mesh_region" name="connect"/>
      </entity>
      <entity abstract.supertype="YES" name="mismatched_mesh_connection" super.expression="ONEOF (mismatched_mesh_region, mesh_overset_hole)" supertypes="mesh_connectivity">
         <explicit name="points">
            <typename name="indices_group"/>
         </explicit>
         <explicit name="gridloc">
            <typename name="mesh_location"/>
         </explicit>
      </entity>
      <entity name="mismatched_mesh_region" supertypes="mismatched_mesh_connection">
         <explicit name="donor">
            <typename name="mismatched_donor_mesh"/>
         </explicit>
         <explicit name="kind">
            <typename name="mismatched_region_type"/>
         </explicit>
         <where expression="donor.donor :&lt;&gt;: SELF\mesh_connectivity.current" label="wr1"/>
      </entity>
      <entity name="multiple_mesh_block">
         <explicit name="name">
            <typename name="label"/>
         </explicit>
         <explicit name="description">
            <typename name="text"/>
         </explicit>
         <explicit name="id">
            <typename name="identifier"/>
         </explicit>
         <explicit name="connectivities">
            <aggregate lower="0" type="LIST" upper="?"/>
            <typename name="mesh_connectivity"/>
         </explicit>
      </entity>
      <entity name="structured_donor_mesh" supertypes="mismatched_donor_mesh">
         <explicit name="donor">
            <typename name="structured_mesh"/>
            <redeclaration entity-ref="mismatched_donor_mesh"/>
         </explicit>
         <explicit name="points">
            <typename name="listed_real_data"/>
         </explicit>
         <explicit name="vsize">
            <builtintype type="INTEGER"/>
         </explicit>
         <derived expression="donor.index_count" name="index_count">
            <builtintype type="INTEGER"/>
         </derived>
      </entity>
      <entity name="unstructured_donor_mesh" supertypes="mismatched_donor_mesh">
         <explicit name="donor">
            <typename name="unstructured_mesh"/>
            <redeclaration entity-ref="mismatched_donor_mesh"/>
         </explicit>
         <explicit name="cells">
            <typename name="indices_group"/>
         </explicit>
         <explicit name="interpolant">
            <typename name="property_distribution_description"/>
         </explicit>
         <explicit name="vsize">
            <builtintype type="INTEGER"/>
         </explicit>
         <derived expression="donor.index_count" name="index_count">
            <builtintype type="INTEGER"/>
         </derived>
      </entity>
   </schema>
</express>
