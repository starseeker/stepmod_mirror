</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: text_font_family
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_family">
	A <b>text_font_family</b> is the identification of a related collection of 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font">text_fonts</express_ref>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_family.id
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_family.id"> 
	the identification of the <b>text_font_family</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_family.name
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_family.name"> 
	the word, or group of words, by which the <b>text_font_family</b> is referred to. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_family.description
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_family.description"> 
	text that relates the nature of the <b>text_font_family</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_family.fonts
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_family.fonts"> 
	the set of 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font_in_family">text_font_in_family</express_ref>s
	that identify the 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font">text_fonts</express_ref> 
	that participate in the <b>text_font_family</b>.
	There shall exist at least one
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font_in_family">text_font_in_family</express_ref>
	for the <b>text_font_family</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: text_font_in_family
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_in_family">
	A <b>text_font_in_family</b> is the participation of a 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font"/> 
	in a 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font_family"/>.
	<example>
		Some font families are Courier and Helvetica. Fonts in these families include Courier 12, Helvetica Bold 14, respectively.
	</example>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_in_family.font
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_in_family.font"> 
	the 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font"/> 
	that is part of the family.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: text_font_in_family.family
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.text_font_in_family.family"> 
	the 
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font_family"/> 
	to which the <express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.text_font"/> 
	is assigned.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: externally_defined_text_font
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.externally_defined_text_font">
	An <b>externally_defined_text_font</b> is a type of 
	<express_ref linkend="external_reference_schema:ir_express:external_reference_schema.externally_defined_item"/>.
	An <b>externally_defined_text_font</b> is an external reference to a text font. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: generic_character_glyph_symbol
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.generic_character_glyph_symbol">
	A <b>generic_character_glyph_symbol</b> is a type of
	<express_ref linkend="presentation_definition_schema:ir_express:presentation_definition_schema.symbol_representation"/>
	that contains the geometric representation of a character.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: pre_defined_text_font
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.pre_defined_text_font">
	A <b>pre_defined_text_font</b> is a type of
	<express_ref linkend="external_reference_schema:ir_express:external_reference_schema.pre_defined_item"/>.
	A <b>pre_defined_text_font</b> is a text font provided for the definition of an application-specific font.
	<note>
		Application Resources or Application Protocols specify the use of this entity.
	</note>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: colour
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.colour">
	A <b>colour</b> is a basic appearance property of an element with respect to the light reflected by it.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: colour_specification
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.colour_specification">
	A <b>colour_specification</b> is a type of
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.colour"/>.
	A <b>colour_specification</b> contains a colour definition which refers directly to a specific colour space.
	<example>
		Colour spaces are RGB, HLS, HSV, and CIE. 
		More details about these colour spaces can be found in [13].
	</example>
	<note>
		Only RGB colours are supported by this part of ISO-10303. This entity provides for later extension.
	</note>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: colour_specification.name
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.colour_specification.name"> 
	the word, or group of words, by which the <b>colour_specification</b> is referred to.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
ENTITY: draughting_pre_defined_colour
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.draughting_pre_defined_colour">
	A <b>draughting_pre_defined_colour</b> is a type of
	<express_ref linkend="presentation_resource_schema:ir_express:presentation_resource_schema.pre_defined_colour"/>
	that is identified by name.
<p>
	Table 1 states the RGB values corresponding to each of the predefined colours that are specified by
	this part of ISO 10303.
</p>
	<table caption="RGB colours for predefined colours" number="1" id="table_1">
		<tr>
			<th>Colour name</th> <th>Red</th> <th>Green</th> <th>Blue</th>
		</tr>
		<tr>
			<td>black</td> <td>0.0</td> <td>0.0</td> <td>0.0</td>
		</tr>
		<tr>
			<td>red</td> <td>1.0</td> <td>0.0</td> <td>0.0</td>
		</tr>
		<tr>
			<td>green</td> <td>0.0</td> <td>1.0</td> <td>0.0</td>
		</tr>
		<tr>
			<td>blue</td> <td>0.0</td> <td>0.0</td> <td>1.0</td>
		</tr>
		<tr>
			<td>yellow</td> <td>1.0</td> <td>1.0</td> <td>0.0</td>
		</tr>
		<tr>
			<td>magenta</td> <td>1.0</td> <td>0.0</td> <td>1.0</td>
		</tr>
		<tr>
			<td>cyan</td> <td>0.0</td> <td>1.0</td> <td>1.0</td>
		</tr>
		<tr>
			<td>white</td> <td>1.0</td> <td>1.0</td> <td>1.0</td>
		</tr>
	</table>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Subobject: draughting_pre_defined_colour.WR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="presentation_resource_schema.draughting_pre_defined_colour.wr:WR1"> 
	The 
	<express_ref linkend="external_reference_schema:ir_express:external_reference_schema.pre_defined_item.name"/> 
	of the <b>draughting_pre_defined_colour</b> shall be 'red', 'green', 'blue', 'yellow', 'magenta', 'cyan', 'black', or 'white'.
