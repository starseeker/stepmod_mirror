SCHEMA risk_schema; 


TYPE risk_event_item = EXTENSIBLE GENERIC_ENTITY SELECT;
END_TYPE; 

TYPE risk_source_item = EXTENSIBLE GENERIC_ENTITY SELECT;
END_TYPE; 

ENTITY applied_risk_probability;
  name : STRING;
  description : STRING;
  assigned_to : risk_event_item;
  described_risk_probability : risk_probability;
  described_risk : risk;
END_ENTITY;

ENTITY applied_risk_source_assignment;
  assigned_to : risk_source_item;
  described_risk : risk;
  role : risk_source_role;
END_ENTITY;

ENTITY defined_risk_consequence;
  relating_consequence : risk_consequence;
  related_risk : risk;
  risk_criteria : STRING;
END_ENTITY;

ENTITY defined_risk_probability;
  name : STRING;
  description : STRING;
  relating_probability : risk_probability;
  related_risk : risk;
END_ENTITY;

ENTITY risk;
  name : STRING;
  description : STRING;
END_ENTITY;

ENTITY risk_consequence;
END_ENTITY;

ENTITY risk_perception;
  name : STRING;
  description : STRING;
  perceived_consequence : defined_risk_consequence;
  perceived_probability : applied_risk_probability;
  perceived_risk : risk;
END_ENTITY;

ENTITY risk_probability;
  name : STRING;
  description : STRING;
END_ENTITY;

ENTITY risk_relationship;
  name : STRING;
  description : OPTIONAL STRING;
  relating : risk;
  related : risk;
  role : STRING;
END_ENTITY;

ENTITY risk_source_role;
  name : STRING;
  description : STRING;
END_ENTITY;

END_SCHEMA;  -- risk_schema
