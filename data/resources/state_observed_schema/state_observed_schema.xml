<?xml version="1.0"?>
<!-- $Id: express2xml.js,v 1.26 2002/12/23 10:00:14 goset1 Exp $ -->
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file = "descriptions.xml" 
  reference="ISO 10303-56" 
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.26"
    source="../data/resources/state_observed_schema/state_observed_schema.exp"/>

  <schema name="state_observed_schema">
    <interface
      kind="use"
      schema="state_type_schema">
    </interface>

    <type name="state_of_item">
      <select
        extensible="YES"
        genericentity="YES">
      </select>

    </type>
    <entity
      name="applied_state_assignment">
      <explicit
        name="assigned_to">
        <typename
          name="state_of_item"/>
      </explicit>
      <explicit
        name="described_state">
        <typename
          name="state_observed"/>
      </explicit>
      <explicit
        name="role">
        <typename
          name="state_role"/>
      </explicit>
    </entity>

    <entity
      name="defined_state_relationship">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="defined_state">
        <typename
          name="state_assessment"/>
      </explicit>
      <explicit
        name="definitive_state">
        <typename
          name="state_assertion"/>
      </explicit>
    </entity>

    <entity
      name="state_assertion">
      <explicit
        name="asserted_state">
        <typename
          name="state_observed"/>
      </explicit>
      <explicit
        name="conformance_state">
        <typename
          name="state_type"/>
      </explicit>
      <explicit
        name="assertion_result"
        optional="YES">
        <builtintype
          type="LOGICAL"/>
      </explicit>
    </entity>

    <entity
      name="state_assessment">
      <explicit
        name="assessed_state">
        <typename
          name="state_observed"/>
      </explicit>
      <explicit
        name="comparable_state">
        <typename
          name="state_type"/>
      </explicit>
      <explicit
        name="definitional_comparison">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="assessment_result"
        optional="YES">
        <builtintype
          type="LOGICAL"/>
      </explicit>
    </entity>

    <entity
      name="state_observed">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

    <entity
      name="state_observed_relationship">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="relating">
        <typename
          name="state_observed"/>
      </explicit>
      <explicit
        name="related">
        <typename
          name="state_observed"/>
      </explicit>
    </entity>

    <entity
      name="state_role">
      <explicit
        name="name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description">
        <builtintype
          type="STRING"/>
      </explicit>
    </entity>

  </schema>

</express>
