<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" 
  href="../../../xsl/express.xsl"
?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  description.file="descriptions.xml"
  language_version="1"
  rcs.date="$Date: $"
  rcs.revision="$Revision: $">

  <application
    name=" Eurostep EXPRESS Parser (Eep!)"
    owner="Eurostep Limited"
    url="www.eurostep.com"
    version="1, 3, 27, 36"
    source="systems_engineering_representation_schema.exp"/>

  <schema name="systems_engineering_representation_schema">
    <interface
      kind="reference"
      schema="action_schema">
      <interfaced.item
        name="action_method"/>
    </interface>
    <interface
      kind="reference"
      schema="representation_schema">
      <interfaced.item
        name="representation"/>
      <interfaced.item
        name="representation_context"/>
      <interfaced.item
        name="representation_item"/>
    </interface>
    <interface
      kind="reference"
      schema="support_resource_schema">
      <interfaced.item
        name="label"/>
      <interfaced.item
        name="text"/>
    </interface>
    <interface
      kind="reference"
      schema="state_type_schema">
    </interface>
    <type name="state_based_behaviour_element">
      <select selectitems="state_type state_type_relationship"
      />
    </type>

    <entity name="description_text"
    >
      <explicit
        name="description">
        <builtintype type="STRING"
        />
      </explicit>
    </entity>

    <entity name="description_text_assignment"
      abstract.supertype="YES"
    >
      <explicit
        name="description">
        <typename name="description_text"/>
      </explicit>
    </entity>

    <entity name="functional_model"
    >
      <explicit
        name="context_of_items">
        <typename name="functional_representation_context"/>
      </explicit>
      <explicit
        name="items">
        <aggregate type="SET"
        />
        <typename name="functional_representation_item"/>
      </explicit>
    </entity>

    <entity name="functional_representation_context"
    >
    </entity>

    <entity name="functional_representation_item"
    >
      <explicit
        name="item">
      </explicit>
    </entity>

    <entity name="state_based_behaviour_representation_context"
    >
    </entity>

    <entity name="state_based_behaviour_model"
    >
      <explicit
        name="context_of_items">
        <typename name="state_based_behaviour_representation_context"/>
      </explicit>
      <explicit
        name="items">
        <aggregate type="SET"
        />
        <typename name="state_based_behaviour_representation_item"/>
      </explicit>
    </entity>

    <entity name="state_based_behaviour_representation_item"
    >
      <explicit
        name="item">
        <typename name="state_based_behaviour_element"/>
      </explicit>
    </entity>

  </schema>

</express>