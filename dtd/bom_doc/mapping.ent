<!--                    Mapping specification markup
                        declarations                               -->

<!--                    Requires text.ent markup
                        declarations for representing 'description'-->






<!--                    mapping specification row                  -->
<!--                    express_ref must contain a rule name       -->
<!ENTITY % mapping     "alt?, description?, armelt?, source?, rules?, express_ref*, refpath?, refpath_extend?" >


<!--                    A mapping table                            -->
<!ELEMENT  mapping_table (be*,sc*)                                       >

<!--                    business entity                         -->
<!ELEMENT  be           (%mapping;, alt_map*, ba*)                             >
<!ATTLIST  be
             entity     NMTOKEN                            #REQUIRED 
    	       extensible (YES | NO) "NO"
             original_module NMTOKEN                      #IMPLIED> 


<!--                    business attribute                      -->
<!--description?, alt*, ) -->
<!ELEMENT  ba           (%mapping;, alt_map*)              >
<!-- note attribute is CDATA to allow for SELF\product.of_product -->
<!ATTLIST  ba
             attribute  CDATA                            #REQUIRED 
             assertion_to CDATA                          #IMPLIED  
             position CDATA                              #IMPLIED  
             inherited_from_module NMTOKEN                #IMPLIED 
             inherited_from_entity NMTOKEN                #IMPLIED >


<!--                    contains explanatory text describing the
                        alternative                                
                        THIS IS DEPRECATED - USE alt_map           -->
<!ELEMENT  alt          (#PCDATA)                                    >


<!--                    alternative mapping              -->
<!ELEMENT  alt_map          (%mapping;)                    >
<!ATTLIST  alt_map
             id            CDATA                         #IMPLIED  
             alt_map.inc   CDATA                         #IMPLIED  >
  
<!--                    ARM element                                -->
<!ELEMENT  armelt       (#PCDATA)*                     >
<!ATTLIST  armelt
             xml:space  (preserve)                 #FIXED "preserve" >

<!--                    ISO part number                            -->
<!ELEMENT  source       (#PCDATA)                                    >
<!ATTLIST  source
             xml:space  (preserve)                 #FIXED "preserve" >

<!--                    reference path                             -->
<!ELEMENT  refpath      (#PCDATA)*                     >
<!ATTLIST  refpath
             xml:space  (preserve)                 #FIXED "preserve" >

<!--                    reference path copied from original module   -->
<!ELEMENT  refpath_extend      (#PCDATA)*                     >
<!ATTLIST  refpath_extend
             extended_select NMTOKEN             #REQUIRED
             xml:space  (preserve)                 #FIXED "preserve" >

<!--                    mapping specification row                  -->
<!ENTITY % scmapping     "(description?,(constraint|rules),source)"
>



<!--                    subtype constraint                     -->
<!--                    not sure if original_module attr needed.   -->
<!ELEMENT  sc           (%scmapping;| alt_scmap+)                             >
<!ATTLIST  sc
             constraint      NMTOKEN                      #REQUIRED 
             entity          NMTOKEN                      #REQUIRED
             original_module NMTOKEN                      #IMPLIED> 


<!--                    rules for mapping subtype_constraint       -->
<!ELEMENT rules (#PCDATA)
>

<!--                    constraint for mapping subtype_constraint  -->
<!ELEMENT constraint (#PCDATA)
>

<!--                 alternative mapping  for subtype_constraint   -->
<!ELEMENT  alt_scmap          %scmapping;                    >
<!ATTLIST  alt_scmap
             id            CDATA                         #IMPLIED  
             alt_scmap.inc   CDATA                         #IMPLIED  >
