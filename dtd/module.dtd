     $Id: module.dtd,v 1.13 2002/01/24 02:20:02 robbod Exp $
                                                                   -->

<!--                    ARM markup declarations                    -->
<!ENTITY % mapspec     SYSTEM "mapping.ent"                          >
%mapspec;

<!--                    descriptive text                           -->
<!ENTITY % desctext    SYSTEM "text.ent"                             >
%desctext;

<!-- use the %description.content defined in text.ent              -->
<!ELEMENT description (%description.content;)*>


<!--                    normative references, definitions, and
                        terms                                      -->
<!ENTITY % refs-and-defs    SYSTEM "refs-and-defs.ent"               >
%refs-and-defs;

<!--                    contact information                        -->
<!ENTITY % contact.info
                       "firstname, lastname, affiliation?, pobox?, street?,
                        city, state?, postcode, country, phone, fax,
                        email"                                       >

<!--                    application module                         -->
<!ELEMENT  module       (keywords, contacts, purpose,
                         inscope, outscope?, normrefs?, definition*, 
                         abbreviations?, arm, mapping_table, mim, 
                         usage_guide?, bibliography?)                >

<!--         name         module directory name                    -->
<!--         part         ISO 10303 part number                    -->
<!--         wg.number    SC4 N-number                             -->
<!-- Attributes for source control software like RCS or CVS        -->
<!--         rcs.date      $Date: 2002/01/24 02:20:02 $                                -->
<!--         rcs.revision  $Revision: 1.13 $                            -->
<!ATTLIST  module
             xmlns:xlink CDATA  #FIXED "http://www.w3.org/1999/xlink"
             name       NMTOKEN                            #REQUIRED
             part       NMTOKEN                            #REQUIRED
             version    NMTOKEN                            #REQUIRED
             wg.number  NMTOKEN                            #REQUIRED
             status  (CD | FDIS | DIS | IS | CD-TS | TS | WD) "CD-TS"
             publication.year CDATA                        #REQUIRED
             published (y | n)                             "y"
             language (E)                                  "E"
	     rcs.date CDATA 				   #REQUIRED 
	     rcs.revision CDATA 		           #REQUIRED
>

<!--                    first name                                 -->
<!ELEMENT  firstname    (#PCDATA)                                    >

<!--                    last name                                  -->
<!ELEMENT  lastname     (#PCDATA)                                    >

<!--                    employer name                              -->
<!ELEMENT  affiliation  (#PCDATA)                                    >

<!--                    street address                             -->
<!ELEMENT  street       (#PCDATA)                                    >

<!--                    Post Office Box                            -->
<!ELEMENT  pobox         (#PCDATA)                                    >

<!--                    city                                       -->
<!ELEMENT  city         (#PCDATA)                                    >

<!--                    state or province                          -->
<!ELEMENT  state        (#PCDATA)                                    >

<!--                    zip or postal code                         -->
<!ELEMENT  postcode     (#PCDATA)                                    >

<!--                    country                                    -->
<!ELEMENT  country      (#PCDATA)                                    >

<!--                    phone number                               -->
<!ELEMENT  phone        (#PCDATA)                                    >

<!--                    fax number                                 -->
<!ELEMENT  fax          (#PCDATA)                                    >

<!--                    email address                              -->
<!ELEMENT  email        (#PCDATA)                                    >

<!--                    keywords (separated by commas)             -->
<!ELEMENT  keywords     (#PCDATA)                                    >

<!--                    contacts                                   -->
<!ELEMENT  contacts     (projlead, editor+)                           >

<!--                    project leader                             -->
<!ELEMENT  projlead     EMPTY                                        >
<!ATTLIST  projlead     ref NMTOKEN #REQUIRED                          >

<!--                    project editor                             -->
<!ELEMENT  editor       EMPTY                                        >
<!ATTLIST  editor       ref NMTOKEN #REQUIRED                          >

<!--                    a contact                                  -->
<!ELEMENT  contact       ( %contact.info; )                          >
<!ATTLIST  contact id NMTOKEN #REQUIRED>

<!-- 
        A list of contacts that can be reference in module.xml as editor
        or projlead
-->
<!ELEMENT  contact.list (contact+)                          >


<!--                    purpose of module                          -->
<!ELEMENT  purpose      (%text-elts; | %block-elts; | note | example | figure)*>

<!--                    in scope                                   -->
<!ELEMENT  inscope      (li+)                                        >

<!--                    out of scope                               -->
<!ELEMENT  outscope     (li+)                                        >

<!--                    module interpreted model                   -->
<!ELEMENT  mim          (express-g)                       >

<!--                    express-g diagrams                         -->
<!ELEMENT  express-g    (imgfile+ | img+)                            >


<!--                    usage guide                                -->
<!ELEMENT  usage_guide  (description)                                >

<!--                    bibliography                               -->
<!ELEMENT  bibliography (bibitem.inc | bibitem )+                    >

<!--                    bibiographic item                          -->
<!ELEMENT  bibitem      (%bib-elts;)*                                >
<!-- an identifer for the bibliographic item. 
     It should be unique to the module repository
-->
<!ATTLIST bibitem id ID #IMPLIED                                     >


<!-- A list of bibitems that can be included in module.xml -->
<!ELEMENT bibitem.list (bibitem+) >

<!--                    included bibilographic item                -->
<!ELEMENT  bibitem.inc EMPTY>
<!ATTLIST  bibitem.inc ref NMTOKEN #REQUIRED>

