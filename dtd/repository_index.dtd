<!-- List of modules and resource -->
<!ELEMENT  repository_index       (modules+, resources+, application_protocols+)>


<!-- List of modules  -->
<!-- Note, there may be further attributes added at a later date -->
<!ELEMENT  modules       (module+)>


<!-- Module -->
<!ELEMENT  module EMPTY>
<!-- the name of the module -->
<!ATTLIST  module name NMTOKEN #REQUIRED>
<!-- the part number of the module -->
<!ATTLIST  module part CDATA #IMPLIED>
<!-- the project responsible for the module -->
<!ATTLIST  module project CDATA #IMPLIED>


<!-- List of resources  -->
<!-- Note, there may be further attributes added at a later date -->
<!ELEMENT  resources       (resource+)>

<!-- Resource -->
<!ELEMENT  resource EMPTY>
<!-- the name of the integrated resource schema -->
<!ATTLIST  resource name NMTOKEN #REQUIRED>

<!-- List of application_protocols -->
<!ELEMENT application_protocols (application_protocol+)>
<!ELEMENT application_protocol EMPTY>
<!ATTLIST application_protocol
	name NMTOKEN #REQUIRED
	part NMTOKEN #IMPLIED
>
