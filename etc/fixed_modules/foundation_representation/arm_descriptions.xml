<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Elemental_geometric_shape_arm  Entity: Numerical_representation_context 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Numerical_representation_context">
	A <b>Numerical_representation_context</b> is a type of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_context"/>
	in which units and uncertainties may be defined.
	These units and uncertainties apply to the instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>
	that are used in that context. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Numerical_representation_context  Attribute: units 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Numerical_representation_context.units">
<p>
	the set of 
	<express_ref linkend="value_with_unit:arm:Value_with_unit_arm.Unit">Units</express_ref> 
	that apply for attribute values of instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>
	used in that context. The value of this attribute need not be specified.
</p>
	<note>
		The 
		<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Numerical_representation_context.units"/>
		of <b>Numerical_representation_context</b> is only intended to provide a default unit. Its use is not intended to prevent 
		representation items being specified with the same or different units to the context.
	</note>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Numerical_representation_context  Attribute: accuracies 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Numerical_representation_context.accuracies">
	the uncertainty measures that apply on attribute values of instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>
	used in that context. The value of this attribute need not be specified.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: Representation 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation">
	A <b>Representation</b> is a collection of one or more instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/> 
	that are related in the specified 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_context"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation  Attribute: context_of_items 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation.context_of_items">
	the <b>Representation_context</b> that specifies the context of the <b>Representation</b>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation  Attribute: description 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation.description">
	the text that provides further information about the <b>Representation</b>. 
	The value of this attribute need not be specified.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation  Attribute: id
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation.id">
	the identifier for the <b>Representation</b>. The value of this attribute need not be specified.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation  Attribute: name 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation.name">
<p>
	the words by which the <b>Representation</b> is known.
</p>
	<example>
		The <b>name</b> of a <b>Representation</b> may be the name of a CAD model. 
	</example>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: Representation  Attribute: items 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation.items">
	the set of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/> 
	instances directly included in the <b>Representation</b>.  
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: Representation_context 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_context">
	A <b>Representation_context</b> is a context in which instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>
	are related.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_context  Attribute: id 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_context.id">
	the identifier for the <b>Representation_context</b>. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_context  Attribute: kind 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_context.kind">
<p>
	the text that describes the type of the context.
</p>
	<example number="1">
		'numeric values' is an example of kind of <b>Representation_context</b>.
	</example> 
	<example number="2">
		'2D space' or '3D space' are examples of kind which can be used for geometric representation contexts.
	</example>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_context  Attribute: representations_in_context 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_context.representations_in_context">
	the set of instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>
	that share the <b>Representation_context</b>.
	This set shall contain at least one element.       
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: Representation_item 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_item">
	A <b>Representation_item</b> is an element of representation.
<p>
	A <b>Representation_item</b> shall be in the set of items of one or more instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>
	or it shall belong to one or more instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>, 
	being referred to, directly of indirectly, by items of these instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>. 
</p>
	<note>
		this constraint is formally represented in the Express specification of the resource entity that corresponds to <b>Representation_item</b> 
		in the MIM schema.
	</note>
	Only specializations of <b>Representation_item</b> can be instantiated.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_item  Attribute: name 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_item.name">
<p>
	the words by which the  <b>Representation_item</b> is known.
</p>
	<example>
		The <b>name</b> of a geometric <b>Representation_item</b> may be its element tag in the originating CAD system. 
	</example>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_item  where: WR1 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_item.wr:WR1">
	If SELF is exact instance of <b>Representation</b>, then <b>name</b> shall be provided.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_item  where: IP1 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_item.wr:IP1">
	the <b>Representation_item</b> shall be used directly or indirectly, in at least a 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>.  
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: Representation_relationship 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship">
	A <b>Representation_relationship</b> is an association between two instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/>.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  Attribute: relation_type 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.relation_type">
<p>
	the string that specifies the type of the relationship.
</p>
<p>
	Where applicable, the following values shall be used:</p>
<ul>
	<li> 
	derivation: the 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	referred to as 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_1"/>
	was derived from the 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	referred to as 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_2"/>;
		<example>
			A faceted representation may be derived from a boundary representation.
		</example>
	</li>
	<li>
	detailing: the 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	referred to as 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_1"/>
	provides more detailed information than the 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	referred to as 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_relationship.rep_2"/>.
	</li>
</ul>
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  Attribute: description 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.description">
	the text that provides further information about the relationship.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  Attribute: rep_1 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.rep_1">
	one of the  instances of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	that is a part of the relationship.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  Attribute: rep_2
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.rep_2">
	the other instance of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation"/> 
	that is a part of the relationship. If one element of the relationship is the dependent upon the other, this attribute shall be the dependent one.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  where: WR1
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.wr:WR1">
	If SELF is exact instance of <b>Representation_relationship</b>, then <b>relation_type</b> shall be provided.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: Representation_relationship  where: WR2
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.Representation_relationship.wr:WR2">
	If SELF is exact instance of <b>Representation_relationship</b>, then <b>description</b> shall be provided.
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Schema: Foundation_representation_arm  Entity: String_representation_item  
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.String_representation_item"> 
	A <b>String_representation_item</b> is a type of 
	<express_ref linkend="foundation_representation:arm:Foundation_representation_arm.Representation_item"/>
	that specifies a text. 
</ext_description>

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
Entity: String_representation_item  Attribute: string_value 
++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<ext_description linkend="Foundation_representation_arm.String_representation_item.string_value">
	the string that is the element of representation.
</ext_description>

</ext_descriptions>