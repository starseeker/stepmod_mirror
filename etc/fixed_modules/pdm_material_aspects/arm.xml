<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2005/07/04 15:05:41 $"
  rcs.revision="$Revision: 1.3 $">

  <application
    name="express2xml2.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.7"
    source="../data/modules/pdm_material_aspects/arm.exp"/>

  <schema name="Pdm_material_aspects_arm">

    <interface
      kind="use"
      schema="File_identification_arm">
    </interface>
    <interface
      kind="use"
      schema="Independent_property_arm">
    </interface>
    <interface
      kind="use"
      schema="Independent_property_representation_arm">
    </interface>
    <interface
      kind="use"
      schema="Part_view_definition_arm">
    </interface>
    <interface
      kind="use"
      schema="Product_as_individual_arm">
    </interface>
    <interface
      kind="use"
      schema="Property_assignment_arm">
    </interface>
    <type name="material_item_select">
      <select
        selectitems="Hardcopy Part_view_definition Product_as_individual">
      </select>
    </type>

    <type name="dependent_or_independent_property_representation">
      <select
        selectitems="Independent_property_representation Property_representation">
      </select>
    </type>

    <entity
      name="Data_environment">
      <explicit
        name="environment_name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="environment_characterization">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="dependent_or_independent_property_representation"/>
      </explicit>
    </entity>

    <entity
      name="Material_identification">
      <explicit
        name="material_name">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="items">
        <aggregate
          type="SET"
          lower="1"
          upper="?"/>
        <typename
          name="material_item_select"/>
      </explicit>
    </entity>

    <entity
      name="Material_property_association">
      <explicit
        name="described_material">
        <typename
          name="Material_identification"/>
      </explicit>
      <explicit
        name="associated_property_value">
        <typename
          name="Material_property_value_representation"/>
      </explicit>
      <explicit
        name="definitional"
        optional="YES">
        <builtintype
          type="BOOLEAN"/>
      </explicit>
    </entity>

    <entity
      name="Material_property_value_representation"
      supertypes="Property_representation">
      <explicit
        name="environment_condition">
        <typename
          name="Data_environment"/>
      </explicit>
      <explicit
        name="property">
        <typename
          name="Applied_independent_property"/>
        <redeclaration
          entity-ref="Property_representation"/>
        </explicit>
        <where
          label="WR1"
          expression="'MATERIAL_ASPECTS_ARM.PDM_MATERIAL_PROPERTY' IN TYPEOF(SELF\Property_representation.property.base_independent_property)">
        </where>
      </entity>

      <entity
        name="Pdm_material_property"
        supertypes="Independent_property">
      </entity>

    </schema>
  </express>
