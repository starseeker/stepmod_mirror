<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">
<express
  language_version="2"
  description.file="arm_descriptions.xml"
  rcs.date="$Date: 2005/11/23 07:24:22 $"
  rcs.revision="$Revision: 1.1 $">

  <application
    name="express2xml.js"
    owner="Eurostep Limited"
    url="http://www.eurostep.com"
    version="1.16"
    source="../data/modules/product_replacement/arm.exp"/>

  <schema name="Product_replacement_arm">
    <interface
      kind="use"
      schema="Assembly_structure_arm">
    </interface>

    <interface
      kind="use"
      schema="Product_identification_arm">
    </interface>

    <entity
      name="Alternate_product_relationship">
      <explicit
        name="name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="alternate_product">
        <typename
          name="Product"/>
      </explicit>
      <explicit
        name="base_product">
        <typename
          name="Product"/>
      </explicit>
      <explicit
        name="criteria">
        <builtintype
          type="STRING"/>
      </explicit>
      <unique
        label="UR1">
        <unique.attribute
          attribute="alternate_product"/>
        <unique.attribute
          attribute="base_product"/>
      </unique>
      <where
        label="WR1"
        expression="alternate_product  :&lt;&gt;: base_product ">
      </where>
    </entity>

    <entity
      name="Assembly_relationship_substitution">
      <explicit
        name="name"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="description"
        optional="YES">
        <builtintype
          type="STRING"/>
      </explicit>
      <explicit
        name="base_relationship">
        <typename
          name="Assembly_component_relationship"/>
      </explicit>
      <explicit
        name="substitute_relationship">
        <typename
          name="Assembly_component_relationship"/>
      </explicit>
      <unique
        label="UR1">
        <unique.attribute
          attribute="base_relationship"/>
        <unique.attribute
          attribute="substitute_relationship"/>
      </unique>
      <where
        label="WR1"
        expression="base_relationship.relating_view :=: substitute_relationship.relating_view">
      </where>
      <where
        label="WR2"
        expression="base_relationship :&lt;&gt;: substitute_relationship">
      </where>
    </entity>

  </schema>

</express>
