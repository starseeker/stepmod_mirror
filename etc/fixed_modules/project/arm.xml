<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../xsl/express.xsl"?>
<!DOCTYPE express SYSTEM "../../../dtd/express.dtd">

<express language_version="2" rcs.date="$Date$" rcs.revision="$Revision$" description.file="arm_descriptions.xml">
   <application name="JSDAI" owner="LKSoft" url="www.lksoft.com" version="4.0 beta" source="project_arm schema_instance"/>
   <schema name="Project_arm">
      <interface kind="use" schema="Date_time_arm"/>
      <interface kind="use" schema="Date_time_assignment_arm"/>
      <interface kind="use" schema="Event_arm"/>
      <interface kind="use" schema="Event_assignment_arm"/>
      <interface kind="use" schema="Person_organization_arm"/>
      <type name="project_item">
         <select extensible="YES"/>
      </type>
      <entity name="Project">
         <explicit name="id">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="name">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="responsible_organizations">
            <aggregate type="SET" lower="0" upper="?"/>
            <typename name="Organization"/>
         </explicit>
         <explicit name="planned_start_date" optional="YES">
            <typename name="date_or_event"/>
         </explicit>
         <explicit name="planned_end_date" optional="YES">
            <typename name="date_or_event"/>
         </explicit>
         <explicit name="actual_start_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
         <explicit name="actual_end_date" optional="YES">
            <typename name="date_or_date_time_select"/>
         </explicit>
      </entity>
      <entity name="Project_assignment">
         <explicit name="assigned_project">
            <typename name="Project"/>
         </explicit>
         <explicit name="role">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="items">
            <aggregate type="SET" lower="0" upper="?"/>
            <typename name="project_item"/>
         </explicit>
      </entity>
      <entity name="Project_relationship">
         <explicit name="relation_type">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="description" optional="YES">
            <builtintype type="STRING"/>
         </explicit>
         <explicit name="relating_project">
            <typename name="Project"/>
         </explicit>
         <explicit name="related_project">
            <typename name="Project"/>
         </explicit>
      </entity>
   </schema>
</express>
