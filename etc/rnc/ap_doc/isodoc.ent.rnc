# Purpose: DTD of general ISO elements for AP document

# External entity sets

namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

include "text.ent.rnc"
# use the %description.content defined in text.ent
description =
  element description { description-attlist, description.content* }
description-attlist &= empty
# normative references, definitions, and terms
include "refs-and-defs.ent.rnc"
# Contacts
include "contacts.ent.rnc"
# Data planning model
data_plan = element data_plan { data_plan-attlist, imgfile+ }
data_plan-attlist &= empty
# custom part of foreword
foreword =
  element foreword {
    foreword-attlist, (text-elts | block-elts | single-block-elts)*
  }
foreword-attlist &= empty
# purpose of module
purpose =
  element purpose {
    purpose-attlist, (text-elts | block-elts | single-block-elts)*
  }
purpose-attlist &= empty
# in scope
# If from_module is YES then XSL will copy the in scope statement from the module
inscope = element inscope { inscope-attlist, li* }
inscope-attlist &=
  [ a:defaultValue = "YES" ] attribute from_module { "NO" | "YES" }?,
  attribute context { text }
# out of scope 
# If from_module is YES then XSL will copy the out scope statement from the module
outscope = element outscope { outscope-attlist, li* }
outscope-attlist &=
  [ a:defaultValue = "YES" ] attribute from_module { "NO" | "YES" }?
# abstract
abstract =
  element abstract {
    abstract-attlist, (text-elts | block-elts | single-block-elts)*
  }
abstract-attlist &= empty
# bibliography
bibliography =
  element bibliography {
    bibliography-attlist, (bibitem.inc | bibitem)+
  }
bibliography-attlist &= empty
# bibiographic item
bibitem = element bibitem { bibitem-attlist, bib-elts* }
# id an identifer for the bibliographic item.  It should be unique to the repository

# If n then the bibliographic item has not been published
bibitem-attlist &=
  attribute id { xsd:ID }?,
  [ a:defaultValue = "y" ] attribute published { "y" | "n" }?
# A list of bibitems that can be included in module.xml
bibitem.list = element bibitem.list { bibitem.list-attlist, bibitem+ }
bibitem.list-attlist &= empty
# included bibilographic item
bibitem.inc = element bibitem.inc { bibitem.inc-attlist, empty }
bibitem.inc-attlist &= attribute ref { xsd:NMTOKEN }
